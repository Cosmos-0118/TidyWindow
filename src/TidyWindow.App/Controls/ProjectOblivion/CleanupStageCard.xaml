<UserControl x:Class="TidyWindow.App.Controls.ProjectOblivion.CleanupStageCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:ProjectOblivionTimelineStageViewModel}">
    <Border Style="{StaticResource PopupCardStyle}" Margin="0,0,0,18">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚙️" FontSize="30" Margin="0,0,12,0"/>
                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#F8FAFC"/>
                    <TextBlock Text="{Binding Description}"
                               Foreground="#94A3B8"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>

            <UniformGrid Columns="3" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Removed" Foreground="#94A3B8" FontSize="11"/>
                    <TextBlock Text="{Binding DataContext.RemovedArtifactCount, RelativeSource={RelativeSource AncestorType=Page}}"
                               Foreground="#34D399" FontSize="18" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Failed" Foreground="#94A3B8" FontSize="11"/>
                    <TextBlock Text="{Binding DataContext.FailedArtifactCount, RelativeSource={RelativeSource AncestorType=Page}}"
                               Foreground="#FCA5A5" FontSize="18" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Unverified" Foreground="#94A3B8" FontSize="11"/>
                    <TextBlock Text="{Binding DataContext.UnknownArtifactCount, RelativeSource={RelativeSource AncestorType=Page}}"
                               Foreground="#FBBF24" FontSize="18" FontWeight="SemiBold"/>
                </StackPanel>
            </UniformGrid>

            <Border Background="#0F1A2E"
                    BorderBrush="#1E3357"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12"
                    Margin="0,14,0,0">
                <StackPanel>
                    <TextBlock Text="Cleanup step"
                               Foreground="#93C5FD"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Detail}"
                               Foreground="#E2E8F0"
                               FontSize="13"
                               Margin="0,6,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
