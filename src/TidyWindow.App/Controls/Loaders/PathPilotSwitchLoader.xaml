<UserControl x:Class="TidyWindow.App.Controls.Loaders.PathPilotSwitchLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="640"
             d:DesignHeight="360">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="SwitchLoaderBackdropBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#D60B1123" Offset="0"/>
            <GradientStop Color="#C0101C31" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SwitchLoaderPanelBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#14253B" Offset="0"/>
            <GradientStop Color="#0C1627" Offset="1"/>
        </LinearGradientBrush>
        <RadialGradientBrush x:Key="SwitchLoaderPulseBrush" GradientOrigin="0.5,0.35" Center="0.5,0.5" RadiusX="0.9" RadiusY="0.9">
            <GradientStop Color="#173051" Offset="0"/>
            <GradientStop Color="#10203A" Offset="0.35"/>
            <GradientStop Color="#081425" Offset="1"/>
        </RadialGradientBrush>
        <SolidColorBrush x:Key="SwitchLoaderAccentBrush" Color="#3BC1FF"/>
        <SolidColorBrush x:Key="SwitchLoaderWarmAccentBrush" Color="#FB923C"/>
        <SolidColorBrush x:Key="SwitchLoaderSuccessBrush" Color="#34D399"/>
        <SolidColorBrush x:Key="SwitchLoaderLineBrush" Color="#1E2F4A"/>
        <DropShadowEffect x:Key="SwitchLoaderPanelShadow"
                          Color="#020713"
                          BlurRadius="32"
                          ShadowDepth="0"
                          Opacity="0.6"/>
        <SineEase x:Key="SwitchLoaderEase" EasingMode="EaseInOut"/>

        <Storyboard x:Key="SwitchLoaderStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SwitchOuterHexRotate"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:6"/>
            <DoubleAnimation Storyboard.TargetName="SwitchInnerHexRotate"
                             Storyboard.TargetProperty="Angle"
                             From="360"
                             To="0"
                             Duration="0:0:3.5"/>
            <DoubleAnimation Storyboard.TargetName="SwitchPulseScaleTransform"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="1.18"
                             Duration="0:0:1.3"
                             AutoReverse="True"
                             EasingFunction="{StaticResource SwitchLoaderEase}"/>
            <DoubleAnimation Storyboard.TargetName="SwitchPulseScaleTransform"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="1.18"
                             Duration="0:0:1.3"
                             AutoReverse="True"
                             EasingFunction="{StaticResource SwitchLoaderEase}"/>
            <DoubleAnimation Storyboard.TargetName="SwitchOrbitRotate"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:2.8"/>
            <DoubleAnimation Storyboard.TargetName="SwitchProgressTranslate"
                             Storyboard.TargetProperty="X"
                             From="-160"
                             To="160"
                             Duration="0:0:1.7"
                             AutoReverse="True"
                             EasingFunction="{StaticResource SwitchLoaderEase}"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="OverlayRoot"
          Background="{StaticResource SwitchLoaderBackdropBrush}"
          Opacity="0"
          Visibility="Collapsed"
          IsHitTestVisible="{Binding IsActive, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="36,32"
                CornerRadius="30"
                Background="{StaticResource SwitchLoaderPanelBrush}"
                BorderBrush="#1F314B"
                BorderThickness="1.2"
                Effect="{StaticResource SwitchLoaderPanelShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="18"/>
                    <ColumnDefinition Width="240"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center">
                    <TextBlock Text="Switching PATH priority"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="#F8FAFC"/>
                    <TextBlock Text="PathPilot is reshuffling environment variables so the requested profile leads the PATH."
                               FontSize="13"
                               Foreground="#C7D7F5"
                               Margin="0,6,0,0"
                               TextWrapping="Wrap"/>

                    <StackPanel Margin="0,18,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Ellipse Width="6" Height="6" Fill="{StaticResource SwitchLoaderAccentBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="Capturing current PATH snapshot"
                                       Margin="10,0,0,0"
                                       FontSize="12"
                                       Foreground="#CBD5F5"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Ellipse Width="6" Height="6" Fill="{StaticResource SwitchLoaderWarmAccentBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="Staging prioritized PathPilot entries"
                                       Margin="10,0,0,0"
                                       FontSize="12"
                                       Foreground="#CBD5F5"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Ellipse Width="6" Height="6" Fill="{StaticResource SwitchLoaderSuccessBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="Verifying collisions before publish"
                                       Margin="10,0,0,0"
                                       FontSize="12"
                                       Foreground="#CBD5F5"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Height="6"
                            CornerRadius="3"
                            Background="#15233A"
                            Margin="0,22,0,0">
                        <Grid ClipToBounds="True">
                            <Rectangle Width="180"
                                       Height="6"
                                       Fill="{StaticResource SwitchLoaderAccentBrush}">
                                <Rectangle.RenderTransform>
                                    <TranslateTransform x:Name="SwitchProgressTranslate" X="-160"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Border>

                    <TextBlock Text="Hold tightâ€”PathPilot resumes normal operations once the new ordering is safe."
                               FontSize="12"
                               Foreground="#7C8AA6"
                               Margin="0,14,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <Rectangle Grid.Column="1"
                           Width="1"
                           RadiusX="0.5"
                           RadiusY="0.5"
                           Fill="#223856"
                           Opacity="0.5"/>

                <Grid Grid.Column="2"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid Width="220" Height="220">
                        <Ellipse Fill="#091629" Stroke="#182944" StrokeThickness="1.2"/>
                        <Polygon Points="110,12 198,62 198,158 110,208 22,158 22,62"
                                 Stroke="#244E7A"
                                 StrokeThickness="2"
                                 Fill="#10203A"
                                 Opacity="0.85"
                                 RenderTransformOrigin="0.5,0.5">
                            <Polygon.RenderTransform>
                                <RotateTransform x:Name="SwitchOuterHexRotate" Angle="0"/>
                            </Polygon.RenderTransform>
                        </Polygon>
                        <Polygon Points="110,40 174,76 174,144 110,180 46,144 46,76"
                                 Stroke="{StaticResource SwitchLoaderAccentBrush}"
                                 StrokeDashArray="8 10"
                                 StrokeThickness="1.4"
                                 Fill="#0B1B30"
                                 Opacity="0.7"
                                 RenderTransformOrigin="0.5,0.5">
                            <Polygon.RenderTransform>
                                <RotateTransform x:Name="SwitchInnerHexRotate" Angle="0"/>
                            </Polygon.RenderTransform>
                        </Polygon>
                        <Ellipse Width="104"
                                 Height="104"
                                 Fill="{StaticResource SwitchLoaderPulseBrush}"
                                 Opacity="0.55"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="SwitchPulseScaleTransform" ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Path Data="M110,34 L110,186"
                              Stroke="{StaticResource SwitchLoaderLineBrush}"
                              StrokeThickness="1"
                              StrokeDashArray="4 8"
                              Opacity="0.6"/>
                        <Path Data="M58,90 L162,90"
                              Stroke="{StaticResource SwitchLoaderLineBrush}"
                              StrokeThickness="1"
                              StrokeDashArray="4 8"
                              Opacity="0.6"/>
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="SwitchOrbitRotate" Angle="0"/>
                            </Grid.RenderTransform>
                            <Border Width="16"
                                    Height="16"
                                    CornerRadius="8"
                                    Background="{StaticResource SwitchLoaderAccentBrush}"
                                    BorderBrush="#0F233B"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,-6,0,0"/>
                            <Border Width="22"
                                    Height="22"
                                    CornerRadius="11"
                                    Background="{StaticResource SwitchLoaderWarmAccentBrush}"
                                    BorderBrush="#1F2F46"
                                    BorderThickness="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,-8,0"/>
                            <Border Width="14"
                                    Height="14"
                                    CornerRadius="7"
                                    Background="{StaticResource SwitchLoaderSuccessBrush}"
                                    BorderBrush="#123726"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,0,-6"/>
                        </Grid>
                        <Border Width="58"
                                Height="58"
                                CornerRadius="14"
                                Background="#0E1D33"
                                BorderBrush="#1B3554"
                                BorderThickness="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Rectangle Width="32" Height="6" Fill="{StaticResource SwitchLoaderAccentBrush}" RadiusX="3" RadiusY="3"/>
                                <Rectangle Width="32" Height="6" Fill="#1F2F46" Margin="0,6,0,0" RadiusX="3" RadiusY="3"/>
                                <Rectangle Width="32" Height="6" Fill="{StaticResource SwitchLoaderWarmAccentBrush}" Margin="0,6,0,0" RadiusX="3" RadiusY="3"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
