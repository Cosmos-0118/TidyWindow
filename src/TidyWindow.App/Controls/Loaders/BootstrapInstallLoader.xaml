<UserControl x:Class="TidyWindow.App.Controls.Loaders.BootstrapInstallLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="640"
             d:DesignHeight="420">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="LoaderBackdropBrush"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#B0040F21"
                          Offset="0"/>
            <GradientStop Color="#B00A1D31"
                          Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="LoaderSurfaceBrush"
                          Color="#08141F"/>
        <SolidColorBrush x:Key="LoaderBorderBrush"
                          Color="#143026"/>
        <SolidColorBrush x:Key="LoaderAccentBrush"
                          Color="#22C55E"/>
        <SolidColorBrush x:Key="LoaderAccentSoftBrush"
                          Color="#86EFAC"/>
        <SolidColorBrush x:Key="LoaderMutedBrush"
                          Color="#9FB6C6"/>

        <Storyboard x:Key="LoaderSpinnerStoryboard">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotateTransform"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:2"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="OrbitRotateTransform"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:3.4"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="PulseScaleTransform"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="1.2"
                             Duration="0:0:1.2"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="PulseScaleTransform"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="1.2"
                             Duration="0:0:1.2"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="ProgressSweepTranslate"
                             Storyboard.TargetProperty="X"
                             From="-180"
                             To="180"
                             Duration="0:0:1.8"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="OverlayRoot"
          Background="{StaticResource LoaderBackdropBrush}"
          Opacity="0"
          Visibility="Collapsed"
          IsHitTestVisible="{Binding IsActive, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource LoaderSurfaceBrush}"
                CornerRadius="28"
                Padding="40"
                BorderBrush="{StaticResource LoaderBorderBrush}"
                BorderThickness="1.25">
            <Border.Effect>
                <DropShadowEffect Color="#020A12"
                                  Direction="270"
                                  ShadowDepth="6"
                                  BlurRadius="28"
                                  Opacity="0.55"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid Width="170"
                          Height="170">
                        <Ellipse Fill="#06111A"
                                 Stroke="#0F1E2A"
                                 StrokeThickness="1.5"/>
                        <Ellipse Width="150"
                                 Height="150"
                                 Stroke="#143626"
                                 StrokeThickness="2"
                                 StrokeDashArray="16 10"
                                 Opacity="0.6"/>
                        <Ellipse Width="150"
                                 Height="150"
                                 Stroke="{StaticResource LoaderAccentBrush}"
                                 StrokeThickness="4"
                                 StrokeDashArray="26 18"
                                 StrokeStartLineCap="Round"
                                 StrokeEndLineCap="Round"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotateTransform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="110"
                                 Height="110"
                                 Fill="#092415"
                                 Opacity="0.8"/>
                        <Ellipse Width="90"
                                 Height="90"
                                 Fill="#0F2D1C"
                                 Stroke="#184027"
                                 StrokeThickness="1.2"
                                 Opacity="0.9"/>
                        <Ellipse Width="70"
                                 Height="70"
                                 Fill="{StaticResource LoaderAccentBrush}"
                                 Opacity="0.25"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="PulseScaleTransform"
                                                ScaleX="1"
                                                ScaleY="1"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Grid Width="150"
                              Height="150"
                              RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="OrbitRotateTransform"/>
                            </Grid.RenderTransform>
                            <Border Width="16"
                                    Height="16"
                                    CornerRadius="8"
                                    Background="{StaticResource LoaderAccentSoftBrush}"
                                    BorderBrush="#0E2B1C"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,-8,0,0"/>
                        </Grid>
                    </Grid>
                </Grid>

                <Rectangle Grid.Column="1"
                           Width="1"
                           Margin="16,0"
                           Fill="#1B3B29"
                           Opacity="0.35"/>

                <StackPanel Grid.Column="2"
                            VerticalAlignment="Center">
                    <TextBlock Text="Running install or repair"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#F2FFF5"/>
                    <TextBlock Text="Bringing package managers online through the bootstrap helper."
                               Margin="0,6,0,0"
                               FontSize="13"
                               Foreground="{StaticResource LoaderMutedBrush}"
                               TextWrapping="Wrap"/>

                    <StackPanel Margin="0,18,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="{StaticResource LoaderAccentBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Validating PowerShell, network reachability, and elevation state"
                                       Foreground="#E2F8EC"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="{StaticResource LoaderAccentSoftBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Installing or repairing package manager binaries and services"
                                       Foreground="#E2F8EC"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="#BBF7D0"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Replaying telemetry markers so detection can resume cleanly"
                                       Foreground="#E2F8EC"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Margin="0,22,0,0"
                            Height="6"
                            CornerRadius="3"
                            Background="#0C1F16">
                        <Grid ClipToBounds="True">
                            <Rectangle Width="220"
                                       Height="6"
                                       Fill="{StaticResource LoaderAccentBrush}">
                                <Rectangle.RenderTransform>
                                    <TranslateTransform x:Name="ProgressSweepTranslate"
                                                        X="-180"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Border>

                    <TextBlock Text="Keep this page open while we finish repairing your tooling."
                               Margin="0,14,0,0"
                               FontSize="12"
                               Foreground="#9FB6C6"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
