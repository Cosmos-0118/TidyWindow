<UserControl x:Class="TidyWindow.App.Controls.Loaders.InstallHubLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="600"
             d:DesignHeight="400">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="LoaderBackdropBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#C0040714" Offset="0"/>
            <GradientStop Color="#C0060C1C" Offset="0.5"/>
            <GradientStop Color="#C0071427" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="LoaderSurfaceBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="LoaderBorderBrush" Color="#1E2F4B"/>
        <SolidColorBrush x:Key="LoaderPrimaryBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="LoaderAccentBrush" Color="#38BDF8"/>
        <SolidColorBrush x:Key="LoaderMutedBrush" Color="#94A3B8"/>

        <Storyboard x:Key="LoaderSpinnerStoryboard">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotateTransform"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:1.8"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="ProgressSweepTranslate"
                             Storyboard.TargetProperty="X"
                             From="-160"
                             To="160"
                             Duration="0:0:1.6"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="OverlayRoot"
          Background="{StaticResource LoaderBackdropBrush}"
          Opacity="0"
          Visibility="Collapsed"
          IsHitTestVisible="{Binding IsActive, RelativeSource={RelativeSource AncestorType=UserControl}}">

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource LoaderSurfaceBrush}"
                CornerRadius="24"
                Padding="36"
                BorderBrush="{StaticResource LoaderBorderBrush}"
                BorderThickness="1.25">
            <Border.Effect>
                <DropShadowEffect Color="#050A18"
                                  Direction="270"
                                  ShadowDepth="6"
                                  BlurRadius="24"
                                  Opacity="0.45"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0">
                                        <Grid Width="96"
                                                    Height="96">
                                                <Ellipse Width="96"
                                                                 Height="96"
                                                                 Stroke="#1F2A44"
                                                                 StrokeThickness="2"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                                <Ellipse Width="72"
                                                                 Height="72"
                                                                 Stroke="#243553"
                                                                 StrokeThickness="2"
                                                                 StrokeDashArray="2 4"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                                <Ellipse Width="72"
                                                         Height="72"
                                                         Stroke="{StaticResource LoaderPrimaryBrush}"
                                                         StrokeThickness="5"
                                                         StrokeDashArray="1 2"
                                                         StrokeStartLineCap="Round"
                                                         StrokeEndLineCap="Round"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotateTransform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="18"
                                 Height="18"
                                 Fill="{StaticResource LoaderAccentBrush}"
                                 Stroke="#0F1A2E"
                                 StrokeThickness="1"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Top"
                                 Margin="0,2,0,0"/>
                        <Ellipse Width="10"
                                 Height="10"
                                 Fill="#22C55E"
                                 Stroke="#0F2B1B"
                                 StrokeThickness="1"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"
                                 Margin="0,0,4,0"/>
                    </Grid>
                </StackPanel>

                <Rectangle Grid.Column="1"
                           Width="1"
                           Fill="#1E314F"
                           Opacity="0.35"
                           RadiusX="0.5"
                           RadiusY="0.5"/>

                <StackPanel Grid.Column="2"
                            VerticalAlignment="Center">
                    <TextBlock Text="Preparing Smart Install Hub"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#F8FAFC"/>
                    <TextBlock Text="Syncing curated bundles, catalog entries, and queue telemetry"
                               Margin="0,4,0,0"
                               FontSize="13"
                               Foreground="{StaticResource LoaderMutedBrush}"
                               TextWrapping="Wrap"/>

                    <StackPanel Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,6">
                            <Ellipse Width="6"
                                     Height="6"
                                     Fill="{StaticResource LoaderPrimaryBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Resolving local package definitions"
                                       Margin="10,0,0,0"
                                       Foreground="#CCD6F6"
                                       FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,6">
                            <Ellipse Width="6"
                                     Height="6"
                                     Fill="{StaticResource LoaderAccentBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Evaluating saved bundle presets"
                                       Margin="10,0,0,0"
                                       Foreground="#CCD6F6"
                                       FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="6"
                                     Height="6"
                                     Fill="#22C55E"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Reconciling active queue operations"
                                       Margin="10,0,0,0"
                                       Foreground="#CCD6F6"
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Margin="0,20,0,0"
                            Height="6"
                            CornerRadius="3"
                            Background="#15263F">
                        <Grid ClipToBounds="True">
                            <Rectangle Width="200"
                                       Height="6"
                                       Fill="{StaticResource LoaderAccentBrush}">
                                <Rectangle.RenderTransform>
                                    <TranslateTransform x:Name="ProgressSweepTranslate" X="-160"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Border>

                    <TextBlock Text="Page interactions are paused while the install hub state is rebuilt."
                               Margin="0,12,0,0"
                               FontSize="12"
                               Foreground="#64748B"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
