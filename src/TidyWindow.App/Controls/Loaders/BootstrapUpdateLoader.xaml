<UserControl x:Class="TidyWindow.App.Controls.Loaders.BootstrapUpdateLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="640"
             d:DesignHeight="420">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="LoaderBackdropBrush"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#B0030F1F"
                          Offset="0"/>
            <GradientStop Color="#B0061F32"
                          Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="LoaderSurfaceBrush"
                          Color="#06101C"/>
        <SolidColorBrush x:Key="LoaderBorderBrush"
                          Color="#122335"/>
        <SolidColorBrush x:Key="LoaderAccentBrush"
                          Color="#38BDF8"/>
        <SolidColorBrush x:Key="LoaderAccentSoftBrush"
                          Color="#5EEAD4"/>
        <SolidColorBrush x:Key="LoaderMutedBrush"
                          Color="#9CB3C9"/>

        <Storyboard x:Key="LoaderSpinnerStoryboard">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotateTransform"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:1.8"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="OrbitRotateTransform"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:3"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="PulseScaleTransform"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="1.18"
                             Duration="0:0:1"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="PulseScaleTransform"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="1.18"
                             Duration="0:0:1"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="ProgressSweepTranslate"
                             Storyboard.TargetProperty="X"
                             From="-160"
                             To="160"
                             Duration="0:0:1.5"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="OverlayRoot"
          Background="{StaticResource LoaderBackdropBrush}"
          Opacity="0"
          Visibility="Collapsed"
          IsHitTestVisible="{Binding IsActive, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource LoaderSurfaceBrush}"
                CornerRadius="28"
                Padding="40"
                BorderBrush="{StaticResource LoaderBorderBrush}"
                BorderThickness="1.2">
            <Border.Effect>
                <DropShadowEffect Color="#030C16"
                                  Direction="270"
                                  ShadowDepth="6"
                                  BlurRadius="26"
                                  Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid Width="165"
                          Height="165">
                        <Ellipse Fill="#05101B"
                                 Stroke="#102133"
                                 StrokeThickness="1.5"/>
                        <Ellipse Width="145"
                                 Height="145"
                                 Stroke="#1C3248"
                                 StrokeThickness="2"
                                 StrokeDashArray="16 12"
                                 Opacity="0.6"/>
                        <Ellipse Width="145"
                                 Height="145"
                                 Stroke="{StaticResource LoaderAccentBrush}"
                                 StrokeThickness="4"
                                 StrokeDashArray="26 18"
                                 StrokeStartLineCap="Round"
                                 StrokeEndLineCap="Round"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotateTransform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="108"
                                 Height="108"
                                 Fill="#081A2B"
                                 Opacity="0.85"/>
                        <Ellipse Width="88"
                                 Height="88"
                                 Fill="#0B2535"
                                 Stroke="#1B3D5A"
                                 StrokeThickness="1.2"/>
                        <Ellipse Width="68"
                                 Height="68"
                                 Fill="{StaticResource LoaderAccentBrush}"
                                 Opacity="0.22"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="PulseScaleTransform"
                                                ScaleX="1"
                                                ScaleY="1"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Grid Width="145"
                              Height="145"
                              RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="OrbitRotateTransform"/>
                            </Grid.RenderTransform>
                            <Border Width="16"
                                    Height="16"
                                    CornerRadius="8"
                                    Background="{StaticResource LoaderAccentSoftBrush}"
                                    BorderBrush="#10333A"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,-8,0,0"/>
                        </Grid>
                    </Grid>
                </Grid>

                <Rectangle Grid.Column="1"
                           Width="1"
                           Margin="16,0"
                           Fill="#1D3449"
                           Opacity="0.35"/>

                <StackPanel Grid.Column="2"
                            VerticalAlignment="Center">
                    <TextBlock Text="Refreshing detection results"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#ECF4FF"/>
                    <TextBlock Text="Enumerating package managers, caches, and telemetry before resuming."
                               Margin="0,6,0,0"
                               FontSize="13"
                               Foreground="{StaticResource LoaderMutedBrush}"
                               TextWrapping="Wrap"/>

                    <StackPanel Margin="0,18,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="{StaticResource LoaderAccentBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Inspecting winget, Scoop, and Chocolatey footprints"
                                       Foreground="#DCE9FF"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="{StaticResource LoaderAccentSoftBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Reconciling saved health notes with live registry evidence"
                                       Foreground="#DCE9FF"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="#A855F7"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Updating dashboard summaries and recommendations"
                                       Foreground="#DCE9FF"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Margin="0,22,0,0"
                            Height="6"
                            CornerRadius="3"
                            Background="#0B1C28">
                        <Grid ClipToBounds="True">
                            <Rectangle Width="210"
                                       Height="6"
                                       Fill="{StaticResource LoaderAccentBrush}">
                                <Rectangle.RenderTransform>
                                    <TranslateTransform x:Name="ProgressSweepTranslate"
                                                        X="-160"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Border>

                    <TextBlock Text="Detection re-runs lock page interactions until the refresh is complete."
                               Margin="0,14,0,0"
                               FontSize="12"
                               Foreground="#9CB3C9"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
