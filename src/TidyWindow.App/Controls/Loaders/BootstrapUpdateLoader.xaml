<UserControl x:Class="TidyWindow.App.Controls.Loaders.BootstrapUpdateLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="640"
             d:DesignHeight="420">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="LoaderBackdropBrush"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#C0030C16"
                          Offset="0"/>
            <GradientStop Color="#C0041727"
                          Offset="0.45"/>
            <GradientStop Color="#C0062237"
                          Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="LoaderSurfaceBrush"
                          Color="#08111C"/>
        <SolidColorBrush x:Key="LoaderBorderBrush"
                          Color="#142437"/>
        <SolidColorBrush x:Key="LoaderPrimaryBrush"
                          Color="#38BDF8"/>
        <SolidColorBrush x:Key="LoaderAccentBrush"
                          Color="#5EEAD4"/>
        <SolidColorBrush x:Key="LoaderMutedBrush"
                          Color="#94A3B8"/>

        <Storyboard x:Key="LoaderSpinnerStoryboard">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotateTransform"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:1.5"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="ProgressSweepTranslate"
                             Storyboard.TargetProperty="X"
                             From="-150"
                             To="150"
                             Duration="0:0:1.2"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="UpdateOrbitDotOuterRotate"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:2.4"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="UpdateOrbitDotInnerRotate"
                             Storyboard.TargetProperty="Angle"
                             From="360"
                             To="0"
                             Duration="0:0:2.9"
                             RepeatBehavior="Forever"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="OverlayRoot"
          Background="{StaticResource LoaderBackdropBrush}"
          Opacity="0"
          Visibility="Collapsed"
          IsHitTestVisible="{Binding IsActive, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource LoaderSurfaceBrush}"
                CornerRadius="28"
                Padding="40"
                BorderBrush="{StaticResource LoaderBorderBrush}"
                BorderThickness="1.2">
            <Border.Effect>
                <DropShadowEffect Color="#030C16"
                                  Direction="270"
                                  ShadowDepth="6"
                                  BlurRadius="26"
                                  Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center">
                    <Grid Width="105"
                          Height="105">
                        <Ellipse Width="105"
                                 Height="105"
                                 Stroke="#132132"
                                 StrokeThickness="2"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                        <Ellipse Width="82"
                                 Height="82"
                                 Stroke="#1F3249"
                                 StrokeThickness="2"
                                 StrokeDashArray="2 3"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                        <Ellipse Width="82"
                                 Height="82"
                                 Stroke="{StaticResource LoaderPrimaryBrush}"
                                 StrokeThickness="5"
                                 StrokeDashArray="1 2"
                                 StrokeStartLineCap="Round"
                                 StrokeEndLineCap="Round"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotateTransform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                                                <Polygon Points="0,14 12,0 24,14"
                                                                 Fill="#0F172A"
                                                                 Stroke="#38BDF8"
                                                                 StrokeThickness="1.5"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Top"
                                                                 Margin="0,10,0,0"/>
                                                <Ellipse Width="18"
                                                                 Height="18"
                                                                 Fill="#0D2632"
                                                                 Stroke="#0E3546"
                                                                 StrokeThickness="1"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                                <Rectangle Width="2"
                                                                     Height="36"
                                                                     Fill="#5EEAD4"
                                                                     RadiusX="1"
                                                                     RadiusY="1"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                                <Rectangle Width="36"
                                                                     Height="2"
                                                                     Fill="#5EEAD4"
                                                                     RadiusX="1"
                                                                     RadiusY="1"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                                <Ellipse Width="92"
                                                                 Height="92"
                                                                 Stroke="#14314D"
                                                                 StrokeDashArray="4 6"
                                                                 StrokeThickness="1"
                                                                 Opacity="0.65"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                                <Grid Width="92"
                                                            Height="92"
                                                            RenderTransformOrigin="0.5,0.5">
                                                        <Grid.RenderTransform>
                                                                <RotateTransform x:Name="UpdateOrbitDotOuterRotate"/>
                                                        </Grid.RenderTransform>
                                                        <Ellipse Width="16"
                                                                         Height="16"
                                                                         Fill="#12283A"
                                                                         Stroke="#1E3A4F"
                                                                         StrokeThickness="1"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Top"
                                                                         Margin="0,-10,0,0"/>
                                                        <Ellipse Width="12"
                                                                         Height="12"
                                                                         Fill="#5EEAD4"
                                                                         Stroke="#13423D"
                                                                         StrokeThickness="1"
                                                                         HorizontalAlignment="Right"
                                                                         VerticalAlignment="Center"
                                                                         Margin="0,0,-8,0"/>
                                                </Grid>
                                                <Grid Width="68"
                                                            Height="68"
                                                            RenderTransformOrigin="0.5,0.5">
                                                        <Grid.RenderTransform>
                                                                <RotateTransform x:Name="UpdateOrbitDotInnerRotate"/>
                                                        </Grid.RenderTransform>
                                                        <Ellipse Width="10"
                                                                         Height="10"
                                                                         Fill="#A855F7"
                                                                         Stroke="#3D1D52"
                                                                         StrokeThickness="1"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Bottom"
                                                                         Margin="0,0,0,-8"/>
                                                </Grid>
                    </Grid>
                </StackPanel>

                    <Grid Grid.Column="1"
                        Width="32"/>

                <StackPanel Grid.Column="2"
                            VerticalAlignment="Center">
                    <TextBlock Text="Refreshing detection results"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#ECF2FF"/>
                    <TextBlock Text="Enumerating package managers, state files, and telemetry across sources"
                               Margin="0,6,0,0"
                               FontSize="13"
                               Foreground="{StaticResource LoaderMutedBrush}"
                               TextWrapping="Wrap"/>

                    <StackPanel Margin="0,18,0,0">
                        <DockPanel Margin="0,0,0,8">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="#38BDF8"
                                     Margin="0,4,10,0"/>
                            <TextBlock Text="Inspecting winget, Scoop, and Chocolatey footprints"
                                       Foreground="#DDE8FF"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,8">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="#5EEAD4"
                                     Margin="0,4,10,0"/>
                            <TextBlock Text="Reconciling saved health notes with live registry evidence"
                                       Foreground="#DDE8FF"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </DockPanel>
                        <DockPanel>
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="#A855F7"
                                     Margin="0,4,10,0"/>
                            <TextBlock Text="Updating dashboard summaries and recommendations"
                                       Foreground="#DDE8FF"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </DockPanel>
                    </StackPanel>

                    <Border Margin="0,22,0,0"
                            Height="6"
                            CornerRadius="3"
                            Background="#102030">
                        <Grid ClipToBounds="True">
                            <Rectangle Width="220"
                                       Height="6"
                                       Fill="{StaticResource LoaderAccentBrush}">
                                <Rectangle.RenderTransform>
                                    <TranslateTransform x:Name="ProgressSweepTranslate"
                                                        X="-150"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Border>

                    <TextBlock Text="Detection re-runs lock page interactions until the refresh is complete."
                               Margin="0,14,0,0"
                               FontSize="12"
                               Foreground="#94A3B8"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
