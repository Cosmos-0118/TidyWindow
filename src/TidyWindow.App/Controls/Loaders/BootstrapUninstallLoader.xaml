<UserControl x:Class="TidyWindow.App.Controls.Loaders.BootstrapUninstallLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="640"
             d:DesignHeight="420">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="LoaderBackdropBrush"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#B0130505"
                          Offset="0"/>
            <GradientStop Color="#B0280C0C"
                          Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="LoaderSurfaceBrush"
                          Color="#170709"/>
        <SolidColorBrush x:Key="LoaderBorderBrush"
                          Color="#3A1A1F"/>
        <SolidColorBrush x:Key="LoaderAccentBrush"
                          Color="#F97316"/>
        <SolidColorBrush x:Key="LoaderAccentSoftBrush"
                          Color="#FDBA74"/>
        <SolidColorBrush x:Key="LoaderMutedBrush"
                          Color="#FAD5C5"/>

        <Storyboard x:Key="LoaderSpinnerStoryboard">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotateTransform"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:2"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="OrbitRotateTransform"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:3.2"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="PulseScaleTransform"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="1.2"
                             Duration="0:0:1.1"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="PulseScaleTransform"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="1.2"
                             Duration="0:0:1.1"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="ProgressSweepTranslate"
                             Storyboard.TargetProperty="X"
                             From="-170"
                             To="170"
                             Duration="0:0:1.6"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="OverlayRoot"
          Background="{StaticResource LoaderBackdropBrush}"
          Opacity="0"
            Visibility="Collapsed">
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource LoaderSurfaceBrush}"
                CornerRadius="28"
                Padding="40"
                BorderBrush="{StaticResource LoaderBorderBrush}"
                BorderThickness="1.25">
            <Border.Effect>
                <DropShadowEffect Color="#050202"
                                  Direction="270"
                                  ShadowDepth="6"
                                  BlurRadius="28"
                                  Opacity="0.55"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid Width="170"
                          Height="170">
                        <Ellipse Fill="#140507"
                                 Stroke="#2D0F14"
                                 StrokeThickness="1.5"/>
                        <Ellipse Width="150"
                                 Height="150"
                                 Stroke="#4C1C23"
                                 StrokeThickness="2"
                                 StrokeDashArray="14 12"
                                 Opacity="0.55"/>
                        <Ellipse Width="150"
                                 Height="150"
                                 Stroke="{StaticResource LoaderAccentBrush}"
                                 StrokeThickness="4"
                                 StrokeDashArray="26 18"
                                 StrokeStartLineCap="Round"
                                 StrokeEndLineCap="Round"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotateTransform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="110"
                                 Height="110"
                                 Fill="#2B0D12"
                                 Opacity="0.85"/>
                        <Ellipse Width="90"
                                 Height="90"
                                 Fill="#3D1118"
                                 Stroke="#612028"
                                 StrokeThickness="1.2"/>
                        <Ellipse Width="70"
                                 Height="70"
                                 Fill="{StaticResource LoaderAccentBrush}"
                                 Opacity="0.25"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="PulseScaleTransform"
                                                ScaleX="1"
                                                ScaleY="1"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Grid Width="150"
                              Height="150"
                              RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="OrbitRotateTransform"/>
                            </Grid.RenderTransform>
                            <Border Width="16"
                                    Height="16"
                                    CornerRadius="8"
                                    Background="{StaticResource LoaderAccentSoftBrush}"
                                    BorderBrush="#522016"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,-8,0,0"/>
                        </Grid>
                    </Grid>
                </Grid>

                <Rectangle Grid.Column="1"
                           Width="1"
                           Margin="16,0"
                           Fill="#4C1C23"
                           Opacity="0.4"/>

                <StackPanel Grid.Column="2"
                            VerticalAlignment="Center">
                    <TextBlock Text="Removing package manager"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#FFEAE0"/>
                    <TextBlock Text="Detaching scheduled tasks, services, and caches before cleanup completes."
                               Margin="0,6,0,0"
                               FontSize="13"
                               Foreground="{StaticResource LoaderMutedBrush}"
                               TextWrapping="Wrap"/>

                    <StackPanel Margin="0,18,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="{StaticResource LoaderAccentBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Stopping services, scheduled tasks, and telemetry hooks"
                                       Foreground="#FFE2DA"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="{StaticResource LoaderAccentSoftBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Removing binaries, cache folders, and registry entries"
                                       Foreground="#FFE2DA"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="#FED7AA"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Rehydrating inventory so bootstrap history stays accurate"
                                       Foreground="#FFE2DA"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Margin="0,22,0,0"
                            Height="6"
                            CornerRadius="3"
                            Background="#2B1014">
                        <Grid ClipToBounds="True">
                            <Rectangle Width="220"
                                       Height="6"
                                       Fill="{StaticResource LoaderAccentBrush}">
                                <Rectangle.RenderTransform>
                                    <TranslateTransform x:Name="ProgressSweepTranslate"
                                                        X="-170"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Border>

                    <TextBlock Text="Hold tight while we scrub the remaining artifacts."
                               Margin="0,14,0,0"
                               FontSize="12"
                               Foreground="#FAD5C5"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
