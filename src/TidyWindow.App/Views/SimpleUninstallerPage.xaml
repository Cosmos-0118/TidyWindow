<Page x:Class="TidyWindow.App.Views.SimpleUninstallerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
      xmlns:controls="clr-namespace:TidyWindow.App.Views"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=viewModels:SimpleUninstallerViewModel}"
      Background="Transparent"
      Title="Simple uninstaller">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="ActionButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground" Value="#04120A"/>
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="BorderBrush" Value="#16A34A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1FB157"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#15803D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#199648"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="#143426"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#1F402C"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryActionButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#273449"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#202c3d"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}"
                             Value="{x:Static viewModels:AppRemovalStatus.Running}">
                    <Setter Property="Background" Value="#0F172A"/>
                    <Setter Property="BorderBrush" Value="#38BDF8"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="{x:Static viewModels:AppRemovalStatus.Succeeded}">
                    <Setter Property="Background" Value="#052E1B"/>
                    <Setter Property="BorderBrush" Value="#22C55E"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="{x:Static viewModels:AppRemovalStatus.Failed}">
                    <Setter Property="Background" Value="#3F1515"/>
                    <Setter Property="BorderBrush" Value="#F87171"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="{x:Static viewModels:AppRemovalStatus.Cancelled}">
                    <Setter Property="Background" Value="#3B2F06"/>
                    <Setter Property="BorderBrush" Value="#FBBF24"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#1E293B"/>

    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#111C32"
                CornerRadius="18"
                Padding="24"
                BorderBrush="#1E2F4E"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <controls:PageTitleBar Grid.Column="0"
                                       Title="{Binding HeroTitle}"
                                       Subtitle="{Binding HeroSubtitle}"
                                       IconGlyph="ðŸ§¹"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Border Background="#0B1221"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Dry run"
                                       Foreground="#94A3B8"
                                       Margin="0,0,8,0"/>
                            <ToggleButton IsChecked="{Binding IsDryRun}"
                                          Width="56"
                                          Height="28"
                                          Background="#1E293B"
                                          BorderBrush="#334155"
                                          BorderThickness="1">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <Border x:Name="SwitchTrack"
                                                    CornerRadius="14"
                                                    Background="#1E293B"/>
                                            <Ellipse x:Name="SwitchThumb"
                                                     Width="22"
                                                     Height="22"
                                                     Fill="#E2E8F0"
                                                     Margin="3"
                                                     HorizontalAlignment="Left"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="SwitchTrack" Property="Background" Value="#22C55E"/>
                                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right"/>
                                                <Setter TargetName="SwitchThumb" Property="Fill" Value="#052E1B"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="SwitchTrack" Property="Opacity" Value="0.4"/>
                                                <Setter TargetName="SwitchThumb" Property="Opacity" Value="0.7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </StackPanel>
                    </Border>

                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryActionButtonStyle}"/>
                    <Button Content="Uninstall selected"
                            Command="{Binding UninstallSelectedCommand}"
                            Style="{StaticResource ActionButtonStyle}"/>
                    <Button Content="Cancel"
                            Command="{Binding CancelOperationsCommand}"
                            Style="{StaticResource SecondaryActionButtonStyle}"
                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="20">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,14">
                        <TextBlock Text="Installed applications"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="{Binding LastUpdatedText}"
                                   FontSize="12"
                                   Foreground="#94A3B8"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ListView ItemsSource="{Binding Apps}"
                              SelectedItem="{Binding SelectedApp, Mode=TwoWay}"
                              BorderThickness="0"
                              Background="Transparent"
                              Foreground="#E2E8F0"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0,4,0,4"/>
                                <Setter Property="Padding" Value="12"/>
                                <Setter Property="Background" Value="#111C2E"/>
                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="ItemBorder"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="#1E2F4E"
                                                    BorderThickness="1"
                                                    CornerRadius="12">
                                                <ContentPresenter HorizontalAlignment="Stretch"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#38BDF8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModels:AppRemovalItemViewModel}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              VerticalAlignment="Top"
                                              Style="{StaticResource App.CheckBoxStyle}">
                                        <CheckBox.ToolTip>Select for orchestrated uninstall.</CheckBox.ToolTip>
                                    </CheckBox>

                                    <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <TextBlock Text="{Binding Publisher}"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"
                                                   Margin="0,4,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                            <Border Background="#1D2A44"
                                                    CornerRadius="8"
                                                    Padding="8,3"
                                                    Margin="0,0,8,0">
                                                <TextBlock Text="{Binding SourceBadge}" FontSize="11"/>
                                            </Border>
                                            <Border Background="#1D2A44"
                                                    CornerRadius="8"
                                                    Padding="8,3"
                                                    Visibility="{Binding Version, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="{Binding Version}" FontSize="11"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                        <Border Style="{StaticResource StatusBadgeStyle}">
                                            <TextBlock Text="{Binding Status}"
                                                       FontWeight="SemiBold"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding StatusMessage}"
                                                   Foreground="#94A3B8"
                                                   FontSize="11"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="180"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock Text="No installed applications detected."
                               Foreground="#94A3B8"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasApps}"
                                                 Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DockPanel>
            </Border>

            <Border Grid.Column="1"
                    Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="20"
                    Margin="18,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Selection details"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="Review install info, choose uninstall mode, and toggle winget fallback."
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                Margin="0,16,0,0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedApp}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="{Binding SelectedApp.Name}"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="{Binding SelectedApp.Publisher}"
                                   Foreground="#94A3B8"
                                   Margin="0,4,0,0"/>
                        <TextBlock Text="{Binding SelectedApp.App.InstallLocation}"
                                   Foreground="#CBD5F5"
                                   FontSize="12"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"/>

                        <StackPanel Orientation="Vertical" Margin="0,16,0,0">
                            <TextBlock Text="Winget fallback"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,6,0,0"
                                        Visibility="{Binding SelectedApp.SupportsWinget, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="Enable winget fallback"
                                          IsChecked="{Binding SelectedApp.WingetFallbackEnabled, Mode=TwoWay}"
                                          Style="{StaticResource App.CheckBoxStyle}"/>
                                <CheckBox Content="Winget only"
                                          Margin="16,0,0,0"
                                          IsChecked="{Binding SelectedApp.WingetOnly, Mode=TwoWay}"
                                          Style="{StaticResource App.CheckBoxStyle}"/>
                            </StackPanel>
                            <TextBlock Text="Winget metadata not available for this app."
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       Margin="0,4,0,0"
                                       Visibility="{Binding SelectedApp.SupportsWinget, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=False}"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="0,16,0,0">
                            <TextBlock Text="Current status"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <Border Style="{StaticResource StatusBadgeStyle}" Margin="0,6,0,0">
                                <TextBlock Text="{Binding SelectedApp.Status}" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                            <TextBlock Text="{Binding SelectedApp.StatusMessage}"
                                       Foreground="#94A3B8"
                                       FontSize="12"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Grid.Row="1"
                               Text="Select an app to view its details."
                               Foreground="#94A3B8"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedApp}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Page>
