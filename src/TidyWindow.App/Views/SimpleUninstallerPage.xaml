<Page x:Class="TidyWindow.App.Views.SimpleUninstallerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
        xmlns:cleanup="clr-namespace:TidyWindow.App.ViewModels.Cleanup"
            xmlns:controls="clr-namespace:TidyWindow.App.Views"
            xmlns:layouts="clr-namespace:TidyWindow.App.Controls"
        xmlns:converters="clr-namespace:TidyWindow.App.Converters"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=viewModels:SimpleUninstallerViewModel}"
      Background="Transparent"
      Title="Simple uninstaller">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:EnumEqualsConverter x:Key="EnumEqualsConverter"/>

        <Style x:Key="PivotToggleButtonStyle"
               TargetType="ToggleButton">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1E293B"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#38BDF8"/>
                                <Setter Property="Foreground" Value="#F8FAFC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="BorderBrush" Value="#334155"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground" Value="#04120A"/>
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="BorderBrush" Value="#16A34A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1FB157"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#15803D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#199648"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="#143426"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#1F402C"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryActionButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#273449"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#202c3d"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerActionButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground" Value="#FDF2F2"/>
            <Setter Property="Background" Value="#DC2626"/>
            <Setter Property="BorderBrush" Value="#B91C1C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#B91C1C"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#991B1B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#991B1B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="#3F1D1D"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#5B1B1B"/>
                                <Setter Property="Foreground" Value="#FCA5A5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="Background" Value="#17263D"/>
            <Setter Property="BorderBrush" Value="#2A3D5F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}"
                             Value="{x:Static viewModels:AppRemovalStatus.Running}">
                    <Setter Property="Background" Value="#0F172A"/>
                    <Setter Property="BorderBrush" Value="#38BDF8"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="{x:Static viewModels:AppRemovalStatus.Succeeded}">
                    <Setter Property="Background" Value="#0A2F1D"/>
                    <Setter Property="BorderBrush" Value="#22C55E"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="{x:Static viewModels:AppRemovalStatus.Failed}">
                    <Setter Property="Background" Value="#3F1515"/>
                    <Setter Property="BorderBrush" Value="#F87171"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                             Value="{x:Static viewModels:AppRemovalStatus.Cancelled}">
                    <Setter Property="Background" Value="#3B2F06"/>
                    <Setter Property="BorderBrush" Value="#FBBF24"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#1E293B"/>

    </Page.Resources>

    <Grid Margin="16,24,16,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#111C32"
                CornerRadius="18"
                Padding="24"
                BorderBrush="#1E2F4E"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Margin="0,0,24,0">
                        <controls:PageTitleBar Title="{Binding HeroTitle}"
                                               Subtitle="{Binding HeroSubtitle}"
                                               IconGlyph="ðŸ§¹"/>

                        <Grid Margin="0,16,0,0"
                              HorizontalAlignment="Stretch">
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource App.TextBoxStyle}"
                                     Height="46"
                                     HorizontalAlignment="Stretch"
                                     FontSize="14"
                                     Padding="40,0,12,0"/>
                            <TextBlock Text="ðŸ”"
                                       Margin="14,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="#94A3B8"
                                       FontSize="16"
                                       IsHitTestVisible="False"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Top">
                        <Border Background="#0B1221"
                                CornerRadius="10"
                                Padding="18,0"
                                Height="46"
                                VerticalAlignment="Center"
                                Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="Dry run"
                                           Foreground="#94A3B8"
                                           Margin="0,0,8,0"/>
                                <ToggleButton IsChecked="{Binding IsDryRun}"
                                              Width="56"
                                              Height="28"
                                              Background="#1E293B"
                                              BorderBrush="#334155"
                                              BorderThickness="1">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Grid>
                                                <Border x:Name="SwitchTrack"
                                                        CornerRadius="14"
                                                        Background="#1E293B"/>
                                                <Ellipse x:Name="SwitchThumb"
                                                         Width="22"
                                                         Height="22"
                                                         Fill="#E2E8F0"
                                                         Margin="3"
                                                         HorizontalAlignment="Left"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="SwitchTrack" Property="Background" Value="#22C55E"/>
                                                    <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter TargetName="SwitchThumb" Property="Fill" Value="#052E1B"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="SwitchTrack" Property="Opacity" Value="0.4"/>
                                                    <Setter TargetName="SwitchThumb" Property="Opacity" Value="0.7"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </StackPanel>
                        </Border>

                        <Button Content="Refresh"
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource SecondaryActionButtonStyle}"/>
                        <Button Content="Cancel"
                                Command="{Binding CancelOperationsCommand}"
                                Style="{StaticResource SecondaryActionButtonStyle}"
                                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Margin="0,28,0,0">
                    <ToggleButton Content="Applications"
                                  Style="{StaticResource PivotToggleButtonStyle}"
                                  Command="{Binding SwitchPivotCommand}"
                                  CommandParameter="{x:Static viewModels:SimpleUninstallerPivot.Inventory}"
                                  IsChecked="{Binding CurrentPivot, Converter={StaticResource EnumEqualsConverter}, ConverterParameter={x:Static viewModels:SimpleUninstallerPivot.Inventory}}"/>
                    <ToggleButton Content="Cleanup assistant"
                                  Style="{StaticResource PivotToggleButtonStyle}"
                                  Command="{Binding SwitchPivotCommand}"
                                  CommandParameter="{x:Static viewModels:SimpleUninstallerPivot.Cleanup}"
                                  IsChecked="{Binding CurrentPivot, Converter={StaticResource EnumEqualsConverter}, ConverterParameter={x:Static viewModels:SimpleUninstallerPivot.Cleanup}}"/>
                </StackPanel>
            </Grid>
        </Border>

            <Grid Grid.Row="1" Margin="0,24,0,0">
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentPivot}"
                                             Value="{x:Static viewModels:SimpleUninstallerPivot.Inventory}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Border Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="16"
                            Padding="20">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,14">
                                <TextBlock Text="Installed applications"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="{Binding LastUpdatedText}"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <Grid>
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled"
                                              Background="Transparent">
                                    <ItemsControl ItemsSource="{Binding FilteredApps}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <layouts:AdaptiveTilePanel MinColumnWidth="420"
                                                                           MaxColumnWidth="540"
                                                                           MinColumns="1"
                                                                           MaxColumns="3"
                                                                           ColumnSpacing="20"
                                                                           RowSpacing="20"
                                                                           Padding="4,0,4,4"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type viewModels:AppRemovalItemViewModel}">
                                                <Border Background="#111C2E"
                                                        BorderBrush="#1E2F4E"
                                                        BorderThickness="1"
                                                        CornerRadius="18"
                                                        Padding="22"
                                                        MinHeight="190">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <StackPanel Grid.Row="0">
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontSize="18"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#F8FAFC"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding Publisher}"
                                                                       Foreground="#94A3B8"
                                                                       FontSize="12"
                                                                       Margin="0,6,0,0"
                                                                       TextWrapping="Wrap"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Row="1"
                                                                    Orientation="Horizontal"
                                                                    Margin="0,10,0,0">
                                                            <Border Background="#152643"
                                                                    BorderBrush="#27426B"
                                                                    BorderThickness="1"
                                                                    CornerRadius="12"
                                                                    Padding="12,4"
                                                                    Margin="0,0,8,0">
                                                                <TextBlock Text="{Binding SourceBadge}"
                                                                           FontSize="11"
                                                                           Foreground="#CDE4FF"/>
                                                            </Border>
                                                            <Border Background="#152643"
                                                                    BorderBrush="#27426B"
                                                                    BorderThickness="1"
                                                                    CornerRadius="12"
                                                                    Padding="12,4"
                                                                    Visibility="{Binding Version, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <TextBlock Text="{Binding Version}"
                                                                           FontSize="11"
                                                                           Foreground="#CDE4FF"/>
                                                            </Border>
                                                            <Border Style="{StaticResource StatusBadgeStyle}"
                                                                    Margin="8,0,0,0">
                                                                <TextBlock Text="{Binding Status}"
                                                                           FontWeight="SemiBold"
                                                                           FontSize="11"
                                                                           HorizontalAlignment="Center">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" Value="#E2E8F0"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Status}"
                                                                                             Value="{x:Static viewModels:AppRemovalStatus.Succeeded}">
                                                                                    <Setter Property="Foreground" Value="#DCFCE7"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Border>
                                                        </StackPanel>

                                                        <TextBlock Grid.Row="2"
                                                                   Text="{Binding StatusMessage}"
                                                                   Foreground="#A5B4FC"
                                                                   FontSize="11"
                                                                   Margin="0,12,0,0"
                                                                   TextWrapping="Wrap">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding StatusMessage}" Value="">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <Grid Grid.Row="3"
                                                              Margin="0,20,0,0"
                                                              HorizontalAlignment="Right">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Grid.Column="0"
                                                                    Width="148"
                                                                    Height="44"
                                                                    Content="Details"
                                                                    Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource SecondaryActionButtonStyle}"/>
                                                            <Button Grid.Column="1"
                                                                    Width="148"
                                                                    Height="44"
                                                                    Margin="10,0,0,0"
                                                                    Content="Uninstall"
                                                                    Command="{Binding DataContext.UninstallAppCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource DangerActionButtonStyle}"/>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <TextBlock Text="No installed applications detected."
                                           Foreground="#94A3B8"
                                           FontSize="13"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasApps}"
                                                             Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                        </DockPanel>
                    </Border>
                </Grid>

                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentPivot}"
                                             Value="{x:Static viewModels:SimpleUninstallerPivot.Cleanup}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Border Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="16"
                            Padding="24">
                        <Grid>
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Background="Transparent">
                                <StackPanel>
                                    <StackPanel Visibility="{Binding HasCleanupContext, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="Cleanup assistant"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <TextBlock Text="{Binding CleanupTargetTitle}"
                                                   FontSize="14"
                                                   Foreground="#E2E8F0"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding CleanupSummary}"
                                                   FontSize="12"
                                                   Foreground="#94A3B8"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap"/>

                                        <Border Background="#0F1B33"
                                                BorderBrush="#1E2F4E"
                                                BorderThickness="1"
                                                CornerRadius="14"
                                                Padding="16"
                                                Margin="0,16,0,0">
                                            <ItemsControl ItemsSource="{Binding CleanupSteps}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                            <Ellipse Width="10" Height="10" Margin="0,4,10,0">
                                                                <Ellipse.Style>
                                                                    <Style TargetType="Ellipse">
                                                                        <Setter Property="Fill" Value="#475569"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding State}"
                                                                                         Value="{x:Static cleanup:CleanupFlowStepState.Running}">
                                                                                <Setter Property="Fill" Value="#38BDF8"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding State}"
                                                                                         Value="{x:Static cleanup:CleanupFlowStepState.Completed}">
                                                                                <Setter Property="Fill" Value="#22C55E"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding State}"
                                                                                         Value="{x:Static cleanup:CleanupFlowStepState.Failed}">
                                                                                <Setter Property="Fill" Value="#F87171"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Ellipse.Style>
                                                            </Ellipse>
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding Title}"
                                                                           Foreground="#F8FAFC"
                                                                           FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding Detail}"
                                                                           Foreground="#94A3B8"
                                                                           FontSize="11"
                                                                           TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Border>

                                        <Border Background="#0F1B33"
                                                BorderBrush="#1E2F4E"
                                                BorderThickness="1"
                                                CornerRadius="14"
                                                Padding="16"
                                                Margin="0,12,0,0">
                                            <StackPanel>
                                                <TextBlock Text="Leftover folders &amp; shortcuts"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="#F8FAFC"/>
                                                <ItemsControl ItemsSource="{Binding CleanupSuggestions}"
                                                              Margin="0,12,0,0">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <layouts:AdaptiveTilePanel MinColumnWidth="320"
                                                                                       MaxColumnWidth="420"
                                                                                       ColumnSpacing="16"
                                                                                       RowSpacing="16"
                                                                                       Padding="0"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#111C2E"
                                                                    BorderBrush="#1E2F4E"
                                                                    BorderThickness="1"
                                                                    CornerRadius="12"
                                                                    Padding="14">
                                                                <StackPanel>
                                                                    <CheckBox Content="{Binding Title}"
                                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                              Style="{StaticResource App.CheckBoxStyle}"/>
                                                                    <TextBlock Text="{Binding Description}"
                                                                               Foreground="#94A3B8"
                                                                               FontSize="11"
                                                                               Margin="0,6,0,0"
                                                                               TextWrapping="Wrap"/>
                                                                    <TextBlock Text="{Binding Path}"
                                                                               Foreground="#64748B"
                                                                               FontSize="10"
                                                                               Margin="0,4,0,0"
                                                                               TextWrapping="Wrap"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <TextBlock Text="No leftover folders or shortcuts detected."
                                                           Foreground="#94A3B8"
                                                           FontSize="12"
                                                           Margin="0,12,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasCleanupSuggestions}"
                                                                             Value="False">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#0F1B33"
                                                BorderBrush="#1E2F4E"
                                                BorderThickness="1"
                                                CornerRadius="14"
                                                Padding="16"
                                                Margin="0,12,0,0">
                                            <StackPanel>
                                                <TextBlock Text="Registry references"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="#F8FAFC"/>
                                                <ItemsControl ItemsSource="{Binding CleanupRegistryEntries}"
                                                              Margin="0,12,0,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#0B1221"
                                                                    BorderBrush="#1E2F4E"
                                                                    BorderThickness="1"
                                                                    CornerRadius="10"
                                                                    Padding="10"
                                                                    Margin="0,6,0,0">
                                                                <TextBlock Text="{Binding}"
                                                                           Foreground="#94A3B8"
                                                                           FontSize="11"
                                                                           TextWrapping="Wrap"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <TextBlock Text="No registry references logged for this uninstall."
                                                           Foreground="#94A3B8"
                                                           FontSize="12"
                                                           Margin="0,8,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasCleanupRegistryEntries}"
                                                                             Value="False">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <StackPanel Orientation="Vertical"
                                                    Margin="0,12,0,0"
                                                    HorizontalAlignment="Right">
                                            <TextBlock Text="Cleanup actions are disabled while Dry run is active."
                                                       Foreground="#FBBF24"
                                                       FontSize="11"
                                                       Margin="0,0,0,8"
                                                       Visibility="{Binding IsDryRun, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <TextBlock Text="Applying cleanup..."
                                                       Foreground="#FBBF24"
                                                       FontSize="11"
                                                       Margin="0,0,0,8"
                                                       Visibility="{Binding CleanupApplyInProgress, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Right">
                                                <Button Content="Apply selected"
                                                        Command="{Binding ApplyCleanupCommand}"
                                                        Style="{StaticResource ActionButtonStyle}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel>
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasCleanupContext}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <TextBlock Text="Cleanup assistant"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <TextBlock Text="Run an uninstall to generate cleanup recommendations."
                                                   Foreground="#94A3B8"
                                                   FontSize="13"
                                                   Margin="0,8,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

        <Border Grid.Row="1"
                Margin="0,24,0,0"
                Visibility="{Binding IsDetailsPopupOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
                Background="#CC020617">
            <Border Width="480"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#0B1221"
                    BorderBrush="#1E2F4E"
                    BorderThickness="1"
                    CornerRadius="18"
                    Padding="28"
                    DataContext="{Binding SelectedApp}">
                <StackPanel>
                    <TextBlock Text="App details"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#94A3B8"/>
                    <TextBlock Text="{Binding Name}"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,4,0,0"
                               Foreground="#F8FAFC"/>
                    <TextBlock Text="{Binding Publisher}"
                               Foreground="#94A3B8"
                               Margin="0,4,0,0"/>
                    <TextBlock Text="{Binding App.InstallLocation}"
                               Foreground="#CBD5F5"
                               FontSize="12"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap"/>

                    <StackPanel Orientation="Vertical" Margin="0,18,0,0">
                        <TextBlock Text="Winget options"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,8,0,0"
                                    Visibility="{Binding SupportsWinget, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <CheckBox Content="Enable winget fallback"
                                      IsChecked="{Binding WingetFallbackEnabled, Mode=TwoWay}"
                                      Style="{StaticResource App.CheckBoxStyle}"/>
                            <CheckBox Content="Winget only"
                                      Margin="16,0,0,0"
                                      IsChecked="{Binding WingetOnly, Mode=TwoWay}"
                                      Style="{StaticResource App.CheckBoxStyle}"/>
                        </StackPanel>
                        <TextBlock Text="Winget metadata not available for this app."
                                   Foreground="#94A3B8"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding SupportsWinget, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=False}"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,18,0,0">
                        <TextBlock Text="Current status"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <Border Style="{StaticResource StatusBadgeStyle}" Margin="0,8,0,0">
                            <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,28,0,0"
                                HorizontalAlignment="Right">
                        <Button Content="Close"
                                Command="{Binding DataContext.CloseDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                Style="{StaticResource SecondaryActionButtonStyle}"/>
        
                        <Button Content="Uninstall"
                                Command="{Binding DataContext.UninstallAppCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource ActionButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

    </Grid>
</Page>
