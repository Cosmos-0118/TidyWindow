<Page x:Class="TidyWindow.App.Views.ProjectOblivionFlowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:TidyWindow.App.Views"
      mc:Ignorable="d"
      Title="Project Oblivion flow"
      Background="Transparent"
      d:DesignWidth="1320"
      d:DesignHeight="860">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <SolidColorBrush x:Key="PopupBackdropBrush" Color="#010615"/>
        <SolidColorBrush x:Key="PopupPanelBrush" Color="#0C1426"/>
        <SolidColorBrush x:Key="PopupCardBrush" Color="#111D33"/>
        <SolidColorBrush x:Key="PopupCardAlternateBrush" Color="#152540"/>
        <SolidColorBrush x:Key="PopupAccentBrush" Color="#34D399"/>
        <SolidColorBrush x:Key="PopupAccentSecondaryBrush" Color="#38BDF8"/>

        <Style x:Key="PopupPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#04111E"/>
            <Setter Property="BorderBrush" Value="#34D399"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="PrimaryButtonRoot"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#34D399" Offset="0"/>
                                    <GradientStop Color="#10B981" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PrimaryButtonRoot" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="PrimaryButtonRoot" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14"
                                                          Direction="270"
                                                          Color="#22C55E"
                                                          Opacity="0.55"
                                                          ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PrimaryButtonRoot" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="PrimaryButtonRoot" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PopupSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="SecondaryButtonRoot"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#172640" Offset="0"/>
                                    <GradientStop Color="#1F2D4B" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SecondaryButtonRoot" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.01" ScaleY="1.01"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="SecondaryButtonRoot" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10"
                                                          Direction="270"
                                                          Color="#1D4ED8"
                                                          Opacity="0.45"
                                                          ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="SecondaryButtonRoot" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="SecondaryButtonRoot" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PopupCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PopupCardBrush}"/>
            <Setter Property="BorderBrush" Value="#1F2F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="18"/>
        </Style>

        <DataTemplate x:Key="TimelineItemTemplate">
            <Border Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Width="14" Height="14" Margin="0,0,12,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#475569"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Active">
                                        <Setter Property="Fill" Value="#38BDF8"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                        <Setter Property="Fill" Value="#34D399"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                        <Setter Property="Fill" Value="#F87171"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding Title}"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Description}"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Detail}"
                                   Foreground="#E2E8F0"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource PopupCardStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}" Value="Active">
                                <Setter Property="BorderBrush" Value="#38BDF8"/>
                                <Setter Property="Background" Value="#172646"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                <Setter Property="BorderBrush" Value="#22C55E"/>
                                <Setter Property="Background" Value="#0B2A1C"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                <Setter Property="BorderBrush" Value="#F87171"/>
                                <Setter Property="Background" Value="#3F0D12"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="LogEntryTemplate">
            <Border Style="{StaticResource PopupCardStyle}" Margin="0,6,0,0">
                <StackPanel>
                    <TextBlock Text="{Binding Timestamp, StringFormat={}{0:G}}"
                               Foreground="#94A3B8"
                               FontSize="11"/>
                    <TextBlock Text="{Binding Message}"
                               Foreground="#E2E8F0"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ArtifactTemplate">
            <Border Style="{StaticResource PopupCardStyle}" Margin="0,8,0,0">
                <DockPanel>
                    <CheckBox DockPanel.Dock="Left"
                              VerticalAlignment="Top"
                              Margin="0,2,12,0"
                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                    <StackPanel>
                        <TextBlock Text="{Binding DisplayName}"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="{Binding FullPath}"
                                   Foreground="#CBD5F5"
                                   FontSize="12"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding SizeBytes, StringFormat={}{0:N0} bytes}"
                                       Foreground="#94A3B8"
                                       FontSize="11"/>
                            <TextBlock Text=" â€¢ " Foreground="#64748B" FontSize="11" Margin="6,0"/>
                            <TextBlock Text="{Binding Type}"
                                       Foreground="#94A3B8"
                                       FontSize="11"/>
                            <TextBlock Text=" (Elevated)"
                                       Foreground="#FBBF24"
                                       FontSize="11"
                                       Margin="6,0,0,0"
                                       Visibility="{Binding RequiresElevation, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding FailureMessage}"
                                   Foreground="#FCA5A5"
                                   FontSize="12"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding FailureMessage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource PopupBackdropBrush}">
        <ScrollViewer Margin="32"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid MaxWidth="1320"
                  HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <controls:PageTitleBar Grid.Row="0"
                                       Title="Project Oblivion flow"
                                       Subtitle="{Binding TargetAppDisplay}"
                                       IconGlyph="ðŸ§¨"
                                       BadgeText="{Binding SelectedArtifactCount, StringFormat={}{0} selection(s)}"
                                       Margin="0,0,0,28">
                    <controls:PageTitleBar.TrailingContent>
                        <WrapPanel>
                            <Button Content="Back to inventory"
                                    Command="{Binding ClosePopupCommand}"
                                    Style="{StaticResource PopupSecondaryButtonStyle}"/>
                            <Button Content="Cancel run"
                                    Command="{Binding CancelRunCommand}"
                                    Style="{StaticResource PopupSecondaryButtonStyle}"/>
                            <Button Content="Start run"
                                    Command="{Binding StartRunCommand}"
                                    Style="{StaticResource PopupPrimaryButtonStyle}"/>
                        </WrapPanel>
                    </controls:PageTitleBar.TrailingContent>
                    <controls:PageTitleBar.BodyContent>
                        <WrapPanel HorizontalAlignment="Stretch">
                            <Border Style="{StaticResource PopupCardStyle}"
                                    Margin="8"
                                    MinWidth="220"
                                    MaxWidth="360">
                                <StackPanel>
                                    <TextBlock Text="Flow status"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding StatusMessage}"
                                               Foreground="#F8FAFC"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="Stay on this page while the timeline progresses."
                                               Foreground="#94A3B8"
                                               FontSize="12"
                                               Margin="0,6,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource PopupCardStyle}"
                                    Margin="8"
                                    MinWidth="220"
                                    MaxWidth="360">
                                <StackPanel>
                                    <TextBlock Text="Artifacts selected"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding SelectedArtifactCount, StringFormat={}{0} item(s)}"
                                               Foreground="#F8FAFC"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Margin="0,8,0,0"/>
                                    <TextBlock Text="{Binding SelectedArtifactSizeDisplay}"
                                               Foreground="#94A3B8"
                                               FontSize="12"
                                               Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource PopupCardStyle}"
                                    Margin="8"
                                    MinWidth="220"
                                    MaxWidth="360">
                                <StackPanel>
                                    <TextBlock Text="Last summary"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <StackPanel Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Summary.FreedDisplay, TargetNullValue='Run to see results'}"
                                                   Foreground="#F8FAFC"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Summary.Removed, StringFormat={}{0} removed}"
                                                   Foreground="#94A3B8"
                                                   Margin="0,6,0,0"
                                                   Visibility="{Binding HasSummary, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding Summary.FailureCount, StringFormat={}{0} failed}"
                                                   Foreground="#FCA5A5"
                                                   Margin="0,2,0,0"
                                                   Visibility="{Binding HasSummary, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </controls:PageTitleBar.BodyContent>
                </controls:PageTitleBar>

                <Grid Grid.Row="1" Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="360"/>
                        <ColumnDefinition Width="*" MinWidth="520"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,24,0">
                        <Border Style="{StaticResource PopupCardStyle}">
                            <StackPanel>
                                <DockPanel>
                                    <StackPanel>
                                        <TextBlock Text="Timeline"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <TextBlock Text="{Binding FlowExecutionStatus}"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <CheckBox Content="Auto-advance"
                                              DockPanel.Dock="Right"
                                              Foreground="#E2E8F0"
                                              IsChecked="{Binding AutoAdvanceSelection}"
                                              VerticalAlignment="Center"
                                              Margin="16,0,0,0"/>
                                </DockPanel>
                                <ItemsControl ItemsSource="{Binding Timeline}"
                                              Margin="0,16,0,0"
                                              ItemTemplate="{StaticResource TimelineItemTemplate}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource PopupCardStyle}" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="Removal status"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="Track selection and cleanup progress."
                                           Foreground="#94A3B8"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                                <UniformGrid Columns="3" Margin="0,16,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Selected"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding SelectedArtifactCount, StringFormat={}{0:N0}}"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Removed"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding RemovedArtifactCount, StringFormat={}{0:N0}}"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   Foreground="#34D399"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Failed"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding FailedArtifactCount, StringFormat={}{0:N0}}"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FCA5A5"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <Grid Grid.Column="1">
                        <Border Style="{StaticResource PopupCardStyle}"
                                Visibility="{Binding IsStageWorkspaceVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ActiveStageIcon}"
                                               FontSize="36"
                                               Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ActiveStageHelper}"
                                                   Foreground="#93C5FD"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ActiveStageTitle}"
                                                   FontSize="24"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text="{Binding ActiveStageDescription}"
                                           Foreground="#94A3B8"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding ActiveStageDetail}"
                                           Foreground="#CBD5F5"
                                           Margin="0,4,0,12"
                                           TextWrapping="Wrap"/>
                                <Border Background="#0F1A2E"
                                        BorderThickness="1"
                                        BorderBrush="#1E3357"
                                        CornerRadius="12"
                                        Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Now running"
                                                   Foreground="#93C5FD"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding StatusMessage}"
                                                   Foreground="#E2E8F0"
                                                   FontSize="14"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                <UniformGrid Columns="3" Margin="0,18,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Selected"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding SelectedArtifactCount, StringFormat={}{0:N0}}"
                                                   Foreground="#F8FAFC"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Removed"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding RemovedArtifactCount, StringFormat={}{0:N0}}"
                                                   Foreground="#34D399"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Failed"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding FailedArtifactCount, StringFormat={}{0:N0}}"
                                                   Foreground="#FCA5A5"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource PopupCardStyle}"
                                Visibility="{Binding IsArtifactWorkspaceVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <DockPanel>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ActiveStageHelper}"
                                                   Foreground="#93C5FD"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ActiveStageTitle}"
                                                   FontSize="22"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <TextBlock Text="{Binding ActiveStageDescription}"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"
                                                   Margin="0,4,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <StackPanel DockPanel.Dock="Right"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right">
                                        <Button Content="Select all"
                                                Margin="0,0,12,0"
                                                Style="{StaticResource PopupSecondaryButtonStyle}"
                                                Command="{Binding SelectAllArtifactsCommand}"/>
                                        <Button Content="Select none"
                                                Margin="0,0,12,0"
                                                Style="{StaticResource PopupSecondaryButtonStyle}"
                                                Command="{Binding SelectNoArtifactsCommand}"/>
                                        <Button Content="Commit selection"
                                                Style="{StaticResource PopupPrimaryButtonStyle}"
                                                Command="{Binding CommitSelectionCommand}"/>
                                    </StackPanel>
                                </DockPanel>

                                <TextBlock Text="{Binding ActiveStageDetail}"
                                           Foreground="#CBD5F5"
                                           Margin="0,12,0,0"
                                           TextWrapping="Wrap"/>

                                <TextBlock Text="Artifacts will appear as discovery completes."
                                           Foreground="#94A3B8"
                                           Margin="0,16,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasArtifacts}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ItemsControl ItemsSource="{Binding ArtifactGroups}" Margin="0,12,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource PopupCardStyle}" Margin="0,0,0,16">
                                                <StackPanel>
                                                    <DockPanel>
                                                        <TextBlock Text="{Binding GroupName}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#F8FAFC"
                                                                   FontSize="15"/>
                                                        <TextBlock Text="{Binding SelectedCount, StringFormat={}{0} selected}"
                                                                   DockPanel.Dock="Right"
                                                                   Foreground="#A5B4FC"
                                                                   FontSize="12"/>
                                                    </DockPanel>
                                                    <ItemsControl ItemsSource="{Binding Items}"
                                                                  Margin="0,12,0,0"
                                                                  ItemTemplate="{StaticResource ArtifactTemplate}"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.Style>
                                        <Style TargetType="ItemsControl">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasArtifacts}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ItemsControl.Style>
                                </ItemsControl>

                                <Border Style="{StaticResource PopupCardStyle}"
                                        Margin="0,12,0,0"
                                        Visibility="{Binding IsAwaitingSelection, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="Selection pause"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <TextBlock Text="Review artifacts before continuing."
                                                   Foreground="#94A3B8"
                                                   Margin="0,4,0,8"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Continue"
                                                    Margin="0,0,12,0"
                                                    Style="{StaticResource PopupPrimaryButtonStyle}"
                                                    Command="{Binding CommitSelectionCommand}"/>
                                            <TextBlock Text="{Binding SelectedArtifactCount, StringFormat={}{0} items will be removed}"
                                                       Foreground="#A5B4FC"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource PopupCardStyle}"
                                Visibility="{Binding IsSummaryWorkspaceVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ActiveStageIcon}"
                                               FontSize="32"
                                               Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Project Oblivion"
                                                   Foreground="#93C5FD"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="Cleanup summary"
                                                   FontSize="24"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Text="{Binding Summary.FreedDisplay, StringFormat={}{0} freed}"
                                           Foreground="#A5B4FC"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Margin="0,12,0,0"/>
                                <UniformGrid Columns="3" Margin="0,16,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Removed"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Summary.Removed, StringFormat={}{0:N0}}"
                                                   Foreground="#F8FAFC"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Skipped"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Summary.Skipped, StringFormat={}{0:N0}}"
                                                   Foreground="#FDE68A"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Failed"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Summary.FailureCount, StringFormat={}{0:N0}}"
                                                   Foreground="#FCA5A5"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </UniformGrid>

                                <Border Background="#0F1A2E"
                                        BorderBrush="#1E3357"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Padding="16"
                                        Margin="0,18,0,0">
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Run log"
                                                   Foreground="#E2E8F0"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>
                                        <Button Content="Open run log"
                                                Margin="16,0,0,0"
                                                Style="{StaticResource PopupSecondaryButtonStyle}"
                                                Command="{Binding ViewRunLogCommand}"
                                                Visibility="{Binding HasRunLog, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource PopupCardStyle}"
                                Visibility="{Binding IsSummaryAwaitingDetails, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Gathering summary..."
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="Wrapping up the cleanup and preparing results."
                                           Foreground="#94A3B8"
                                           Margin="0,6,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
