<Page x:Class="TidyWindow.App.Views.ProjectOblivionFlowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:TidyWindow.App.Views"
    xmlns:po="clr-namespace:TidyWindow.App.Controls.ProjectOblivion"
      mc:Ignorable="d"
      Title="Project Oblivion flow"
      Background="Transparent"
      d:DesignWidth="1320"
      d:DesignHeight="860">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <DataTemplate x:Key="TimelineItemTemplate">
            <Border Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Width="14" Height="14" Margin="0,0,12,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#475569"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Active">
                                        <Setter Property="Fill" Value="#38BDF8"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                        <Setter Property="Fill" Value="#34D399"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                        <Setter Property="Fill" Value="#F87171"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding Title}"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Description}"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Detail}"
                                   Foreground="#E2E8F0"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource PopupCardStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}" Value="Active">
                                <Setter Property="BorderBrush" Value="#38BDF8"/>
                                <Setter Property="Background" Value="#172646"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                <Setter Property="BorderBrush" Value="#22C55E"/>
                                <Setter Property="Background" Value="#0B2A1C"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                <Setter Property="BorderBrush" Value="#F87171"/>
                                <Setter Property="Background" Value="#3F0D12"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="LogEntryTemplate">
            <Border Style="{StaticResource PopupCardStyle}" Margin="0,6,0,0">
                <StackPanel>
                    <TextBlock Text="{Binding Timestamp, StringFormat={}{0:G}}"
                               Foreground="#94A3B8"
                               FontSize="11"/>
                    <TextBlock Text="{Binding Message}"
                               Foreground="#E2E8F0"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ArtifactTemplate">
            <Border Style="{StaticResource PopupCardStyle}" Margin="0,8,0,0">
                <DockPanel>
                    <CheckBox DockPanel.Dock="Left"
                              VerticalAlignment="Top"
                              Margin="0,2,12,0"
                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                    <StackPanel>
                        <TextBlock Text="{Binding DisplayName}"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="{Binding FullPath}"
                                   Foreground="#CBD5F5"
                                   FontSize="12"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding SizeBytes, StringFormat={}{0:N0} bytes}"
                                       Foreground="#94A3B8"
                                       FontSize="11"/>
                            <TextBlock Text=" â€¢ " Foreground="#64748B" FontSize="11" Margin="6,0"/>
                            <TextBlock Text="{Binding Type}"
                                       Foreground="#94A3B8"
                                       FontSize="11"/>
                            <TextBlock Text=" (Elevated)"
                                       Foreground="#FBBF24"
                                       FontSize="11"
                                       Margin="6,0,0,0"
                                       Visibility="{Binding RequiresElevation, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding FailureMessage}"
                                   Foreground="#FCA5A5"
                                   FontSize="12"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding FailureMessage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="KickoffStageTemplate">
            <po:KickoffStageCard/>
        </DataTemplate>

        <DataTemplate x:Key="DefaultUninstallStageTemplate">
            <po:DefaultUninstallStageCard/>
        </DataTemplate>

        <DataTemplate x:Key="ProcessSweepStageTemplate">
            <po:ProcessSweepStageCard/>
        </DataTemplate>

        <DataTemplate x:Key="ArtifactDiscoveryStageTemplate">
            <po:ArtifactDiscoveryStageCard/>
        </DataTemplate>

        <DataTemplate x:Key="SelectionHoldStageTemplate">
            <po:SelectionHoldStageCard/>
        </DataTemplate>

        <DataTemplate x:Key="CleanupStageTemplate">
            <po:CleanupStageCard/>
        </DataTemplate>

        <DataTemplate x:Key="SummaryStageTemplate">
            <po:SummaryStageCard/>
        </DataTemplate>

        <po:ProjectOblivionStageTemplateSelector x:Key="ProjectOblivionStageTemplateSelector"
                                                 KickoffTemplate="{StaticResource KickoffStageTemplate}"
                                                 DefaultUninstallTemplate="{StaticResource DefaultUninstallStageTemplate}"
                                                 ProcessSweepTemplate="{StaticResource ProcessSweepStageTemplate}"
                                                 ArtifactDiscoveryTemplate="{StaticResource ArtifactDiscoveryStageTemplate}"
                                                 SelectionHoldTemplate="{StaticResource SelectionHoldStageTemplate}"
                                                 CleanupTemplate="{StaticResource CleanupStageTemplate}"
                                                 SummaryTemplate="{StaticResource SummaryStageTemplate}"/>
    </Page.Resources>

    <Grid Background="{StaticResource PopupBackdropBrush}">
        <ScrollViewer x:Name="FlowScrollViewer"
                      Margin="32"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid MaxWidth="1320"
                  HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <controls:PageTitleBar Grid.Row="0"
                                       Title="Project Oblivion flow"
                                       Subtitle="{Binding TargetAppDisplay}"
                                       IconGlyph="ðŸ§¨"
                                       BadgeText="{Binding SelectedArtifactCount, StringFormat={}{0} selection(s)}"
                                       Margin="0,0,0,28">
                    <controls:PageTitleBar.TrailingContent>
                        <WrapPanel>
                            <Button Content="Back to inventory"
                                    Command="{Binding ClosePopupCommand}"
                                    Style="{StaticResource PopupSecondaryButtonStyle}"/>
                            <Button Content="Cancel run"
                                    Command="{Binding CancelRunCommand}"
                                    Style="{StaticResource PopupSecondaryButtonStyle}"/>
                            <Button Content="Start run"
                                    Command="{Binding StartRunCommand}"
                                    Style="{StaticResource PopupPrimaryButtonStyle}"/>
                        </WrapPanel>
                    </controls:PageTitleBar.TrailingContent>
                    <controls:PageTitleBar.BodyContent>
                        <WrapPanel HorizontalAlignment="Stretch">
                            <Border Style="{StaticResource PopupCardStyle}"
                                    Margin="8"
                                    MinWidth="220"
                                    MaxWidth="360">
                                <StackPanel>
                                    <TextBlock Text="Flow status"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding StatusMessage}"
                                               Foreground="#F8FAFC"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="Stay on this page while the timeline progresses."
                                               Foreground="#94A3B8"
                                               FontSize="12"
                                               Margin="0,6,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource PopupCardStyle}"
                                    Margin="8"
                                    MinWidth="220"
                                    MaxWidth="360">
                                <StackPanel>
                                    <TextBlock Text="Artifacts selected"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding SelectedArtifactCount, StringFormat={}{0} item(s)}"
                                               Foreground="#F8FAFC"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Margin="0,8,0,0"/>
                                    <TextBlock Text="{Binding SelectedArtifactSizeDisplay}"
                                               Foreground="#94A3B8"
                                               FontSize="12"
                                               Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource PopupCardStyle}"
                                    Margin="8"
                                    MinWidth="220"
                                    MaxWidth="360">
                                <StackPanel>
                                    <TextBlock Text="Last summary"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <StackPanel Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Summary.FreedDisplay, TargetNullValue='Run to see results'}"
                                                   Foreground="#F8FAFC"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Summary.Removed, StringFormat={}{0} removed}"
                                                   Foreground="#94A3B8"
                                                   Margin="0,6,0,0"
                                                   Visibility="{Binding HasSummary, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding Summary.FailureCount, StringFormat={}{0} failed}"
                                                   Foreground="#FCA5A5"
                                                   Margin="0,2,0,0"
                                                   Visibility="{Binding HasSummary, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding Summary.VerificationUnknown, StringFormat={}{0} unverified}"
                                                   Foreground="#FBBF24"
                                                   Margin="0,2,0,0"
                                                   Visibility="{Binding Summary.HasVerificationGaps, Converter={StaticResource BooleanToVisibilityConverter}, TargetNullValue=Collapsed}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </controls:PageTitleBar.BodyContent>
                </controls:PageTitleBar>

                <StackPanel Grid.Row="1" Margin="0,0,0,40">
                    <Border Style="{StaticResource PopupCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Removal status"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <TextBlock Text="Track selection and cleanup progress."
                                       Foreground="#94A3B8"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                            <UniformGrid Columns="4" Margin="0,16,0,0">
                                <StackPanel>
                                    <TextBlock Text="Selected"
                                               Foreground="#94A3B8"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding SelectedArtifactCount, StringFormat={}{0:N0}}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Removed"
                                               Foreground="#94A3B8"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding RemovedArtifactCount, StringFormat={}{0:N0}}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="#34D399"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Failed"
                                               Foreground="#94A3B8"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding FailedArtifactCount, StringFormat={}{0:N0}}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="#FCA5A5"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Unverified"
                                               Foreground="#94A3B8"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding UnknownArtifactCount, StringFormat={}{0:N0}}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="#FBBF24"/>
                                </StackPanel>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <ItemsControl x:Name="StageItemsControl"
                                  ItemsSource="{Binding Timeline}"
                                  Margin="0,24,0,0"
                                  ItemTemplateSelector="{StaticResource ProjectOblivionStageTemplateSelector}"
                                  HorizontalAlignment="Stretch">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
