        </Style.Triggers>
    </Style>
    <Style x:Key="CleanupMetaChipStyle"
           TargetType="Border">
        <Setter Property="Background"
            Value="{StaticResource CleanupSurfaceHighlightBrush}"/>
        <Setter Property="BorderBrush"
            Value="{StaticResource CleanupBorderBrush}"/>
        <Setter Property="BorderThickness"
            Value="1"/>
        <Setter Property="CornerRadius"
            Value="8"/>
        <Setter Property="Padding"
            Value="8,4"/>
        <Setter Property="Margin"
            Value="0,0,8,8"/>
    </Style>
