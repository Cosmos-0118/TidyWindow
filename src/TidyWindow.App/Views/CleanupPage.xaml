<Page x:Class="TidyWindow.App.Views.CleanupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:converters="clr-namespace:TidyWindow.App.Converters"
            xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
      mc:Ignorable="d"
      Title="Cleanup"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <ControlTemplate x:Key="ComboToggleButtonTemplate"
                         TargetType="ToggleButton">
            <Grid>
                <Border x:Name="ToggleBorder"
                        Background="#0F172A"
                        BorderBrush="#1E293B"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8,4"/>
                <Path Data="M 0 0 L 5 5 L 10 0"
                      Stroke="#38BDF8"
                      StrokeThickness="1.5"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#17233C"/>
                </Trigger>
                <Trigger Property="IsChecked"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#132039"/>
                    <Setter TargetName="ToggleBorder"
                            Property="BorderBrush"
                            Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#132039"/>
                    <Setter TargetName="ToggleBorder"
                            Property="BorderBrush"
                            Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="ToggleBorder"
                            Property="Opacity"
                            Value="0.5"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="CleanupComboBoxItemStyle"
               TargetType="ComboBoxItem">
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Padding"
                    Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1B2942"/>
                </Trigger>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1E3A8A"/>
                    <Setter Property="Foreground"
                            Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SetupCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#0F172A"/>
            <Setter Property="BorderBrush"
                    Value="#1E293B"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="0,0,16,16"/>
            <Setter Property="MinWidth"
                    Value="220"/>
        </Style>
    <Style x:Key="SheetCardStyle"
           TargetType="Border">
        <Setter Property="Background"
            Value="#101C33"/>
        <Setter Property="BorderBrush"
            Value="#1E293B"/>
        <Setter Property="BorderThickness"
            Value="1"/>
        <Setter Property="CornerRadius"
            Value="12"/>
        <Setter Property="Padding"
            Value="16"/>
        <Setter Property="Margin"
            Value="0,0,16,16"/>
        <Setter Property="MinWidth"
            Value="180"/>
    </Style>
        <Style x:Key="AdvancedCardStyle"
               TargetType="Border"
               BasedOn="{StaticResource SetupCardStyle}">
            <Setter Property="Background"
                    Value="#0B1324"/>
            <Setter Property="Margin"
                    Value="0,12,0,0"/>
        </Style>
        <Style x:Key="ChipButtonStyle"
               TargetType="Button">
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="12,4"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Margin"
                    Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ChipBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="16"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="ChipBorder"
                                        Property="Background"
                                        Value="#24324C"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="ChipBorder"
                                        Property="Background"
                                        Value="#1E3A8A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="ChipBorder"
                                        Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FlatButtonStyle"
               TargetType="Button">
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="Padding"
                    Value="16,8"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Margin"
                    Value="0,0,12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="ButtonBorder"
                                        Property="Background"
                                        Value="#24324C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="ButtonBorder"
                                        Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <ScrollViewer x:Name="RootScrollViewer"
                      Margin="32"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="False"
                      PanningMode="VerticalOnly">
        <StackPanel MinWidth="760">
            <Border Background="#0B1629"
                    BorderBrush="#1E293B"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="24"
            Margin="0,0,0,24"
            Visibility="{Binding IsSetupPhase, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="64"
                            Height="64"
                            Background="#1E2237"
                            CornerRadius="18"
                            VerticalAlignment="Top">
                        <TextBlock Text="ðŸ§¹"
                                   FontSize="28"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1"
                                Margin="20,0,0,0">
                        <TextBlock Text="Phase 1 â€” Configure scan"
                                   Foreground="#38BDF8"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                        <TextBlock Text="Shape your cleanup preview"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="#F8FAFC"
                                   Margin="0,6,0,4"/>
                        <TextBlock Text="Dial in scope, types, and filters before moving on to review."
                                   Foreground="#94A3B8"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>
                        <ItemsControl Margin="0,12,0,0">
                            <ItemsControl.Items>
                                <TextBlock Text="- Toggle downloads, item kinds, and extensions from one surface."
                                           Foreground="#64748B"
                                           FontSize="12"/>
                                <TextBlock Text="- Use presets or precision input to cap the top items."
                                           Foreground="#64748B"
                                           FontSize="12"/>
                                <TextBlock Text="- Reveal advanced filters only when you need deeper control."
                                           Foreground="#64748B"
                                           FontSize="12"/>
                            </ItemsControl.Items>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="#111827"
                    BorderBrush="#1E293B"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="24"
            Margin="0,0,0,28"
            Visibility="{Binding IsSetupPhase, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Setup checklist"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#CBD5F5"/>
                    <TextBlock Text="Confirm what the preview should include before you run it."
                               FontSize="12"
                               Foreground="#64748B"
                               Margin="0,2,0,20"/>

                    <WrapPanel>
                        <Border Style="{StaticResource SetupCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Scope"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="Include Downloads to mirror the quick toggle (D)."
                                           FontSize="12"
                                           Foreground="#64748B"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,8"/>
                                <CheckBox Content="Include Downloads"
                                          FontSize="13"
                                          Foreground="#F8FAFC"
                                          IsChecked="{Binding IncludeDownloads, Mode=TwoWay}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource SetupCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Filter by type"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="Choose whether to scan files, folders, or both (F)."
                                           FontSize="12"
                                           Foreground="#64748B"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,8"/>
                                <ComboBox ItemsSource="{Binding ItemKindOptions}"
                                          SelectedValuePath="Kind"
                                          SelectedValue="{Binding SelectedItemKind, Mode=TwoWay}"
                                          DisplayMemberPath="Label"
                                          Background="Transparent"
                                          Foreground="#E2E8F0"
                                          BorderThickness="0"
                                          Padding="0">
                                    <ComboBox.Template>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton x:Name="ToggleButton"
                                                              Template="{StaticResource ComboToggleButtonTemplate}"
                                                              Grid.ColumnSpan="2"
                                                              Focusable="False"
                                                              IsHitTestVisible="True"
                                                              ClickMode="Press"
                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                <ContentPresenter x:Name="ContentSite"
                                                                  Margin="14,4,36,4"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"
                                                                  RecognizesAccessKey="True"
                                                                  Content="{TemplateBinding SelectionBoxItem}"/>
                                                <Popup x:Name="Popup"
                                                       Placement="Bottom"
                                                       AllowsTransparency="True"
                                                       Focusable="False"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       PopupAnimation="Slide">
                                                    <Border x:Name="PopupBorder"
                                                            Background="#0F172A"
                                                            BorderBrush="#1E293B"
                                                            BorderThickness="1"
                                                            CornerRadius="6"
                                                            Padding="4">
                                                        <ScrollViewer Margin="0"
                                                                      SnapsToDevicePixels="True">
                                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="HasItems"
                                                         Value="False">
                                                    <Setter TargetName="PopupBorder"
                                                            Property="MinHeight"
                                                            Value="24"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled"
                                                         Value="False">
                                                    <Setter Property="Foreground"
                                                            Value="#64748B"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ComboBox.Template>
                                    <ComboBox.ItemContainerStyle>
                                        <StaticResource ResourceKey="CleanupComboBoxItemStyle"/>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource SetupCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Extensions"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="Enable filtering (E) to include or exclude extensions."
                                           FontSize="12"
                                           Foreground="#64748B"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,8"/>
                                <ComboBox ItemsSource="{Binding ExtensionFilterOptions}"
                                          SelectedValuePath="Mode"
                                          SelectedValue="{Binding SelectedExtensionFilterMode, Mode=TwoWay}"
                                          Background="Transparent"
                                          Foreground="#E2E8F0"
                                          BorderThickness="0"
                                          Padding="0"
                                          ToolTip="{Binding SelectedItem.Description, RelativeSource={RelativeSource Self}}">
                                    <ComboBox.Template>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton x:Name="ToggleButton"
                                                              Template="{StaticResource ComboToggleButtonTemplate}"
                                                              Grid.ColumnSpan="2"
                                                              Focusable="False"
                                                              IsHitTestVisible="True"
                                                              ClickMode="Press"
                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                <ContentPresenter x:Name="ContentSite"
                                                                  Margin="14,4,36,4"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"
                                                                  RecognizesAccessKey="True"
                                                                  Content="{TemplateBinding SelectionBoxItem}"/>
                                                <Popup x:Name="Popup"
                                                       Placement="Bottom"
                                                       AllowsTransparency="True"
                                                       Focusable="False"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       PopupAnimation="Slide">
                                                    <Border x:Name="PopupBorder"
                                                            Background="#0F172A"
                                                            BorderBrush="#1E293B"
                                                            BorderThickness="1"
                                                            CornerRadius="6"
                                                            Padding="4">
                                                        <ScrollViewer Margin="0"
                                                                      SnapsToDevicePixels="True">
                                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="HasItems"
                                                         Value="False">
                                                    <Setter TargetName="PopupBorder"
                                                            Property="MinHeight"
                                                            Value="24"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled"
                                                         Value="False">
                                                    <Setter Property="Foreground"
                                                            Value="#64748B"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ComboBox.Template>
                                    <ComboBox.ItemContainerStyle>
                                        <StaticResource ResourceKey="CleanupComboBoxItemStyle"/>
                                    </ComboBox.ItemContainerStyle>
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Label}"
                                                           Foreground="#E2E8F0"/>
                                                <TextBlock Text="{Binding Description}"
                                                           Foreground="#64748B"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock Text="{Binding ExtensionStatusText}"
                                           FontSize="12"
                                           Foreground="#CBD5F5"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource SetupCardStyle}"
                                MinWidth="300">
                            <StackPanel>
                                <TextBlock Text="Top items"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="Use the slider or presets to keep previews manageable (T)."
                                           FontSize="12"
                                           Foreground="#64748B"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,8"/>
                <Slider Minimum="{Binding PreviewCountMinimum, Mode=OneWay}"
                    Maximum="{Binding PreviewCountMaximum, Mode=OneWay}"
                                        Value="{Binding PreviewCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True"
                                        Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            Margin="0,0,0,8">
                                    <TextBox Text="{Binding PreviewCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Width="64"
                                             Background="#0F172A"
                                             Foreground="#E2E8F0"
                                             BorderBrush="#1E293B"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             HorizontalContentAlignment="Center"
                                             Margin="0,0,12,0"/>
                                    <TextBlock FontSize="12"
                                               Foreground="#64748B"
                                               VerticalAlignment="Center">
                                        <Run Text="Range: "/>
                                        <Run Text="{Binding PreviewCountMinimum}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding PreviewCountMaximum}"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource ChipButtonStyle}"
                                            Content="25"
                                            Command="{Binding ApplyPreviewPresetCommand}">
                                        <Button.CommandParameter>
                                            <sys:Int32>25</sys:Int32>
                                        </Button.CommandParameter>
                                    </Button>
                                    <Button Style="{StaticResource ChipButtonStyle}"
                                            Content="50"
                                            Command="{Binding ApplyPreviewPresetCommand}">
                                        <Button.CommandParameter>
                                            <sys:Int32>50</sys:Int32>
                                        </Button.CommandParameter>
                                    </Button>
                                    <Button Style="{StaticResource ChipButtonStyle}"
                                            Content="100"
                                            Command="{Binding ApplyPreviewPresetCommand}">
                                        <Button.CommandParameter>
                                            <sys:Int32>100</sys:Int32>
                                        </Button.CommandParameter>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <Expander Header="Advanced options"
                              Background="Transparent"
                              Foreground="#CBD5F5"
                              Margin="0,12,0,0">
                        <StackPanel Margin="0,12,0,0">
                            <Border Style="{StaticResource AdvancedCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Extension profile"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"/>
                                    <TextBlock FontSize="12"
                                               Margin="0,4,0,8">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="#64748B"/>
                                                <Setter Property="Text"
                                                        Value="Apply a preset list of extensions for quick filtering."/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsExtensionSelectorEnabled}"
                                                                 Value="False">
                                                        <Setter Property="Foreground"
                                                                Value="#475569"/>
                                                        <Setter Property="Text"
                                                                Value="Enable extension filtering above to choose a preset."/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ComboBox ItemsSource="{Binding ExtensionProfiles}"
                                              SelectedItem="{Binding SelectedExtensionProfile, Mode=TwoWay}"
                                              DisplayMemberPath="Name"
                                              Background="Transparent"
                                              Foreground="#E2E8F0"
                                              BorderThickness="0"
                                              Padding="0"
                                              IsEnabled="{Binding IsExtensionSelectorEnabled}">
                                        <ComboBox.Template>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton"
                                                                  Template="{StaticResource ComboToggleButtonTemplate}"
                                                                  Grid.ColumnSpan="2"
                                                                  Focusable="False"
                                                                  IsHitTestVisible="True"
                                                                  ClickMode="Press"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                    <ContentPresenter x:Name="ContentSite"
                                                                      Margin="14,4,36,4"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Left"
                                                                      RecognizesAccessKey="True"
                                                                      Content="{TemplateBinding SelectionBoxItem}"/>
                                                    <Popup x:Name="Popup"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True"
                                                           Focusable="False"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           PopupAnimation="Slide">
                                                        <Border x:Name="PopupBorder"
                                                                Background="#0F172A"
                                                                BorderBrush="#1E293B"
                                                                BorderThickness="1"
                                                                CornerRadius="6"
                                                                Padding="4">
                                                            <ScrollViewer Margin="0"
                                                                          SnapsToDevicePixels="True">
                                                                <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="HasItems"
                                                             Value="False">
                                                        <Setter TargetName="PopupBorder"
                                                                Property="MinHeight"
                                                                Value="24"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled"
                                                             Value="False">
                                                        <Setter Property="Foreground"
                                                                Value="#64748B"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ComboBox.Template>
                                        <ComboBox.ItemContainerStyle>
                                            <StaticResource ResourceKey="CleanupComboBoxItemStyle"/>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource AdvancedCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Custom extensions"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"/>
                                    <TextBlock Text="Separate values with commas, spaces, or semicolons."
                                               FontSize="12"
                                               Foreground="#64748B"
                                               Margin="0,4,0,8"/>
                                    <TextBox Text="{Binding CustomExtensionInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#0F172A"
                                             Foreground="#E2E8F0"
                                             BorderBrush="#1E293B"
                                             BorderThickness="1"
                                             Padding="6"
                                             IsEnabled="{Binding IsExtensionSelectorEnabled}"
                                             ToolTip="Separate extensions with commas, spaces, or semicolons."/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource AdvancedCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Page range selection"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"/>
                                    <TextBlock Text="Apply range selects after categories load; useful for deep dives."
                                               FontSize="12"
                                               Foreground="#64748B"
                                               Margin="0,4,0,8"
                                               TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,8"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Pages"
                                                   Foreground="#94A3B8"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <TextBox Text="{Binding SelectRangeStartPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="48"
                                                 Background="#0F172A"
                                                 Foreground="#E2E8F0"
                                                 BorderBrush="#1E293B"
                                                 BorderThickness="1"
                                                 Padding="6,4"
                                                 HorizontalContentAlignment="Center"
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="-"
                                                   Foreground="#94A3B8"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,6,0"/>
                                        <TextBox Text="{Binding SelectRangeEndPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="48"
                                                 Background="#0F172A"
                                                 Foreground="#E2E8F0"
                                                 BorderBrush="#1E293B"
                                                 BorderThickness="1"
                                                 Padding="6,4"
                                                 HorizontalContentAlignment="Center"
                                                 Margin="0,0,8,0"/>
                                        <Button Content="Select range"
                                                Command="{Binding SelectPageRangeCommand}"
                                                Background="#1E293B"
                                                Foreground="#E2E8F0"
                                                Padding="14,6"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                Margin="0"
                                                ToolTip="Select every filtered item within the inclusive page range.">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="SelectRangeBorder"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsEnabled"
                                                                 Value="False">
                                                            <Setter TargetName="SelectRangeBorder"
                                                                    Property="Opacity"
