                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Grid.Row="0"
                                                                  Grid.RowSpan="3"
                                                                  Grid.Column="0"
