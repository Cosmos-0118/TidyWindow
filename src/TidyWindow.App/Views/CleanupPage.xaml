                                                    x:Shared="False"
                                                    BlurRadius="20"
                                                    ShadowDepth="0"
                                                    Opacity="0.32"
                                                    Color="#050A16"/>
    <converters:StringLengthToFontSizeConverter x:Key="CleanupTitleFontSizeConverter"
                            LargeSize="16"
                            MediumSize="14"
                            SmallSize="12"/>
    <LinearGradientBrush x:Key="CleanupProgressBrush"
                  StartPoint="0,0"
                  EndPoint="1,0">
        <GradientStop Color="#38BDF8"
              Offset="0"/>
        <GradientStop Color="#22D3EE"
              Offset="0.55"/>
        <GradientStop Color="#6366F1"
              Offset="1"/>
    </LinearGradientBrush>
        <Style x:Key="SetupCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource CleanupSurfaceElevatedBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource CleanupBorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="0,0,16,16"/>
            <Setter Property="MinWidth"
                    Value="220"/>
            <Setter Property="Effect"
                    Value="{StaticResource CardShadowEffect}"/>
        </Style>
        <Style x:Key="SheetCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource CleanupSurfaceElevatedBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource CleanupBorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="0,0,16,16"/>
            <Setter Property="MinWidth"
                    Value="180"/>
            <Setter Property="Effect"
                    Value="{StaticResource CardShadowEffect}"/>
