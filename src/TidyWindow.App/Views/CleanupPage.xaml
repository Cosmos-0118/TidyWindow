            Value="{StaticResource CleanupSurfaceHighlightBrush}"/>
        <Setter Property="BorderBrush"
            Value="{StaticResource CleanupBorderBrush}"/>
        <Setter Property="BorderThickness"
            Value="1"/>
        <Setter Property="CornerRadius"
            Value="8"/>
        <Setter Property="Padding"
            Value="8,4"/>
        <Setter Property="Margin"
            Value="0,0,8,8"/>
    </Style>
    <Style x:Key="CleanupListCardStyle"
           TargetType="Border">
        <Setter Property="Background"
            Value="{StaticResource CleanupSurfaceElevatedBrush}"/>
        <Setter Property="BorderBrush"
            Value="{StaticResource CleanupBorderBrush}"/>
        <Setter Property="BorderThickness"
            Value="1"/>
        <Setter Property="CornerRadius"
            Value="12"/>
        <Setter Property="Padding"
            Value="14,12"/>
        <Setter Property="SnapsToDevicePixels"
