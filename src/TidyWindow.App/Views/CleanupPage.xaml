                Value="1"/>
        </DataTrigger>
        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsEnabled}"
                 Value="False">
            <Setter Property="Opacity"
                Value="0.55"/>
