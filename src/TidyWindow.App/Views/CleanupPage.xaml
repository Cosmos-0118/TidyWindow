<Page x:Class="TidyWindow.App.Views.CleanupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:converters="clr-namespace:TidyWindow.App.Converters"
        xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
        xmlns:controls="clr-namespace:TidyWindow.App.Views"
        xmlns:ux="clr-namespace:TidyWindow.App.Controls"
            mc:Ignorable="d"
            Title="Cleanup"
            UseLayoutRounding="True"
            SnapsToDevicePixels="True"
            FontFamily="Segoe UI Variable Text"
            TextOptions.TextFormattingMode="Display"
            TextOptions.TextRenderingMode="ClearType"
            TextOptions.TextHintingMode="Fixed"
            RenderOptions.ClearTypeHint="Enabled"
            Background="{DynamicResource CleanupBackdropBrush}">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
                <SolidColorBrush x:Key="CleanupAccentBrush"
                                                 Color="#67E8F9"/>
                <SolidColorBrush x:Key="CleanupAccentBrushSecondary"
                                                 Color="#34D399"/>
                <SolidColorBrush x:Key="CleanupSurfaceBaseBrush"
                                                 Color="#0A1626"/>
                <SolidColorBrush x:Key="CleanupSurfaceBrush"
                                                 Color="#0D1E36"/>
                <SolidColorBrush x:Key="CleanupSurfaceElevatedBrush"
                                                 Color="#122848"/>
                <SolidColorBrush x:Key="CleanupSurfaceHighlightBrush"
                                                 Color="#18345E"/>
                <SolidColorBrush x:Key="CleanupBorderBrush"
                                                 Color="#1F3356"/>
                <SolidColorBrush x:Key="CleanupMutedTextBrush"
                                                 Color="#8EA7CC"/>
                <SolidColorBrush x:Key="CleanupSoftTextBrush"
                                                 Color="#D7E4FF"/>
                <SolidColorBrush x:Key="CleanupPhaseOverlayBackdropBrush"
                                                 Color="#80102135"/>
                <SolidColorBrush x:Key="CleanupPhaseOverlayPanelBrush"
                                                 Color="#132644"/>
                <SolidColorBrush x:Key="CleanupChipItemsBackgroundBrush"
                                                 Color="#4038BDF8"/>
                <SolidColorBrush x:Key="CleanupChipItemsBorderBrush"
                                                 Color="#6038BDF8"/>
                <SolidColorBrush x:Key="CleanupChipSizeBackgroundBrush"
                                                 Color="#4034D399"/>
                <SolidColorBrush x:Key="CleanupChipSizeBorderBrush"
                                                 Color="#6034D399"/>
                <SolidColorBrush x:Key="CleanupChipModifiedBackgroundBrush"
                                                 Color="#40F59E0B"/>
                <SolidColorBrush x:Key="CleanupChipModifiedBorderBrush"
                                                 Color="#60F59E0B"/>
                <SolidColorBrush x:Key="CleanupChipAccessedBackgroundBrush"
                                                 Color="#40A855F7"/>
                <SolidColorBrush x:Key="CleanupChipAccessedBorderBrush"
                                                 Color="#60A855F7"/>
                <SolidColorBrush x:Key="CleanupChipCreatedBackgroundBrush"
                                                 Color="#40F472B6"/>
                <SolidColorBrush x:Key="CleanupChipCreatedBorderBrush"
                                                 Color="#60F472B6"/>
                <LinearGradientBrush x:Key="CleanupAutomationPanelBrush"
                                        StartPoint="0,0"
                                        EndPoint="1,1">
                        <GradientStop Color="#152B4D"
                                      Offset="0"/>
                        <GradientStop Color="#0D1C34"
                                      Offset="1"/>
                </LinearGradientBrush>
                <SolidColorBrush x:Key="CleanupAutomationPanelBorderBrush"
                                 Color="#2B4A7A"/>
                <LinearGradientBrush x:Key="CleanupBackdropBrush"
                                                            StartPoint="0,0"
                                                            EndPoint="1,1">
                        <GradientStop Color="#060F1F"
                                                    Offset="0"/>
                        <GradientStop Color="#0B1A30"
                                                    Offset="0.45"/>
                        <GradientStop Color="#112546"
                                                    Offset="1"/>
                </LinearGradientBrush>
                <DropShadowEffect x:Key="SurfaceShadowEffect"
                                                    x:Shared="False"
                                                    BlurRadius="28"
                                                    ShadowDepth="0"
                                                    Opacity="0.45"
                                                    Color="#050A16"/>
                <DropShadowEffect x:Key="CardShadowEffect"
                                                    x:Shared="False"
                                                    BlurRadius="20"
                                                    ShadowDepth="0"
                                                    Opacity="0.32"
                                                    Color="#050A16"/>
    <converters:StringLengthToFontSizeConverter x:Key="CleanupTitleFontSizeConverter"
                            LargeSize="16"
                            MediumSize="14"
                            SmallSize="12"/>
    <LinearGradientBrush x:Key="CleanupProgressBrush"
                  StartPoint="0,0"
                  EndPoint="1,0">
        <GradientStop Color="#38BDF8"
              Offset="0"/>
        <GradientStop Color="#22D3EE"
              Offset="0.55"/>
        <GradientStop Color="#6366F1"
              Offset="1"/>
    </LinearGradientBrush>
        <Style x:Key="SetupCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource CleanupSurfaceElevatedBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource CleanupBorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="0,0,16,16"/>
            <Setter Property="MinWidth"
                    Value="220"/>
            <Setter Property="Effect"
                    Value="{StaticResource CardShadowEffect}"/>
        </Style>
        <Style x:Key="SheetCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource CleanupSurfaceElevatedBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource CleanupBorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="0,0,16,16"/>
            <Setter Property="MinWidth"
                    Value="180"/>
            <Setter Property="Effect"
                    Value="{StaticResource CardShadowEffect}"/>
        </Style>
        <Style x:Key="AdvancedCardStyle"
               TargetType="Border"
               BasedOn="{StaticResource SetupCardStyle}">
            <Setter Property="Background"
                    Value="{StaticResource CleanupSurfaceBrush}"/>
            <Setter Property="Margin"
                    Value="0,12,0,0"/>
        </Style>
        <Style x:Key="ChipButtonStyle"
               TargetType="Button">
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Background"
                    Value="{StaticResource CleanupSurfaceHighlightBrush}"/>
            <Setter Property="Foreground"
                    Value="{StaticResource CleanupSoftTextBrush}"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="12,4"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Margin"
                Value="0,0,14,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ChipBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="16"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="ChipBorder"
                                        Property="Background"
                                        Value="{StaticResource CleanupAccentBrush}"/>
                                <Setter Property="Foreground"
                                        Value="#041225"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="ChipBorder"
                                        Property="Background"
                                        Value="{StaticResource CleanupAccentBrushSecondary}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="ChipBorder"
                                        Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CleanupSliderStyle" TargetType="Slider">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Margin="0,4,0,0">
                            <Track x:Name="PART_Track"
                                   Maximum="{TemplateBinding Maximum}"
                                   Minimum="{TemplateBinding Minimum}"
                                   Value="{TemplateBinding Value}"
                                   IsDirectionReversed="{TemplateBinding IsDirectionReversed}"
                                   Orientation="Horizontal"
                                   Height="24">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseSmall"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Focusable="False">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="8"
                                                        CornerRadius="4"
                                                        Background="{StaticResource CleanupProgressBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseSmall"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Focusable="False">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="8"
                                                        CornerRadius="4"
                                                        Background="{StaticResource CleanupSurfaceHighlightBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="22"
                                           Height="22"
                                           Focusable="False">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="ThumbRoot"
                                                        Width="{TemplateBinding Width}"
                                                        Height="{TemplateBinding Height}"
                                                        CornerRadius="11"
                                                        Background="{StaticResource CleanupAccentBrush}"
                                                        BorderThickness="2"
                                                        BorderBrush="{StaticResource CleanupSurfaceElevatedBrush}">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="10"
                                                                          Opacity="0.35"
                                                                          ShadowDepth="0"/>
                                                    </Border.Effect>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ThumbRoot" Property="Background" Value="{StaticResource CleanupAccentBrushSecondary}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="ThumbRoot" Property="BorderBrush" Value="{StaticResource CleanupAccentBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FlatButtonStyle"
               TargetType="Button">
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Foreground"
                    Value="{StaticResource CleanupSoftTextBrush}"/>
            <Setter Property="Background"
                    Value="{StaticResource CleanupSurfaceHighlightBrush}"/>
            <Setter Property="Padding"
                    Value="16,8"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Margin"
                    Value="0,0,12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="ButtonBorder"
                                        Property="Background"
                                        Value="{StaticResource CleanupAccentBrush}"/>
                                <Setter Property="Foreground"
                                        Value="#041225"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="ButtonBorder"
                                        Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CleanupToggleSwitchStyle"
               TargetType="ToggleButton">
            <Setter Property="Width" Value="52"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="#1F3356"/>
            <Setter Property="BorderBrush" Value="#1F3356"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Track"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="#2A4570"
                                    BorderThickness="1"
                                    CornerRadius="14"/>
                            <Ellipse x:Name="Thumb"
                                     Width="22"
                                     Height="22"
                                     Fill="{StaticResource CleanupSoftTextBrush}"
                                     Margin="4,3,26,3"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{StaticResource CleanupAccentBrush}"/>
                                <Setter TargetName="Track" Property="BorderBrush" Value="{StaticResource CleanupAccentBrush}"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="26,3,4,3"/>
                                <Setter TargetName="Thumb" Property="Fill" Value="#041225"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="Thumb" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Track" Property="BorderBrush" Value="{StaticResource CleanupAccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Key="PhaseEnterStoryboard"
                    x:Shared="False">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                        Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                         Value="True"/>
            </BooleanAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.45">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.45">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="PhaseExitStoryboard"
                    x:Shared="False">
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                         Value="False"/>
            </BooleanAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.32">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="-12"
                             Duration="0:0:0.32">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.32"
                                        Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="OverlayEnterStoryboard"
                    x:Shared="False">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                        Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                         Value="True"/>
            </BooleanAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.32">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="OverlayExitStoryboard"
                    x:Shared="False">
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                         Value="False"/>
            </BooleanAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.28">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.28"
                                        Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="InlineToastEnterStoryboard"
                    x:Shared="False">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                        Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.22">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.22">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="InlineToastExitStoryboard"
                    x:Shared="False">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="-10"
                             Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.2"
                                        Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="PhaseTransitionOverlayEnterStoryboard"
                    x:Shared="False">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                        Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                         Value="True"/>
            </BooleanAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.24">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="PhaseTransitionOverlayExitStoryboard"
                    x:Shared="False">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.18">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0.18"
                                         Value="False"/>
            </BooleanAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.18"
                                        Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ConfirmationOverlayEnterStoryboard"
                    x:Shared="False">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                        Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                         Value="True"/>
            </BooleanAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.24">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="ConfirmationOverlayExitStoryboard"
                    x:Shared="False">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0.2"
                                         Value="False"/>
            </BooleanAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.2"
                                        Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ConfirmationPanelEnterStoryboard"
                    x:Shared="False">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                        Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                         Value="True"/>
            </BooleanAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.26">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                             To="1"
                             Duration="0:0:0.26">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                             To="1"
                             Duration="0:0:0.26">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.26">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="ConfirmationPanelExitStoryboard"
                    x:Shared="False">
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                         Value="False"/>
            </BooleanAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                             To="0.92"
                             Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                             To="0.92"
                             Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                             To="14"
                             Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.2"
                                        Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Style x:Key="PhaseTransitionOverlayStyle"
               TargetType="Border">
            <Setter Property="Visibility"
                    Value="Collapsed"/>
            <Setter Property="Opacity"
                    Value="0"/>
            <Setter Property="IsHitTestVisible"
                    Value="False"/>
