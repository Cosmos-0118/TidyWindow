                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Panel.ZIndex="1">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                                <Style.Triggers>
