                                                            <Border Style="{StaticResource CleanupMetaChipStyle}"
                                                                    Background="{StaticResource CleanupChipModifiedBackgroundBrush}"
                                                                    BorderBrush="{StaticResource CleanupChipModifiedBorderBrush}">
                                                                <TextBlock FontSize="11"
                                                                           Foreground="{StaticResource CleanupSoftTextBrush}">
                                                                    <Run Text="Modified"/>
                                                                    <Run Text="  "/>
                                                                    <Run Text="{Binding LastModifiedDisplay, Mode=OneWay}"/>
                                                                </TextBlock>
                                                            </Border>
                                                            <Border Style="{StaticResource CleanupMetaChipStyle}"
                                                                    Background="{StaticResource CleanupChipAccessedBackgroundBrush}"
                                                                    BorderBrush="{StaticResource CleanupChipAccessedBorderBrush}">
                                                                <TextBlock FontSize="11"
                                                                           Foreground="{StaticResource CleanupSoftTextBrush}">
                                                                    <Run Text="Accessed"/>
                                                                    <Run Text="  "/>
                                                                    <Run Text="{Binding LastAccessDisplay, Mode=OneWay}"/>
                                                                </TextBlock>
                                                            </Border>
                                                            <Border Style="{StaticResource CleanupMetaChipStyle}"
                                                                    Background="{StaticResource CleanupChipCreatedBackgroundBrush}"
                                                                    BorderBrush="{StaticResource CleanupChipCreatedBorderBrush}">
                                                                <TextBlock FontSize="11"
                                                                           Foreground="{StaticResource CleanupSoftTextBrush}">
                                                                    <Run Text="Created"/>
                                                                    <Run Text="  "/>
                                                                    <Run Text="{Binding CreationDisplay, Mode=OneWay}"/>
                                                                </TextBlock>
                                                            </Border>
                                                        </WrapPanel>
                                                        <TextBlock Grid.Row="2"
                                                                   Grid.Column="1"
                                                                   Grid.ColumnSpan="2"
                                                                   Margin="0,10,0,0"
                                                                   FontSize="11"
                                                                       Foreground="{StaticResource CleanupMutedTextBrush}"
                                                                   TextWrapping="Wrap"
                                                                   TextTrimming="None"
                                                                   Text="{Binding FullName}"
                                                                   ToolTip="{Binding FullName}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.IsEnabled>
                                            <Binding Path="IsBusy"
                                                     Converter="{StaticResource InverseBooleanConverter}"/>
                                        </ListView.IsEnabled>
                                    </ux:BubbleScrollListView>

                                    <TextBlock Text="Select a category to review its items."
                                               Foreground="{StaticResource CleanupMutedTextBrush}"
                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Panel.ZIndex="1">
