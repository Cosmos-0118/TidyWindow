                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding DisplayName}"
                                                                           FontSize="13"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{StaticResource CleanupSoftTextBrush}"/>
                                                                <TextBlock Text="{Binding Reason}"
                                                                           FontSize="12"
                                                                           Foreground="{StaticResource CleanupMutedTextBrush}"
                                                                           TextWrapping="Wrap"
                                                                           Margin="0,4,0,0"/>
                                                            </StackPanel>
                                                            <Button Grid.Column="1"
                                                                    Content="Retry"
                                                                    Command="{Binding DataContext.RetryFailureAsyncCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource ChipButtonStyle}"
                                                                    Padding="14,6"
                                                                    Margin="12,0,0,0">
                                                                <Button.IsEnabled>
                                                                    <Binding Path="IsRetrying" Converter="{StaticResource InverseBooleanConverter}"/>
                                                                </Button.IsEnabled>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                    <TextBlock Grid.Row="2"
                                               Text="All items were removed successfully. Great job!"
                                               FontSize="12"
                                               Foreground="{StaticResource CleanupMutedTextBrush}"
                                               Margin="0,8,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasCelebrationFailures}"
                                                                 Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <WrapPanel Grid.Row="3"
                                           Margin="0,24,0,0"
                                           HorizontalAlignment="Right"
                                           Orientation="Horizontal">
                                    <Button Content="Review report"
                                            Command="{Binding ReviewCelebrationReportCommand}"
                                            Style="{StaticResource FlatButtonStyle}"
                                            IsEnabled="{Binding CanReviewCelebrationReport}"
                                            Margin="0,0,12,12"/>
                                    <Button Content="Share summary"
                                            Command="{Binding ShareCelebrationSummaryCommand}"
                                            Style="{StaticResource FlatButtonStyle}"
                                            Margin="0,0,12,12"/>
                                    <Button Content="Back to dashboard"
                                            Command="{Binding CancelCommand}"
                                            Style="{StaticResource FlatButtonStyle}"
                                            Background="{StaticResource CleanupSurfaceBrush}"
                                            Margin="0,0,12,12"/>
                                    <Button Content="Close"
                                            Command="{Binding CloseCelebrationCommand}"
                                            Style="{StaticResource FlatButtonStyle}"
                                            Background="{StaticResource CleanupAccentBrushSecondary}"
                                            Foreground="#041225"
                                            FontWeight="SemiBold"
                                            Padding="18,10"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Margin="0,0,0,12"/>
                                </WrapPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
        </Border>
        <Border Style="{StaticResource PhaseTransitionOverlayStyle}"
                Panel.ZIndex="60">
            <Grid>
                <Border Style="{StaticResource PhaseTransitionPanelStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="32,28"
                        CornerRadius="18"
                        Background="{StaticResource CleanupPhaseOverlayPanelBrush}"
                        BorderBrush="{StaticResource CleanupBorderBrush}"
                        BorderThickness="1.5"
                        Effect="{StaticResource SurfaceShadowEffect}">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="320">
                        <TextBlock Text=""
                                   FontSize="34"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding PhaseTransitionMessage}"
                                   FontSize="17"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource CleanupSoftTextBrush}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="Hang tight while we prepare the next phase."
                                   FontSize="12"
                                   Foreground="{StaticResource CleanupMutedTextBrush}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,18"/>
                        <ProgressBar Height="6"
                                     IsIndeterminate="True"
                                     Foreground="{StaticResource CleanupProgressBrush}"
                                     Background="{StaticResource CleanupSurfaceBaseBrush}"
                                     BorderThickness="0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
