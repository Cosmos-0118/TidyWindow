<Page x:Class="TidyWindow.App.Views.LogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:svc="clr-namespace:TidyWindow.App.Services"
      mc:Ignorable="d"
      Title="Logs"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="Border"
                x:Key="LogItemContainerStyle">
            <Setter Property="Background"
                    Value="#111827"/>
            <Setter Property="CornerRadius"
                    Value="10"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="0,6"/>
            <Setter Property="BorderBrush"
                    Value="#1E293B"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
        </Style>
    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Border Width="48"
                    Height="48"
                    CornerRadius="12"
                    Background="#1E293B"
                    Margin="0,0,12,0"
                    BorderBrush="#334155"
                    BorderThickness="1">
                <TextBlock Text="LOG"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#F8FAFC"/>
            </Border>
            <StackPanel>
                <TextBlock Text="Activity logs"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#F8FAFC"/>
                <TextBlock Text="Review automation output and key events"
                           FontSize="14"
                           Foreground="#94A3B8"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1"
              Margin="0,24,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Margin="0,0,16,0"
                     Padding="10,6"
                     MinWidth="200"
                     Background="#0F172A"
                     Foreground="#F8FAFC"
                     BorderBrush="#1E293B"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

            <ComboBox Grid.Column="1"
                      Margin="0,0,16,0"
                      Width="160"
                      ItemsSource="{Binding LevelFilterOptions}"
                      SelectedItem="{Binding SelectedLevel, Mode=TwoWay}"
                      Background="#0F172A"
                      Foreground="#F8FAFC"
                      BorderBrush="#1E293B">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text"
                                            Value="All levels"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}"
                                                Value="{x:Null}">
                                            <Setter Property="Text"
                                                    Value="All levels"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}"
                                                Value="{x:Static svc:ActivityLogLevel.Information}">
                                            <Setter Property="Text"
                                                    Value="Information"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}"
                                                Value="{x:Static svc:ActivityLogLevel.Success}">
                                            <Setter Property="Text"
                                                    Value="Success"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}"
                                                Value="{x:Static svc:ActivityLogLevel.Warning}">
                                            <Setter Property="Text"
                                                    Value="Warning"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}"
                                                Value="{x:Static svc:ActivityLogLevel.Error}">
                                            <Setter Property="Text"
                                                    Value="Error"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <CheckBox Grid.Column="2"
                      Content="Auto-select latest"
                      VerticalAlignment="Center"
                      Foreground="#E2E8F0"
                      IsChecked="{Binding IsAutoSelectLatest, Mode=TwoWay}"
                      Margin="0,0,0,0"/>
        </Grid>

        <Border Grid.Row="2"
                Background="#0F172A"
                CornerRadius="12"
                Padding="16"
                BorderBrush="#1E293B"
                BorderThickness="1">
            <ListView ItemsSource="{Binding EntriesView}"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#F8FAFC"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      SelectedItem="{Binding SelectedEntry, Mode=TwoWay}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch"/>
                        <Setter Property="Padding"
                                Value="0"/>
                        <Setter Property="Margin"
                                Value="0"/>
                        <Setter Property="Background"
                                Value="Transparent"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource LogItemContainerStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TimestampDisplay}"
                                               FontSize="12"
                                               Foreground="#94A3B8"
                                               Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding LevelDisplay}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Margin="0,0,12,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="#38BDF8"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Level}"
                                                            Value="{x:Static svc:ActivityLogLevel.Success}">
                                                        <Setter Property="Foreground"
                                                                Value="#22C55E"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Level}"
                                                            Value="{x:Static svc:ActivityLogLevel.Warning}">
                                                        <Setter Property="Foreground"
                                                                Value="#F59E0B"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Level}"
                                                            Value="{x:Static svc:ActivityLogLevel.Error}">
                                                        <Setter Property="Foreground"
                                                                Value="#F87171"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Source}"
                                               FontSize="12"
                                               Foreground="#E2E8F0"
                                               Margin="0,0,12,0"/>
                                    <Button Content="Copy"
                                            Command="{Binding DataContext.CopyEntryCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Padding="10,4"
                                            Margin="12,0,0,0"
                                            HorizontalAlignment="Right"
                                            Background="#1E293B"
                                            Foreground="#E2E8F0"
                                            BorderBrush="#334155"
                                            BorderThickness="1"/>
                                </StackPanel>
                                <TextBlock Grid.Row="1"
                                           Text="{Binding Message}"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,0"
                                           Foreground="#F8FAFC"/>
                                <Expander Grid.Row="2"
                                          Header="Details"
                                          Margin="0,12,0,0"
                                          IsExpanded="False"
                                          Visibility="{Binding HasDetails, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Background="#0F172A"
                                          Foreground="#E2E8F0">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                  Background="#0B1120"
                                                  Margin="0,8,0,0">
                                        <ItemsControl ItemsSource="{Binding Details}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"
                                                               FontFamily="Consolas"
                                                               FontSize="12"
                                                               Foreground="#CBD5F5"
                                                               TextWrapping="Wrap"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Expander>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Page>
