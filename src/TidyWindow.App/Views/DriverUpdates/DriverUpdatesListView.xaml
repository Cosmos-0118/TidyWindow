<UserControl x:Class="TidyWindow.App.Views.DriverUpdates.DriverUpdatesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TidyWindow.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:DriverUpdatesViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <LinearGradientBrush x:Key="DriverCardBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#152C4C" Offset="0"/>
            <GradientStop Color="#0B162A" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DriverStatusBadgeBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2563EB" Offset="0"/>
            <GradientStop Color="#22D3EE" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DriverChipBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E3A8A" Offset="0"/>
            <GradientStop Color="#0EA5E9" Offset="1"/>
        </LinearGradientBrush>
        <DropShadowEffect x:Key="CardShadowEffect"
                          Color="#000000"
                          ShadowDepth="0"
                          BlurRadius="18"
                          Opacity="0.35"/>
        <Style x:Key="DriverCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DriverCardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="#2A4363"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="24,20"/>
            <Setter Property="Margin" Value="0,12,0,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Effect" Value="{StaticResource CardShadowEffect}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A2E4A"/>
                    <Setter Property="BorderBrush" Value="#3C6CB3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="InstalledDriverCardStyle" TargetType="Border" BasedOn="{StaticResource DriverCardStyle}">
            <Setter Property="Padding" Value="22"/>
            <Setter Property="Margin" Value="0,12,0,12"/>
        </Style>
        <Style x:Key="StatusTagStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DriverStatusBadgeBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
            <Setter Property="TextElement.Foreground" Value="#F8FAFC"/>
        </Style>
        <Style x:Key="DriverChipStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DriverChipBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="#38BDF8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="TextElement.Foreground" Value="#ECFEFF"/>
        </Style>
        <Style x:Key="DriverActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,8,8,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#F8FAFC"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="BorderBrush" Value="#1D4ED8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.55"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DriverSecondaryActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource DriverActionButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Run a scan to populate driver update insights."
                   FontSize="14"
                   Foreground="#94A3B8"
                   Margin="0,0,0,24"
                   HorizontalAlignment="Center">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasResults}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <ItemsControl x:Name="UpdatesItemsControl"
                      ItemsSource="{Binding Updates}"
                      Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}"
                      Margin="0,0,0,16">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:DriverUpdateItemViewModel}">
                    <Border Style="{StaticResource DriverCardStyle}"
                            MouseLeftButtonDown="OnUpdateCardMouseDown"
                            Cursor="Hand">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DeviceName}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <Border Style="{StaticResource StatusTagStyle}">
                                    <TextBlock Text="{Binding AvailabilityBadgeState}"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                </Border>
                                <Border Style="{StaticResource StatusTagStyle}"
                                        Visibility="{Binding ShowOptionalBadge, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding OptionalBadgeLabel}"
                                               FontSize="12"/>
                                </Border>
                                <Border Style="{StaticResource StatusTagStyle}"
                                        Visibility="{Binding IsDowngradeRisk, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Downgrade risk"
                                               FontSize="12"
                                               Foreground="#F97316"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Text="{Binding Manufacturer}"
                                       Margin="0,4,0,0"
                                       Foreground="#94A3B8"
                                       Visibility="{Binding HasManufacturer, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="{Binding VersionSummary}"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text=" · "
                                           Foreground="#64748B"
                                           Visibility="{Binding HasCurrentVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text="{Binding CurrentVersionDateDisplay}"
                                           Foreground="#94A3B8"
                                           Visibility="{Binding HasCurrentVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text=" ⟶ "
                                           Foreground="#64748B"
                                           Visibility="{Binding HasAvailableVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text="{Binding AvailableVersionDateDisplay}"
                                           Foreground="#94A3B8"
                                           Visibility="{Binding HasAvailableVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>

                            <TextBlock Text="{Binding ComparisonStatusLabel}"
                                       Margin="0,6,0,0"
                                       FontSize="12"
                                       Foreground="#E2E8F0"
                                       Visibility="{Binding IsComparisonMeaningful, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding ComparisonDetails}"
                                       Margin="0,2,0,0"
                                       FontSize="12"
                                       Foreground="#94A3B8"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding HasComparisonDetails, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0,6,0,0"
                                        Visibility="{Binding HasVendorBadge, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Vendor"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#CBD5F5"
                                           Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding VendorBadgeLabel}"
                                           FontSize="12"
                                           Foreground="#94A3B8"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0,2,0,0"
                                        Visibility="{Binding HasDriverClassBadge, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Class"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#CBD5F5"
                                           Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding DriverClassBadgeLabel}"
                                           FontSize="12"
                                           Foreground="#94A3B8"/>
                            </StackPanel>

                            <TextBlock Text="{Binding HardwareIdsDisplay}"
                                       Margin="0,8,0,0"
                                       FontSize="12"
                                       Foreground="#CBD5F5"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="{Binding Description}"
                                       Margin="0,10,0,0"
                                       FontSize="12"
                                       Foreground="#E2E8F0"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0,10,0,0"
                                        Visibility="{Binding HasInstalledManufacturer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Installed manufacturer"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#CBD5F5"
                                           Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding InstalledManufacturerDisplay}"
                                           FontSize="12"
                                           Foreground="#94A3B8"/>
                            </StackPanel>

                            <TextBlock Text="{Binding InstalledInfPath}"
                                       Margin="0,2,0,0"
                                       FontSize="11"
                                       Foreground="#64748B"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding HasInstalledInfPath, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <TextBlock Text="{Binding UpdateIdentifierDisplay}"
                                       Margin="0,10,0,0"
                                       FontSize="11"
                                       Foreground="#64748B"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding HasUpdateIdentifier, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <TextBlock Margin="0,10,0,0"
                                       FontSize="12"
                                       Foreground="#38BDF8"
                                       Visibility="{Binding HasInformationLinks, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Hyperlink NavigateUri="{Binding PrimaryInformationLink}"
                                           RequestNavigate="OnHyperlinkRequestNavigate">
                                    <Run Text="Open vendor support"/>
                                </Hyperlink>
                            </TextBlock>
                            <WrapPanel Margin="0,12,0,0"
                                       Visibility="{Binding HasDriverActions, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button Content="Install via Windows Update"
                                        Style="{StaticResource DriverActionButtonStyle}"
                                        Command="{Binding DataContext.InstallUpdateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding CanInstall, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        IsEnabled="{Binding DataContext.CanRunDriverOperations, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                <Button Content="Reinstall driver"
                                        Style="{StaticResource DriverSecondaryActionButtonStyle}"
                                        Command="{Binding DataContext.ReinstallDriverCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding HasInstalledInfPath, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        IsEnabled="{Binding DataContext.CanRunDriverOperations, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                <Button Content="Rollback driver"
                                        Style="{StaticResource DriverSecondaryActionButtonStyle}"
                                        Command="{Binding DataContext.RollbackDriverCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding HasInstalledInfPath, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        IsEnabled="{Binding DataContext.CanRunDriverOperations, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Border Background="#0F172A"
                BorderBrush="#1E293B"
                BorderThickness="1"
                CornerRadius="12"
                Padding="20"
                Visibility="{Binding HasInstalledDrivers, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,12">
                    <TextBlock Text="Installed drivers"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#F8FAFC"/>
                    <Border Style="{StaticResource StatusTagStyle}"
                            Margin="12,0,0,0">
                        <TextBlock Text="{Binding InstalledDrivers.Count}"
                                   FontSize="12"/>
                    </Border>
                </StackPanel>

                <ItemsControl x:Name="InstalledDriversItemsControl"
                              ItemsSource="{Binding InstalledDrivers}"
                              Margin="0,4,0,0">
                    <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:InstalledDriverItemViewModel}">
                            <Border Style="{StaticResource InstalledDriverCardStyle}"
                                    MouseLeftButtonDown="OnInstalledCardMouseDown"
                                    Cursor="Hand">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DeviceName}"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <Border Style="{StaticResource StatusTagStyle}"
                                                Margin="12,0,0,0">
                                            <TextBlock Text="{Binding SignedDisplay}"
                                                       FontSize="11"/>
                                        </Border>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Description}"
                                               Margin="0,6,0,0"
                                               FontSize="12"
                                               Foreground="#94A3B8"
                                               TextWrapping="Wrap"
                                               Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                    <UniformGrid Columns="2" Margin="0,12,0,0" Rows="3">
                                        <StackPanel Margin="0,0,12,12">
                                            <TextBlock Text="Manufacturer"
                                                       FontSize="11"
                                                       Foreground="#94A3B8"/>
                                            <TextBlock Text="{Binding Manufacturer}"
                                                       FontSize="12"
                                                       Foreground="#F8FAFC"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,12">
                                            <TextBlock Text="Provider"
                                                       FontSize="11"
                                                       Foreground="#94A3B8"/>
                                            <TextBlock Text="{Binding Provider}"
                                                       FontSize="12"
                                                       Foreground="#F8FAFC"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,12">
                                            <TextBlock Text="Driver version"
                                                       FontSize="11"
                                                       Foreground="#94A3B8"/>
                                            <TextBlock Text="{Binding DriverVersion}"
                                                       FontSize="12"
                                                       Foreground="#F8FAFC"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,12">
                                            <TextBlock Text="Driver date"
                                                       FontSize="11"
                                                       Foreground="#94A3B8"/>
                                            <TextBlock Text="{Binding DriverDateDisplay}"
                                                       FontSize="12"
                                                       Foreground="#F8FAFC"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,0">
                                            <TextBlock Text="Installed"
                                                       FontSize="11"
                                                       Foreground="#94A3B8"/>
                                            <TextBlock Text="{Binding InstallDateDisplay}"
                                                       FontSize="12"
                                                       Foreground="#F8FAFC"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Status"
                                                       FontSize="11"
                                                       Foreground="#94A3B8"/>
                                            <TextBlock Text="{Binding Status}"
                                                       FontSize="12"
                                                       Foreground="#F8FAFC"/>
                                        </StackPanel>
                                    </UniformGrid>

                                    <WrapPanel Margin="0,4,0,0">
                                        <Border Style="{StaticResource DriverChipStyle}">
                                            <TextBlock Text="{Binding ClassGuid, TargetNullValue=Unknown class}"
                                                       FontSize="11"/>
                                        </Border>
                                        <Border Style="{StaticResource DriverChipStyle}">
                                            <TextBlock Text="{Binding SignedDisplay}"
                                                       FontSize="11"/>
                                        </Border>
                                    </WrapPanel>

                                     <TextBlock Margin="0,8,0,0"
                                             FontSize="11"
                                             Foreground="#94A3B8"
                                             TextWrapping="Wrap"
                                             Visibility="{Binding HasInfName, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Run Text="INF: "/>
                                         <Run Text="{Binding InfName, Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,4,0,0"
                                               FontSize="11"
                                               Foreground="#94A3B8"
                                               TextWrapping="Wrap"
                                             Visibility="{Binding HasDeviceId, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Run Text="Device ID: "/>
                                         <Run Text="{Binding DeviceId, Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Text="{Binding HardwareIdsDisplay}"
                                               Margin="0,8,0,0"
                                               FontSize="11"
                                               Foreground="#CBD5F5"
                                               TextWrapping="Wrap"/>

                                    <TextBlock Margin="0,6,0,0"
                                               FontSize="11"
                                               Foreground="#F97316">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasProblemCode}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="Problem code "/>
                                        <Run Text="{Binding ProblemCode, Mode=OneWay}"/>
                                    </TextBlock>
                                    <WrapPanel Margin="0,12,0,0"
                                               Visibility="{Binding CanMaintain, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button Content="Reinstall driver"
                                                Style="{StaticResource DriverActionButtonStyle}"
                                                Command="{Binding DataContext.ReinstallDriverCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding DataContext.CanRunDriverOperations, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                        <Button Content="Rollback driver"
                                                Style="{StaticResource DriverSecondaryActionButtonStyle}"
                                                Command="{Binding DataContext.RollbackDriverCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding DataContext.CanRunDriverOperations, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    </WrapPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
