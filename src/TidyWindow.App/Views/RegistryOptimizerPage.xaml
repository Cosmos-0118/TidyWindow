<Page x:Class="TidyWindow.App.Views.RegistryOptimizerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="clr-namespace:TidyWindow.App.Resources.Strings"
    xmlns:converters="clr-namespace:TidyWindow.App.Converters"
    mc:Ignorable="d"
    Title="{x:Static strings:RegistryOptimizerStrings.PageTitle}"
    Background="Transparent"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType"
    TextOptions.TextHintingMode="Fixed"
    RenderOptions.BitmapScalingMode="HighQuality">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

        <!-- Modern Color Palette -->
        <LinearGradientBrush x:Key="PageBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#050B14" Offset="0"/>
            <GradientStop Color="#0A1628" Offset="0.5"/>
            <GradientStop Color="#0D1E35" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="CardBg" Color="#0C1829"/>
        <SolidColorBrush x:Key="CardBorder" Color="#1A2D47"/>
        <SolidColorBrush x:Key="CardHover" Color="#0F2038"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="TextMuted" Color="#64748B"/>
        <SolidColorBrush x:Key="Accent" Color="#22D3EE"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#34D399"/>
        <SolidColorBrush x:Key="AccentAmber" Color="#FBBF24"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F87171"/>

        <!-- Risk Colors -->
        <SolidColorBrush x:Key="RiskSafeBg" Color="#052E16"/>
        <SolidColorBrush x:Key="RiskSafeBorder" Color="#22C55E"/>
        <SolidColorBrush x:Key="RiskModerateBg" Color="#431407"/>
        <SolidColorBrush x:Key="RiskModerateBorder" Color="#F97316"/>
        <SolidColorBrush x:Key="RiskCautionBg" Color="#422006"/>
        <SolidColorBrush x:Key="RiskCautionBorder" Color="#EAB308"/>
        <SolidColorBrush x:Key="RiskAdvancedBg" Color="#450A0A"/>
        <SolidColorBrush x:Key="RiskAdvancedBorder" Color="#EF4444"/>

        <DropShadowEffect x:Key="CardShadow" BlurRadius="24" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
        <DropShadowEffect x:Key="FloatingShadow" BlurRadius="40" ShadowDepth="6" Opacity="0.6" Color="#000000"/>
        <DropShadowEffect x:Key="DialogShadow" BlurRadius="60" ShadowDepth="8" Opacity="0.7" Color="#000000"/>

        <!-- Modern Toggle -->
        <Style x:Key="ModernToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Track" CornerRadius="14" Background="#1E293B">
                                <Grid>
                                    <Ellipse x:Name="ThumbOff" Width="22" Height="22" Fill="#64748B" 
                                             HorizontalAlignment="Left" Margin="3,0,0,0"/>
                                    <Ellipse x:Name="ThumbOn" Width="22" Height="22" Fill="#F0FDFA" 
                                             HorizontalAlignment="Right" Margin="0,0,3,0" Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#0D9488"/>
                                <Setter TargetName="ThumbOff" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="ThumbOn" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbOff" Property="Fill" Value="#94A3B8"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="ThumbOn" Property="Fill" Value="#FFFFFF"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Foreground" Value="#022C22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#34D399" Offset="0"/>
                                    <GradientStop Color="#10B981" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#4ADE80" Offset="0"/>
                                            <GradientStop Color="#22C55E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryBtn" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#0F1D32"/>
            <Setter Property="BorderBrush" Value="#1E3A5F"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#152640"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#38BDF8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Info Button (for details) -->
        <Style x:Key="InfoBtn" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" CornerRadius="8" Background="#0F2038" 
                                BorderBrush="#1A2D47" BorderThickness="1">
                            <TextBlock Text="â„¹" FontSize="16" Foreground="{StaticResource Accent}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#152640"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource Accent}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ghost Button -->
        <Style x:Key="GhostBtn" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button -->
        <Style x:Key="DangerBtn" TargetType="Button">
            <Setter Property="Foreground" Value="#FEE2E2"/>
            <Setter Property="Background" Value="#450A0A"/>
            <Setter Property="BorderBrush" Value="#DC2626"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#7F1D1D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Chip -->
        <Style x:Key="StatChip" TargetType="Border">
            <Setter Property="Background" Value="#0A1628"/>
            <Setter Property="BorderBrush" Value="#1A2D47"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18,12"/>
        </Style>

        <!-- Tweak Row -->
        <Style x:Key="TweakRow" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#12243A"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="24,18"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0D1E35"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource PageBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="40,32,40,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="52" Height="52" CornerRadius="14" Margin="0,0,18,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1E3A5F" Offset="0"/>
                                <GradientStop Color="#0F2038" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="ðŸ§©" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.PageTitle}"
                                   FontSize="26" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Fine-tune Windows settings for better performance and privacy" 
                                   Foreground="{StaticResource TextSecondary}" FontSize="14" Margin="0,6,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Style="{StaticResource StatChip}" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Tweaks.Count}" FontSize="22" FontWeight="Bold"
                                       Foreground="{StaticResource Accent}"/>
                            <TextBlock Text=" tweaks" FontSize="14" Foreground="{StaticResource TextSecondary}"
                                       VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatChip}" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Presets.Count}" FontSize="22" FontWeight="Bold"
                                       Foreground="{StaticResource AccentAmber}"/>
                            <TextBlock Text=" presets" FontSize="14" Foreground="{StaticResource TextSecondary}"
                                       VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatChip}">
                        <TextBlock FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="âœ“ Synced"/>
                                    <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasPendingChanges}" Value="True">
                                            <Setter Property="Text" Value="â— Pending"/>
                                            <Setter Property="Foreground" Value="{StaticResource AccentAmber}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer x:Name="ContentScrollViewer" Grid.Row="1"
                      VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                      Padding="40,0,40,110">
            <StackPanel>
                <!-- Restore Points Banner -->
                <Border Margin="0,0,0,24" Padding="24,18" CornerRadius="16"
                        Background="{StaticResource CardBg}" BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                        Visibility="{Binding HasRestorePoint, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Cursor="Hand" MouseLeftButtonDown="OnRestorePointBannerClick">
                    <DockPanel>
                        <Border Width="48" Height="48" CornerRadius="12" Background="#0F2038"
                                VerticalAlignment="Center" Margin="0,0,18,0">
                            <TextBlock Text="ðŸ’¾" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                            <TextBlock Text="View All â†’" Foreground="{StaticResource Accent}" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Registry Backups Available" FontWeight="SemiBold" FontSize="16"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Foreground="{StaticResource TextMuted}" FontSize="13" Margin="0,4,0,0">
                                <Run Text="Click to view and restore previous registry states"/>
                            </TextBlock>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Tweaks Card -->
                <Border Background="{StaticResource CardBg}" BorderBrush="{StaticResource CardBorder}" 
                        BorderThickness="1" CornerRadius="20" Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Card Header -->
                        <Border Grid.Row="0" Padding="28,22" BorderBrush="#12243A" BorderThickness="0,0,0,1">
                            <DockPanel>
                                <Button Content="âš™ Presets" Command="{Binding ShowPresetsDialogCommand}"
                                        Style="{StaticResource SecondaryBtn}" DockPanel.Dock="Right" VerticalAlignment="Center"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Tweaks &amp; Safeguards" FontSize="20" FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Toggle the optimizations you want to apply. Hover on info for details."
                                               FontSize="13" Foreground="{StaticResource TextMuted}" Margin="0,6,0,0"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>

                        <!-- Tweaks List -->
                        <ListView x:Name="TweaksListView" Grid.Row="1" ItemsSource="{Binding Tweaks}"
                                  Background="Transparent" BorderThickness="0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  VirtualizingStackPanel.ScrollUnit="Pixel">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TweakRow}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <Border Width="52" Height="52" CornerRadius="14" Background="#0F2038" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Icon}" FontSize="24"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Content -->
                                            <StackPanel Grid.Column="1" Margin="20,0,24,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Title}" FontSize="15" FontWeight="Medium"
                                                           Foreground="{StaticResource TextPrimary}" TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <!-- Risk Badge -->
                                                    <Border CornerRadius="6" Padding="10,5" Margin="0,0,12,0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="{StaticResource RiskSafeBg}"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource RiskSafeBorder}"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding RiskLevel}" Value="Moderate">
                                                                        <Setter Property="Background" Value="{StaticResource RiskModerateBg}"/>
                                                                        <Setter Property="BorderBrush" Value="{StaticResource RiskModerateBorder}"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding RiskLevel}" Value="Caution">
                                                                        <Setter Property="Background" Value="{StaticResource RiskCautionBg}"/>
                                                                        <Setter Property="BorderBrush" Value="{StaticResource RiskCautionBorder}"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding RiskLevel}" Value="Advanced">
                                                                        <Setter Property="Background" Value="{StaticResource RiskAdvancedBg}"/>
                                                                        <Setter Property="BorderBrush" Value="{StaticResource RiskAdvancedBorder}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding RiskLabel}" FontSize="11" FontWeight="SemiBold"
                                                                   Foreground="{StaticResource TextPrimary}"/>
                                                    </Border>
                                                    <!-- Category -->
                                                    <TextBlock Text="{Binding Category}" FontSize="13"
                                                               Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Info Button -->
                                            <Button Grid.Column="2" Style="{StaticResource InfoBtn}"
                                                    Command="{Binding DataContext.ShowTweakDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}" VerticalAlignment="Center" Margin="0,0,16,0"
                                                    ToolTip="View details about this tweak"/>

                                            <!-- Toggle -->
                                            <ToggleButton Grid.Column="3" IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                          Style="{StaticResource ModernToggle}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Floating Action Bar -->
        <Border Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,32" Padding="12" CornerRadius="20"
                Background="{StaticResource CardBg}" BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                Effect="{StaticResource FloatingShadow}">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding RevertChangesCommand}" Style="{StaticResource SecondaryBtn}" 
                        Margin="4" IsEnabled="{Binding HasPendingChanges}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â†©" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Revert"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding ApplyCommand}" Style="{StaticResource PrimaryBtn}" Margin="4" MinWidth="180">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ“" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Apply Changes"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• BUSY OVERLAY â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.RowSpan="2" Background="#E8050B14"
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                    Padding="48,40" CornerRadius="24"
                    Background="{StaticResource CardBg}" BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                    Effect="{StaticResource DialogShadow}">
                <StackPanel HorizontalAlignment="Center">
                    <ProgressBar Width="220" Height="6" IsIndeterminate="True"
                                 Foreground="{StaticResource AccentGreen}"
                                 Background="#1E293B" BorderThickness="0"/>
                    <TextBlock Text="Applying Changes..." FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"
                               HorizontalAlignment="Center" Margin="0,24,0,0"/>
                    <TextBlock Text="Please wait while we update your registry settings"
                               FontSize="14" Foreground="{StaticResource TextMuted}"
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• PRESETS DIALOG â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.RowSpan="2" Background="#90000000"
              Visibility="{Binding IsPresetDialogVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              MouseDown="OnDialogOverlayClick">
            <Border Width="520" MaxHeight="620" Margin="48" Padding="0"
                    Background="{StaticResource CardBg}" BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                    CornerRadius="24" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Effect="{StaticResource DialogShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Padding="28,24,28,20" BorderBrush="#12243A" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="52" Height="52" CornerRadius="14" Margin="0,0,18,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1E3A5F" Offset="0"/>
                                        <GradientStop Color="#0F2038" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="âš¡" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Quick Presets" FontSize="20" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="One-click optimization profiles"
                                           FontSize="13" Foreground="{StaticResource TextMuted}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Presets List with ScrollViewer -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled"
                                  Margin="12,12,12,12">
                        <ItemsControl ItemsSource="{Binding Presets}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8" Cursor="Hand"
                                            MouseLeftButtonDown="OnPresetItemClick">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#0A1628"/>
                                                <Setter Property="BorderBrush" Value="#1A2D47"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="CornerRadius" Value="16"/>
                                                <Setter Property="Padding" Value="20,18"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#0D1E35"/>
                                                        <Setter Property="BorderBrush" Value="#2A4A6F"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="#0F2038"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <Border Width="52" Height="52" CornerRadius="14" Background="#0F2038"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Icon}" FontSize="24" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Content -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,16,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiBold"
                                                               Foreground="{StaticResource TextPrimary}"/>
                                                    <Border Visibility="{Binding IsDefault, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Background="#052E16" BorderBrush="#22C55E" BorderThickness="1"
                                                            CornerRadius="6" Padding="8,3" Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <TextBlock Text="Recommended" FontSize="10" FontWeight="SemiBold"
                                                                   Foreground="#4ADE80"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}" FontSize="12"
                                                           Foreground="{StaticResource TextMuted}"
                                                           TextWrapping="Wrap" Margin="0,6,0,0" MaxWidth="280"/>
                                            </StackPanel>

                                            <!-- Selection Indicator -->
                                            <Border Grid.Column="2" Width="28" Height="28" CornerRadius="14"
                                                    VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#1A2D47"/>
                                                        <Setter Property="BorderBrush" Value="#2A4A6F"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource Accent}"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="âœ“" FontSize="14" FontWeight="Bold" Foreground="#022C22"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="20,16,20,20" BorderBrush="#12243A" BorderThickness="0,1,0,0">
                        <Button Content="Done" Command="{Binding ClosePresetsDialogCommand}"
                                Style="{StaticResource SecondaryBtn}" HorizontalAlignment="Right" MinWidth="100"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• RESTORE POINTS DIALOG â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.RowSpan="2" Background="#90000000"
              Visibility="{Binding IsRestorePointsDialogVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              MouseDown="OnDialogOverlayClick">
            <Border MaxWidth="640" MaxHeight="550" Margin="48" Padding="32"
                    Background="{StaticResource CardBg}" BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                    CornerRadius="24" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Effect="{StaticResource DialogShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,24">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="48" Height="48" CornerRadius="12" Background="#0F2038" Margin="0,0,16,0">
                                <TextBlock Text="ðŸ’¾" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Registry Backups" FontSize="22" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Restore a previous registry state if something isn't working right"
                                           FontSize="14" Foreground="{StaticResource TextMuted}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Restore Points List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding RestorePoints}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0A1628" BorderBrush="#1A2D47" BorderThickness="1"
                                            CornerRadius="14" Padding="18" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayName}" FontSize="15" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimary}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                    <Border Background="#0F2038" CornerRadius="6" Padding="8,4" Margin="0,0,10,0">
                                                        <TextBlock Text="{Binding TweakCountLabel}" FontSize="11"
                                                                   Foreground="{StaticResource Accent}"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding Summary}" FontSize="12"
                                                               Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" MaxWidth="280"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Content="Restore" 
                                                        Command="{Binding DataContext.RestoreSelectedPointCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource SecondaryBtn}" Margin="0,0,8,0"/>
                                                <Button Content="ðŸ—‘" 
                                                        Command="{Binding DataContext.DeleteRestorePointCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource DangerBtn}" Width="40" Padding="0,8"
                                                        ToolTip="Delete this backup"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Button Grid.Row="2" Content="Close" Command="{Binding CloseRestorePointsDialogCommand}"
                            Style="{StaticResource SecondaryBtn}" HorizontalAlignment="Right" 
                            Margin="0,24,0,0" MinWidth="120"/>
                </Grid>
            </Border>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• TWEAK DETAILS DIALOG â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.RowSpan="2" Background="#90000000"
              Visibility="{Binding IsTweakDetailsDialogVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              MouseDown="OnDialogOverlayClick">
            <Border MaxWidth="600" MaxHeight="520" Margin="48" Padding="32"
                    Background="{StaticResource CardBg}" BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                    CornerRadius="24" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Effect="{StaticResource DialogShadow}" DataContext="{Binding SelectedTweakForDetails}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="56" Height="56" CornerRadius="14" Background="#0F2038" Margin="0,0,18,0">
                                <TextBlock Text="{Binding Icon}" FontSize="28" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Border CornerRadius="6" Padding="10,5" Margin="0,0,10,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource RiskSafeBg}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource RiskSafeBorder}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RiskLevel}" Value="Moderate">
                                                        <Setter Property="Background" Value="{StaticResource RiskModerateBg}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource RiskModerateBorder}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RiskLevel}" Value="Caution">
                                                        <Setter Property="Background" Value="{StaticResource RiskCautionBg}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource RiskCautionBorder}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RiskLevel}" Value="Advanced">
                                                        <Setter Property="Background" Value="{StaticResource RiskAdvancedBg}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource RiskAdvancedBorder}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding RiskLabel}" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}"/>
                                    </Border>
                                    <TextBlock Text="{Binding Category}" FontSize="13"
                                               Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- What does this do? -->
                            <TextBlock Text="What does this do?" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>
                            <Border Background="#070D18" CornerRadius="12" Padding="18" Margin="0,0,0,20">
                                <TextBlock Text="{Binding Summary}" FontSize="14" LineHeight="24"
                                           Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                            </Border>

                            <!-- Is it safe? -->
                            <TextBlock Text="Is it safe?" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>
                            <Border Background="#070D18" CornerRadius="12" Padding="18" Margin="0,0,0,20">
                                <TextBlock FontSize="14" LineHeight="24" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="âœ… Safe â€” This tweak is low-risk and can be safely enabled for most users. It won't cause any system instability."/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Moderate">
                                                    <Setter Property="Text" Value="âš ï¸ Moderate â€” This tweak changes some system behaviors. It's generally safe but may affect specific features you use."/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Caution">
                                                    <Setter Property="Text" Value="âš ï¸ Caution â€” This tweak makes significant changes. Review what it does before enabling. A backup is always created."/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Advanced">
                                                    <Setter Property="Text" Value="ðŸ”´ Advanced â€” This tweak is for experienced users. It may impact system behavior in ways that are difficult to reverse."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <!-- Current State -->
                            <TextBlock Text="Current State" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>
                            <Border Background="#070D18" CornerRadius="12" Padding="18">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="14" Foreground="{StaticResource TextSecondary}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Currently: Disabled"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Text" Value="Currently: Enabled"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Margin="12,0,0,0" FontSize="14">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
                                                <Setter Property="Text" Value="(Off)"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                                        <Setter Property="Text" Value="(On)"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Button Grid.Row="2" Content="Got it" 
                            Command="{Binding DataContext.CloseTweakDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            Style="{StaticResource SecondaryBtn}" HorizontalAlignment="Right" 
                            Margin="0,24,0,0" MinWidth="120"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
