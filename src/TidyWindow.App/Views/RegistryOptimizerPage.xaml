<Page x:Class="TidyWindow.App.Views.RegistryOptimizerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="clr-namespace:TidyWindow.App.Resources.Strings"
    xmlns:controls="clr-namespace:TidyWindow.App.Views"
    xmlns:ux="clr-namespace:TidyWindow.App.Controls"
    xmlns:converters="clr-namespace:TidyWindow.App.Converters"
      mc:Ignorable="d"
        Title="{x:Static strings:RegistryOptimizerStrings.PageTitle}"
            Background="Transparent"
            UseLayoutRounding="True"
            SnapsToDevicePixels="True"
            TextOptions.TextFormattingMode="Display"
            TextOptions.TextRenderingMode="ClearType"
            TextOptions.TextHintingMode="Fixed"
            RenderOptions.BitmapScalingMode="HighQuality">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TidyWindow;component/Resources/RegistryOptimizer.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:AlternationIndexToBrushConverter x:Key="AlternationIndexToBrushConverter"/>

            <SolidColorBrush x:Key="RegistryHeroTitleBrush" Color="#FDFEFE"/>
            <SolidColorBrush x:Key="RegistryHeroBodyBrush" Color="#C9D7F8"/>

            <Style x:Key="RegistryHeroTitleTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource RegistryHeroTitleBrush}"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>

            <Style x:Key="RegistryHeroBodyTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="{StaticResource RegistryHeroBodyBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>

            <Style x:Key="RegistryMetricLabelTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Foreground" Value="#93C5FD"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>

            <Style x:Key="RegistryMetricValueTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#F8FAFC"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>

            <Style x:Key="RegistryRiskSummaryChipStyle"
                   TargetType="Border"
                   BasedOn="{StaticResource RegistryMetaPillStyle}">
                <Setter Property="Background" Value="#132A42"/>
                <Setter Property="BorderBrush" Value="#1F3B57"/>
                <Setter Property="Margin" Value="0"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Name}" Value="Safe">
                        <Setter Property="Background" Value="#0F2D23"/>
                        <Setter Property="BorderBrush" Value="#34D399"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Name}" Value="Moderate">
                        <Setter Property="Background" Value="#3B2410"/>
                        <Setter Property="BorderBrush" Value="#F97316"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Name}" Value="Caution">
                        <Setter Property="Background" Value="#332805"/>
                        <Setter Property="BorderBrush" Value="#FACC15"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Name}" Value="Advanced">
                        <Setter Property="Background" Value="#3C1316"/>
                        <Setter Property="BorderBrush" Value="#F87171"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <SolidColorBrush x:Key="RegistryLoaderBackdropBrush" Color="#102136"/>
            <SolidColorBrush x:Key="RegistryLoaderAccentBrush" Color="#38BDF8"/>
            <SolidColorBrush x:Key="RegistryLoaderSoftBrush" Color="#5EEAD4"/>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer x:Name="ContentScrollViewer"
                  Margin="32"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  HorizontalContentAlignment="Stretch"
                  CanContentScroll="True"
                  IsDeferredScrollingEnabled="False"
                  PanningMode="VerticalOnly"
                  SizeChanged="ContentScrollViewer_SizeChanged">
        <Grid x:Name="PageContentGrid"
              MinWidth="0"
              MaxWidth="1320"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <controls:PageTitleBar Title="{x:Static strings:RegistryOptimizerStrings.PageTitle}"
                                    Subtitle="{Binding Headline}"
                                    IconGlyph="ðŸ§©"
                                    Margin="0,0,0,28"/>

            <Grid x:Name="MainLayoutGrid"
                  Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="PrimaryColumnDefinition"
                                      Width="3*"
                                      MinWidth="360"/>
                    <ColumnDefinition x:Name="SecondaryColumnDefinition"
                                      Width="2*"
                                      MinWidth="320"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="PrimaryColumnHost"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,24,0">
                    <Border Style="{StaticResource RegistryCardStyle}"
                            Padding="24"
                            Background="#111D2C"
                            BorderBrush="#1B2F4C">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="56"
                                        Height="56"
                                        CornerRadius="18"
                                        Background="#1E3A5F"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ›¡ï¸"
                                               FontSize="24"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1"
                                            Margin="16,0,0,0">
                                    <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.LeadCardTitle}"
                                               Style="{StaticResource RegistryHeroTitleTextStyle}"/>
                                    <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.LeadCardDescription}"
                                               Margin="0,6,0,0"
                                               Style="{StaticResource RegistryHeroBodyTextStyle}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="{Binding LastOperationSummary}"
                                    Margin="0,18,0,0"
                                    Foreground="#38BDF8">
                                <TextBlock.Style>
                                 <Style TargetType="TextBlock"
                                     BasedOn="{StaticResource RegistryHeroBodyTextStyle}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LastOperationSummary}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding LastOperationSummary}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <ux:AdaptiveTilePanel Margin="0,20,0,0"
                                                 MinColumnWidth="160"
                                                 ColumnSpacing="12"
                                                 RowSpacing="12">
                                <Border Style="{StaticResource RegistryMetaPillStyle}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.TweaksHeader}"
                                                   Style="{StaticResource RegistryMetricLabelTextStyle}"/>
                                        <TextBlock Text="{Binding Tweaks.Count, StringFormat={}{0}}"
                                                   Style="{StaticResource RegistryMetricValueTextStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource RegistryMetaPillStyle}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.PresetsHeader}"
                                                   Style="{StaticResource RegistryMetricLabelTextStyle}"/>
                                        <TextBlock Text="{Binding Presets.Count, StringFormat={}{0}}"
                                                   Style="{StaticResource RegistryMetricValueTextStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource RegistryMetaPillStyle}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="Pending changes"
                                                   Style="{StaticResource RegistryMetricLabelTextStyle}"/>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"
                                                       BasedOn="{StaticResource RegistryMetricValueTextStyle}">
                                                    <Setter Property="Text" Value="Synced"/>
                                                    <Setter Property="Foreground" Value="#34D399"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasPendingChanges}" Value="True">
                                                            <Setter Property="Text" Value="Review required"/>
                                                            <Setter Property="Foreground" Value="#FBBF24"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </ux:AdaptiveTilePanel>

                            <TextBlock Text="Risk mix overview"
                                       Margin="0,20,0,6"
                                       Style="{StaticResource RegistryHeroBodyTextStyle}"/>

                            <ItemsControl Margin="0,0,0,0">
                                <ItemsControl.Resources>
                                    <CollectionViewSource x:Key="RegistryRiskSummary"
                                                          Source="{Binding Tweaks}">
                                        <CollectionViewSource.GroupDescriptions>
                                            <PropertyGroupDescription PropertyName="RiskLevel"/>
                                        </CollectionViewSource.GroupDescriptions>
                                    </CollectionViewSource>
                                </ItemsControl.Resources>
                                <ItemsControl.ItemsSource>
                                    <Binding Source="{StaticResource RegistryRiskSummary}" Path="Groups"/>
                                </ItemsControl.ItemsSource>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ux:AdaptiveTilePanel MinColumnWidth="140"
                                                              ColumnSpacing="10"
                                                              RowSpacing="10"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource RegistryRiskSummaryChipStyle}">
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="12"
                                                           Foreground="#E2E8F0"
                                                           FontWeight="SemiBold"
                                                           TextAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding ItemCount, StringFormat='{}{0}'}"
                                                           FontSize="12"
                                                           Foreground="#94A3B8"
                                                           Margin="6,0,0,0"
                                                           TextAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Preset edits detected"
                                       Foreground="#FBBF24"
                                       Margin="0,16,0,0"
                                       Style="{StaticResource RegistryHeroBodyTextStyle}"
                                       Visibility="{Binding IsPresetCustomized, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <TextBlock Margin="0,6,0,0"
                                       Foreground="#94A3B8"
                                       Style="{StaticResource RegistryHeroBodyTextStyle}"
                                       Text="{Binding LatestRestorePointLocalTime, StringFormat='Last restore point {0:g}'}"
                                       Visibility="{Binding HasRestorePoint, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource RegistryCardStyle}"
                            Margin="0,24,0,0"
                            Background="{StaticResource RegistrySecondaryBackgroundBrush}">
                        <Grid Grid.IsSharedSizeScope="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0"
                                        Margin="0,0,0,20">
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.TweaksHeader}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#E2E8F0"/>
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.TweaksDescription}"
                                           FontSize="12"
                                           Foreground="#64748B"/>
                            </StackPanel>

                            <ListView x:Name="TweaksListView"
                                      Grid.Row="1"
                                      ItemsSource="{Binding Tweaks}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="#F8FAFC"
                                      MinHeight="260"
                                      AlternationCount="6"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.CanContentScroll="True"
                                      ScrollViewer.IsDeferredScrollingEnabled="True"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      VirtualizingPanel.CacheLength="2"
                                      VirtualizingPanel.CacheLengthUnit="Item"
                                      VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                                      VirtualizingStackPanel.ScrollUnit="Pixel">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0,12"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                                        <Setter Property="UseLayoutRounding" Value="True"/>
                                        <Setter Property="CacheMode">
                                            <Setter.Value>
                                                <BitmapCache EnableClearType="True"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Border Background="Transparent"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource RegistryTweakCardContainerStyle}"
                                                Padding="20">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Width="48"
                                                            Height="48"
                                                            CornerRadius="16"
                                                            Background="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource AlternationIndexToBrushConverter}}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Icon}"
                                                                   FontSize="20"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1"
                                                                Margin="18,0,0,0">
                                                        <TextBlock Text="{Binding Title}"
                                                                   FontSize="16"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#F8FAFC"/>
                                                        <TextBlock Text="{Binding Summary}"
                                                                   FontSize="12"
                                                                   Foreground="#9CAEC8"
                                                                   TextWrapping="Wrap"
                                                                   Margin="0,6,0,0"/>
                                                        <ux:AdaptiveTilePanel Margin="0,12,0,0"
                                                                             MinColumnWidth="140"
                                                                             ColumnSpacing="10"
                                                                             RowSpacing="10">
                                                            <Border Style="{StaticResource RegistryDangerChipStyle}">
                                                                <TextBlock Text="{Binding RiskLabel}"
                                                                           FontSize="11"
                                                                           Foreground="#F8FAFC"
                                                                           TextAlignment="Center"
                                                                           HorizontalAlignment="Center"/>
                                                            </Border>
                                                            <Border Style="{StaticResource RegistryMetaPillStyle}">
                                                                <TextBlock Text="{Binding Category}"
                                                                           FontSize="11"
                                                                           Foreground="#CBD5F5"
                                                                           TextAlignment="Center"
                                                                           HorizontalAlignment="Center"/>
                                                            </Border>
                                                            <Border Style="{StaticResource RegistryMetaPillStyle}">
                                                                <TextBlock Text="{Binding DefaultStateLabel}"
                                                                           FontSize="11"
                                                                           Foreground="#CBD5F5"
                                                                           TextAlignment="Center"
                                                                           HorizontalAlignment="Center"/>
                                                            </Border>
                                                        </ux:AdaptiveTilePanel>
                                                    </StackPanel>
                                                    <ToggleButton Grid.Column="2"
                                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                  Style="{StaticResource RegistryToggleSwitchStyle}"
                                                                  HorizontalAlignment="Right"
                                                                  VerticalAlignment="Top"/>
                                                </Grid>

                                                <StackPanel Grid.Row="1"
                                                            Orientation="Horizontal"
                                                            Margin="0,16,0,0"
                                                            VerticalAlignment="Center">
                                                    <Button Command="{Binding ToggleDetailsCommand}"
                                                            HorizontalAlignment="Left">
                                                        <Button.Style>
                                                            <Style TargetType="Button"
                                                                   BasedOn="{StaticResource RegistrySecondaryButtonStyle}">
                                                                <Setter Property="Content" Value="Details"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsDetailsVisible}" Value="True">
                                                                        <Setter Property="Content" Value="Hide details"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                    <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.ValueObservedAtUnavailable}"
                                                               Foreground="#94A3B8"
                                                               FontSize="11"
                                                               Margin="12,4,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsStatePending}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding StateError}"
                                                               Foreground="#F87171"
                                                               FontSize="11"
                                                               Margin="12,4,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding HasStateError}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>

                                                <Border Grid.Row="2"
                                                        Margin="0,12,0,0"
                                                        Padding="16"
                                                        Background="#132540"
                                                        BorderBrush="#1D3A5C"
                                                        BorderThickness="1"
                                                        CornerRadius="10"
                                                        Visibility="{Binding IsDetailsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <StackPanel>
                                                        <WrapPanel Margin="0,0,0,12">
                                                            <Border Style="{StaticResource RegistryValueChipStyle}"
                                                                    Margin="0,0,12,12">
                                                                <StackPanel>
                                                                    <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.ValueHeaderDetails}"
                                                                               Style="{StaticResource RegistryColumnHeaderTextStyle}"/>
                                                                    <TextBlock Text="{Binding DefaultStateLabel}"
                                                                               Style="{StaticResource RegistryValueTextStyle}"/>
                                                                    <TextBlock Text="{Binding Category}"
                                                                               Foreground="#64748B"
                                                                               FontSize="11"
                                                                               Margin="0,4,0,0"
                                                                               TextWrapping="Wrap"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Border Style="{StaticResource RegistryValueChipStyle}"
                                                                    Margin="0,0,12,12">
                                                                <StackPanel>
                                                                    <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.ValueHeaderRecommended}"
                                                                               Style="{StaticResource RegistryColumnHeaderTextStyle}"/>
                                                                    <TextBlock Text="{Binding RecommendedValue}"
                                                                               Style="{StaticResource RegistryValueTextStyle}"
                                                                               TextTrimming="CharacterEllipsis"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </WrapPanel>

                                                        <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.ValueNotAvailable}"
                                                                   Foreground="#94A3B8"
                                                                   FontSize="11">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <MultiDataTrigger>
                                                                            <MultiDataTrigger.Conditions>
                                                                                <Condition Binding="{Binding HasSnapshots}" Value="False"/>
                                                                                <Condition Binding="{Binding IsStatePending}" Value="False"/>
                                                                                <Condition Binding="{Binding HasStateError}" Value="False"/>
                                                                            </MultiDataTrigger.Conditions>
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </MultiDataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <StackPanel Margin="0,12,0,0">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding HasSnapshots}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.ValueHeaderSnapshots}"
                                                                       Style="{StaticResource RegistryColumnHeaderTextStyle}"/>
                                                            <ItemsControl ItemsSource="{Binding SnapshotEntries}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <StackPanel Margin="0,6,0,0">
                                                                            <TextBlock Text="{Binding Display}"
                                                                                       Foreground="#E2E8F0"
                                                                                       FontSize="12"
                                                                                       TextWrapping="Wrap"/>
                                                                            <TextBlock Text="{Binding Path}"
                                                                                       Foreground="#64748B"
                                                                                       FontSize="11"
                                                                                       TextWrapping="Wrap"/>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>

                                                        <!-- Documentation link removed per updated spec -->
                                                    </StackPanel>
                                                </Border>

                                                <Border Grid.Row="3"
                                                        Style="{StaticResource RegistryValueChipStyle}"
                                                        Margin="0,14,0,0">
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal"
                                                                    VerticalAlignment="Center">
                                                            <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.ValueHeaderCustom}"
                                                                       Foreground="#7C8BA5"
                                                                       FontSize="11"
                                                                       FontWeight="SemiBold"/>
                                                            <Button ToolTipService.ToolTip="{Binding CustomValueInfoText}"
                                                                    ToolTipService.ShowDuration="20000"
                                                                    AutomationProperties.Name="{x:Static strings:RegistryOptimizerStrings.ValueHeaderCustom}">
                                                                <Button.Style>
                                                                    <Style TargetType="Button"
                                                                           BasedOn="{StaticResource RegistryInfoButtonStyle}">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding SupportsCustomValue}" Value="False">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                        </StackPanel>
                                                        <TextBox Text="{Binding CustomValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=120}"
                                                                 ToolTip="{Binding CustomValueInfoText}"
                                                                 AutomationProperties.HelpText="{x:Static strings:RegistryOptimizerStrings.CustomValuePlaceholder}"
                                                                 Margin="0,10,0,0"
                                                                 HorizontalAlignment="Stretch"
                                                                 MinWidth="0">
                                                            <TextBox.Style>
                                                                <Style TargetType="TextBox"
                                                                       BasedOn="{StaticResource RegistryValueTextBoxStyle}">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding SupportsCustomValue}" Value="False">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBox.Style>
                                                        </TextBox>
                                                        <TextBlock Text="{Binding CustomValueInfoText}"
                                                                   Foreground="#94A3B8"
                                                                   FontSize="11"
                                                                   Margin="0,10,0,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding SupportsCustomValue}" Value="False">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding CustomValueError}"
                                                                   Foreground="#F87171"
                                                                   FontSize="11"
                                                                   Margin="0,8,0,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding HasValidationError}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel x:Name="SecondaryColumnHost"
                            Grid.Row="0"
                            Grid.Column="1">
                    <Border Style="{StaticResource RegistryCardStyle}"
                            Background="#0B1626">
                        <StackPanel>
                            <TextBlock Text="Quick actions"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#E2E8F0"/>
                            <TextBlock Text="Apply, revert or restore registry presets without leaving this page."
                                       FontSize="12"
                                       Foreground="#64748B"
                                       Margin="0,4,0,12"
                                       TextWrapping="Wrap"/>
                            <Grid>
                                <Button Content="{x:Static strings:RegistryOptimizerStrings.ApplyButton}"
                                        Command="{Binding ApplyCommand}"
                                        Style="{StaticResource RegistryAccentButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                                <Border CornerRadius="12"
                                        Background="{StaticResource RegistryLoaderBackdropBrush}"
                                        Opacity="0.95"
                                        Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        IsHitTestVisible="False"
                                        Margin="0">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="12,10">
                                        <Grid Width="22"
                                              Height="22"
                                              RenderTransformOrigin="0.5,0.5"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8">
                                            <Grid.RenderTransform>
                                                <RotateTransform x:Name="RegistryApplySpinnerRotate"/>
                                            </Grid.RenderTransform>
                                            <Grid.Triggers>
                                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="RegistryApplySpinnerRotate"
                                                                             Storyboard.TargetProperty="Angle"
                                                                             From="0"
                                                                             To="360"
                                                                             Duration="0:0:1.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Grid.Triggers>
                                            <Ellipse Width="22"
                                                     Height="22"
                                                     Stroke="{StaticResource RegistryLoaderAccentBrush}"
                                                     StrokeThickness="2.2"
                                                     StrokeDashArray="16 10"
                                                     StrokeStartLineCap="Round"
                                                     StrokeEndLineCap="Round"
                                                     Opacity="0.85"/>
                                            <Ellipse Width="10"
                                                     Height="10"
                                                     Fill="{StaticResource RegistryLoaderSoftBrush}"
                                                     Opacity="0.9"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                        <TextBlock Text="Applying staged tweaks"
                                                   Foreground="#F8FAFC"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Keep this page open"
                                                   Foreground="#94A3B8"
                                                   FontSize="11"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            <Button Content="{x:Static strings:RegistryOptimizerStrings.RevertButton}"
                                    Command="{Binding RevertChangesCommand}"
                                    Style="{StaticResource RegistrySecondaryButtonStyle}"
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Stretch"/>
                            <Button Content="{x:Static strings:RegistryOptimizerStrings.RestoreButton}"
                                    Command="{Binding RestoreLastSnapshotCommand}"
                                    Style="{StaticResource RegistrySecondaryButtonStyle}"
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Stretch"
                                    ToolTipService.ToolTip="{x:Static strings:RegistryOptimizerStrings.RestoreButtonDescription}"
                                    Visibility="{Binding HasRestorePoint, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <ProgressBar IsIndeterminate="True"
                                         Height="4"
                                         Margin="0,18,0,0"
                                         Foreground="#38BDF8"
                                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.PendingNotice}"
                                       Margin="0,12,0,0"
                                       FontSize="12"
                                       Foreground="#94A3B8"
                                       Visibility="{Binding HasPendingChanges, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.SyncedNotice}"
                                       Margin="0,12,0,0"
                                       FontSize="12"
                                       Foreground="#475569">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasPendingChanges}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource RegistryCardStyle}"
                            Margin="0,20,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0"
                                        Margin="0,0,0,12">
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.PresetsHeader}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#E2E8F0"/>
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.PresetsDescription}"
                                           FontSize="12"
                                           Foreground="#64748B"/>
                            </StackPanel>
                            <ListBox x:Name="PresetListBox"
                                     Grid.Row="1"
                                     ItemsSource="{Binding Presets}"
                                     SelectedItem="{Binding SelectedPreset, Mode=TwoWay}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#F8FAFC"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.CanContentScroll="True"
                                     VirtualizingStackPanel.IsVirtualizing="True"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     VirtualizingPanel.CacheLength="1"
                                     VirtualizingPanel.CacheLengthUnit="Item">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Margin" Value="0,4"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                                        <Setter Property="UseLayoutRounding" Value="True"/>
                                        <Setter Property="CacheMode">
                                            <Setter.Value>
                                                <BitmapCache EnableClearType="True"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                        <Border x:Name="Container"
                                                            Style="{StaticResource RegistryCardSurfaceStyle}"
                                                            Background="#101D30"
                                                            BorderBrush="#1F2D44"
                                                            CornerRadius="10"
                                                            Padding="14">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Container" Property="BorderBrush" Value="#38BDF8"/>
                                                            <Setter TargetName="Container" Property="Background" Value="#132540"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Container" Property="Background" Value="#152B44"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel>
                                            <TextBlock Text="{Binding Icon}"
                                                       FontSize="18"
                                                       Margin="0,0,12,0"
                                                       VerticalAlignment="Center"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="12"
                                                           Foreground="#94A3B8"
                                                           Margin="0,4,0,0"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </DockPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
