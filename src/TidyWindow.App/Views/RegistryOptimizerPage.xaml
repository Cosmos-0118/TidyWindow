<Page x:Class="TidyWindow.App.Views.RegistryOptimizerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="clr-namespace:TidyWindow.App.Resources.Strings"
      mc:Ignorable="d"
    Title="{x:Static strings:RegistryOptimizerStrings.PageTitle}"
      Background="Transparent">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TidyWindow;component/Resources/RegistryOptimizer.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer x:Name="ContentScrollViewer"
                  Margin="32"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  HorizontalContentAlignment="Stretch"
                  CanContentScroll="False"
                  PanningMode="VerticalOnly"
                  SizeChanged="ContentScrollViewer_SizeChanged">
        <Grid x:Name="PageContentGrid"
              MinWidth="0"
              MaxWidth="1320"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top">
                <Border Width="48"
                        Height="48"
                        CornerRadius="12"
                        Background="#1E293B"
                        Margin="0,0,12,0">
                    <TextBlock Text="🧩"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <StackPanel>
                    <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.PageTitle}"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#F8FAFC"/>
                    <TextBlock Text="{Binding Headline}"
                               FontSize="14"
                               Foreground="#94A3B8"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>

            <Grid x:Name="MainLayoutGrid"
                  Grid.Row="1"
                  Margin="0,28,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="PrimaryColumnDefinition"
                                      Width="3*"
                                      MinWidth="360"/>
                    <ColumnDefinition x:Name="SecondaryColumnDefinition"
                                      Width="2*"
                                      MinWidth="320"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="PrimaryColumnHost"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,24,0">
                    <Border Style="{StaticResource RegistryCardStyle}"
                            Padding="16"
                            Background="#122238"
                            BorderBrush="#1D3A5C">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="36"
                                    Height="36"
                                    CornerRadius="10"
                                    Background="#1E3A5F"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <TextBlock Text="🛡️"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1"
                                        Margin="12,0,0,0">
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.LeadCardTitle}"
                                           Foreground="#E2E8F0"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.LeadCardDescription}"
                                           Foreground="#94A3B8"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2"
                                        Orientation="Vertical"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding LastOperationSummary}"
                                           FontSize="11"
                                           Foreground="#38BDF8"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LastOperationSummary}"
                                                             Value="">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding LastOperationSummary}"
                                                             Value="{x:Null}">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="Preset customised"
                                           Margin="0,6,0,0"
                                           FontSize="11"
                                           Foreground="#FBBF24"
                                           TextAlignment="Right"
                                           Visibility="{Binding IsPresetCustomized, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RegistryCardStyle}"
                            Margin="0,20,0,0"
                            Background="{StaticResource RegistrySecondaryBackgroundBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0"
                                        Margin="0,0,0,20">
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.TweaksHeader}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#E2E8F0"/>
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.TweaksDescription}"
                                           FontSize="12"
                                           Foreground="#64748B"/>
                            </StackPanel>

                            <ListView x:Name="TweaksListView"
                                      Grid.Row="1"
                                      ItemsSource="{Binding Tweaks}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="#F8FAFC"
                                      MinHeight="260"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      VirtualizingStackPanel.ScrollUnit="Pixel">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding"
                                                Value="0"/>
                                        <Setter Property="Margin"
                                                Value="0,6"/>
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Border x:Name="Container"
                                                            Background="#101D30"
                                                            BorderBrush="#1F2D44"
                                                            BorderThickness="1"
                                                            CornerRadius="10"
                                                            Padding="0">
                                                        <ContentPresenter Margin="0"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="Background"
                                                                    Value="#132540"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="BorderBrush"
                                                                    Value="#38BDF8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource RegistryToggleRowStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Width="32"
                                                        Height="32"
                                                        CornerRadius="8"
                                                        Background="#182742"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Icon}"
                                                               FontSize="16"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel Grid.Column="1"
                                                            Margin="12,0,0,0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Title}"
                                                                   FontSize="15"
                                                                   FontWeight="SemiBold"/>
                                                        <Border Margin="12,0,0,0"
                                                                Padding="6,2"
                                                                CornerRadius="4"
                                                                BorderThickness="1">
                                                            <Border.Style>
                                                                <Style TargetType="Border"
                                                                       BasedOn="{StaticResource RegistryRiskBadgeStyle}">
                                                                    <Setter Property="Background"
                                                                            Value="#1C2F47"/>
                                                                    <Setter Property="BorderBrush"
                                                                            Value="#243B5A"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding RiskLevel}"
                                                                                     Value="Advanced">
                                                                            <Setter Property="Background"
                                                                                    Value="#451A2E"/>
                                                                            <Setter Property="BorderBrush"
                                                                                    Value="#7C1025"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}"
                                                                                     Value="Moderate">
                                                                            <Setter Property="Background"
                                                                                    Value="#3A2309"/>
                                                                            <Setter Property="BorderBrush"
                                                                                    Value="#73400F"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}"
                                                                                     Value="Caution">
                                                                            <Setter Property="Background"
                                                                                    Value="#2D2812"/>
                                                                            <Setter Property="BorderBrush"
                                                                                    Value="#5A4D17"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding RiskLabel}"
                                                                       FontSize="11"
                                                                       Foreground="#EAB308"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Summary}"
                                                               Margin="0,6,0,10"
                                                               Foreground="#94A3B8"
                                                               FontSize="12"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Category}"
                                                               FontSize="11"
                                                               Foreground="#64748B"/>
                                                    <TextBlock Text="{Binding DefaultStateLabel}"
                                                               Margin="0,2,0,0"
                                                               FontSize="11"
                                                               Foreground="#CBD5F5"/>
                                                    <TextBlock Margin="0,8,0,0"
                                                               FontSize="11"
                                                               Foreground="#60A5FA">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                    Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding DocumentationLink}"
                                                                                 Value="">
                                                                        <Setter Property="Visibility"
                                                                                Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding DocumentationLink}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                        <Hyperlink NavigateUri="{Binding DocumentationLink}"
                                                                   RequestNavigate="DocumentationLink_RequestNavigate"
                                                                   Foreground="#60A5FA">
                                                            <Run Text="See supporting notes"/>
                                                        </Hyperlink>
                                                    </TextBlock>
                                                </StackPanel>
                        <ToggleButton Grid.Column="2"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Style="{StaticResource RegistryToggleSwitchStyle}"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel x:Name="SecondaryColumnHost"
                            Grid.Row="0"
                            Grid.Column="1">
                    <Border Style="{StaticResource RegistryCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0"
                                        Margin="0,0,0,12">
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.PresetsHeader}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#E2E8F0"/>
                                <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.PresetsDescription}"
                                           FontSize="12"
                                           Foreground="#64748B"/>
                            </StackPanel>
                            <ListBox x:Name="PresetListBox"
                                     Grid.Row="1"
                                     ItemsSource="{Binding Presets}"
                                     SelectedItem="{Binding SelectedPreset, Mode=TwoWay}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#F8FAFC"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Margin"
                                                Value="0,4"/>
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Container"
                                                            Background="#101D30"
                                                            BorderBrush="#1F2D44"
                                                            BorderThickness="1"
                                                            CornerRadius="10"
                                                            Padding="14">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="BorderBrush"
                                                                    Value="#38BDF8"/>
                                                            <Setter TargetName="Container"
                                                                    Property="Background"
                                                                    Value="#132540"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="Background"
                                                                    Value="#152B44"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel>
                                            <TextBlock Text="{Binding Icon}"
                                                       FontSize="18"
                                                       Margin="0,0,12,0"
                                                       VerticalAlignment="Center"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="12"
                                                           Foreground="#94A3B8"
                                                           Margin="0,4,0,0"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </DockPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RegistryCardStyle}"
                            Margin="0,20,0,0"
                            Background="#0B1626">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Stretch">
        <Button Content="{x:Static strings:RegistryOptimizerStrings.ApplyButton}"
                    Command="{Binding ApplyCommand}"
                                        Style="{StaticResource RegistryAccentButtonStyle}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,12,0"/>
                <Button Content="{x:Static strings:RegistryOptimizerStrings.RevertButton}"
                                        Command="{Binding RevertChangesCommand}"
                                        Style="{StaticResource RegistrySecondaryButtonStyle}"/>
                            </StackPanel>
                <Button Content="{x:Static strings:RegistryOptimizerStrings.RestoreButton}"
                    Command="{Binding RestoreLastSnapshotCommand}"
                    Style="{StaticResource RegistrySecondaryButtonStyle}"
                    Margin="0,12,0,0"
                    ToolTipService.ToolTip="{x:Static strings:RegistryOptimizerStrings.RestoreButtonDescription}"
                    Visibility="{Binding HasRestorePoint, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <ProgressBar IsIndeterminate="True"
                                         Height="4"
                                         Margin="0,18,0,0"
                                         Foreground="#38BDF8"
                                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.PendingNotice}"
                                       Margin="0,12,0,0"
                                       FontSize="12"
                                       Foreground="#94A3B8"
                                       Visibility="{Binding HasPendingChanges, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{x:Static strings:RegistryOptimizerStrings.SyncedNotice}"
                                       Margin="0,12,0,0"
                                       FontSize="12"
                                       Foreground="#475569">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasPendingChanges}"
                                                         Value="False">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
