<UserControl x:Class="TidyWindow.App.Views.ProjectOblivionPopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="720">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#1F2937"/>
        <Style x:Key="TimelineCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <DataTemplate x:Key="TimelineItemTemplate">
            <Border>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="#6B7280"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                            <Setter Property="Fill" Value="#818CF8"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Completed">
                                            <Setter Property="Fill" Value="#22C55E"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                            <Setter Property="Fill" Value="#F87171"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding Title}"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"
                                   FontSize="14"/>
                    </StackPanel>
                    <TextBlock Text="{Binding Description}"
                               Foreground="#94A3B8"
                               FontSize="12"
                               Margin="0,6,0,0"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding Detail}"
                               Foreground="#E2E8F0"
                               FontSize="12"
                               Margin="0,6,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource TimelineCardStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}" Value="Active">
                                <Setter Property="BorderBrush" Value="#6366F1"/>
                                <Setter Property="Background" Value="#1E1B4B"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                <Setter Property="BorderBrush" Value="#22C55E"/>
                                <Setter Property="Background" Value="#052E16"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                <Setter Property="BorderBrush" Value="#F87171"/>
                                <Setter Property="Background" Value="#3F0D12"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="LogEntryTemplate">
            <StackPanel Margin="0,4,0,4">
                <TextBlock Text="{Binding Timestamp, StringFormat={}{0:G}}"
                           Foreground="#94A3B8"
                           FontSize="11"/>
                <TextBlock Text="{Binding Message}"
                           Foreground="#E2E8F0"
                           FontSize="13"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ArtifactTemplate">
            <Border BorderBrush="#1F2937"
                    BorderThickness="1"
                    CornerRadius="10"
                    Margin="0,8,0,0"
                    Padding="12">
                <DockPanel>
                    <CheckBox DockPanel.Dock="Left"
                              VerticalAlignment="Top"
                              Margin="0,2,10,0"
                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                    <StackPanel>
                        <TextBlock Text="{Binding DisplayName}"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="{Binding FullPath}"
                                   Foreground="#CBD5F5"
                                   FontSize="12"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding SizeBytes, StringFormat={}{0:N0} bytes}"
                                       Foreground="#94A3B8"
                                       FontSize="11"/>
                            <TextBlock Text=" â€¢ " Foreground="#64748B" FontSize="11" Margin="6,0"/>
                            <TextBlock Text="{Binding Type}"
                                       Foreground="#94A3B8"
                                       FontSize="11"/>
                            <TextBlock Text=" (Elevated)"
                                       Foreground="#FBBF24"
                                       FontSize="11"
                                       Margin="6,0,0,0"
                                       Visibility="{Binding RequiresElevation, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding FailureMessage}"
                                   Foreground="#FCA5A5"
                                   FontSize="12"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding FailureMessage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="#99000000">
        <Border Background="{StaticResource PanelBackgroundBrush}"
                CornerRadius="24"
                Padding="28"
                MaxWidth="1200"
                MaxHeight="800"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                    <StackPanel DockPanel.Dock="Left">
                        <TextBlock Text="{Binding TargetAppDisplay}"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="#A5B4FC"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="View log"
                                Margin="0,0,12,0"
                                Visibility="{Binding HasRunLog, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Command="{Binding ViewRunLogCommand}"/>
                        <Button Content="Cancel"
                                Margin="0,0,12,0"
                                Command="{Binding CancelRunCommand}"/>
                        <Button Content="Start"
                                Margin="0,0,12,0"
                                Command="{Binding StartRunCommand}"/>
                        <Button Content="Close"
                                Command="{Binding ClosePopupCommand}"/>
                    </StackPanel>
                </DockPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,24,0">
                            <TextBlock Text="Timeline"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <ItemsControl ItemsSource="{Binding Timeline}"
                                          Margin="0,12,0,0"
                                          ItemTemplate="{StaticResource TimelineItemTemplate}"/>

                            <TextBlock Text="Event log"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"
                                       Margin="0,28,0,0"/>
                            <Border BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Margin="0,12,0,0"
                                    Padding="12">
                                <ScrollViewer Height="260" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding RunLog}"
                                                  ItemTemplate="{StaticResource LogEntryTemplate}"/>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Artifacts"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="{Binding SelectedArtifactCount, StringFormat='{}Selected: {0}'}"
                                           Foreground="#94A3B8"
                                           Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding SelectedArtifactSizeDisplay}"
                                           Foreground="#94A3B8"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,12">
                                <Button Content="Select all"
                                        Margin="0,0,12,0"
                                        Command="{Binding SelectAllArtifactsCommand}"/>
                                <Button Content="Select none"
                                        Margin="0,0,12,0"
                                        Command="{Binding SelectNoArtifactsCommand}"/>
                                <CheckBox Content="Auto-advance"
                                          IsChecked="{Binding AutoAdvanceSelection}"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding ArtifactGroups}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{StaticResource BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="14"
                                                Margin="0,0,0,16"
                                                Padding="14">
                                            <StackPanel>
                                                <TextBlock Text="{Binding GroupName}"
                                                           FontWeight="SemiBold"
                                                           Foreground="#F8FAFC"
                                                           FontSize="15"/>
                                                <TextBlock Text="{Binding SelectedCount, StringFormat='{}{0} selected'}"
                                                           Foreground="#A5B4FC"
                                                           FontSize="12"
                                                           Margin="0,4,0,10"/>
                                                <ItemsControl ItemsSource="{Binding Items}"
                                                              ItemTemplate="{StaticResource ArtifactTemplate}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <StackPanel Margin="0,14,0,0"
                                        Visibility="{Binding IsAwaitingSelection, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Selection pause"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="Review artifacts then continue."
                                           Foreground="#94A3B8"
                                           Margin="0,4,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Continue"
                                            Margin="0,0,12,0"
                                            Command="{Binding CommitSelectionCommand}"/>
                                    <TextBlock Text="{Binding SelectedArtifactCount, StringFormat='{}{0} items will be removed'}"
                                               Foreground="#A5B4FC"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <Border Grid.Row="2"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="14"
                        Padding="16"
                        Margin="0,16,0,0"
                        Visibility="{Binding HasSummary, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Cleanup summary"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <TextBlock Text="{Binding Summary.FreedDisplay, StringFormat='{}Freed {0}'}"
                                       Foreground="#A5B4FC"
                                       Margin="0,6,0,0"/>
                            <TextBlock Text="{Binding Summary.Removed, StringFormat='{}{0} removed'}"
                                       Foreground="#E2E8F0"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding Summary.FailureCount, StringFormat='{}{0} failed'}"
                                       Foreground="#FCA5A5"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    Margin="24,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding HasRunLog, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Artifacts log"
                                       Foreground="#E2E8F0"
                                       FontWeight="SemiBold"/>
                            <Button Content="View log"
                                    Margin="0,8,0,0"
                                    Command="{Binding ViewRunLogCommand}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
