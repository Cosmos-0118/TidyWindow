<Page x:Class="TidyWindow.App.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent"
      Title="Dashboard">
    <Grid Margin="32">
        <StackPanel>
            <TextBlock Text="Dashboard"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#F9FAFB"/>
            <TextBlock Text="System overview and quick actions"
                       FontSize="14"
                       Margin="0,6,0,20"
                       Foreground="#94A3B8"/>
            <Border Background="#16213C"
                    Padding="20"
                    CornerRadius="14"
                    BorderBrush="#1D2A44"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{Binding WelcomeMessage}"
                               TextWrapping="Wrap"
                               FontSize="16"
                               Foreground="#E2E8F0"/>
                    <TextBlock Text="Tailor maintenance routines and keep an eye on everything important from here."
                               Margin="0,12,0,0"
                               Foreground="#7DD3FC"
                               FontSize="12"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
