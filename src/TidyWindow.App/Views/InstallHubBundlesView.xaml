<UserControl x:Class="TidyWindow.App.Views.InstallHubBundlesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
             xmlns:ux="clr-namespace:TidyWindow.App.Controls"
             xmlns:infra="clr-namespace:TidyWindow.App.Infrastructure"
             mc:Ignorable="d"
             Background="Transparent">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="InstallHubResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="BundlesLayoutGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="BundlesPrimaryColumnHost"
                    Grid.Row="0"
                    Margin="0">
            <Border x:Name="SelectedBundleDetailsCard"
                    Style="{StaticResource InstallCardBorderStyle}"
                    Margin="0,0,0,24"
                    Padding="24">
                <Grid x:Name="SelectedBundleDetailsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="{Binding SelectedBundle.Name}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBundle}"
                                                     Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="Select a bundle to preview its contents"
                                   Foreground="#64748B"
                                   FontSize="13"
                                   FontStyle="Italic"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBundle}"
                                                     Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding SelectedBundle.Description}"
                                   Foreground="#CBD5F5"
                                   FontSize="13"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBundle}"
                                                     Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <WrapPanel Margin="0,12,0,0">
                            <Border>
                                <Border.Style>
                                    <Style TargetType="Border"
                                           BasedOn="{StaticResource InstallBadgeStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedBundle}"
                                                         Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding SelectedBundle.BundlePackageCount, StringFormat={}{0} package(s)}"
                                           Foreground="#FDE68A"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                            </Border>
                            <Border>
                                <Border.Style>
                                    <Style TargetType="Border"
                                           BasedOn="{StaticResource InstallBadgeStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedBundle.IsSyntheticAll}"
                                                         Value="True">
                                                <Setter Property="Background" Value="#1B2A44"/>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedBundle}"
                                                         Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="All packages"
                                           Foreground="#38BDF8"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </WrapPanel>
                    </StackPanel>

                    <StackPanel x:Name="SelectedBundleActionsPanel"
                                Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="12,0,0,0">
                        <Button x:Name="SelectedBundlePrimaryButton"
                                Content="Queue bundle"
                                Command="{Binding QueueBundleCommand}"
                                CommandParameter="{Binding SelectedBundle}">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource InstallAccentButtonStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBundle}"
                                                     Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedBundle.IsSyntheticAll, TargetNullValue=False}"
                                                     Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="SelectedBundleSecondaryButton"
                                Content="View details"
                                Margin="10,0,0,0"
                                Command="{Binding ViewBundleDetailsCommand}"
                                CommandParameter="{Binding SelectedBundle}">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource InstallSecondaryButtonStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBundle}"
                                                     Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Style="{StaticResource InstallCardBorderStyle}"
                    Padding="12,16,12,18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Bundle library"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <TextBlock Text="Select a bundle to inspect or queue the whole stack"
                                       Foreground="#94A3B8"
                                       FontSize="12"/>
                        </StackPanel>
                        <Button Grid.Column="1"
                                Content="Browse catalog"
                                Command="{Binding NavigatePivotCommand}"
                                CommandParameter="{x:Static viewModels:CurrentInstallHubPivot.Catalog}"
                                Style="{StaticResource InstallSecondaryButtonStyle}"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <ItemsControl ItemsSource="{StaticResource InstallHubBundleSkeletonItems}"
                                      ItemTemplate="{StaticResource InstallHubBundleSkeletonTemplate}">
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <ListBox x:Name="BundlesList"
                                 ItemsSource="{Binding Bundles}"
                                 SelectedItem="{Binding SelectedBundle, Mode=TwoWay}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="True"
                                 infra:ScrollHost.BubbleParentScroll="True">
                            <ListBox.Style>
                                <Style TargetType="ListBox">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ux:AdaptiveTilePanel MinColumnWidth="280"
                                                          MaxColumnWidth="420"
                                                          ColumnSpacing="24"
                                                          RowSpacing="24"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <StaticResource ResourceKey="InstallBundleCardItemStyle"/>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource InstallCardBorderStyle}"
                                            Padding="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0">
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#F8FAFC"
                                                               TextWrapping="Wrap"/>
                                                    <Border Margin="10,0,0,0"
                                                            Visibility="{Binding IsSyntheticAll, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Background="#1B2A44"
                                                            CornerRadius="8"
                                                            Padding="8,3">
                                                        <TextBlock Text="All packages"
                                                                   Foreground="#38BDF8"
                                                                   FontSize="11"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}"
                                                           Foreground="#94A3B8"
                                                           FontSize="12"
                                                           Margin="0,6,0,0"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <WrapPanel Grid.Row="1"
                                                       Margin="0,12,0,0">
                                                <Border Style="{StaticResource InstallBadgeStyle}">
                                                    <TextBlock Text="{Binding PackageCountDisplay}"
                                                               Foreground="#CBD5F5"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                                <Border Style="{StaticResource InstallBadgeStyle}"
                                                        Background="#1B2A44"
                                                        Visibility="{Binding IsSyntheticAll, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding BundlePackageCount, StringFormat={}{0} packages}"
                                                               Foreground="#CBD5F5"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                            </WrapPanel>

                                            <StackPanel Grid.Row="2"
                                                        Orientation="Horizontal"
                                                        Margin="0,16,0,0">
                                                <Button Content="Queue bundle"
                                                        Command="{Binding DataContext.QueueBundleCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        CommandParameter="{Binding}"
                                                        MinWidth="96">
                                                    <Button.Style>
                                                        <Style TargetType="Button"
                                                               BasedOn="{StaticResource InstallAccentButtonStyle}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSyntheticAll}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Button Content="View details"
                                                        Margin="8,0,0,0"
                                                        Command="{Binding DataContext.ViewBundleDetailsCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource InstallSecondaryButtonStyle}"
                                                        MinWidth="96"/>
                                                <Button Content="Browse catalog"
                                                        Margin="8,0,0,0"
                                                        Command="{Binding DataContext.NavigatePivotCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        CommandParameter="{x:Static viewModels:CurrentInstallHubPivot.Catalog}"
                                                        Style="{StaticResource InstallSecondaryButtonStyle}"
                                                        MinWidth="110"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock Text="No bundles available yet. Refresh the catalog to add definitions."
                                   Foreground="#64748B"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Bundles.Count}" Value="0"/>
                                                <Condition Binding="{Binding IsLoading}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
