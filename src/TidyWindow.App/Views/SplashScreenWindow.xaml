<Window x:Class="TidyWindow.App.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:TidyWindow.App.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="Transparent"
        Topmost="True"
        Width="960"
        Height="540"
        SizeToContent="Manual"
        Opacity="0"
        d:DesignWidth="960"
        d:DesignHeight="540"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Window.Resources>
        <LinearGradientBrush x:Key="SplashBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#040A15" Offset="0" />
            <GradientStop Color="#0C172A" Offset="1" />
        </LinearGradientBrush>
        <RadialGradientBrush x:Key="SplashAmbientGlowBrush1" Center="0.18,0.28" GradientOrigin="0.18,0.28" RadiusX="0.65" RadiusY="0.65">
            <GradientStop Color="#2A6CFF" Offset="0" />
            <GradientStop Color="#00204A" Offset="0.35" />
            <GradientStop Color="#00000000" Offset="1" />
        </RadialGradientBrush>
        <RadialGradientBrush x:Key="SplashAmbientGlowBrush2" Center="0.82,0.72" GradientOrigin="0.82,0.72" RadiusX="0.7" RadiusY="0.7">
            <GradientStop Color="#21E6B8" Offset="0" />
            <GradientStop Color="#00332C" Offset="0.33" />
            <GradientStop Color="#00000000" Offset="1" />
        </RadialGradientBrush>
        <RadialGradientBrush x:Key="SplashVignetteBrush" Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.9" RadiusY="0.9">
            <GradientStop Color="#00000000" Offset="0.2" />
            <GradientStop Color="#00000066" Offset="0.8" />
            <GradientStop Color="#000000A6" Offset="1" />
        </RadialGradientBrush>
        <LinearGradientBrush x:Key="SplashPanelBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0D1728" Offset="0" />
            <GradientStop Color="#09101C" Offset="1" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SplashTitleBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6BE4FF" Offset="0" />
            <GradientStop Color="#5DF5BA" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="AccentBrush" Color="#36C7FF" />
        <SolidColorBrush x:Key="AccentSecondaryBrush" Color="#FB923C" />
        <SolidColorBrush x:Key="AccentSuccessBrush" Color="#34D399" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F8FAFC" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8EA1C4" />
        <RadialGradientBrush x:Key="SplashSpinnerPulseBrush" GradientOrigin="0.5,0.35" Center="0.5,0.5" RadiusX="0.95" RadiusY="0.95">
            <GradientStop Color="#182946" Offset="0" />
            <GradientStop Color="#111C31" Offset="0.45" />
            <GradientStop Color="#081223" Offset="1" />
        </RadialGradientBrush>
        <SolidColorBrush x:Key="SplashSpinnerLineBrush" Color="#1A2B48" />

        <DropShadowEffect x:Key="SplashPanelShadow"
                  Color="#040914"
                  BlurRadius="34"
                  ShadowDepth="0"
                  Opacity="0.95" />

        <Style x:Key="SplashTileStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Background" Value="#101B2D" />
            <Setter Property="BorderBrush" Value="#1E2A40" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="MinWidth" Value="170" />
        </Style>

        <QuadraticEase x:Key="SplashEaseIn" EasingMode="EaseInOut" />
        <CubicEase x:Key="SplashEaseOut" EasingMode="EaseInOut" />

        <Storyboard x:Key="SplashFadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.45"
                             EasingFunction="{StaticResource SplashEaseIn}" />
        </Storyboard>
        <Storyboard x:Key="SplashFadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.35"
                             EasingFunction="{StaticResource SplashEaseOut}" />
        </Storyboard>

        <Storyboard x:Key="StatusMessageTransitionStoryboard">
            <DoubleAnimation Storyboard.TargetName="StatusMessageText"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.35"
                             EasingFunction="{StaticResource SplashEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="StatusMessageText"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="8"
                             To="0"
                             Duration="0:0:0.35"
                             EasingFunction="{StaticResource SplashEaseOut}" />
        </Storyboard>

        <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SpinnerOuterRotate"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:6" />
            <DoubleAnimation Storyboard.TargetName="SpinnerInnerRotate"
                             Storyboard.TargetProperty="Angle"
                             From="360"
                             To="0"
                             Duration="0:0:3.5" />
            <DoubleAnimation Storyboard.TargetName="SpinnerPulseScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="1.16"
                             Duration="0:0:1.4"
                             AutoReverse="True"
                             EasingFunction="{StaticResource SplashEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="SpinnerPulseScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="1.16"
                             Duration="0:0:1.4"
                             AutoReverse="True"
                             EasingFunction="{StaticResource SplashEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="SpinnerOrbitDot1Rotate"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:3.2" />
            <DoubleAnimation Storyboard.TargetName="SpinnerOrbitDot2Rotate"
                             Storyboard.TargetProperty="Angle"
                             From="360"
                             To="0"
                             Duration="0:0:4.1" />
            <DoubleAnimation Storyboard.TargetName="SpinnerOrbitDot3Rotate"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:2.6" />
        </Storyboard>

        <Storyboard x:Key="LowPowerPulseStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SpinnerOuterRotate"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:9" />
        </Storyboard>

        <Storyboard x:Key="ProgressStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ProgressPulse"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-200"
                             To="220"
                             Duration="0:0:2"
                             EasingFunction="{StaticResource SplashEaseOut}" />
        </Storyboard>

        <Storyboard x:Key="CardEnterStoryboard">
            <DoubleAnimation Storyboard.TargetName="RootCard"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                             To="1"
                             Duration="0:0:0.42"
                             EasingFunction="{StaticResource SplashEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="RootCard"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                             To="1"
                             Duration="0:0:0.42"
                             EasingFunction="{StaticResource SplashEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="RootCard"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.42"
                             EasingFunction="{StaticResource SplashEaseOut}" />
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource SplashFadeInStoryboard}" />
            <BeginStoryboard Storyboard="{StaticResource CardEnterStoryboard}" />
        </EventTrigger>
    </Window.Triggers>

    <Grid Background="{StaticResource SplashBackgroundBrush}">
        <Rectangle Fill="{StaticResource SplashAmbientGlowBrush1}" Opacity="0.18" IsHitTestVisible="False" />
        <Rectangle Fill="{StaticResource SplashAmbientGlowBrush2}" Opacity="0.14" IsHitTestVisible="False" />
        <Rectangle Fill="{StaticResource SplashVignetteBrush}" Opacity="0.9" IsHitTestVisible="False" />
        <Border x:Name="RootCard"
                CornerRadius="40"
                Padding="42"
                Background="{StaticResource SplashPanelBrush}"
                Width="760"
                Height="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                SnapsToDevicePixels="True"
                CacheMode="BitmapCache">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.985" ScaleY="0.985" />
                    <TranslateTransform Y="10" />
                </TransformGroup>
            </Border.RenderTransform>
            <Border.Effect>
                <StaticResource ResourceKey="SplashPanelShadow" />
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" />
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" CacheMode="BitmapCache">
                    <Grid Width="220" Height="220" CacheMode="BitmapCache">
                        <Ellipse Width="220" Height="220" Fill="#0E182B" Stroke="#1B2C46" StrokeThickness="1.2" />
                        <Ellipse Width="180" Height="180" Stroke="#14253F" StrokeThickness="8" />
                        <Ellipse Width="190" Height="190" Stroke="#162B47" StrokeThickness="1" StrokeDashArray="4 6" />
                        <Ellipse Width="190"
                                 Height="190"
                                 Stroke="{StaticResource AccentBrush}"
                                 StrokeThickness="5"
                                 StrokeDashArray="10 8"
                                 StrokeDashCap="Round"
                                 Opacity="0.7"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerOuterRotate" Angle="0" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="112" Height="112" Fill="{StaticResource SplashSpinnerPulseBrush}" Opacity="0.85" RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="SpinnerPulseScale" ScaleX="1" ScaleY="1" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Path Data="M110,40 L110,180"
                              Stroke="{StaticResource SplashSpinnerLineBrush}"
                              StrokeThickness="1"
                              StrokeDashArray="4 8"
                              Opacity="0.6" />
                        <Path Data="M60,110 L160,110"
                              Stroke="{StaticResource SplashSpinnerLineBrush}"
                              StrokeThickness="1"
                              StrokeDashArray="4 8"
                              Opacity="0.6" />
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="SpinnerInnerRotate" Angle="0" />
                            </Grid.RenderTransform>
                            <Ellipse Width="150" Height="150" Stroke="#1E3354" StrokeThickness="2" StrokeDashArray="18 12" />
                        </Grid>
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="SpinnerOrbitDot1Rotate" Angle="0" />
                            </Grid.RenderTransform>
                            <Border Width="18"
                                    Height="18"
                                    CornerRadius="9"
                                    Background="{StaticResource AccentBrush}"
                                    BorderBrush="#0F243A"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,-10,0,0" />
                        </Grid>
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="SpinnerOrbitDot2Rotate" Angle="120" />
                            </Grid.RenderTransform>
                            <Border Width="22"
                                    Height="22"
                                    CornerRadius="11"
                                    Background="{StaticResource AccentSecondaryBrush}"
                                    BorderBrush="#2A1F15"
                                    BorderThickness="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,-10,0" />
                        </Grid>
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="SpinnerOrbitDot3Rotate" Angle="240" />
                            </Grid.RenderTransform>
                            <Border Width="14"
                                    Height="14"
                                    CornerRadius="7"
                                    Background="{StaticResource AccentSuccessBrush}"
                                    BorderBrush="#123726"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,0,-10" />
                        </Grid>
                        <Border Width="88" Height="88" CornerRadius="24" Background="#0E192C" BorderBrush="#233554" BorderThickness="1.2" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/Assets/AppIcon.png"
                                   Width="56"
                                   Height="56"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   SnapsToDevicePixels="True" />
                        </Border>
                    </Grid>
                </Grid>

                <Rectangle Grid.Column="1" Width="1" Fill="#1B2B45" Opacity="0.4" RadiusX="0.5" RadiusY="0.5" />

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <StackPanel Margin="0,0,0,14">
                        <TextBlock Text="TidyWindow" FontSize="34" FontFamily="Segoe UI Semibold" Foreground="{StaticResource SplashTitleBrush}" TextOptions.TextFormattingMode="Ideal">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#001826" BlurRadius="16" ShadowDepth="0" Opacity="0.65" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Personal maintenance flight deck" FontSize="15" Foreground="{StaticResource TextSecondaryBrush}" />
                        <TextBlock Text="Launching cockpit, locking telemetry, priming packages." FontSize="12" Foreground="#7386A8" Margin="0,4,0,0" />
                    </StackPanel>

                    <ItemsControl Margin="0,0,0,18">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <controls:AdaptiveTilePanel MinColumnWidth="170" MaxColumnWidth="240" ColumnSpacing="14" RowSpacing="14" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Items>
                            <Border Style="{StaticResource SplashTileStyle}">
                                <StackPanel>
                                    <TextBlock Text="Profiles" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" />
                                    <TextBlock Text="Cockpit ready" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource SplashTileStyle}">
                                <StackPanel>
                                    <TextBlock Text="Telemetry" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" />
                                    <TextBlock Text="Signals private" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource SplashTileStyle}">
                                <StackPanel>
                                    <TextBlock Text="Packages" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" />
                                    <TextBlock Text="Feeds synced" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                                </StackPanel>
                            </Border>
                        </ItemsControl.Items>
                    </ItemsControl>

                    <Border CornerRadius="10" Background="#0D1628" BorderBrush="#1E2E48" BorderThickness="1" Padding="12,10" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="10" Height="10" Fill="{StaticResource AccentSuccessBrush}" />
                            <TextBlock x:Name="StatusMessageText" Text="{Binding StatusMessage, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="14" FontFamily="Segoe UI Semibold" Foreground="{StaticResource TextPrimaryBrush}" Margin="12,0,0,0">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform Y="0" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Grid Width="240">
                        <Border Height="8" CornerRadius="4" Background="#15243B">
                            <Grid ClipToBounds="True">
                                <Rectangle x:Name="ProgressPulse" Width="160" Height="8" RadiusX="4" RadiusY="4" Fill="{StaticResource AccentBrush}">
                                    <Rectangle.RenderTransform>
                                        <TranslateTransform X="-200" />
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
