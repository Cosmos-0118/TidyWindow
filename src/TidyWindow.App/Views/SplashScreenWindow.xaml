<Window x:Class="TidyWindow.App.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="560"
        Height="340"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="Transparent"
        Topmost="True"
        Opacity="0"
        d:DesignWidth="560"
        d:DesignHeight="340">
    <Window.Resources>
        <LinearGradientBrush x:Key="SplashBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A1424" Offset="0" />
            <GradientStop Color="#101F37" Offset="1" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="AccentFieldBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#192A45" Offset="0" />
            <GradientStop Color="#102037" Offset="0.65" />
            <GradientStop Color="#0E1B2E" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="AccentBrush" Color="#22C55E" />
        <SolidColorBrush x:Key="AccentSecondaryBrush" Color="#38BDF8" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F8FAFC" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8" />

        <QuadraticEase x:Key="SplashEaseIn" EasingMode="EaseInOut" />
        <CubicEase x:Key="SplashEaseOut" EasingMode="EaseInOut" />

        <Storyboard x:Key="SplashFadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.45"
                             EasingFunction="{StaticResource SplashEaseIn}" />
        </Storyboard>
        <Storyboard x:Key="SplashFadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.35"
                             EasingFunction="{StaticResource SplashEaseOut}" />
        </Storyboard>

        <!-- Status message transition (fade + slight rise) -->
        <Storyboard x:Key="StatusMessageTransitionStoryboard">
            <DoubleAnimation Storyboard.TargetName="StatusMessageText"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.35"
                             EasingFunction="{StaticResource SplashEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="StatusMessageText"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="8"
                             To="0"
                             Duration="0:0:0.35"
                             EasingFunction="{StaticResource SplashEaseOut}" />
        </Storyboard>

        <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="OrbitingArc"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0"
                             To="360"
                             Duration="0:0:3.8"
                             EasingFunction="{StaticResource SplashEaseIn}" />
            <DoubleAnimation Storyboard.TargetName="AccentGlow"
                             Storyboard.TargetProperty="Opacity"
                             From="0.15"
                             To="0.45"
                             Duration="0:0:2.6"
                             AutoReverse="True"
                             EasingFunction="{StaticResource SplashEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="AccentSweep"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-260"
                             To="340"
                             Duration="0:0:3.2"
                             EasingFunction="{StaticResource SplashEaseIn}" />
        </Storyboard>

        <Storyboard x:Key="ProgressStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ProgressPulse"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-220"
                             To="280"
                             Duration="0:0:2.2"
                             EasingFunction="{StaticResource SplashEaseOut}" />
        </Storyboard>

        <!-- Card enter: scale up slightly and rise into place -->
        <Storyboard x:Key="CardEnterStoryboard">
            <DoubleAnimation Storyboard.TargetName="RootCard"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                             To="1"
                             Duration="0:0:0.42"
                             EasingFunction="{StaticResource SplashEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="RootCard"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                             To="1"
                             Duration="0:0:0.42"
                             EasingFunction="{StaticResource SplashEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="RootCard"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.42"
                             EasingFunction="{StaticResource SplashEaseOut}" />
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource SplashFadeInStoryboard}" />
            <BeginStoryboard Storyboard="{StaticResource PulseStoryboard}" />
            <BeginStoryboard Storyboard="{StaticResource ProgressStoryboard}" />
            <BeginStoryboard Storyboard="{StaticResource CardEnterStoryboard}" />
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Border x:Name="RootCard"
                CornerRadius="28"
                Background="{StaticResource SplashBackgroundBrush}"
                Padding="36"
                SnapsToDevicePixels="True">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.985" ScaleY="0.985" />
                    <TranslateTransform Y="8" />
                </TransformGroup>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect Color="#22000000"
                                  BlurRadius="44"
                                  ShadowDepth="0"
                                  Opacity="0.9" />
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="260" />
                </Grid.ColumnDefinitions>

                <Grid.OpacityMask>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0" Color="#FFFFFFFF" />
                        <GradientStop Offset="1" Color="#FAFFFFFF" />
                    </LinearGradientBrush>
                </Grid.OpacityMask>

                <Rectangle Fill="{StaticResource AccentFieldBrush}" Grid.ColumnSpan="2" Opacity="0.65" RadiusX="26" RadiusY="26" />

                <Rectangle x:Name="AccentSweep"
                           Grid.ColumnSpan="2"
                           Width="220"
                           Opacity="0.2"
                           Fill="#99FFFFFF"
                           RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TranslateTransform X="-220" />
                    </Rectangle.RenderTransform>
                    <Rectangle.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00FFFFFF" Offset="0" />
                            <GradientStop Color="#80FFFFFF" Offset="0.4" />
                            <GradientStop Color="#00FFFFFF" Offset="1" />
                        </LinearGradientBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>

                <Border Grid.ColumnSpan="2"
                        CornerRadius="28"
                        BorderThickness="1"
                        BorderBrush="#1F2B44"
                        Opacity="0.8" />

                <Grid Grid.Column="0"
                      Margin="8,8,32,8"
                      VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,18">
                        <TextBlock Text="TidyWindow"
                                   FontFamily="Segoe UI Semibold"
                                   FontSize="30"
                                   Foreground="{StaticResource TextPrimaryBrush}" />
                        <TextBlock Text="SYSTEM CARE COCKPIT"
                                   FontFamily="Segoe UI"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,6,0,0"
                                   TextOptions.TextFormattingMode="Ideal"
                                   TextOptions.TextRenderingMode="Auto" />
                    </StackPanel>

                    <TextBlock Grid.Row="1"
                               Text="Your automation co-pilot is spinning up essential services and preparing the cockpit."
                               FontFamily="Segoe UI"
                               FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,22" />

                    <StackPanel Grid.Row="2" Margin="0,0,0,18">
                        <TextBlock Text="Preparing systems"
                                   FontFamily="Segoe UI Semibold"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,8" />
                        <Border Height="8"
                                CornerRadius="4"
                                Background="#172842">
                            <Grid ClipToBounds="True">
                                <Rectangle x:Name="ProgressPulse"
                                           Width="160"
                                           Height="8"
                                           Fill="{StaticResource AccentSecondaryBrush}">
                                    <Rectangle.RenderTransform>
                                        <TranslateTransform X="-200" />
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <Border Grid.Row="3"
                            CornerRadius="6"
                            Background="#101928"
                            BorderBrush="#1F2E46"
                            BorderThickness="1"
                            Padding="12,10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="{StaticResource AccentBrush}"
                                     VerticalAlignment="Center" />
                            <TextBlock x:Name="StatusMessageText"
                                       Text="{Binding StatusMessage, RelativeSource={RelativeSource AncestorType=Window}}"
                                       FontFamily="Segoe UI Semibold"
                                       FontSize="14"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="12,0,0,0"
                                       Opacity="1">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform Y="0" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Grid.Column="1"
                      Margin="28,4,0,4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Background="#121F35"
                            CornerRadius="24"
                            Padding="28"
                            BorderBrush="#1E2F4C"
                            BorderThickness="1">
                        <Grid>
                            <Ellipse Fill="#112139"
                                     Width="150"
                                     Height="150"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center" />

                            <Ellipse x:Name="AccentGlow"
                                     Width="164"
                                     Height="164"
                                     StrokeThickness="3"
                                     Stroke="{StaticResource AccentSecondaryBrush}"
                                     Opacity="0.25"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="12" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <Path x:Name="OrbitingArc"
                                  StrokeThickness="4"
                                  Stroke="{StaticResource AccentBrush}"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Data="M75,15 A60,60 0 1 1 74,15"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="0" />
                                </Path.RenderTransform>
                                <Path.OpacityMask>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00FFFFFF" Offset="0" />
                                        <GradientStop Color="#FFFFFFFF" Offset="0.4" />
                                        <GradientStop Color="#FFFFFFFF" Offset="0.8" />
                                        <GradientStop Color="#00FFFFFF" Offset="1" />
                                    </LinearGradientBrush>
                                </Path.OpacityMask>
                            </Path>

                            <Grid HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Border Width="88"
                                        Height="88"
                                        Background="#101B2F"
                                        BorderBrush="#253956"
                                        BorderThickness="1.2"
                                        CornerRadius="20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0"
                                                Width="44"
                                                Height="44"
                                                Background="#172841"
                                                CornerRadius="16"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <Path StrokeThickness="2.6"
                                                  Stroke="{StaticResource AccentBrush}"
                                                  Data="M5,22 L16,33 39,11"
                                                  StrokeEndLineCap="Round"
                                                  StrokeStartLineCap="Round"
                                                  StrokeLineJoin="Round"
                                                  Margin="0,0,0,0" />
                                        </Border>
                                        <TextBlock Grid.Row="1"
                                                   Text="READY"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontFamily="Segoe UI Semibold"
                                                   Foreground="{StaticResource TextSecondaryBrush}" />
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
