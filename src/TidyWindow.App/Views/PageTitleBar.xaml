<UserControl x:Class="TidyWindow.App.Views.PageTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="RootControl"
             d:DesignHeight="200"
             d:DesignWidth="720"
             mc:Ignorable="d">
    <UserControl.Resources>
        <DropShadowEffect x:Key="TitleBarShadowEffect"
                          BlurRadius="14"
                          ShadowDepth="0"
                          Opacity="0.18"
                          Color="#050A12"/>
        <SolidColorBrush x:Key="TitleBarOverlayBrush"
                         Color="#18FFFFFF"/>
        <SolidColorBrush x:Key="IconNormalBrush"
                         Color="#111A28"/>
        <SolidColorBrush x:Key="IconHoverBrush"
                         Color="#1A2A40"/>
        <Style x:Key="TitleBarBadgeStyle"
               TargetType="Border">
            <Setter Property="CornerRadius"
                    Value="6"/>
            <Setter Property="Padding"
                    Value="6,2"/>
            <Setter Property="Margin"
                    Value="12,0,0,0"/>
            <Setter Property="Background"
                    Value="#15263D"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding BadgeText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="{x:Null}">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding BadgeText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Background"
                            Value="#1B314D"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TitleBarIconStyle"
               TargetType="Border">
            <Setter Property="Width"
                    Value="40"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Background"
                    Value="{StaticResource IconNormalBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#1F2A3A"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IconGlyph, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="{x:Null}">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IconGlyph, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource IconHoverBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Padding="{Binding Padding, ElementName=RootControl}"
            Background="{Binding Background, ElementName=RootControl}"
            CornerRadius="{Binding CornerRadius, ElementName=RootControl}"
            SnapsToDevicePixels="True"
            UseLayoutRounding="True">
        <Border.Effect>
            <StaticResource ResourceKey="TitleBarShadowEffect"/>
        </Border.Effect>
        <Grid>
            <Border IsHitTestVisible="False"
                    CornerRadius="{Binding CornerRadius, ElementName=RootControl}"
                    Background="{StaticResource TitleBarOverlayBrush}"
                    Opacity="0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Opacity"
                                Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=RootControl}"
                                         Value="True">
                                <Setter Property="Opacity"
                                        Value="1"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border x:Name="IconHost"
                            Grid.Column="0"
                            Style="{StaticResource TitleBarIconStyle}"
                            BorderBrush="{Binding AccentBrush, ElementName=RootControl}">
                        <TextBlock Text="{Binding IconGlyph, ElementName=RootControl}"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#F1F5F9"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel x:Name="TextHost"
                                Grid.Column="1"
                                VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Margin"
                                        Value="12,0,0,0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IconGlyph, ElementName=RootControl}"
                                                 Value="{x:Null}">
                                        <Setter Property="Margin"
                                                Value="0"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IconGlyph, ElementName=RootControl}"
                                                 Value="">
                                        <Setter Property="Margin"
                                                Value="0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding Title, ElementName=RootControl}"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"
                                       TextTrimming="CharacterEllipsis"/>
                            <Border x:Name="BadgeHost"
                                    Style="{StaticResource TitleBarBadgeStyle}"
                                    BorderBrush="{Binding AccentBrush, ElementName=RootControl}">
                                <TextBlock Text="{Binding BadgeText, ElementName=RootControl}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#E2E8F0"/>
                            </Border>
                        </StackPanel>

                        <TextBlock Text="{Binding Subtitle, ElementName=RootControl}"
                                   Margin="0,4,0,0"
                                   FontSize="12"
                                   Foreground="#94A3B8"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Visible"/>
                                    <Style.Triggers>
                                        <Trigger Property="Text"
                                                 Value="{x:Null}">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                        </Trigger>
                                        <Trigger Property="Text"
                                                 Value="">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <ContentPresenter Grid.Column="2"
                                      Margin="20,0,0,0"
                                      VerticalAlignment="Center"
                                      Content="{Binding TrailingContent, ElementName=RootControl}">
                        <ContentPresenter.Style>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Setter Property="HorizontalAlignment"
                                        Value="Right"/>
                                <Style.Triggers>
                                    <Trigger Property="Content"
                                             Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ContentPresenter.Style>
                    </ContentPresenter>
                </Grid>

                <ContentPresenter Grid.Row="1"
                                  Margin="0,16,0,0"
                                  Content="{Binding BodyContent, ElementName=RootControl}">
                    <ContentPresenter.Style>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                            <Style.Triggers>
                                <Trigger Property="Content"
                                         Value="{x:Null}">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ContentPresenter.Style>
                </ContentPresenter>
            </Grid>

            <Border x:Name="AccentUnderline"
                    IsHitTestVisible="False"
                    Height="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Background="{Binding AccentBrush, ElementName=RootControl}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Opacity"
                                Value="0.65"/>
                        <Setter Property="Margin"
                                Value="120,0,120,0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=RootControl}"
                                         Value="True">
                                <Setter Property="Opacity"
                                        Value="1"/>
                                <Setter Property="Margin"
                                        Value="40,0,40,0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </Grid>
    </Border>
</UserControl>
