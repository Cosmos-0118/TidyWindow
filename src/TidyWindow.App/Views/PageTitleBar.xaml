<UserControl x:Class="TidyWindow.App.Views.PageTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="RootControl"
             d:DesignHeight="200"
             d:DesignWidth="720"
             mc:Ignorable="d"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             RenderOptions.BitmapScalingMode="HighQuality">
    <UserControl.Resources>
        <DropShadowEffect x:Key="TitleBarShadowEffect"
                          BlurRadius="14"
                          ShadowDepth="0"
                          Opacity="0.18"
                          Color="#050A12"/>
        <SolidColorBrush x:Key="TitleBarOverlayBrush"
                         Color="#18FFFFFF"/>
        <SolidColorBrush x:Key="IconNormalBrush"
                         Color="#111A28"/>
        <SolidColorBrush x:Key="IconHoverBrush"
                         Color="#1A2A40"/>
        <LinearGradientBrush x:Key="NeonStrokeBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6EF0FF" Offset="0"/>
            <GradientStop Color="#3B82F6" Offset="0.45"/>
            <GradientStop Color="#8B5CF6" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="TitleForegroundBrush"
                         Color="#FCFEFF"/>
        <SolidColorBrush x:Key="SubtitleForegroundBrush"
                         Color="#C5D5EE"/>
        <Style x:Key="TitleBarBadgeStyle"
               TargetType="Border">
            <Setter Property="CornerRadius"
            Value="10"/>
            <Setter Property="Padding"
                    Value="6,2"/>
            <Setter Property="Margin"
                    Value="12,0,0,0"/>
            <Setter Property="Background"
                    Value="#15263D"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding BadgeText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="{x:Null}">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding BadgeText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Background"
                            Value="#1B314D"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TitleBarIconStyle"
               TargetType="Border">
            <Setter Property="Width"
                    Value="40"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="CornerRadius"
            Value="16"/>
            <Setter Property="Background"
                    Value="{StaticResource IconNormalBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#1F2A3A"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IconGlyph, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="{x:Null}">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IconGlyph, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource IconHoverBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="{Binding Background, ElementName=RootControl}"
            CornerRadius="{Binding CornerRadius, ElementName=RootControl}"
            SnapsToDevicePixels="True"
            UseLayoutRounding="True">
        <Border.Effect>
            <StaticResource ResourceKey="TitleBarShadowEffect"/>
        </Border.Effect>
    <Grid x:Name="LayoutRoot">
            <Border x:Name="ContentHost"
                    CornerRadius="{Binding CornerRadius, ElementName=RootControl}"
                    Padding="{Binding Padding, ElementName=RootControl}">
                <Grid>

                    <Grid x:Name="ContentGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="HeaderGrid"
                              Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="IconColumn"
                                                  Width="Auto"/>
                                <ColumnDefinition x:Name="TextColumn"
                                                  Width="*"/>
                                <ColumnDefinition x:Name="TrailingColumn"
                                                  Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="IconHost"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleBarIconStyle}"
                                    BorderBrush="{Binding AccentBrush, ElementName=RootControl}">
                                <TextBlock Text="{Binding IconGlyph, ElementName=RootControl}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#F1F5F9"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel x:Name="TextHost"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        VerticalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Margin"
                                            Value="16,0,0,0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IconGlyph, ElementName=RootControl}"
                                                         Value="{x:Null}">
                                                <Setter Property="Margin"
                                                        Value="0"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IconGlyph, ElementName=RootControl}"
                                                         Value="">
                                                <Setter Property="Margin"
                                                        Value="0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                <StackPanel x:Name="TitleRowPanel"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title, ElementName=RootControl}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TitleForegroundBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <Border x:Name="BadgeHost"
                                            Style="{StaticResource TitleBarBadgeStyle}"
                                            BorderBrush="{Binding AccentBrush, ElementName=RootControl}">
                                        <TextBlock Text="{Binding BadgeText, ElementName=RootControl}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#E2E8F0"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{Binding Subtitle, ElementName=RootControl}"
                                           Margin="0,4,0,0"
                                           FontSize="12"
                                           Foreground="{StaticResource SubtitleForegroundBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                            <Style.Triggers>
                                                <Trigger Property="Text"
                                                         Value="{x:Null}">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </Trigger>
                                                <Trigger Property="Text"
                                                         Value="">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <ContentPresenter x:Name="TrailingPresenter"
                                              Grid.Row="0"
                                              Grid.Column="2"
                                              Margin="20,0,0,0"
                                              VerticalAlignment="Center"
                                              Content="{Binding TrailingContent, ElementName=RootControl}">
                                <ContentPresenter.Style>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                        <Setter Property="HorizontalAlignment"
                                                Value="Right"/>
                                        <Style.Triggers>
                                            <Trigger Property="Content"
                                                     Value="{x:Null}">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentPresenter.Style>
                            </ContentPresenter>
                        </Grid>

                        <ContentPresenter Grid.Row="1"
                                          Margin="0,16,0,0"
                                          Content="{Binding BodyContent, ElementName=RootControl}">
                            <ContentPresenter.Style>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Visibility"
                                            Value="Visible"/>
                                    <Style.Triggers>
                                        <Trigger Property="Content"
                                                 Value="{x:Null}">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentPresenter.Style>
                        </ContentPresenter>
                    </Grid>
                </Grid>
            </Border>

            <Grid x:Name="HoverNeonLayer"
                  Panel.ZIndex="5"
                  Margin="3"
                  IsHitTestVisible="False"
                  Opacity="0">
                <Border CornerRadius="{Binding CornerRadius, ElementName=RootControl}"
                        BorderThickness="1.4"
                        Background="Transparent"
                        BorderBrush="{Binding AccentBrush, ElementName=RootControl, TargetNullValue=#60D6FF}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="18"
                                          ShadowDepth="0"
                                          Color="#5BE3FF"
                                          Opacity="0.45"/>
                    </Border.Effect>
                </Border>

                <Rectangle x:Name="NeonOrbit"
                           RadiusX="{Binding CornerRadius.TopLeft, ElementName=RootControl}"
                           RadiusY="{Binding CornerRadius.TopLeft, ElementName=RootControl}"
                           StrokeThickness="2"
                           Stroke="{StaticResource NeonStrokeBrush}"
                           StrokeDashArray="42 130"
                           StrokeDashCap="Round"
                           StrokeStartLineCap="Round"
                           StrokeEndLineCap="Round"
                           Fill="Transparent"
                           Margin="1">
                    <Rectangle.Effect>
                        <DropShadowEffect BlurRadius="12"
                                          ShadowDepth="0"
                                          Color="#6EF0FF"
                                          Opacity="0.7"/>
                    </Rectangle.Effect>
                </Rectangle>
            </Grid>
        </Grid>
    </Border>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="MouseEnter">
            <BeginStoryboard x:Name="NeonFadeInStoryboard">
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="HoverNeonLayer"
                                     Storyboard.TargetProperty="Opacity"
                                     To="1"
                                     Duration="0:0:0.22"/>
                </Storyboard>
            </BeginStoryboard>
            <BeginStoryboard x:Name="NeonOrbitStoryboard">
                <Storyboard RepeatBehavior="Forever">
                    <DoubleAnimation Storyboard.TargetName="NeonOrbit"
                                     Storyboard.TargetProperty="StrokeDashOffset"
                                     From="0"
                                     To="-240"
                                     Duration="0:0:2.8"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave">
            <StopStoryboard BeginStoryboardName="NeonOrbitStoryboard"/>
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="HoverNeonLayer"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0"
                                     Duration="0:0:0.25"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>
