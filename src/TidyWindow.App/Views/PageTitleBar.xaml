<UserControl x:Class="TidyWindow.App.Views.PageTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="RootControl"
             d:DesignHeight="200"
             d:DesignWidth="720"
             mc:Ignorable="d">
    <UserControl.Resources>
        <DropShadowEffect x:Key="TitleBarShadowEffect"
                          BlurRadius="14"
                          ShadowDepth="0"
                          Opacity="0.18"
                          Color="#050A12"/>
        <SolidColorBrush x:Key="TitleBarOverlayBrush"
                         Color="#18FFFFFF"/>
        <SolidColorBrush x:Key="IconNormalBrush"
                         Color="#111A28"/>
        <SolidColorBrush x:Key="IconHoverBrush"
                         Color="#1A2A40"/>
        <Style x:Key="TitleBarBadgeStyle"
               TargetType="Border">
            <Setter Property="CornerRadius"
            Value="10"/>
            <Setter Property="Padding"
                    Value="6,2"/>
            <Setter Property="Margin"
                    Value="12,0,0,0"/>
            <Setter Property="Background"
                    Value="#15263D"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding BadgeText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="{x:Null}">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding BadgeText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Background"
                            Value="#1B314D"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TitleBarIconStyle"
               TargetType="Border">
            <Setter Property="Width"
                    Value="40"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="CornerRadius"
            Value="16"/>
            <Setter Property="Background"
                    Value="{StaticResource IconNormalBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#1F2A3A"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IconGlyph, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="{x:Null}">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IconGlyph, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource IconHoverBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="{Binding Background, ElementName=RootControl}"
            CornerRadius="{Binding CornerRadius, ElementName=RootControl}"
            SnapsToDevicePixels="True"
            UseLayoutRounding="True">
        <Border.Effect>
            <StaticResource ResourceKey="TitleBarShadowEffect"/>
        </Border.Effect>
    <Grid x:Name="LayoutRoot">
            <Border x:Name="ContentHost"
                    CornerRadius="{Binding CornerRadius, ElementName=RootControl}"
                    Padding="{Binding Padding, ElementName=RootControl}">
                <Grid>

                    <Grid x:Name="ContentGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="HeaderGrid"
                              Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="IconColumn"
                                                  Width="Auto"/>
                                <ColumnDefinition x:Name="TextColumn"
                                                  Width="*"/>
                                <ColumnDefinition x:Name="TrailingColumn"
                                                  Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="IconHost"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleBarIconStyle}"
                                    BorderBrush="{Binding AccentBrush, ElementName=RootControl}">
                                <TextBlock Text="{Binding IconGlyph, ElementName=RootControl}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#F1F5F9"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel x:Name="TextHost"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        VerticalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Margin"
                                            Value="16,0,0,0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IconGlyph, ElementName=RootControl}"
                                                         Value="{x:Null}">
                                                <Setter Property="Margin"
                                                        Value="0"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IconGlyph, ElementName=RootControl}"
                                                         Value="">
                                                <Setter Property="Margin"
                                                        Value="0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                <StackPanel x:Name="TitleRowPanel"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title, ElementName=RootControl}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"
                                               TextTrimming="CharacterEllipsis"/>
                                    <Border x:Name="BadgeHost"
                                            Style="{StaticResource TitleBarBadgeStyle}"
                                            BorderBrush="{Binding AccentBrush, ElementName=RootControl}">
                                        <TextBlock Text="{Binding BadgeText, ElementName=RootControl}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#E2E8F0"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{Binding Subtitle, ElementName=RootControl}"
                                           Margin="0,4,0,0"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                            <Style.Triggers>
                                                <Trigger Property="Text"
                                                         Value="{x:Null}">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </Trigger>
                                                <Trigger Property="Text"
                                                         Value="">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <ContentPresenter x:Name="TrailingPresenter"
                                              Grid.Row="0"
                                              Grid.Column="2"
                                              Margin="20,0,0,0"
                                              VerticalAlignment="Center"
                                              Content="{Binding TrailingContent, ElementName=RootControl}">
                                <ContentPresenter.Style>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                        <Setter Property="HorizontalAlignment"
                                                Value="Right"/>
                                        <Style.Triggers>
                                            <Trigger Property="Content"
                                                     Value="{x:Null}">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentPresenter.Style>
                            </ContentPresenter>
                        </Grid>

                        <ContentPresenter Grid.Row="1"
                                          Margin="0,16,0,0"
                                          Content="{Binding BodyContent, ElementName=RootControl}">
                            <ContentPresenter.Style>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Visibility"
                                            Value="Visible"/>
                                    <Style.Triggers>
                                        <Trigger Property="Content"
                                                 Value="{x:Null}">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentPresenter.Style>
                        </ContentPresenter>
                    </Grid>
                </Grid>
            </Border>

            <Grid x:Name="HoverSparkleLayer"
                  Panel.ZIndex="5"
                  Margin="3"
                  IsHitTestVisible="False"
                  Opacity="0">

                <Border CornerRadius="{Binding CornerRadius, ElementName=RootControl}"
                        BorderThickness="1.6"
                        Background="Transparent"
                        BorderBrush="{Binding AccentBrush, ElementName=RootControl, TargetNullValue=#55C7F5}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="22"
                                          ShadowDepth="0"
                                          Color="#2C88D6"
                                          Opacity="0.35"/>
                    </Border.Effect>
                </Border>

                <Canvas x:Name="SparkleCanvas"
                        Margin="10"
                        ClipToBounds="True">
                    <Ellipse x:Name="SparkleOne"
                             Width="4"
                             Height="4"
                             Fill="#E0F2FF"
                             Opacity="0"
                             Canvas.Left="40"
                             Canvas.Top="-10">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="8"
                                              ShadowDepth="0"
                                              Color="#73E5FF"
                                              Opacity="0.45"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <Ellipse x:Name="SparkleTwo"
                             Width="5"
                             Height="5"
                             Fill="#CFFAFE"
                             Opacity="0"
                             Canvas.Left="120"
                             Canvas.Top="-12">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="8"
                                              ShadowDepth="0"
                                              Color="#60EFFF"
                                              Opacity="0.4"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <Ellipse x:Name="SparkleThree"
                             Width="3.5"
                             Height="3.5"
                             Fill="#FDE68A"
                             Opacity="0"
                             Canvas.Left="200"
                             Canvas.Top="-14">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="6"
                                              ShadowDepth="0"
                                              Color="#FBBF24"
                                              Opacity="0.35"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <Ellipse x:Name="SparkleFour"
                             Width="4.5"
                             Height="4.5"
                             Fill="#D9F99D"
                             Opacity="0"
                             Canvas.Left="260"
                             Canvas.Top="-12">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="7"
                                              ShadowDepth="0"
                                              Color="#84CC16"
                                              Opacity="0.35"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <Ellipse x:Name="SparkleFive"
                             Width="4"
                             Height="4"
                             Fill="#F5F3FF"
                             Opacity="0"
                             Canvas.Left="320"
                             Canvas.Top="-16">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="9"
                                              ShadowDepth="0"
                                              Color="#C4B5FD"
                                              Opacity="0.35"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Canvas>
            </Grid>
        </Grid>
    </Border>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="MouseEnter">
            <BeginStoryboard x:Name="SparkleFadeInStoryboard">
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="HoverSparkleLayer"
                                     Storyboard.TargetProperty="Opacity"
                                     To="1"
                                     Duration="0:0:0.25"/>
                </Storyboard>
            </BeginStoryboard>
            <BeginStoryboard x:Name="SparkleLoopStoryboard">
                <Storyboard RepeatBehavior="Forever">
                    <!-- Sparkle 1 -->
                    <DoubleAnimation Storyboard.TargetName="SparkleOne"
                                     Storyboard.TargetProperty="(Canvas.Top)"
                                     From="-10"
                                     To="60"
                                     Duration="0:0:2.2"/>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="SparkleOne"
                                                  Storyboard.TargetProperty="Opacity">
                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
                        <SplineDoubleKeyFrame Value="0.85" KeyTime="0:0:0.45"/>
                        <SplineDoubleKeyFrame Value="0" KeyTime="0:0:1.3"/>
                    </DoubleAnimationUsingKeyFrames>

                    <!-- Sparkle 2 -->
                    <DoubleAnimation Storyboard.TargetName="SparkleTwo"
                                     Storyboard.TargetProperty="(Canvas.Top)"
                                     From="-14"
                                     To="64"
                                     Duration="0:0:2.6"
                                     BeginTime="0:0:0.25"/>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="SparkleTwo"
                                                  Storyboard.TargetProperty="Opacity"
                                                  BeginTime="0:0:0.25">
                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
                        <SplineDoubleKeyFrame Value="0.9" KeyTime="0:0:0.3"/>
                        <SplineDoubleKeyFrame Value="0" KeyTime="0:0:1.1"/>
                    </DoubleAnimationUsingKeyFrames>

                    <!-- Sparkle 3 -->
                    <DoubleAnimation Storyboard.TargetName="SparkleThree"
                                     Storyboard.TargetProperty="(Canvas.Top)"
                                     From="-18"
                                     To="68"
                                     Duration="0:0:3"
                                     BeginTime="0:0:0.4"/>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="SparkleThree"
                                                  Storyboard.TargetProperty="Opacity"
                                                  BeginTime="0:0:0.4">
                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
                        <SplineDoubleKeyFrame Value="0.65" KeyTime="0:0:0.35"/>
                        <SplineDoubleKeyFrame Value="0" KeyTime="0:0:1.4"/>
                    </DoubleAnimationUsingKeyFrames>

                    <!-- Sparkle 4 -->
                    <DoubleAnimation Storyboard.TargetName="SparkleFour"
                                     Storyboard.TargetProperty="(Canvas.Top)"
                                     From="-12"
                                     To="62"
                                     Duration="0:0:2.4"
                                     BeginTime="0:0:0.65"/>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="SparkleFour"
                                                  Storyboard.TargetProperty="Opacity"
                                                  BeginTime="0:0:0.65">
                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
                        <SplineDoubleKeyFrame Value="0.8" KeyTime="0:0:0.4"/>
                        <SplineDoubleKeyFrame Value="0" KeyTime="0:0:1.2"/>
                    </DoubleAnimationUsingKeyFrames>

                    <!-- Sparkle 5 -->
                    <DoubleAnimation Storyboard.TargetName="SparkleFive"
                                     Storyboard.TargetProperty="(Canvas.Top)"
                                     From="-16"
                                     To="66"
                                     Duration="0:0:2.8"
                                     BeginTime="0:0:0.9"/>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="SparkleFive"
                                                  Storyboard.TargetProperty="Opacity"
                                                  BeginTime="0:0:0.9">
                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
                        <SplineDoubleKeyFrame Value="0.75" KeyTime="0:0:0.35"/>
                        <SplineDoubleKeyFrame Value="0" KeyTime="0:0:1.25"/>
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave">
            <StopStoryboard BeginStoryboardName="SparkleLoopStoryboard"/>
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="HoverSparkleLayer"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0"
                                     Duration="0:0:0.25"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>
