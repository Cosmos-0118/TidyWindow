<Page x:Class="TidyWindow.App.Views.EssentialsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:TidyWindow.App.Views"
      mc:Ignorable="d"
      Title="Essentials"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="EssentialsAccentButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#38BDF8"/>
            <Setter Property="Foreground"
                    Value="#04152B"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="14,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#1D9CEC"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#177FCC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#1C2F47"/>
                                <Setter Property="Foreground"
                                        Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EssentialsSecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#162132"/>
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="BorderBrush"
                    Value="#27374D"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#1C2F47"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#142236"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#0F172A"/>
                                <Setter Property="Foreground"
                                        Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EssentialsCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#0F172A"/>
            <Setter Property="BorderBrush"
                    Value="#1E293B"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="20"/>
        </Style>
    </Page.Resources>

    <ScrollViewer x:Name="ContentScrollViewer"
            Margin="32"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalContentAlignment="Stretch"
            CanContentScroll="False"
            PanningMode="VerticalOnly"
            SizeChanged="ContentScrollViewer_SizeChanged">
      <Grid x:Name="PageContentGrid"
          MinWidth="0"
          MaxWidth="1360"
          HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <controls:PageTitleBar Grid.Row="0"
                                   Title="Essentials automation"
                                   Subtitle="{Binding Headline}"
                                   IconGlyph="ðŸ› ï¸"
                                   BadgeText="Core automations"
                                   Margin="0,0,0,20">
                <controls:PageTitleBar.BodyContent>
                    <Border Margin="0,4,0,0"
                            Background="#10213A"
                            BorderBrush="#2563EB"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <UniformGrid Rows="1"
                                     Columns="3"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Center">
                            <Border Background="#15253E"
                                    BorderBrush="#24364F"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Margin="8"
                                    Padding="12"
                                    MinWidth="180"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Curated repair flows"
                                               FontSize="12"
                                               Foreground="#93C5FD"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Run high-impact scripts directly from this shelf."
                                               FontSize="11"
                                               Foreground="#CBD5F5"
                                               TextWrapping="Wrap"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#15253E"
                                    BorderBrush="#24364F"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Margin="8"
                                    Padding="12"
                                    MinWidth="180"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Queue timeline"
                                               FontSize="12"
                                               Foreground="#93C5FD"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Monitor every run and quickly retry anything that failed."
                                               FontSize="11"
                                               Foreground="#CBD5F5"
                                               TextWrapping="Wrap"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#15253E"
                                    BorderBrush="#24364F"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Margin="8"
                                    Padding="12"
                                    MinWidth="180"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Live terminal"
                                               FontSize="12"
                                               Foreground="#93C5FD"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Inspect verbose output without leaving the cockpit."
                                               FontSize="11"
                                               Foreground="#CBD5F5"
                                               TextWrapping="Wrap"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </Border>
                </controls:PageTitleBar.BodyContent>
            </controls:PageTitleBar>

        <Grid x:Name="MainLayoutGrid"
            Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="PrimaryColumnDefinition"
                                      Width="3*"
                                      MinWidth="360"/>
                    <ColumnDefinition x:Name="SecondaryColumnDefinition"
                                      Width="2*"
                                      MinWidth="320"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="PrimaryColumnHost"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,24,0">
                    <Border Style="{StaticResource EssentialsCardStyle}"
                            Padding="16"
                            Background="#122238"
                            BorderBrush="#1D3A5C">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="36"
                                    Height="36"
                                    CornerRadius="10"
                                    Background="#1E3A5F"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <TextBlock Text="âš¡"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1"
                                        Margin="12,0,0,0">
                                <TextBlock Text="Curated repair flows"
                                           Foreground="#E2E8F0"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Run high-impact scripts without hunting through the catalog."
                                           Foreground="#94A3B8"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <Border Grid.Column="2"
                                    Background="#143149"
                                    BorderBrush="#1E3F63"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10,6"
                                    Visibility="{Binding HasActiveOperations, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Runs in progress"
                                           FontSize="12"
                                           Foreground="#38BDF8"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource EssentialsCardStyle}"
                            Margin="0,20,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0"
                                        Margin="0,0,0,16">
                                <TextBlock Text="Maintenance essentials"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#E2E8F0"/>
                                <TextBlock Text="Queue trusted automations with one click"
                                           FontSize="12"
                                           Foreground="#64748B"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <ListBox x:Name="TasksListBox"
                                     Grid.Row="1"
                                     ItemsSource="{Binding Tasks}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#F8FAFC"
                                     MinHeight="220"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     VirtualizingPanel.IsVirtualizing="True"
                                     VirtualizingPanel.VirtualizationMode="Recycling"
                                     VirtualizingStackPanel.ScrollUnit="Pixel">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding"
                                                Value="0"/>
                                        <Setter Property="Margin"
                                                Value="0,6"/>
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Container"
                                                            Background="#101D30"
                                                            BorderBrush="#223857"
                                                            BorderThickness="1"
                                                            CornerRadius="10"
                                                            Padding="16">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="Background"
                                                                    Value="#132540"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="BorderBrush"
                                                                    Value="#38BDF8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel LastChildFill="True"
                                                   Margin="0">
                                            <StackPanel x:Name="TaskActionsPanel"
                                                        DockPanel.Dock="Right"
                                                        Margin="12,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Orientation="Vertical"
                                                        MinWidth="112">
                                                <Button Content="Run"
                                                        Command="{Binding DataContext.QueueTaskCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        CommandParameter="{Binding}"
                                                        MinWidth="96"
                                                        HorizontalAlignment="Stretch"
                                                        Style="{StaticResource EssentialsAccentButtonStyle}"/>
                                                <TextBlock Text="Queued"
                                                           Margin="0,8,0,0"
                                                           Foreground="#94A3B8"
                                                           FontSize="11"
                                                           TextAlignment="Center"
                                                           Visibility="{Binding IsQueued, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                            <StackPanel Margin="0,0,12,0">
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Title}"
                                                               FontSize="15"
                                                               FontWeight="SemiBold"/>
                                                    <Border Margin="10,0,0,0"
                                                            Padding="6,2"
                                                            Background="#1C2F47"
                                                            CornerRadius="6">
                                                        <TextBlock Text="{Binding Category}"
                                                                   FontSize="11"
                                                                   Foreground="#94A3B8"/>
                                                    </Border>
                                                    <Border Margin="10,0,0,0"
                                                            Padding="6,2"
                                                            Background="#16354D"
                                                            CornerRadius="6"
                                                            Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <TextBlock Text="Running"
                                                                   FontSize="11"
                                                                   Foreground="#38BDF8"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Summary}"
                                                           Margin="0,6,0,8"
                                                           Foreground="#94A3B8"
                                                           FontSize="12"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding DurationHint}"
                                                           Margin="0,0,0,8"
                                                           FontSize="11"
                                                           Foreground="#FBBF24">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DurationHint}"
                                                                             Value="{x:Null}">
                                                                    <Setter Property="Visibility"
                                                                            Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding DurationHint}"
                                                                             Value="">
                                                                    <Setter Property="Visibility"
                                                                            Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <Button Command="{Binding ToggleDetailsCommand}"
                                                        Margin="0,0,0,8"
                                                        HorizontalAlignment="Left">
                                                    <Button.Style>
                                                        <Style TargetType="Button"
                                                               BasedOn="{StaticResource EssentialsSecondaryButtonStyle}">
                                                            <Setter Property="Content"
                                                                    Value="Details"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DetailedDescription}"
                                                                             Value="{x:Null}">
                                                                    <Setter Property="Visibility"
                                                                            Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding DetailedDescription}"
                                                                             Value="">
                                                                    <Setter Property="Visibility"
                                                                            Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsDetailsVisible}"
                                                                             Value="True">
                                                                    <Setter Property="Content"
                                                                            Value="Hide details"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Border Margin="0,0,0,8"
                                                        Padding="12"
                                                        Background="#132540"
                                                        BorderBrush="#1D3A5C"
                                                        BorderThickness="1"
                                                        CornerRadius="6">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsDetailsVisible}"
                                                                             Value="True">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding DetailedDescription}"
                                                                             Value="{x:Null}">
                                                                    <Setter Property="Visibility"
                                                                            Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding DetailedDescription}"
                                                                             Value="">
                                                                    <Setter Property="Visibility"
                                                                            Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding DetailedDescription}"
                                                                   FontSize="12"
                                                                   Foreground="#E2E8F0"
                                                                   TextWrapping="Wrap"/>
                                                        <TextBlock Margin="0,8,0,0"
                                                                   FontSize="11"
                                                                   Foreground="#60A5FA">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding DocumentationLink}"
                                                                                     Value="{x:Null}">
                                                                            <Setter Property="Visibility"
                                                                                    Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding DocumentationLink}"
                                                                                     Value="">
                                                                            <Setter Property="Visibility"
                                                                                    Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                            <Hyperlink NavigateUri="{Binding DocumentationLink}"
                                                                       RequestNavigate="DocumentationLink_RequestNavigate"
                                                                       Foreground="#60A5FA">
                                                                <Run Text="View detailed guide"/>
                                                            </Hyperlink>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>
                                                <ItemsControl ItemsSource="{Binding Highlights}">
                                                    <ItemsControl.Template>
                                                        <ControlTemplate TargetType="ItemsControl">
                                                            <Border>
                                                                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                                                              VerticalScrollBarVisibility="Disabled"
                                                                              Focusable="False">
                                                                    <ItemsPresenter/>
                                                                </ScrollViewer>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </ItemsControl.Template>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=StackPanel}}"
                                                                       ItemHeight="Auto"
                                                                       ItemWidth="Auto"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Margin="0,0,8,6"
                                                                    Padding="6,2"
                                                                    Background="#162132"
                                                                    CornerRadius="4">
                                                                <TextBlock Text="{Binding}"
                                                                           FontSize="12"
                                                                           Foreground="#CBD5F5"
                                                                           TextWrapping="Wrap"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <StackPanel Margin="0,10,0,0"
                                                            Visibility="{Binding IsDefenderTask, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="Scan options"
                                                               FontSize="12"
                                                               Foreground="#94A3B8"
                                                               Margin="0,0,0,6"/>
                                                    <WrapPanel>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Run full scan"
                                                                  IsChecked="{Binding UseFullScan}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Skip signature update"
                                                                  IsChecked="{Binding SkipSignatureUpdate}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Skip real-time heal"
                                                                  IsChecked="{Binding SkipRealtimeHeal}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Skip service repair"
                                                                  IsChecked="{Binding SkipServiceHeal}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Skip threat scan"
                                                                  IsChecked="{Binding SkipThreatScan}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                    </WrapPanel>
                                                </StackPanel>
                                                <StackPanel Margin="0,10,0,0"
                                                            Visibility="{Binding IsSpoolerTask, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="Repair scope"
                                                               FontSize="12"
                                                               Foreground="#94A3B8"
                                                               Margin="0,0,0,6"/>
                                                    <WrapPanel>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Stop &amp; restart services"
                                                                  IsChecked="{Binding IncludeServiceReset}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Clear spool queue"
                                                                  IsChecked="{Binding IncludeQueuePurge}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Remove stale drivers"
                                                                  IsChecked="{Binding IncludeDriverCleanup}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Re-register DLLs"
                                                                  IsChecked="{Binding IncludeDllRegistration}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Content="Reset isolation policies"
                                                                  IsChecked="{Binding IncludeIsolationPolicyReset}"
                                                                  Foreground="#E2E8F0"
                                                                  Margin="0,0,12,6"/>
                                                    </WrapPanel>
                                                </StackPanel>
                                                <TextBlock Text="{Binding LastStatus}"
                                                           Margin="0,8,0,0"
                                                           FontSize="12"
                                                           Foreground="#22C55E">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LastStatus}"
                                                                             Value="{x:Null}">
                                                                    <Setter Property="Visibility"
                                                                            Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding LastStatus}"
                                                                             Value="">
                                                                    <Setter Property="Visibility"
                                                                            Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsActive}"
                                                                             Value="True">
                                                                    <Setter Property="Foreground"
                                                                            Value="#38BDF8"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DockPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </StackPanel>

        <StackPanel x:Name="SecondaryColumnHost"
                Grid.Row="0"
                Grid.Column="1">
                    <Border Style="{StaticResource EssentialsCardStyle}"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                <Grid x:Name="OperationsHeaderGrid"
                  Grid.Row="0"
                  Margin="0,0,0,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="OperationsHeaderPrimaryColumn"
                              Width="*"/>
                    <ColumnDefinition x:Name="OperationsHeaderSecondaryColumn"
                              Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="OperationsHeaderSummaryPanel"
                        Grid.Row="0"
                        Grid.Column="0">
                                    <TextBlock Text="Queue timeline"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#E2E8F0"/>
                                    <TextBlock Text="Monitor each run and retry from here"
                                               FontSize="12"
                                               Foreground="#64748B"/>
                                </StackPanel>

                <StackPanel x:Name="OperationsHeaderActionHost"
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="24,0,0,0">
                    <StackPanel x:Name="OperationsHeaderActionPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                    <Button x:Name="RetryFailedButton"
                        Content="Retry failed"
                        Command="{Binding RetryFailedCommand}"
                        Margin="0,0,8,0"
                        Style="{StaticResource EssentialsSecondaryButtonStyle}"/>
                    <Button x:Name="ClearCompletedButton"
                        Content="Clear completed"
                        Command="{Binding ClearCompletedCommand}"
                        Style="{StaticResource EssentialsSecondaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
                </Grid>

                            <ListView x:Name="OperationsListView"
                                      Grid.Row="1"
                                      ItemsSource="{Binding Operations}"
                                      SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="#F8FAFC"
                                      MaxHeight="380"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      VirtualizingStackPanel.ScrollUnit="Pixel">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch"/>
                                        <Setter Property="Padding"
                                                Value="12"/>
                                        <Setter Property="Margin"
                                                Value="0,4"/>
                                        <Setter Property="Background"
                                                Value="#101D30"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Border x:Name="Container"
                                                            CornerRadius="10"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="#223857"
                                                            BorderThickness="1"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="BorderBrush"
                                                                    Value="#7C3AED"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="Background"
                                                                    Value="#132540"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding TaskName}"
                                                               FontWeight="SemiBold"/>
                                                    <Border Margin="8,0,0,0"
                                                            Padding="6,2"
                                                            Background="#162132"
                                                            CornerRadius="6"
                                                            Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <TextBlock Text="Needs attention"
                                                                   FontSize="11"
                                                                   Foreground="#F87171"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding StatusLabel}"
                                                           Foreground="#38BDF8"
                                                           FontSize="12"
                                                           Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding Message}"
                                                           Foreground="#94A3B8"
                                                           FontSize="12"
                                                           TextWrapping="Wrap"
                                                           Margin="0,4,0,0"/>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,6,0,0">
                                                    <TextBlock Text="{Binding AttemptLabel}"
                                                               Foreground="#CBD5F5"
                                                               FontSize="11">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding AttemptLabel}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding AttemptLabel}"
                                                                                 Value="">
                                                                        <Setter Property="Visibility"
                                                                                Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding CompletedAt, StringFormat={}{0:G}}"
                                                               Foreground="#475569"
                                                               FontSize="11"
                                                               Margin="8,0,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}"
                                                                                 Value="">
                                                                        <Setter Property="Visibility"
                                                                                Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1"
                                                        VerticalAlignment="Center">
                                                <Button Content="Cancel"
                                                        Command="{Binding DataContext.CancelOperationCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        CommandParameter="{Binding}"
                                                        Width="96"
                                                        Style="{StaticResource EssentialsSecondaryButtonStyle}"
                                                        Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource EssentialsCardStyle}"
                            Margin="0,20,0,0"
                            Background="#0B1626">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0"
                                        Margin="0,0,0,12">
                                <TextBlock Text="Live terminal"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#E2E8F0"/>
                                <TextBlock Text="Output from the selected run"
                                           FontSize="12"
                                           Foreground="#64748B"/>
                            </StackPanel>

                            <Border Grid.Row="1"
                                    Background="#020817"
                                    CornerRadius="8"
                                    BorderBrush="#13233A"
                                    BorderThickness="1">
                                <Grid>
                                    <ScrollViewer x:Name="LiveTerminalScrollViewer"
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Auto">
                                        <ScrollViewer.Style>
                                            <Style TargetType="ScrollViewer"
                                                   BasedOn="{StaticResource App.ScrollViewerStyle}">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedOperation}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedOperation.DisplayLines.Count}"
                                                                 Value="0">
                                                        <Setter Property="Visibility"
                                                                Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ScrollViewer.Style>
                                        <ItemsControl ItemsSource="{Binding SelectedOperation.DisplayLines}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"
                                                               Margin="8,4"
                                                               FontFamily="Consolas"
                                                               FontSize="12"
                                                               Foreground="#E2E8F0"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#475569"
                                               FontSize="12"
                                               Text="No output yet. Select a run to inspect transcript.">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedOperation}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedOperation.DisplayLines.Count}"
                                                                 Value="0">
                                                        <Setter Property="Visibility"
                                                                Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
