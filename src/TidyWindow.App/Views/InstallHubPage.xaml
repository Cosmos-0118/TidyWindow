                                                                    <DataTrigger Binding="{Binding IsSyntheticAll}"
                                                                                 Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding PackageCountDisplay}"
                                                                   Foreground="#CBD5F5"
                                                                   FontSize="11"/>
                                                    </Border>
                                                    <Border>
                                                        <Border.Style>
                                                            <Style TargetType="Border"
                                                                   BasedOn="{StaticResource InstallBadgeStyle}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
