<Page x:Class="TidyWindow.App.Views.InstallHubPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:TidyWindow.App.Converters"
    xmlns:controls="clr-namespace:TidyWindow.App.Views"
      mc:Ignorable="d"
      Title="Install hub"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <CubicEase x:Key="InstallHubEaseIn" EasingMode="EaseInOut"/>
        <CubicEase x:Key="InstallHubEaseOut" EasingMode="EaseOut"/>

        <Style x:Key="InstallAccentButtonStyle"
               TargetType="Button">
            <Setter Property="Background" Value="#7C3AED"/>
            <Setter Property="Foreground" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#6D28D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#5B21B6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="#312E81"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InstallQueueDrawerToggleStyle"
               TargetType="ToggleButton">
            <Setter Property="Content" Value="Queue â–¸"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="ToolTipService.ToolTip" Value="Show install queue"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#312E81"/>
                                <Setter Property="Content" Value="Queue â—‚"/>
                                <Setter Property="ToolTipService.ToolTip" Value="Hide install queue"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#27304D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InstallSecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#243048"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1A2436"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="#111827"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InstallBadgeStyle"
               TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>

    <Style x:Key="InstallCardBorderStyle"
           TargetType="Border">
        <Setter Property="Background"
            Value="#111827"/>
        <Setter Property="BorderBrush"
            Value="#1E293B"/>
        <Setter Property="BorderThickness"
            Value="1"/>
        <Setter Property="CornerRadius"
            Value="16"/>
        <Setter Property="Padding"
            Value="24"/>
        <Setter Property="SnapsToDevicePixels"
            Value="True"/>
        <Setter Property="ClipToBounds"
            Value="True"/>
    </Style>

    <Style x:Key="InstallBundleCardItemStyle"
           TargetType="ListBoxItem">
        <Setter Property="Padding"
            Value="0"/>
        <Setter Property="Margin"
            Value="0,0,22,22"/>
        <Setter Property="HorizontalContentAlignment"
            Value="Stretch"/>
        <Setter Property="VerticalContentAlignment"
            Value="Stretch"/>
        <Setter Property="MinWidth"
            Value="200"/>
        <Setter Property="MaxWidth"
            Value="280"/>
        <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="ListBoxItem">
            <Border x:Name="Container"
                CornerRadius="14"
                Background="#101B33"
                BorderBrush="#1E293B"
                BorderThickness="1"
                Padding="18"
                Opacity="0"
                SnapsToDevicePixels="True">
                <Border.RenderTransform>
                <TranslateTransform Y="12"/>
                </Border.RenderTransform>
                <ContentPresenter/>
            </Border>
            <ControlTemplate.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.24"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.28"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    </Storyboard>
                </BeginStoryboard>
                </EventTrigger>
                <Trigger Property="IsSelected"
                     Value="True">
                <Setter TargetName="Container"
                    Property="Background"
                    Value="#1E3A8A"/>
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter TargetName="Container"
                    Property="Background"
                    Value="#162643"/>
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#1E3A8A"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                     Value="False">
                <Setter TargetName="Container"
                    Property="Opacity"
                    Value="0.55"/>
                </Trigger>
            </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="InstallPackageCardItemStyle"
           TargetType="ListViewItem">
        <Setter Property="Padding"
            Value="0"/>
        <Setter Property="Margin"
            Value="0,0,22,22"/>
        <Setter Property="HorizontalContentAlignment"
            Value="Stretch"/>
        <Setter Property="VerticalContentAlignment"
            Value="Stretch"/>
        <Setter Property="MinWidth"
            Value="220"/>
        <Setter Property="MaxWidth"
            Value="360"/>
        <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="ListViewItem">
            <Border x:Name="Container"
                CornerRadius="16"
                Background="#101B33"
                BorderBrush="#1E293B"
                BorderThickness="1"
                Padding="20"
                Opacity="0"
                SnapsToDevicePixels="True">
                <Border.RenderTransform>
                <TranslateTransform Y="18"/>
                </Border.RenderTransform>
                <ContentPresenter/>
            </Border>
            <ControlTemplate.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.26"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.3"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    </Storyboard>
                </BeginStoryboard>
                </EventTrigger>
                <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter TargetName="Container"
                    Property="Background"
                    Value="#162643"/>
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#1E3A8A"/>
                </Trigger>
                <Trigger Property="IsSelected"
                     Value="True">
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                     Value="False">
                <Setter TargetName="Container"
                    Property="Opacity"
                    Value="0.55"/>
                </Trigger>
            </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="InstallQueueItemStyle"
           TargetType="ListViewItem">
        <Setter Property="Padding"
            Value="0"/>
        <Setter Property="Margin"
            Value="0,0,0,12"/>
        <Setter Property="HorizontalContentAlignment"
            Value="Stretch"/>
        <Setter Property="VerticalContentAlignment"
            Value="Stretch"/>
        <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="ListViewItem">
            <Border x:Name="Container"
                CornerRadius="12"
                Background="#101B33"
                BorderBrush="#1E293B"
                BorderThickness="1"
                Padding="14"
                Opacity="0"
                SnapsToDevicePixels="True">
                <Border.RenderTransform>
                <TranslateTransform Y="12"/>
                </Border.RenderTransform>
                <ContentPresenter/>
            </Border>
            <ControlTemplate.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.24"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.26"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    </Storyboard>
                </BeginStoryboard>
                </EventTrigger>
                <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter TargetName="Container"
                    Property="Background"
                    Value="#162643"/>
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#1E3A8A"/>
                </Trigger>
            </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
        </Setter>
    </Style>

    <LinearGradientBrush x:Key="InstallHubOverlayBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#B30F172A" Offset="0"/>
        <GradientStop Color="#E61F2E48" Offset="1"/>
    </LinearGradientBrush>
    </Page.Resources>

    <Grid>
        <ScrollViewer x:Name="ContentScrollViewer"
                      Margin="32"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      HorizontalContentAlignment="Stretch"
                      CanContentScroll="False"
                      PanningMode="VerticalOnly">
            <Grid x:Name="PageContentGrid"
                  MinWidth="0"
                  MaxWidth="1360"
                  HorizontalAlignment="Center">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="IsHitTestVisible" Value="True"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0.35"
                                                             Duration="0:0:0.3"
                                                             EasingFunction="{StaticResource InstallHubEaseIn}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0:0:0.35"
                                                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <controls:PageTitleBar Grid.Column="0"
                                           Title="Smart install hub"
                                           Subtitle="Curate bundles, share presets, and queue installs"
                                           IconGlyph="ðŸ“¦"
                                           Margin="0,0,0,28"/>
                    <ToggleButton x:Name="QueueDrawerToggle"
                                  Grid.Column="1"
                                  Margin="16,0,0,28"
                                  VerticalAlignment="Bottom"
                                  Style="{StaticResource InstallQueueDrawerToggleStyle}"/>
                </Grid>

                <Grid x:Name="MainLayoutGrid"
                      Grid.Row="1">
                    <StackPanel x:Name="PrimaryColumnHost">
                        <Border Style="{StaticResource InstallCardBorderStyle}"
                                Margin="0,0,0,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="Preset bundles"
                                               Foreground="#E2E8F0"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Pick from crafted stacks or start from the full catalog"
                                               Foreground="#64748B"
                                               FontSize="12"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <Grid Grid.Row="1"
                                      Margin="0,16,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedBundle.Name}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedBundle}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Border Margin="12,0,0,0">
                                            <Border.DataContext>
                                                <Binding Path="SelectedBundle"/>
                                            </Border.DataContext>
                                            <Border.Style>
                                                <Style TargetType="Border"
                                                       BasedOn="{StaticResource InstallBadgeStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding BundlePackageCount, StringFormat={}{0} package(s)}"
                                                       Foreground="#CBD5F5"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text="Select a bundle to see curated stacks"
                                                   Foreground="#64748B"
                                                   FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedBundle}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            Content="Queue bundle"
                                            Command="{Binding QueueBundleCommand}"
                                            CommandParameter="{Binding SelectedBundle}"
                                            Style="{StaticResource InstallAccentButtonStyle}"
                                            MinWidth="128"/>
                                </Grid>

                                <!-- Increased right padding to prevent card clipping -->
                                <ListBox x:Name="BundlesList"
                                         Grid.Row="2"
                                         ItemsSource="{Binding Bundles}"
                                         SelectedItem="{Binding SelectedBundle, Mode=TwoWay}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                          Padding="12,8,12,18"
                                          Loaded="BundlesList_Loaded"
                                          SizeChanged="BundlesList_SizeChanged"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel IsItemsHost="True"
                                                       HorizontalAlignment="Left"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemContainerStyle>
                                        <StaticResource ResourceKey="InstallBundleCardItemStyle"/>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="#F8FAFC"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Description}"
                                                           Foreground="#94A3B8"
                                                           FontSize="12"
                                                           Margin="0,8,0,0"
                                                           TextWrapping="Wrap"/>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,12,0,0">
                                                    <Border>
                                                        <Border.Style>
                                                            <Style TargetType="Border"
                                                                   BasedOn="{StaticResource InstallBadgeStyle}">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSyntheticAll}"
                                                                                 Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding PackageCountDisplay}"
                                                                   Foreground="#CBD5F5"
                                                                   FontSize="11"/>
                                                    </Border>
                                                    <Border>
                                                        <Border.Style>
                                                            <Style TargetType="Border"
                                                                   BasedOn="{StaticResource InstallBadgeStyle}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSyntheticAll}"
                                                                                 Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding BundlePackageCount, StringFormat={}{0} packages}"
                                                                   Foreground="#CBD5F5"
                                                                   FontSize="11"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource InstallCardBorderStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="Install catalog"
                                               Foreground="#E2E8F0"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Filter packages, add them to your queue, or export curated presets"
                                               Foreground="#64748B"
                                               FontSize="12"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <WrapPanel Grid.Row="1"
                                           Margin="0,16,0,0"
                                           VerticalAlignment="Center">
                                    <TextBox MinWidth="220"
                                             MaxWidth="260"
                                             Margin="0,0,12,8"
                                             Style="{StaticResource App.TextBoxStyle}"
                                             ToolTip="Filter by package name, identifier, or tags"
                                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Content="Queue selected"
                                            Command="{Binding QueueSelectionCommand}"
                                            Margin="0,0,12,8"
                                            Style="{StaticResource InstallAccentButtonStyle}"/>
                                    <Button Content="Export selection"
                                            Command="{Binding ExportSelectionCommand}"
                                            Margin="0,0,12,8"
                                            Style="{StaticResource InstallSecondaryButtonStyle}"/>
                                    <Button Content="Import preset"
                                            Command="{Binding ImportPresetCommand}"
                                            Margin="0,0,0,8"
                                            Style="{StaticResource InstallSecondaryButtonStyle}"/>
                                </WrapPanel>

                                <Border Grid.Row="2"
                                        Margin="0,14,0,0"
                                        Background="#0F172A"
                                        BorderBrush="#1E293B"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="12"
                                        Visibility="{Binding HasActiveOperations, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âš™"
                                                   FontSize="14"
                                                   Margin="0,0,10,0"/>
                                        <StackPanel>
                                            <TextBlock Text="Installs in progress"
                                                       Foreground="#38BDF8"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="We highlight packages currently queued so you can avoid duplicates."
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       TextWrapping="Wrap"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Increased right padding to prevent card clipping -->
                                <ListView x:Name="PackagesList"
                                          Grid.Row="3"
                                          Margin="0,16,0,0"
                                          ItemsSource="{Binding Packages}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Padding="16,10,16,22"
                                          Foreground="#F8FAFC"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.CanContentScroll="True"
                                          VirtualizingPanel.IsVirtualizing="True"
                                          VirtualizingPanel.VirtualizationMode="Recycling"
                                          VirtualizingStackPanel.ScrollUnit="Pixel"
                                          Loaded="PackagesList_Loaded"
                                          SizeChanged="PackagesList_SizeChanged">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel IsItemsHost="True"
                                                       HorizontalAlignment="Left"/>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <ListView.ItemContainerStyle>
                                        <StaticResource ResourceKey="InstallPackageCardItemStyle"/>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                              VerticalAlignment="Center"
                                                              Margin="0,0,10,0"/>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Definition.Name}"
                                                                   FontSize="16"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#F8FAFC"
                                                                   TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding Definition.Id}"
                                                                   Foreground="#64748B"
                                                                   FontSize="11"
                                                                   Margin="0,4,0,0"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <WrapPanel Margin="0,12,0,0">
                                                    <Border Style="{StaticResource InstallBadgeStyle}">
                                                        <TextBlock Text="{Binding ManagerLabel}"
                                                                   Foreground="#38BDF8"
                                                                   FontSize="11"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>
                                                    <Border Style="{StaticResource InstallBadgeStyle}"
                                                            Background="#1F2937"
                                                            Visibility="{Binding RequiresAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <TextBlock Text="Admin"
                                                                   Foreground="#F97316"
                                                                   FontSize="11"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>
                                                    <Border Style="{StaticResource InstallBadgeStyle}"
                                                            Background="#1B2A44"
                                                            Visibility="{Binding IsQueued, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <TextBlock Text="Queued"
                                                                   Foreground="#22C55E"
                                                                   FontSize="11"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>
                                                </WrapPanel>

                                                <TextBlock Text="{Binding Summary}"
                                                           Foreground="#94A3B8"
                                                           FontSize="12"
                                                           TextWrapping="Wrap"
                                                           Margin="0,10,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Summary}" Value="">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Summary}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <TextBlock Text="{Binding TagDisplay}"
                                                           Foreground="#CBD5F5"
                                                           FontSize="11"
                                                           TextWrapping="Wrap"
                                                           Margin="0,8,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TagDisplay}" Value="">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TagDisplay}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <Grid Margin="0,16,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding LastStatus}"
                                                               Foreground="#94A3B8"
                                                               FontSize="11"
                                                               VerticalAlignment="Center"
                                                               TextWrapping="Wrap">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding LastStatus}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding LastStatus}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <Button Grid.Column="1"
                                                            Content="Queue"
                                                            Command="{Binding DataContext.QueuePackageCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            MinWidth="100"
                                                            Style="{StaticResource InstallAccentButtonStyle}"
                                                            IsEnabled="{Binding IsQueued, Converter={StaticResource InverseBooleanConverter}}"/>
                                                </Grid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <TextBlock Grid.Row="4"
                                           Text="No packages match your filters."
                                           Foreground="#64748B"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Margin="0,20,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Packages.Count}"
                                                             Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>

                <Border x:Name="QueueOverlay"
                        Grid.Row="1"
                        Panel.ZIndex="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Setter Property="Opacity" Value="0"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="48"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=QueueDrawerToggle}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Opacity" Value="1"/>
                                    <Setter Property="IsHitTestVisible" Value="True"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform X="0"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                Background="#66050F1F"
                                Cursor="Hand"
                                MouseLeftButtonDown="QueueOverlayBackdrop_MouseLeftButtonDown"/>
                        <Border Grid.Column="1"
                                Style="{StaticResource InstallCardBorderStyle}"
                                Width="520"
                                MinWidth="380"
                                MaxWidth="700"
                                Margin="24,0,0,0"
                                VerticalAlignment="Stretch">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="Install queue"
                                               Foreground="#E2E8F0"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Monitor pending installs, retry failures, or clear completed entries"
                                               Foreground="#64748B"
                                               FontSize="12"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <WrapPanel Grid.Row="1"
                                           Margin="0,16,0,0"
                                           HorizontalAlignment="Left">
                                    <Button Content="Retry failed"
                                            Command="{Binding RetryFailedCommand}"
                                            Style="{StaticResource InstallSecondaryButtonStyle}"/>
                                    <Button Content="Clear completed"
                                            Command="{Binding ClearCompletedCommand}"
                                            Margin="8,0,0,0"
                                            Style="{StaticResource InstallSecondaryButtonStyle}"/>
                                </WrapPanel>

                                <ListView x:Name="OperationsList"
                                          Grid.Row="2"
                                          Margin="0,18,0,0"
                                          ItemsSource="{Binding Operations}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Padding="6,6,6,10"
                                          Foreground="#F8FAFC"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.CanContentScroll="True"
                                          VirtualizingPanel.IsVirtualizing="True"
                                          VirtualizingPanel.VirtualizationMode="Recycling"
                                          VirtualizingStackPanel.ScrollUnit="Pixel">
                                    <ListView.ItemContainerStyle>
                                        <StaticResource ResourceKey="InstallQueueItemStyle"/>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding PackageName}"
                                                               FontWeight="SemiBold"
                                                               TextWrapping="Wrap"
                                                               MaxWidth="220"/>
                                                    <TextBlock Text="{Binding StatusLabel}"
                                                               Margin="10,0,0,0"
                                                               FontSize="12"
                                                               FontWeight="SemiBold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#38BDF8"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding StatusLabel}"
                                                                                 Value="Installed">
                                                                        <Setter Property="Foreground" Value="#22C55E"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding StatusLabel}"
                                                                                 Value="Failed">
                                                                        <Setter Property="Foreground" Value="#F87171"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding StatusLabel}"
                                                                                 Value="Cancelled">
                                                                        <Setter Property="Foreground" Value="#FBBF24"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>

                                                <TextBlock Text="{Binding Message}"
                                                           Foreground="#94A3B8"
                                                           FontSize="12"
                                                           TextWrapping="Wrap"
                                                           Margin="0,6,0,0"/>
                                                <TextBlock Text="{Binding Attempts}"
                                                           Foreground="#64748B"
                                                           FontSize="11"
                                                           Margin="0,4,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Attempts}" Value="">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Attempts}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,12,0,0"
                                                            HorizontalAlignment="Right">
                                                    <Button Content="Cancel"
                                                            Command="{Binding DataContext.CancelOperationCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource InstallSecondaryButtonStyle}"
                                                            IsEnabled="{Binding IsActive}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <TextBlock Grid.Row="3"
                                           Text="No installs queued yet. Queue a bundle or single package to get started."
                                           HorizontalAlignment="Center"
                                           Foreground="#64748B"
                                           Margin="0,16,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Operations.Count}"
                                                             Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <ContentControl x:Name="InstallHubLoadingOverlay"
                        Panel.ZIndex="5"
                        Focusable="False"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
            <ContentControl.Template>
                <ControlTemplate TargetType="ContentControl">
                    <Grid x:Name="OverlayRoot"
                          Background="Transparent"
                          Visibility="Collapsed"
                          Opacity="0"
                          IsHitTestVisible="False">
                        <Grid Background="{StaticResource InstallHubOverlayBrush}">
                            <Border HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Padding="28"
                                    CornerRadius="20"
                                    Background="#0F172A"
                                    BorderBrush="#1F2E46"
                                    BorderThickness="1.5">
                                <Border.Effect>
                                    <DropShadowEffect Color="#33000000"
                                                      BlurRadius="26"
                                                      ShadowDepth="0"
                                                      Opacity="0.85"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Width="100"
                                          Height="100"
                                          Margin="0,0,24,0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                        <Ellipse x:Name="LoadingPulse"
                                                 Width="100"
                                                 Height="100"
                                                 Stroke="#2238BDF8"
                                                 StrokeThickness="3"
                                                 Fill="#121E32"/>
                                        <Path x:Name="LoadingArc"
                                              Stroke="#38BDF8"
                                              StrokeThickness="5"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"
                                              Data="M50,10 A40,40 0 1 1 49,10"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RenderTransformOrigin="0.5,0.5">
                                            <Path.RenderTransform>
                                                <RotateTransform Angle="0"/>
                                            </Path.RenderTransform>
                                            <Path.OpacityMask>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#00FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#FFFFFFFF" Offset="0.5"/>
                                                    <GradientStop Color="#FFFFFFFF" Offset="0.85"/>
                                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Path.OpacityMask>
                                        </Path>
                                    </Grid>

                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Preparing install hub"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <TextBlock Text="Fetching catalog entries and queue status..."
                                                   FontSize="13"
                                                   Foreground="#94A3B8"
                                                   TextWrapping="Wrap"
                                                   Margin="0,6,0,0"/>
                                        <Border Height="6"
                                                CornerRadius="3"
                                                Background="#19263C"
                                                Margin="0,6,0,0">
                                            <Grid ClipToBounds="True">
                                                <Rectangle x:Name="LoadingBar"
                                                           Width="160"
                                                           Height="6"
                                                           Fill="#38BDF8">
                                                    <Rectangle.RenderTransform>
                                                        <TranslateTransform X="-160"/>
                                                    </Rectangle.RenderTransform>
                                                </Rectangle>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter TargetName="OverlayRoot" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="OverlayRoot" Property="IsHitTestVisible" Value="True"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="OverlayFadeInStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OverlayRoot"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.55"
                                                         EasingFunction="{StaticResource InstallHubEaseIn}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                                <BeginStoryboard x:Name="SpinnerStoryboard">
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingArc"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                         From="0"
                                                         To="360"
                                                         Duration="0:0:1.4"/>
                                        <DoubleAnimation Storyboard.TargetName="LoadingPulse"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0.1"
                                                         To="0.45"
                                                         AutoReverse="True"
                                                         Duration="0:0:1.2"/>
                                        <DoubleAnimation Storyboard.TargetName="LoadingBar"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                         From="-160"
                                                         To="160"
                                                         Duration="0:0:1.6"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="SpinnerStoryboard"/>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OverlayRoot"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.55"
                                                         EasingFunction="{StaticResource InstallHubEaseOut}"/>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverlayRoot"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.55"
                                                                    Value="{x:Static Visibility.Collapsed}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ContentControl.Template>
        </ContentControl>

    </Grid>
</Page>
