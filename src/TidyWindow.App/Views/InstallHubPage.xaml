<Page x:Class="TidyWindow.App.Views.InstallHubPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:TidyWindow.App.Converters"
    xmlns:controls="clr-namespace:TidyWindow.App.Views"
    xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
      mc:Ignorable="d"
      Title="Install hub"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <CubicEase x:Key="InstallHubEaseIn" EasingMode="EaseInOut"/>
        <CubicEase x:Key="InstallHubEaseOut" EasingMode="EaseOut"/>

        <Style x:Key="InstallAccentButtonStyle"
               TargetType="Button">
            <Setter Property="Background" Value="#7C3AED"/>
            <Setter Property="Foreground" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#6D28D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#5B21B6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="#312E81"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InstallQueueDrawerToggleStyle"
               TargetType="ToggleButton">
            <Setter Property="Content" Value="Queue â–¸"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="ToolTipService.ToolTip" Value="Show install queue"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#312E81"/>
                                <Setter Property="Content" Value="Queue â—‚"/>
                                <Setter Property="ToolTipService.ToolTip" Value="Hide install queue"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#27304D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InstallSecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#243048"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1A2436"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="#111827"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InstallBadgeStyle"
               TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>

    <Style x:Key="InstallCardBorderStyle"
           TargetType="Border">
        <Setter Property="Background"
            Value="#111827"/>
        <Setter Property="BorderBrush"
            Value="#1E293B"/>
        <Setter Property="BorderThickness"
            Value="1"/>
        <Setter Property="CornerRadius"
            Value="16"/>
        <Setter Property="Padding"
            Value="24"/>
        <Setter Property="SnapsToDevicePixels"
            Value="True"/>
        <Setter Property="ClipToBounds"
            Value="True"/>
    </Style>

    <Style x:Key="InstallBundleCardItemStyle"
           TargetType="ListBoxItem">
        <Setter Property="Padding"
            Value="0"/>
        <Setter Property="Margin"
            Value="0,0,22,22"/>
        <Setter Property="HorizontalContentAlignment"
            Value="Stretch"/>
        <Setter Property="VerticalContentAlignment"
            Value="Stretch"/>
        <Setter Property="MinWidth"
            Value="200"/>
        <Setter Property="MaxWidth"
            Value="280"/>
        <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="ListBoxItem">
            <Border x:Name="Container"
                CornerRadius="14"
                Background="#101B33"
                BorderBrush="#1E293B"
                BorderThickness="1"
                Padding="18"
                Opacity="0"
                SnapsToDevicePixels="True">
                <Border.RenderTransform>
                <TranslateTransform Y="12"/>
                </Border.RenderTransform>
                <ContentPresenter/>
            </Border>
            <ControlTemplate.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.24"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.28"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    </Storyboard>
                </BeginStoryboard>
                </EventTrigger>
                <Trigger Property="IsSelected"
                     Value="True">
                <Setter TargetName="Container"
                    Property="Background"
                    Value="#1E3A8A"/>
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter TargetName="Container"
                    Property="Background"
                    Value="#162643"/>
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#1E3A8A"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                     Value="False">
                <Setter TargetName="Container"
                    Property="Opacity"
                    Value="0.55"/>
                </Trigger>
            </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="InstallPackageCardItemStyle"
           TargetType="ListViewItem">
        <Setter Property="Padding"
            Value="0"/>
        <Setter Property="Margin"
            Value="0,0,22,22"/>
        <Setter Property="HorizontalContentAlignment"
            Value="Stretch"/>
        <Setter Property="VerticalContentAlignment"
            Value="Stretch"/>
        <Setter Property="MinWidth"
            Value="220"/>
        <Setter Property="MaxWidth"
            Value="360"/>
        <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="ListViewItem">
            <Border x:Name="Container"
                CornerRadius="16"
                Background="#101B33"
                BorderBrush="#1E293B"
                BorderThickness="1"
                Padding="20"
                Opacity="0"
                SnapsToDevicePixels="True">
                <Border.RenderTransform>
                <TranslateTransform Y="18"/>
                </Border.RenderTransform>
                <ContentPresenter/>
            </Border>
            <ControlTemplate.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.26"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.3"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    </Storyboard>
                </BeginStoryboard>
                </EventTrigger>
                <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter TargetName="Container"
                    Property="Background"
                    Value="#162643"/>
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#1E3A8A"/>
                </Trigger>
                <Trigger Property="IsSelected"
                     Value="True">
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                     Value="False">
                <Setter TargetName="Container"
                    Property="Opacity"
                    Value="0.55"/>
                </Trigger>
            </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="InstallQueueItemStyle"
           TargetType="ListViewItem">
        <Setter Property="Padding"
            Value="0"/>
        <Setter Property="Margin"
            Value="0,0,0,12"/>
        <Setter Property="HorizontalContentAlignment"
            Value="Stretch"/>
        <Setter Property="VerticalContentAlignment"
            Value="Stretch"/>
        <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="ListViewItem">
            <Border x:Name="Container"
                CornerRadius="12"
                Background="#101B33"
                BorderBrush="#1E293B"
                BorderThickness="1"
                Padding="14"
                Opacity="0"
                SnapsToDevicePixels="True">
                <Border.RenderTransform>
                <TranslateTransform Y="12"/>
                </Border.RenderTransform>
                <ContentPresenter/>
            </Border>
            <ControlTemplate.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.24"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    <DoubleAnimation Storyboard.TargetName="Container"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             To="0"
                             Duration="0:0:0.26"
                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                    </Storyboard>
                </BeginStoryboard>
                </EventTrigger>
                <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter TargetName="Container"
                    Property="Background"
                    Value="#162643"/>
                <Setter TargetName="Container"
                    Property="BorderBrush"
                    Value="#1E3A8A"/>
                </Trigger>
            </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
        </Setter>
    </Style>

    <LinearGradientBrush x:Key="InstallOverlayBackdropBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#B3121E33" Offset="0"/>
        <GradientStop Color="#E62F3D5E" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InstallOverlayPanelBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#101B33" Offset="0"/>
        <GradientStop Color="#0B1426" Offset="1"/>
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="InstallOverlayPulseBrush" GradientOrigin="0.5,0.4" Center="0.5,0.5" RadiusX="0.9" RadiusY="0.9">
        <GradientStop Color="#557C3AED" Offset="0"/>
        <GradientStop Color="#06152C" Offset="1"/>
    </RadialGradientBrush>

    <DropShadowEffect x:Key="InstallOverlayShadowEffect"
                      Color="#050A18"
                      BlurRadius="34"
                      ShadowDepth="0"
                      Opacity="0.72"/>

    <SolidColorBrush x:Key="InstallOverlayAccentBrush" Color="#7C3AED"/>
    <SolidColorBrush x:Key="InstallOverlaySecondaryAccentBrush" Color="#38BDF8"/>
    <SolidColorBrush x:Key="InstallOverlaySuccessBrush" Color="#22C55E"/>

    <CubicEase x:Key="InstallOverlayEaseIn" EasingMode="EaseInOut"/>
    <CubicEase x:Key="InstallOverlayEaseOut" EasingMode="EaseOut"/>

    <DataTemplate x:Key="InstallOperationDetailsTemplate"
                  DataType="{x:Type viewModels:InstallOperationItemViewModel}">
        <StackPanel>
            <TextBlock Text="{Binding PackageName}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#F8FAFC"
                       TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal"
                        Margin="0,8,0,0"
                        VerticalAlignment="Center">
                <Border Background="#1E293B"
                        CornerRadius="6"
                        Padding="8,3">
                    <TextBlock Text="{Binding StatusLabel}"
                               FontSize="12"
                               FontWeight="SemiBold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="#38BDF8"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusLabel}"
                                                 Value="Installed">
                                        <Setter Property="Foreground"
                                                Value="#22C55E"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusLabel}"
                                                 Value="Failed">
                                        <Setter Property="Foreground"
                                                Value="#F87171"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusLabel}"
                                                 Value="Cancelled">
                                        <Setter Property="Foreground"
                                                Value="#FBBF24"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <TextBlock Text="{Binding CompletedAt, StringFormat=Completed Â· {0:G}}"
                           Margin="12,0,0,0"
                           Foreground="#64748B"
                           FontSize="12"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}"
                                             Value="">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}"
                                             Value="{x:Null}">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="{Binding Attempts}"
                           Margin="12,0,0,0"
                           Foreground="#CBD5F5"
                           FontSize="11"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}"
                                             Value="">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}"
                                             Value="{x:Null}">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <TextBlock Text="{Binding Message}"
                       Foreground="#CBD5F5"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility"
                                Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}"
                                         Value="">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}"
                                         Value="{x:Null}">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Border Margin="0,14,0,0"
                    Background="#0F172A"
                    BorderBrush="#1E293B"
                    BorderThickness="1"
                    CornerRadius="10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Padding"
                                Value="14"/>
                        <Setter Property="Visibility"
                                Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasTranscript}"
                                         Value="True">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding HasOutput, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Output"
                                   FontSize="12"
                                   Foreground="#94A3B8"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <ItemsControl ItemsSource="{Binding OutputLines}"
                                  Margin="0,6,0,0"
                                  Visibility="{Binding HasOutput, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="#E2E8F0"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,6"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Separator Margin="0,8,0,8"
                               Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Errors"
                                   FontSize="12"
                                   Foreground="#F87171"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding ErrorLines}"
                                  Margin="0,6,0,0"
                                  Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="#FCA5A5"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,6"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </DataTemplate>
    </Page.Resources>

    <Grid>
        <ScrollViewer x:Name="ContentScrollViewer"
                      Margin="32"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      HorizontalContentAlignment="Stretch"
                      CanContentScroll="False"
                      PanningMode="VerticalOnly">
            <Grid x:Name="PageContentGrid"
                  MinWidth="0"
                  MaxWidth="1360"
                  HorizontalAlignment="Center">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="IsHitTestVisible" Value="True"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0.35"
                                                             Duration="0:0:0.3"
                                                             EasingFunction="{StaticResource InstallHubEaseIn}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0:0:0.35"
                                                             EasingFunction="{StaticResource InstallHubEaseOut}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <controls:PageTitleBar Grid.Column="0"
                                           Title="Smart install hub"
                                           Subtitle="Curate bundles, share presets, and queue installs"
                                           IconGlyph="ðŸ“¦"
                                           Margin="0,0,0,28"/>
                    <ToggleButton x:Name="QueueDrawerToggle"
                                  Grid.Column="1"
                                  Margin="16,0,0,28"
                                  VerticalAlignment="Bottom"
                                  Visibility="Collapsed"
                                  Style="{StaticResource InstallQueueDrawerToggleStyle}"/>
                </Grid>

                                <Grid x:Name="MainLayoutGrid"
                                            Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition x:Name="PrimaryColumnDefinition"
                                                                                    Width="3*"
                                                                                    MinWidth="360"/>
                                                <ColumnDefinition x:Name="SecondaryColumnDefinition"
                                                                                    Width="2*"
                                                                                    MinWidth="320"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel x:Name="PrimaryColumnHost"
                                                                Grid.Row="0"
                                                                Grid.Column="0"
                                                                Margin="0,0,24,0">
                        <Border Style="{StaticResource InstallCardBorderStyle}"
                                Margin="0,0,0,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="Preset bundles"
                                               Foreground="#E2E8F0"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Pick from crafted stacks or start from the full catalog"
                                               Foreground="#64748B"
                                               FontSize="12"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <Grid Grid.Row="1"
                                      Margin="0,16,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedBundle.Name}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedBundle}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Border Margin="12,0,0,0">
                                            <Border.DataContext>
                                                <Binding Path="SelectedBundle"/>
                                            </Border.DataContext>
                                            <Border.Style>
                                                <Style TargetType="Border"
                                                       BasedOn="{StaticResource InstallBadgeStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding BundlePackageCount, StringFormat={}{0} package(s)}"
                                                       Foreground="#CBD5F5"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text="Select a bundle to see curated stacks"
                                                   Foreground="#64748B"
                                                   FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedBundle}"
                                                                     Value="{x:Null}">
