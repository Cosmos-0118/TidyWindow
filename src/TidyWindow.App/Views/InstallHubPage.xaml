                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="Operation details"
                                               Foreground="#E2E8F0"
                                               FontSize="15"
                                               FontWeight="SemiBold"/>
