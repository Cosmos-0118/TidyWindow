<Page x:Class="TidyWindow.App.Views.DeepScanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:converters="clr-namespace:TidyWindow.App.Converters"
      mc:Ignorable="d"
      Title="Deep scan"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <ControlTemplate x:Key="ComboToggleButtonTemplate"
                         TargetType="ToggleButton">
            <Grid>
                <Border x:Name="ToggleBorder"
                        Background="#0F172A"
                        BorderBrush="#1E293B"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8,4"/>
                <Path Data="M 0 0 L 5 5 L 10 0"
                      Stroke="#38BDF8"
                      StrokeThickness="1.5"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#17233C"/>
                </Trigger>
                <Trigger Property="IsChecked"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#132039"/>
                    <Setter TargetName="ToggleBorder"
                            Property="BorderBrush"
                            Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#132039"/>
                    <Setter TargetName="ToggleBorder"
                            Property="BorderBrush"
                            Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="ToggleBorder"
                            Property="Opacity"
                            Value="0.5"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="PaginationButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="BorderBrush"
                    Value="#334155"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,4"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#0F172A"/>
                                <Setter TargetName="Root"
                                        Property="BorderBrush"
                                        Value="#1E293B"/>
                                <Setter Property="Foreground"
                                        Value="#475569"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#243048"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#1A2436"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    <LinearGradientBrush x:Key="DeepScanOverlayBackdropBrush"
                  StartPoint="0,0"
                  EndPoint="1,1">
        <GradientStop Color="#C51B2440"
               Offset="0"/>
        <GradientStop Color="#E6233552"
               Offset="0.5"/>
        <GradientStop Color="#90223335"
               Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DeepScanOverlayPanelBrush"
                              StartPoint="0,0"
                              EndPoint="1,1">
        <GradientStop Color="#132238"
               Offset="0"/>
        <GradientStop Color="#0B182C"
               Offset="1"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="DeepScanOverlayPulseBrush"
                              GradientOrigin="0.5,0.35"
                              Center="0.5,0.5"
                              RadiusX="0.95"
                              RadiusY="0.95">
        <GradientStop Color="#8838BDF8"
               Offset="0"/>
        <GradientStop Color="#08182C"
               Offset="1"/>
        </RadialGradientBrush>

    <RadialGradientBrush x:Key="DeepScanOverlayAuraBrush"
                  GradientOrigin="0.5,0.5"
                  Center="0.5,0.5"
                  RadiusX="1.1"
                  RadiusY="1.1">
        <GradientStop Color="#5538BDF8"
               Offset="0"/>
            <GradientStop Color="#2245D4FF"
               Offset="0.55"/>
        <GradientStop Color="#00000000"
               Offset="1"/>
    </RadialGradientBrush>

        <SolidColorBrush x:Key="DeepScanOverlayAccentBrush"
                         Color="#38BDF8"/>
        <SolidColorBrush x:Key="DeepScanOverlaySecondaryBrush"
                         Color="#34D399"/>
        <SolidColorBrush x:Key="DeepScanOverlayWarmBrush"
                         Color="#F97316"/>

        <DropShadowEffect x:Key="DeepScanOverlayShadowEffect"
                          Color="#000000"
                          BlurRadius="32"
                          ShadowDepth="0"
                          Opacity="0.7"/>

        <CubicEase x:Key="DeepScanOverlayEaseIn"
                   EasingMode="EaseInOut"/>
        <CubicEase x:Key="DeepScanOverlayEaseOut"
                   EasingMode="EaseOut"/>
    </Page.Resources>
    <Grid>
        <Grid x:Name="MainContentHost">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Opacity"
                            Value="1"/>
                    <Setter Property="IsHitTestVisible"
                            Value="True"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}"
                                     Value="True">
                            <Setter Property="IsHitTestVisible"
                                    Value="False"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0.35"
                                                         Duration="0:0:0.3"
                                                         EasingFunction="{StaticResource DeepScanOverlayEaseIn}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.3"
                                                         EasingFunction="{StaticResource DeepScanOverlayEaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <ScrollViewer x:Name="RootScrollViewer"
                          Margin="32"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          CanContentScroll="False"
                          PanningMode="VerticalOnly">
        <Grid MinWidth="720">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Border Width="48"
                        Height="48"
                        CornerRadius="12"
                        Background="#1E293B"
                        Margin="0,0,12,0">
                    <TextBlock Text="ðŸ”"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <StackPanel>
                    <TextBlock Text="Deep scan analyzer"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#F8FAFC"/>
                    <TextBlock Text="Highlight the heaviest files so you can reclaim space quickly"
                               FontSize="14"
                               Foreground="#94A3B8"/>
                </StackPanel>
            </StackPanel>

            <Border Grid.Row="1"
                    Margin="0,24,0,20"
                    Padding="16"
                    Background="#111827"
                    CornerRadius="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Summary}"
                                   FontSize="14"
                                   Foreground="#CBD5F5"/>
                        <TextBlock Text="{Binding LastScannedDisplay}"
                                   FontSize="12"
                                   Foreground="#64748B"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button Content="Run scan"
                                Command="{Binding RefreshCommand}"
                                Padding="16,8"
                                Background="#22C55E"
                                Foreground="#06111D"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ScanBorder"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsEnabled"
                                                 Value="False">
                                            <Setter TargetName="ScanBorder"
                                                    Property="Opacity"
                                                    Value="0.6"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="ScanBorder"
                                                    Property="Background"
                                                    Value="#16A34A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.IsEnabled>
                                <Binding Path="IsBusy"
                                         Converter="{StaticResource InverseBooleanConverter}"/>
                            </Button.IsEnabled>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="2"
                    Background="#111827"
                    CornerRadius="12"
                    Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Vertical"
                                Margin="0,0,0,16">
                        <WrapPanel>
                            <StackPanel MinWidth="280"
                                        Width="420"
                                        Margin="0,0,16,12">
                                <TextBlock Text="Target path"
                                           Foreground="#94A3B8"/>
                                <Grid Margin="0,4,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#0F172A"
                                             Foreground="#E2E8F0"
                                             BorderBrush="#1E293B"
                                             Padding="6"
                                             MinWidth="220"/>
                                    <Button Grid.Column="1"
                                            Content="Browse"
                                            Click="BrowseButton_OnClick"
                                            Margin="8,0,0,0"
                                            Padding="14,6"
                                            Background="#1E293B"
                                            Foreground="#E2E8F0"
                                            BorderBrush="#334155"
                                            Cursor="Hand"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel MinWidth="220"
                                        Width="280"
                                        Margin="0,0,0,12">
                                <TextBlock Text="Quick locations"
                                           Foreground="#94A3B8"/>
                                <ComboBox Margin="0,4,0,0"
                                          ItemsSource="{Binding PresetLocations}"
                                          SelectedItem="{Binding SelectedPreset, Mode=TwoWay}"
                                          Background="Transparent"
                                          Foreground="#E2E8F0"
                                          BorderThickness="0"
                                          Padding="0">
                                    <ComboBox.Template>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton x:Name="ToggleButton"
                                                              Template="{StaticResource ComboToggleButtonTemplate}"
                                                              Grid.ColumnSpan="2"
                                                              Focusable="False"
                                                              IsHitTestVisible="True"
                                                              ClickMode="Press"
                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                <ContentPresenter x:Name="ContentSite"
                                                                  Margin="14,4,36,4"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"
                                                                  RecognizesAccessKey="True"
                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                                                <Popup x:Name="PART_Popup"
                                                       Placement="Bottom"
                                                       AllowsTransparency="True"
                                                       Focusable="False"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       PopupAnimation="Slide">
                                                    <Border x:Name="PopupBorder"
                                                            Background="#0F172A"
                                                            BorderBrush="#1E293B"
                                                            BorderThickness="1"
                                                            CornerRadius="6"
                                                            Padding="4">
                                                        <ScrollViewer Margin="0"
                                                                      SnapsToDevicePixels="True">
                                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="HasItems"
                                                         Value="False">
                                                    <Setter TargetName="PopupBorder"
                                                            Property="MinHeight"
                                                            Value="24"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled"
                                                         Value="False">
                                                    <Setter Property="Foreground"
                                                            Value="#64748B"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ComboBox.Template>
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground"
                                                    Value="#E2E8F0"/>
                                            <Setter Property="Background"
                                                    Value="Transparent"/>
                                            <Setter Property="Padding"
                                                    Value="8,4"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#1B2942"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#1E3A8A"/>
                                                    <Setter Property="Foreground"
                                                            Value="#F8FAFC"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Label}"
                                                           Foreground="#E2E8F0"/>
                                                <TextBlock Text="{Binding Description}"
                                                           Foreground="#64748B"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock Margin="0,6,0,0"
                                           Text="{Binding SelectedPreset.Description, TargetNullValue=Select a preset to jump there}"
                                           Foreground="#64748B"
                                           TextWrapping="Wrap"
                                           ToolTip="{Binding SelectedPreset.Description}"/>
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel>
                            <StackPanel Width="180"
                                        MinWidth="150"
                                        Margin="0,0,16,12">
                                <TextBlock Text="Min size (MB)"
                                           Foreground="#94A3B8"/>
                                <TextBox Margin="0,4,0,0"
                                         Text="{Binding MinimumSizeMb, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#0F172A"
                                         Foreground="#E2E8F0"
                                         BorderBrush="#1E293B"
                                         Padding="6"/>
                            </StackPanel>

                            <StackPanel Width="180"
                                        MinWidth="150"
                                        Margin="0,0,16,12">
                                <TextBlock Text="Top results"
                                           Foreground="#94A3B8"/>
                                <TextBox Margin="0,4,0,0"
                                         Text="{Binding MaxItems, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#0F172A"
                                         Foreground="#E2E8F0"
                                         BorderBrush="#1E293B"
                                         Padding="6"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Options"
                                           Foreground="#94A3B8"/>
                                <CheckBox Margin="0,6,0,0"
                                          Content="Include hidden"
                                          IsChecked="{Binding IncludeHidden}"
                                          Foreground="#E2E8F0"/>
                                <CheckBox Margin="0,4,0,0"
                                          Content="Include folders"
                                          IsChecked="{Binding IncludeDirectories}"
                                          Foreground="#E2E8F0"/>
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel>
                            <StackPanel MinWidth="220"
                                        Width="280"
                                        Margin="0,0,16,12">
                                <TextBlock Text="Name filter"
                                           Foreground="#94A3B8"/>
                                <TextBox Margin="0,4,0,0"
                                         Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#0F172A"
                                         Foreground="#E2E8F0"
                                         BorderBrush="#1E293B"
                                         Padding="6"/>
                            </StackPanel>

                            <StackPanel MinWidth="200"
                                        Width="240"
                                        Margin="0,0,16,12">
                                <TextBlock Text="Match mode"
                                           Foreground="#94A3B8"/>
                                <ComboBox Margin="0,4,0,0"
                                          ItemsSource="{Binding NameMatchModes}"
                                          SelectedItem="{Binding SelectedMatchMode}"
                                          Background="Transparent"
                                          Foreground="#E2E8F0"
                                          BorderThickness="0"
                                          Padding="0">
                                    <ComboBox.Template>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton x:Name="ToggleButton"
                                                              Template="{StaticResource ComboToggleButtonTemplate}"
                                                              Grid.ColumnSpan="2"
                                                              Focusable="False"
                                                              IsHitTestVisible="True"
                                                              ClickMode="Press"
                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                <ContentPresenter x:Name="ContentSite"
                                                                  Margin="14,4,36,4"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"
                                                                  RecognizesAccessKey="True"
                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                                                <Popup x:Name="PART_Popup"
                                                       Placement="Bottom"
                                                       AllowsTransparency="True"
                                                       Focusable="False"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       PopupAnimation="Slide">
                                                    <Border x:Name="PopupBorder"
                                                            Background="#0F172A"
                                                            BorderBrush="#1E293B"
                                                            BorderThickness="1"
                                                            CornerRadius="6"
                                                            Padding="4">
                                                        <ScrollViewer Margin="0"
                                                                      SnapsToDevicePixels="True">
                                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="HasItems"
                                                         Value="False">
                                                    <Setter TargetName="PopupBorder"
                                                            Property="MinHeight"
                                                            Value="24"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled"
                                                         Value="False">
                                                    <Setter Property="Foreground"
                                                            Value="#64748B"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ComboBox.Template>
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground"
                                                    Value="#E2E8F0"/>
                                            <Setter Property="Background"
                                                    Value="Transparent"/>
                                            <Setter Property="Padding"
                                                    Value="8,4"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#1B2942"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#1E3A8A"/>
                                                    <Setter Property="Foreground"
                                                            Value="#F8FAFC"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Case matching"
                                           Foreground="#94A3B8"/>
                                <CheckBox Margin="0,6,0,0"
                                          Content="Case sensitive"
                                          IsChecked="{Binding IsCaseSensitiveMatch}"
                                          Foreground="#E2E8F0"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

               <DockPanel Grid.Row="0"
                    Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal"
                         VerticalAlignment="Center"
                         DockPanel.Dock="Left">
                    <TextBlock Text="{Binding TotalFindings, StringFormat={}{0:N0} items}"
                         FontSize="12"
                         Foreground="#CBD5F5"/>
                    <TextBlock Text="â€¢"
                         Margin="8,0"
                         FontSize="12"
                         Foreground="#64748B"/>
                    <TextBlock Text="{Binding PageDisplay}"
                         FontSize="12"
                         Foreground="#64748B"/>
                    <TextBlock Text="{Binding PageSize, StringFormat={}{0} per page}"
                         FontSize="12"
                         Foreground="#64748B"
                         Margin="8,0,0,0"/>
                </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        DockPanel.Dock="Right">
                                <Button Content="âŸ¨ Prev"
                                        Command="{Binding PreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}"
                                        Margin="0,0,8,0"
                                        Style="{StaticResource PaginationButtonStyle}"/>
                                <Button Content="Next âŸ©"
                                        Command="{Binding NextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}"
                                        Style="{StaticResource PaginationButtonStyle}"/>
                            </StackPanel>
                        </DockPanel>

                        <ListView x:Name="FindingsListView"
                                  Grid.Row="1"
                                  ItemsSource="{Binding VisibleFindings}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Foreground="#F8FAFC"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.CanContentScroll="True"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  VirtualizingStackPanel.ScrollUnit="Pixel"
                                  Loaded="FindingsListView_Loaded"
                                  SizeChanged="FindingsListView_SizeChanged">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch"/>
                                    <Setter Property="Padding"
                                            Value="8"/>
                                    <Setter Property="Background"
                                            Value="#111C33"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="Row"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <GridViewRowPresenter Margin="0"
                                                                          Content="{TemplateBinding Content}"
                                                                          Columns="{Binding Path=View.Columns, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver"
                                                             Value="True">
                                                        <Setter TargetName="Row"
                                                                Property="Background"
                                                                Value="#1B2942"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView x:Name="FindingsGridView"
                                          AllowsColumnReorder="False">
                                    <GridView.ColumnHeaderContainerStyle>
                                        <Style TargetType="GridViewColumnHeader">
                                            <Setter Property="Foreground"
                                                    Value="#94A3B8"/>
                                            <Setter Property="FontSize"
                                                    Value="12"/>
                                            <Setter Property="FontWeight"
                                                    Value="SemiBold"/>
                                            <Setter Property="HorizontalContentAlignment"
                                                    Value="Left"/>
                                            <Setter Property="Padding"
                                                    Value="6,4"/>
                                            <Setter Property="Background"
                                                    Value="Transparent"/>
                                        </Style>
                                    </GridView.ColumnHeaderContainerStyle>
                                    <GridViewColumn x:Name="ItemColumn"
                                                    Width="320">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Item"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="SemiBold"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding Name}"/>
                                                    <TextBlock Text="{Binding Directory}"
                                                               Foreground="#94A3B8"
                                                               FontSize="11"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding Path}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="TypeColumn"
                                                    Width="100"
                                                    DisplayMemberBinding="{Binding KindDisplay}">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Type"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="CategoryColumn"
                                                    Width="140"
                                                    DisplayMemberBinding="{Binding Category}">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Category"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="SizeColumn"
                                                    Width="140">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Size"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SizeDisplay}"
                                                           TextAlignment="Right"
                                                           HorizontalAlignment="Stretch"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="ModifiedColumn"
                                                    Width="180">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Last modified"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ModifiedDisplay}"
                                                           TextAlignment="Right"
                                                           HorizontalAlignment="Stretch"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="PathColumn"
                                                    Width="260">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Path"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path}"
                                                           Foreground="#94A3B8"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding Path}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="ActionsColumn"
                                                    Width="260">
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Actions"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left">
                                                    <Button Content="Open location"
                                                            Command="{Binding DataContext.OpenContainingFolderCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="8,4"
                                MinWidth="110"
                                                            Background="#1E293B"
                                                            Foreground="#38BDF8"
                                                            BorderBrush="#0F172A"
                                                            Cursor="Hand"/>
                                                    <Button Content="Delete"
                                Click="DeleteButton_OnClick"
                                                            Padding="8,4"
                                MinWidth="72"
                                                            Margin="8,0,0,0"
                                                            Background="#1E293B"
                                                            Foreground="#F87171"
                                                            BorderBrush="#0F172A"
                                                            Cursor="Hand"
                                                            ToolTip="Deleting an item is permanent. Review it carefully before proceeding."/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>

                            <ListView.IsEnabled>
                                <Binding Path="IsBusy"
                                         Converter="{StaticResource InverseBooleanConverter}"/>
                            </ListView.IsEnabled>
                        </ListView>

                        <TextBlock Grid.Row="1"
                                   Text="No findings yet. Adjust the filters and run a scan."
                                   Foreground="#64748B"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasResults}"
                                                     Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsBusy}"
                                                     Value="True">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
            </ScrollViewer>
        </Grid>

    <ContentControl x:Name="DeepScanOverlay"
                    Panel.ZIndex="20"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Focusable="False"
                    IsEnabled="{Binding IsBusy}">
        <ContentControl.Template>
            <ControlTemplate TargetType="ContentControl">
                <Grid x:Name="DeepScanOverlayRoot"
                      Background="Transparent"
                      Opacity="0"
                      Visibility="Collapsed"
                      IsHitTestVisible="False"
                      DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}">
                    <Grid Background="{StaticResource DeepScanOverlayBackdropBrush}">
                        <Border HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="36,32"
                                CornerRadius="28"
                                Background="{StaticResource DeepScanOverlayPanelBrush}"
                                BorderBrush="#1C2E45"
                                BorderThickness="1.5"
                                Effect="{StaticResource DeepScanOverlayShadowEffect}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="240"/>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center">
                                    <Grid Width="220"
                                          Height="220">
                                        <Ellipse Fill="#0B1828"
                                                 Stroke="#1A2B41"
                                                 StrokeThickness="1.5"/>
                                        <Ellipse x:Name="ScannerAuraEllipse"
                                                 Width="220"
                                                 Height="220"
                                                 Fill="{StaticResource DeepScanOverlayAuraBrush}"
                                                 Opacity="0.32"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <ScaleTransform x:Name="ScannerAuraScale"
                                                                ScaleX="1"
                                                                ScaleY="1"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Ellipse Width="164"
                                                 Height="164"
                                                 Stroke="{StaticResource DeepScanOverlayAccentBrush}"
                                                 StrokeThickness="2"
                                                 StrokeDashArray="12 8"
                                                 Opacity="0.8"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="ScannerRingRotate"
                                                                 Angle="0"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Ellipse Width="132"
                                                 Height="132"
                                                 Fill="#132036"
                                                 Opacity="0.7"/>
                                        <Ellipse Width="92"
                                                 Height="92"
                                                 Fill="{StaticResource DeepScanOverlayPulseBrush}"
                                                 Opacity="0.55"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <ScaleTransform x:Name="ScannerPulseScale"
                                                                ScaleX="1"
                                                                ScaleY="1"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Ellipse Width="52"
                                                 Height="52"
                                                 StrokeThickness="2"
                                                 Stroke="{StaticResource DeepScanOverlaySecondaryBrush}"
                                                 StrokeDashArray="6 6"
                                                 Opacity="0.7"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="ScannerInnerOrbitRotate"
                                                                 Angle="0"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Grid Width="200"
                                              Height="200"
                                              RenderTransformOrigin="0.5,0.5">
                                            <Grid.RenderTransform>
                                                <RotateTransform x:Name="ScannerOrbitsRotate"
                                                                 Angle="0"/>
                                            </Grid.RenderTransform>
                                            <Border Width="16"
                                                    Height="16"
                                                    CornerRadius="8"
                                                    Background="{StaticResource DeepScanOverlayAccentBrush}"
                                                    BorderBrush="#0D2538"
                                                    BorderThickness="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    Margin="0,-6,0,0"/>
                                            <Border Width="18"
                                                    Height="18"
                                                    CornerRadius="9"
                                                    Background="{StaticResource DeepScanOverlaySecondaryBrush}"
                                                    BorderBrush="#0F2A1F"
                                                    BorderThickness="1"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,-8,0"/>
                                            <Border Width="12"
                                                    Height="12"
                                                    CornerRadius="6"
                                                    Background="{StaticResource DeepScanOverlayWarmBrush}"
                                                    BorderBrush="#2A1808"
                                                    BorderThickness="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    Margin="0,0,0,-10"/>
                                        </Grid>
                                    </Grid>
                                </Grid>

                                <Rectangle Grid.Column="1"
                                           Width="1"
                                           Fill="#1F324B"
                                           Opacity="0.45"/>

                                <StackPanel Grid.Column="2"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Deep scan in progress"
                                               FontSize="22"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"/>
                                    <TextBlock Text="We are combing through the target path to surface the largest items."
                                               FontSize="13"
                                               Foreground="#94A3B8"
                                               Margin="0,6,0,0"
                                               TextWrapping="Wrap"/>
                                    <Border Margin="0,18,0,0"
                                            Background="#122034"
                                            CornerRadius="10"
                                            Padding="14,10">
                                        <StackPanel>
                                            <TextBlock Text="Live summary"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="#38BDF8"/>
                                            <TextBlock Text="{Binding Summary}"
                                                       FontSize="12"
                                                       Foreground="#CBD5F5"
                                                       Margin="0,4,0,0"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <StackPanel Margin="0,18,0,0">
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,4,0,0"
                                                    VerticalAlignment="Center">
                                            <Ellipse Width="6"
                                                     Height="6"
                                                     Fill="{StaticResource DeepScanOverlayAccentBrush}"/>
                                            <TextBlock Text="Gathering size information for each candidate"
                                                       Margin="10,0,0,0"
                                                       Foreground="#CBD5F5"
                                                       FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,4,0,0"
                                                    VerticalAlignment="Center">
                                            <Ellipse Width="6"
                                                     Height="6"
                                                     Fill="{StaticResource DeepScanOverlaySecondaryBrush}"/>
                                            <TextBlock Text="Filtering based on your minimum size and options"
                                                       Margin="10,0,0,0"
                                                       Foreground="#CBD5F5"
                                                       FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,4,0,0"
                                                    VerticalAlignment="Center">
                                            <Ellipse Width="6"
                                                     Height="6"
                                                     Fill="{StaticResource DeepScanOverlayWarmBrush}"/>
                                            <TextBlock Text="Ranking items to showcase the heaviest findings first"
                                                       Margin="10,0,0,0"
                                                       Foreground="#CBD5F5"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Margin="0,18,0,0">
                                        <TextBlock Text="{Binding TargetPath, StringFormat=Location: {0}}"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding MinimumSizeMb, StringFormat=Minimum size: {0} MB}"
                                                   Foreground="#64748B"
                                                   FontSize="11"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Text="{Binding MaxItems, StringFormat=Top results limit: {0}}"
                                                   Foreground="#64748B"
                                                   FontSize="11"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <Border Height="6"
                                            CornerRadius="3"
                                            Background="#172840"
                                            Margin="0,22,0,0">
                                        <Grid ClipToBounds="True">
                                            <Rectangle Width="180"
                                                       Height="6"
                                                       Fill="{StaticResource DeepScanOverlayAccentBrush}"
                                                       Opacity="0.7"
                                                       RenderTransformOrigin="0.5,0.5">
                                                <Rectangle.RenderTransform>
                                                    <TranslateTransform x:Name="ScannerSweepTranslate"
                                                                        X="-220"/>
                                                </Rectangle.RenderTransform>
                                            </Rectangle>
                                        </Grid>
                                    </Border>

                                    <TextBlock Text="You can keep an eye here; results refresh as soon as the scan completes."
                                               FontSize="12"
                                               Foreground="#64748B"
                                               Margin="0,14,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsEnabled" Value="True">
                        <Setter Property="IsHitTestVisible" Value="True"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="IsHitTestVisible" Value="True"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="Visibility" Value="Visible"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="Opacity" Value="1"/>
                        <Trigger.EnterActions>
                            <BeginStoryboard x:Name="DeepScanOverlayFadeInStoryboard">
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="DeepScanOverlayRoot"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="1"
                                                     Duration="0:0:0.35"
                                                     EasingFunction="{StaticResource DeepScanOverlayEaseIn}"/>
                                </Storyboard>
                            </BeginStoryboard>
                            <BeginStoryboard x:Name="DeepScanOverlayMotionStoryboard">
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="ScannerRingRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0"
                                                     To="360"
                                                     Duration="0:0:5.5"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerOrbitsRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0"
                                                     To="360"
                                                     Duration="0:0:3.2"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerPulseScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     From="1"
                                                     To="1.2"
                                                     Duration="0:0:1.5"
                                                     AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerPulseScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="1"
                                                     To="1.2"
                                                     Duration="0:0:1.5"
                                                     AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerAuraScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     From="1"
                                                     To="1.08"
                                                     Duration="0:0:2.4"
                                                     AutoReverse="True"
                                                     EasingFunction="{StaticResource DeepScanOverlayEaseIn}"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerAuraScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="1"
                                                     To="1.08"
                                                     Duration="0:0:2.4"
                                                     AutoReverse="True"
                                                     EasingFunction="{StaticResource DeepScanOverlayEaseIn}"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerAuraEllipse"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0.2"
                                                     To="0.45"
                                                     Duration="0:0:3"
                                                     AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerInnerOrbitRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0"
                                                     To="-360"
                                                     Duration="0:0:4.2"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerSweepTranslate"
                                                     Storyboard.TargetProperty="X"
                                                     From="-220"
                                                     To="220"
                                                     Duration="0:0:2"
                                                     AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="IsHitTestVisible" Value="False"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="IsHitTestVisible" Value="False"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="Opacity" Value="0"/>
                        <Trigger.EnterActions>
                            <StopStoryboard BeginStoryboardName="DeepScanOverlayMotionStoryboard"/>
                            <BeginStoryboard>
                                <Storyboard FillBehavior="Stop">
                                    <DoubleAnimation Storyboard.TargetName="DeepScanOverlayRoot"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0"
                                                     Duration="0:0:0.3"
                                                     EasingFunction="{StaticResource DeepScanOverlayEaseOut}"/>
                                </Storyboard>
                            </BeginStoryboard>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DeepScanOverlayRoot"
                                                                   Storyboard.TargetProperty="Visibility">
                                        <DiscreteObjectKeyFrame KeyTime="0:0:0.3"
                                                                Value="{x:Static Visibility.Collapsed}"/>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </ContentControl.Template>
    </ContentControl>
    </Grid>
</Page>
