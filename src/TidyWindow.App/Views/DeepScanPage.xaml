<Page x:Class="TidyWindow.App.Views.DeepScanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:TidyWindow.App.Converters"
        xmlns:controls="clr-namespace:TidyWindow.App.Views"
        xmlns:ux="clr-namespace:TidyWindow.App.Controls"
            mc:Ignorable="d"
            Title="Deep scan"
            Background="Transparent"
            FontFamily="Segoe UI Variable Text"
            TextOptions.TextFormattingMode="Display"
            TextOptions.TextRenderingMode="ClearType"
            TextOptions.TextHintingMode="Fixed"
            RenderOptions.ClearTypeHint="Enabled"
            UseLayoutRounding="True"
            SnapsToDevicePixels="True">
        <Page.InputBindings>
                <KeyBinding Key="Enter"
                                        Command="{Binding RefreshCommand}"/>
        </Page.InputBindings>
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <SolidColorBrush x:Key="DeepScanSurfaceBrush"
                         Color="#060F1F"/>
        <SolidColorBrush x:Key="DeepScanPanelBrush"
                         Color="#0B162A"/>
        <LinearGradientBrush x:Key="DeepScanCardBackgroundBrush"
                              StartPoint="0,0"
                              EndPoint="1,1">
            <GradientStop Color="#111F3A"
                          Offset="0"/>
            <GradientStop Color="#0B1628"
                          Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DeepScanCardBorderBrush"
                              StartPoint="0,0"
                              EndPoint="1,1">
            <GradientStop Color="#1D3B67"
                          Offset="0"/>
            <GradientStop Color="#123050"
                          Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DeepScanActionButtonBrush"
                              StartPoint="0,0"
                              EndPoint="1,1">
            <GradientStop Color="#5DF2BC"
                          Offset="0"/>
            <GradientStop Color="#2ED4FF"
                          Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DeepScanActionButtonHoverBrush"
                              StartPoint="0,0"
                              EndPoint="1,1">
            <GradientStop Color="#58E396"
                          Offset="0"/>
            <GradientStop Color="#1BB4FF"
                          Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DeepScanSecondaryActionBrush"
                      StartPoint="0,0"
                      EndPoint="1,1">
            <GradientStop Color="#38BDF8"
                  Offset="0"/>
            <GradientStop Color="#0EA5E9"
                  Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DeepScanSecondaryActionHoverBrush"
                      StartPoint="0,0"
                      EndPoint="1,1">
            <GradientStop Color="#5DD8FF"
                  Offset="0"/>
            <GradientStop Color="#1CC8FF"
                  Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DeepScanDangerActionBrush"
                      StartPoint="0,0"
                      EndPoint="1,1">
            <GradientStop Color="#F87171"
                  Offset="0"/>
            <GradientStop Color="#FB7185"
                  Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DeepScanDangerActionHoverBrush"
                      StartPoint="0,0"
                      EndPoint="1,1">
            <GradientStop Color="#FDA4AF"
                  Offset="0"/>
            <GradientStop Color="#FB7185"
                  Offset="1"/>
        </LinearGradientBrush>
          <DropShadowEffect x:Key="DeepScanDangerShadowEffect"
                      Color="#FF1F1F"
                      BlurRadius="24"
                      ShadowDepth="0"
                      Opacity="0.85"/>
        <DropShadowEffect x:Key="DeepScanSoftShadowEffect"
                          Color="#01060C"
                          BlurRadius="24"
                          ShadowDepth="0"
                          Opacity="0.65"/>
        <DropShadowEffect x:Key="DeepScanGlowShadowEffect"
                          Color="#1BB2FF"
                          BlurRadius="18"
                          ShadowDepth="0"
                          Opacity="0.55"/>
        <LinearGradientBrush x:Key="DeepScanChipAccentBrush"
                              StartPoint="0,0"
                              EndPoint="1,1">
            <GradientStop Color="#1F8DF9"
                          Offset="0"/>
            <GradientStop Color="#38BDF8"
                          Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DeepScanChipSecondaryBrush"
                              StartPoint="0,0"
                              EndPoint="1,1">
            <GradientStop Color="#15C9B1"
                          Offset="0"/>
            <GradientStop Color="#2DD4BF"
                          Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DeepScanChipWarmBrush"
                              StartPoint="0,0"
                              EndPoint="1,1">
            <GradientStop Color="#FB773C"
                          Offset="0"/>
            <GradientStop Color="#FBBF24"
                          Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="PaginationButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground"
                Value="#E2F7FF"/>
            <Setter Property="Background"
                Value="#162540"/>
            <Setter Property="BorderBrush"
                Value="#1F3B66"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,4"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Effect"
                Value="{StaticResource DeepScanSoftShadowEffect}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#0F172A"/>
                                <Setter TargetName="Root"
                                        Property="BorderBrush"
                                        Value="#1E293B"/>
                                <Setter Property="Foreground"
                                        Value="#475569"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1D335A"/>
                                <Setter Property="BorderBrush"
                                    Value="#2F70FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#132036"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

                <Style x:Key="FilterCardBorderStyle"
                       TargetType="Border">
                    <Setter Property="Background"
                        Value="{StaticResource DeepScanCardBackgroundBrush}"/>
                    <Setter Property="BorderBrush"
                        Value="{StaticResource DeepScanCardBorderBrush}"/>
                    <Setter Property="BorderThickness"
                        Value="1"/>
                    <Setter Property="CornerRadius"
                                Value="18"/>
                    <Setter Property="Padding"
                                Value="26"/>
                    <Setter Property="Margin"
                                Value="0,0,32,32"/>
                    <Setter Property="Effect"
                        Value="{StaticResource DeepScanSoftShadowEffect}"/>
                </Style>

    <Style x:Key="FilterLabelStyle"
           TargetType="TextBlock">
        <Setter Property="Foreground"
            Value="#F1F5FF"/>
        <Setter Property="FontSize"
            Value="13"/>
        <Setter Property="FontWeight"
            Value="SemiBold"/>
    </Style>

    <Style x:Key="FilterHintStyle"
           TargetType="TextBlock">
        <Setter Property="Foreground"
            Value="#8CA3C8"/>
        <Setter Property="FontSize"
            Value="11"/>
        <Setter Property="Margin"
            Value="0,2,0,0"/>
        <Setter Property="TextWrapping"
            Value="Wrap"/>
    </Style>

    <LinearGradientBrush x:Key="DeepScanOverlayBackdropBrush"
                  StartPoint="0,0"
                  EndPoint="1,1">
        <GradientStop Color="#C51B2440"
               Offset="0"/>
        <GradientStop Color="#E6233552"
               Offset="0.5"/>
        <GradientStop Color="#90223335"
               Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DeepScanOverlayPanelBrush"
                              StartPoint="0,0"
                              EndPoint="1,1">
        <GradientStop Color="#132238"
               Offset="0"/>
        <GradientStop Color="#0B182C"
               Offset="1"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="DeepScanOverlayPulseBrush"
                              GradientOrigin="0.5,0.35"
                              Center="0.5,0.5"
                              RadiusX="0.95"
                              RadiusY="0.95">
        <GradientStop Color="#8838BDF8"
               Offset="0"/>
        <GradientStop Color="#08182C"
               Offset="1"/>
        </RadialGradientBrush>

    <RadialGradientBrush x:Key="DeepScanOverlayAuraBrush"
                  GradientOrigin="0.5,0.5"
                  Center="0.5,0.5"
                  RadiusX="1.1"
                  RadiusY="1.1">
        <GradientStop Color="#5538BDF8"
               Offset="0"/>
            <GradientStop Color="#2245D4FF"
               Offset="0.55"/>
        <GradientStop Color="#00000000"
               Offset="1"/>
    </RadialGradientBrush>

        <SolidColorBrush x:Key="DeepScanOverlayAccentBrush"
                         Color="#38BDF8"/>
        <SolidColorBrush x:Key="DeepScanOverlaySecondaryBrush"
                         Color="#34D399"/>
        <SolidColorBrush x:Key="DeepScanOverlayWarmBrush"
                         Color="#F97316"/>

        <DropShadowEffect x:Key="DeepScanOverlayShadowEffect"
                          Color="#000000"
                          BlurRadius="32"
                          ShadowDepth="0"
                          Opacity="0.7"/>

        <CubicEase x:Key="DeepScanOverlayEaseIn"
                   EasingMode="EaseInOut"/>
        <CubicEase x:Key="DeepScanOverlayEaseOut"
                   EasingMode="EaseOut"/>
    </Page.Resources>
        <Grid Background="{StaticResource DeepScanSurfaceBrush}"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True">
                <Grid x:Name="MainContentHost"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Opacity"
                            Value="1"/>
                    <Setter Property="IsHitTestVisible"
                            Value="True"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}"
                                     Value="True">
                            <Setter Property="IsHitTestVisible"
                                    Value="False"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0.35"
                                                         Duration="0:0:0.3"
                                                         EasingFunction="{StaticResource DeepScanOverlayEaseIn}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.3"
                                                         EasingFunction="{StaticResource DeepScanOverlayEaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
                        <ScrollViewer x:Name="RootScrollViewer"
                          Margin="32"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          CanContentScroll="True"
                                                    PanningMode="VerticalOnly"
                                                    UseLayoutRounding="True"
                                                    SnapsToDevicePixels="True">
                <Grid MinWidth="720"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <controls:PageTitleBar Title="Deep scan analyzer"
                                    Subtitle="Zero in on the heaviest files and reclaim space fast."
                                    IconGlyph="ðŸ”"
                                    Margin="0,0,0,24"/>

                <Border Grid.Row="1"
                    Margin="0,0,0,20"
                    Padding="16"
                    Background="{StaticResource DeepScanCardBackgroundBrush}"
                    BorderBrush="{StaticResource DeepScanCardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Effect="{StaticResource DeepScanSoftShadowEffect}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Summary}"
                                   FontSize="14"
                                   Foreground="#E9F2FF"/>
                        <TextBlock Text="{Binding LastScannedDisplay}"
                                   FontSize="12"
                                   Foreground="#8CA3C8"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button Content="Run scan"
                                Command="{Binding RefreshCommand}"
                                Padding="18,10"
                                Background="{StaticResource DeepScanActionButtonBrush}"
                                Foreground="#041217"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ScanBorder"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            Padding="{TemplateBinding Padding}"
                                            Effect="{StaticResource DeepScanGlowShadowEffect}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsEnabled"
                                                 Value="False">
                                            <Setter TargetName="ScanBorder"
                                                    Property="Opacity"
                                                    Value="0.6"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="ScanBorder"
                                                    Property="Background"
                                                    Value="{StaticResource DeepScanActionButtonHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.IsEnabled>
                                <Binding Path="IsBusy"
                                         Converter="{StaticResource InverseBooleanConverter}"/>
                            </Button.IsEnabled>
                        </Button>
                        <Button Content="Cancel"
                                Command="{Binding CancelScanCommand}"
                                Padding="14,10"
                                Margin="8,0,0,0"
                                Background="#1E293B"
                                Foreground="#E2E8F0"
                                BorderBrush="#334155"
                                BorderThickness="1"
                                Cursor="Hand"
                                ToolTip="Stop the current scan.">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="CancelBorder"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="10"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsEnabled"
                                                 Value="False">
                                            <Setter TargetName="CancelBorder"
                                                    Property="Opacity"
                                                    Value="0.55"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="CancelBorder"
                                                    Property="Background"
                                                    Value="#25324A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.IsEnabled>
                                <Binding Path="CanCancel"/>
                            </Button.IsEnabled>
                            <Button.Visibility>
                                <Binding Path="CanCancel" Converter="{StaticResource BooleanToVisibilityConverter}"/>
                            </Button.Visibility>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

                <Border Grid.Row="2"
                    Background="{StaticResource DeepScanCardBackgroundBrush}"
                    BorderBrush="{StaticResource DeepScanCardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="24"
                    Effect="{StaticResource DeepScanSoftShadowEffect}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                        <StackPanel Orientation="Vertical"
                            Margin="0,0,0,16">
                        <ux:AdaptiveTilePanel Margin="0"
                                      MinColumnWidth="360"
                                      MaxColumnWidth="640"
                                      MinColumns="1"
                                      MaxColumns="3"
                                      ColumnSpacing="36"
                                      RowSpacing="28"
                                      Padding="0,0,12,12">
                            <Border Style="{StaticResource FilterCardBorderStyle}"
                                 MinWidth="320"
                                 MaxWidth="460">
                                <StackPanel>
                                    <TextBlock Text="Target location"
                                               Style="{StaticResource FilterLabelStyle}"/>
                                    <TextBlock Text="Choose where the deep scan should dig in."
                                               Style="{StaticResource FilterHintStyle}"/>
                                    <StackPanel Margin="0,14,0,0">
                                        <TextBox Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged, Delay=120}"
                                                 MinWidth="280"
                                                 Style="{StaticResource App.TextBoxStyle}"/>
                                        <Button Content="Browse"
                                                Click="BrowseButton_OnClick"
                                                Margin="0,10,0,0"
                                                Padding="16,8"
                                                Width="140"
                                                Background="#1E293B"
                                                Foreground="#38BDF8"
                                                BorderBrush="#0F172A"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                    <ComboBox Margin="0,16,0,0"
                                              ItemsSource="{Binding PresetLocations}"
                                              SelectedItem="{Binding SelectedPreset, Mode=TwoWay}"
                                              Style="{StaticResource App.ComboBoxStyle}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Label}"/>
                                                    <TextBlock Text="{Binding Description}"
                                                               Foreground="#94A3B8"
                                                               FontSize="11"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <TextBlock Margin="0,8,0,0"
                                               Text="{Binding SelectedPreset.Description, TargetNullValue=Select a preset to jump there}"
                                               Foreground="#94A3B8"
                                               TextWrapping="Wrap"
                                               ToolTip="{Binding SelectedPreset.Description}"/>
                                </StackPanel>
                            </Border>

                                  <Border Style="{StaticResource FilterCardBorderStyle}"
                                      MinWidth="340"
                                      MaxWidth="520">
                                <StackPanel>
                                    <TextBlock Text="Result limits"
                                               Style="{StaticResource FilterLabelStyle}"/>
                                    <TextBlock Text="Decide how many findings each scan returns."
                                               Style="{StaticResource FilterHintStyle}"/>
                                    <Grid Margin="0,16,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Min size (MB)"
                                                       Foreground="#94A3B8"/>
                                            <TextBox Margin="0,6,0,0"
                                                     Style="{StaticResource App.TextBoxStyle}"
                                                     Text="{Binding MinimumSizeMb, UpdateSourceTrigger=PropertyChanged, Delay=120}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1"
                                                    Margin="12,0,0,0">
                                            <TextBlock Text="Top results"
                                                       Foreground="#94A3B8"/>
                                            <TextBox Margin="0,6,0,0"
                                                     Style="{StaticResource App.TextBoxStyle}"
                                                     Text="{Binding MaxItems, UpdateSourceTrigger=PropertyChanged, Delay=120}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                                <Border Style="{StaticResource FilterCardBorderStyle}"
                                    MinWidth="320"
                                    MaxWidth="440">
                                <StackPanel>
                                    <TextBlock Text="Scan options"
                                               Style="{StaticResource FilterLabelStyle}"/>
                                    <TextBlock Text="Fine-tune exactly what the analyzer inspects."
                                               Style="{StaticResource FilterHintStyle}"/>
                                    <StackPanel Margin="0,16,0,0">
                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                  Content="Include hidden items"
                                                  IsChecked="{Binding IncludeHidden}"
                                                  Foreground="#E2E8F0"
                                                  Margin="0,0,0,8"/>
                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                  Content="Include system files (risky)"
                                                  IsChecked="{Binding IncludeSystem}"
                                                  Foreground="#E2E8F0"
                                                  Margin="0,0,0,8"/>
                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                  Content="Include folders"
                                                  IsChecked="{Binding IncludeDirectories}"
                                                  Foreground="#E2E8F0"/>
                                        <TextBlock Text="Force delete is destructive. Enable only if you understand the risk."
                                                   Foreground="#FCA5A5"
                                                   FontSize="11"
                                                   Margin="0,12,0,4"/>
                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                  Content="Enable force delete (dangerous)"
                                                  IsChecked="{Binding IsForceDeleteArmed}"
                                                  Foreground="#FCA5A5"
                                                  Margin="0,0,0,4"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                                <Border Style="{StaticResource FilterCardBorderStyle}"
                                    MinWidth="360"
                                    MaxWidth="520">
                                <StackPanel>
                                    <TextBlock Text="Name matching"
                                               Style="{StaticResource FilterLabelStyle}"/>
                                    <TextBlock Text="Narrow results by name without losing flexibility."
                                               Style="{StaticResource FilterHintStyle}"/>
                                    <TextBox Margin="0,16,0,0"
                                             Style="{StaticResource App.TextBoxStyle}"
                                             Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged, Delay=120}"/>
                                    <ComboBox Margin="0,16,0,0"
                                              ItemsSource="{Binding NameMatchModes}"
                                              SelectedItem="{Binding SelectedMatchMode}"
                                              Style="{StaticResource App.ComboBoxStyle}"/>
                                    <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                              Margin="0,12,0,0"
                                              Content="Case sensitive"
                                              IsChecked="{Binding IsCaseSensitiveMatch}"
                                              Foreground="#E2E8F0"/>
                                </StackPanel>
                            </Border>
                        </ux:AdaptiveTilePanel>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

               <DockPanel Grid.Row="0"
                    Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal"
                         VerticalAlignment="Center"
                         DockPanel.Dock="Left">
                    <TextBlock Text="{Binding TotalFindings, StringFormat={}{0:N0} items}"
                         FontSize="12"
                        Foreground="#E4F1FF"/>
                    <TextBlock Text="â€¢"
                         Margin="8,0"
                         FontSize="12"
                        Foreground="#7D93BB"/>
                    <TextBlock Text="{Binding PageDisplay}"
                         FontSize="12"
                        Foreground="#9DB7D6"/>
                    <TextBlock Text="{Binding PageSize, StringFormat={}{0} per page}"
                         FontSize="12"
                        Foreground="#9DB7D6"
                         Margin="8,0,0,0"/>
                </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        DockPanel.Dock="Right">
                                <Button Content="âŸ¨ Prev"
                                        Command="{Binding PreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}"
                                        Margin="0,0,8,0"
                                        Style="{StaticResource PaginationButtonStyle}"/>
                                <Button Content="Next âŸ©"
                                        Command="{Binding NextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}"
                                        Style="{StaticResource PaginationButtonStyle}"/>
                            </StackPanel>
                        </DockPanel>

                        <ux:BubbleScrollListView x:Name="FindingsListView"
                                                 Grid.Row="1"
                                                 ItemsSource="{Binding VisibleFindings}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Foreground="#F8FAFC"
                                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 ScrollViewer.CanContentScroll="True"
                                                 VirtualizingPanel.IsVirtualizing="True"
                                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                                 VirtualizingPanel.CacheLength="1"
                                                 VirtualizingPanel.CacheLengthUnit="Item"
                                                 VirtualizingStackPanel.ScrollUnit="Pixel"
                                                 UseLayoutRounding="True"
                                                 SnapsToDevicePixels="True"
                                                 ParentScrollViewerName="RootScrollViewer">
                            <ListView.Resources>
                                <Style x:Key="DeepScanChipStyle"
                                       TargetType="Border">
                                    <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#11223C" Offset="0"/>
                                        <GradientStop Color="#0B172B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                    </Setter>
                                    <Setter Property="BorderBrush"
                                        Value="#1D3459"/>
                                    <Setter Property="BorderThickness"
                                        Value="1"/>
                                    <Setter Property="CornerRadius"
                                        Value="12"/>
                                    <Setter Property="Padding"
                                        Value="10,4"/>
                                    <Setter Property="Margin"
                                        Value="0,0,10,8"/>
                                    <Setter Property="Opacity"
                                        Value="0.95"/>
                                    <Style.Triggers>
                                    <Trigger Property="Tag"
                                         Value="accent">
                                        <Setter Property="Background"
                                            Value="{StaticResource DeepScanChipAccentBrush}"/>
                                        <Setter Property="BorderBrush"
                                            Value="#54C2FF"/>
                                    </Trigger>
                                    <Trigger Property="Tag"
                                         Value="secondary">
                                        <Setter Property="Background"
                                            Value="{StaticResource DeepScanChipSecondaryBrush}"/>
                                        <Setter Property="BorderBrush"
                                            Value="#45E7CE"/>
                                    </Trigger>
                                    <Trigger Property="Tag"
                                         Value="warm">
                                        <Setter Property="Background"
                                            Value="{StaticResource DeepScanChipWarmBrush}"/>
                                        <Setter Property="BorderBrush"
                                            Value="#F97316"/>
                                    </Trigger>
