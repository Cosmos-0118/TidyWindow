                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding Category}"
                                                                       FontSize="11"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#04102A"/>
                                                        </Border>
                                                        <Border Tag="secondary"
                                                                Style="{StaticResource DeepScanChipStyle}">
                                                            <TextBlock Text="{Binding KindDisplay}"
                                                                       FontSize="11"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#041925"/>
                                                        </Border>
                                                    </WrapPanel>
                                                </StackPanel>

                        <StackPanel Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top">
                            <Border Style="{StaticResource DeepScanChipStyle}"
                                Tag="warm"
                                Margin="0,0,0,4">
                                                        <TextBlock FontSize="11"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#05121C">
                                                            <Run Text="Size "/>
                                                            <Run Text="{Binding SizeDisplay, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </Border>
                                                    <Border Style="{StaticResource DeepScanChipStyle}"
                                                            Tag="muted">
                                                        <TextBlock FontSize="11"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#E2E8F0">
                                                            <Run Text="Modified "/>
                                                            <Run Text="{Binding ModifiedDisplay, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>

                        <Border Grid.Row="1"
                            Margin="0,12,0,12"
                                                    Height="1"
                                                    Background="#26446D"/>

                                            <WrapPanel Grid.Row="2"
                               HorizontalAlignment="Left">
                                                <Button Content="Open location"
                                                        Command="{Binding DataContext.OpenContainingFolderCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        CommandParameter="{Binding}"
                            Padding="12,6"
                            MinWidth="128"
                                Margin="0,0,8,0"
                                                        Background="{StaticResource DeepScanSecondaryActionBrush}"
                                                        Foreground="#041322"
                                                        BorderThickness="0"
                                                        Cursor="Hand">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="SecondaryActionBorder"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="12"
                                                                    Padding="{TemplateBinding Padding}"
                                                                    SnapsToDevicePixels="True">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                    <Setter TargetName="SecondaryActionBorder"
                                                                            Property="Background"
                                                                            Value="{StaticResource DeepScanSecondaryActionHoverBrush}"/>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled"
                                                                         Value="False">
                                                                    <Setter TargetName="SecondaryActionBorder"
                                                                            Property="Opacity"
                                                                            Value="0.6"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <Button Content="Delete"
                                                    Click="DeleteButton_OnClick"
                                                    IsEnabled="{Binding DataContext.IsBusy, RelativeSource={RelativeSource AncestorType=ListView}, Converter={StaticResource InverseBooleanConverter}}"
                            Padding="12,6"
                            MinWidth="104"
                                                        Background="{StaticResource DeepScanDangerActionBrush}"
                                                        Foreground="#2D050D"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        ToolTip="Deleting an item is permanent. Review it carefully before proceeding.">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="DangerActionBorder"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="12"
                                                                    Padding="{TemplateBinding Padding}"
                                                                    SnapsToDevicePixels="True">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                    <Setter TargetName="DangerActionBorder"
                                                                            Property="Background"
                                                                            Value="{StaticResource DeepScanDangerActionHoverBrush}"/>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled"
                                                                         Value="False">
                                                                    <Setter TargetName="DangerActionBorder"
                                                                            Property="Opacity"
                                                                            Value="0.55"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <Button Content="Force delete"
                                                    Click="ForceDeleteButton_OnClick"
                                                    IsEnabled="{Binding DataContext.CanForceDelete, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        Padding="12,6"
                                                        MinWidth="136"
                                                        Margin="8,0,0,0"
                                                        Background="{StaticResource DeepScanDangerActionBrush}"
                                                        Foreground="#2D050D"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        ToolTip="Force delete takes ownership, unlocks handles, and may schedule removal on reboot. Enable the toggle above first.">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="ForceDangerActionBorder"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="12"
                                                                    Padding="{TemplateBinding Padding}"
                                                                    Effect="{StaticResource DeepScanDangerShadowEffect}"
                                                                    SnapsToDevicePixels="True">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                    <Setter TargetName="ForceDangerActionBorder"
                                                                            Property="Background"
                                                                            Value="{StaticResource DeepScanDangerActionHoverBrush}"/>
                                                                    <Setter TargetName="ForceDangerActionBorder"
                                                                            Property="Effect">
                                                                        <Setter.Value>
                                                                            <DropShadowEffect Color="#FF2F3F"
                                                                                              BlurRadius="28"
                                                                                              ShadowDepth="0"
                                                                                              Opacity="0.95"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled"
                                                                         Value="False">
                                                                    <Setter TargetName="ForceDangerActionBorder"
                                                                            Property="Opacity"
                                                                            Value="0.55"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </WrapPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <ListView.IsEnabled>
                                <Binding Path="IsBusy"
                                         Converter="{StaticResource InverseBooleanConverter}"/>
                            </ListView.IsEnabled>
                        </ux:BubbleScrollListView>

                        <TextBlock Grid.Row="1"
                                   Text="No findings yet. Adjust the filters and run a scan."
                                   Foreground="#8CA3C8"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasResults}"
                                                     Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsBusy}"
                                                     Value="True">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
            </ScrollViewer>
        </Grid>

    <ContentControl x:Name="DeepScanOverlay"
                    Panel.ZIndex="20"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Focusable="False"
                    IsEnabled="{Binding IsBusy}">
        <ContentControl.Template>
            <ControlTemplate TargetType="ContentControl">
                <Grid x:Name="DeepScanOverlayRoot"
                      Background="Transparent"
                      Opacity="0"
                      Visibility="Collapsed"
                      IsHitTestVisible="False"
                      DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}">
                    <Grid Background="{StaticResource DeepScanOverlayBackdropBrush}">
                        <Border HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="36,32"
                                CornerRadius="28"
                                Background="{StaticResource DeepScanOverlayPanelBrush}"
                                BorderBrush="#1C2E45"
                                BorderThickness="1.5"
                                Effect="{StaticResource DeepScanOverlayShadowEffect}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="240"/>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center">
                                    <Grid Width="220"
                                          Height="220">
                                        <Ellipse Fill="#0B1828"
                                                 Stroke="#1A2B41"
                                                 StrokeThickness="1.5"/>
                                        <Ellipse x:Name="ScannerAuraEllipse"
                                                 Width="220"
                                                 Height="220"
                                                 Fill="{StaticResource DeepScanOverlayAuraBrush}"
                                                 Opacity="0.32"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <ScaleTransform x:Name="ScannerAuraScale"
                                                                ScaleX="1"
                                                                ScaleY="1"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Ellipse Width="164"
                                                 Height="164"
                                                 Stroke="{StaticResource DeepScanOverlayAccentBrush}"
                                                 StrokeThickness="2"
                                                 StrokeDashArray="12 8"
                                                 Opacity="0.8"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="ScannerRingRotate"
                                                                 Angle="0"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Ellipse Width="132"
                                                 Height="132"
                                                 Fill="#132036"
                                                 Opacity="0.7"/>
                                        <Ellipse Width="92"
                                                 Height="92"
                                                 Fill="{StaticResource DeepScanOverlayPulseBrush}"
                                                 Opacity="0.55"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <ScaleTransform x:Name="ScannerPulseScale"
                                                                ScaleX="1"
                                                                ScaleY="1"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Ellipse Width="52"
                                                 Height="52"
                                                 StrokeThickness="2"
                                                 Stroke="{StaticResource DeepScanOverlaySecondaryBrush}"
                                                 StrokeDashArray="6 6"
                                                 Opacity="0.7"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="ScannerInnerOrbitRotate"
                                                                 Angle="0"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Grid Width="200"
                                              Height="200"
                                              RenderTransformOrigin="0.5,0.5">
                                            <Grid.RenderTransform>
                                                <RotateTransform x:Name="ScannerOrbitsRotate"
                                                                 Angle="0"/>
                                            </Grid.RenderTransform>
                                            <Border Width="16"
                                                    Height="16"
                                                    CornerRadius="8"
                                                    Background="{StaticResource DeepScanOverlayAccentBrush}"
                                                    BorderBrush="#0D2538"
                                                    BorderThickness="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    Margin="0,-6,0,0"/>
                                            <Border Width="18"
                                                    Height="18"
                                                    CornerRadius="9"
                                                    Background="{StaticResource DeepScanOverlaySecondaryBrush}"
                                                    BorderBrush="#0F2A1F"
                                                    BorderThickness="1"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,-8,0"/>
                                            <Border Width="12"
                                                    Height="12"
                                                    CornerRadius="6"
                                                    Background="{StaticResource DeepScanOverlayWarmBrush}"
                                                    BorderBrush="#2A1808"
                                                    BorderThickness="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    Margin="0,0,0,-10"/>
                                        </Grid>
                                    </Grid>
                                </Grid>

                                <Rectangle Grid.Column="1"
                                           Width="1"
                                           Fill="#1F324B"
                                           Opacity="0.45"/>

                                <StackPanel Grid.Column="2"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Deep scan in progress"
                                               FontSize="22"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"/>
                                    <TextBlock Text="We are combing through the target path to surface the largest items."
                                               FontSize="13"
                                               Foreground="#94A3B8"
                                               Margin="0,6,0,0"
                                               TextWrapping="Wrap"/>
                                    <Border Margin="0,18,0,0"
                                            Background="#122034"
                                            CornerRadius="10"
                                            Padding="14,10">
                                        <StackPanel>
                                            <TextBlock Text="Live summary"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="#38BDF8"/>
                                            <TextBlock Text="{Binding Summary}"
                                                       FontSize="12"
                                                       Foreground="#CBD5F5"
                                                       Margin="0,4,0,0"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <StackPanel Margin="0,18,0,0">
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,4,0,0"
                                                    VerticalAlignment="Center">
                                            <Ellipse Width="6"
                                                     Height="6"
                                                     Fill="{StaticResource DeepScanOverlayAccentBrush}"/>
                                            <TextBlock Text="Gathering size information for each candidate"
                                                       Margin="10,0,0,0"
                                                       Foreground="#CBD5F5"
                                                       FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,4,0,0"
                                                    VerticalAlignment="Center">
                                            <Ellipse Width="6"
                                                     Height="6"
                                                     Fill="{StaticResource DeepScanOverlaySecondaryBrush}"/>
                                            <TextBlock Text="Filtering based on your minimum size and options"
                                                       Margin="10,0,0,0"
                                                       Foreground="#CBD5F5"
                                                       FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,4,0,0"
                                                    VerticalAlignment="Center">
                                            <Ellipse Width="6"
                                                     Height="6"
                                                     Fill="{StaticResource DeepScanOverlayWarmBrush}"/>
                                            <TextBlock Text="Ranking items to showcase the heaviest findings first"
                                                       Margin="10,0,0,0"
                                                       Foreground="#CBD5F5"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Margin="0,18,0,0">
                                        <TextBlock Text="{Binding TargetPath, StringFormat=Location: {0}}"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding MinimumSizeMb, StringFormat=Minimum size: {0} MB}"
                                                   Foreground="#64748B"
                                                   FontSize="11"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Text="{Binding MaxItems, StringFormat=Top results limit: {0}}"
                                                   Foreground="#64748B"
                                                   FontSize="11"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <Border Height="6"
                                            CornerRadius="3"
                                            Background="#172840"
                                            Margin="0,22,0,0">
                                        <Grid ClipToBounds="True">
                                            <Rectangle Width="180"
                                                       Height="6"
                                                       Fill="{StaticResource DeepScanOverlayAccentBrush}"
                                                       Opacity="0.7"
                                                       RenderTransformOrigin="0.5,0.5">
                                                <Rectangle.RenderTransform>
                                                    <TranslateTransform x:Name="ScannerSweepTranslate"
                                                                        X="-220"/>
                                                </Rectangle.RenderTransform>
                                            </Rectangle>
                                        </Grid>
                                    </Border>

                                    <TextBlock Text="You can keep an eye here; results refresh as soon as the scan completes."
                                               FontSize="12"
                                               Foreground="#64748B"
                                               Margin="0,14,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Accessible cancel button that floats above the overlay so users can always stop a scan. -->
                        <Button HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,18,18,0"
                                Padding="14,8"
                                Content="Cancel scan"
                                Command="{Binding CancelScanCommand}"
                                IsEnabled="{Binding CanCancel}"
                                Visibility="{Binding CanCancel, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Background="#162540"
                                Foreground="#E2E8F0"
                                BorderBrush="#2F70FF"
                                BorderThickness="1"
                                Cursor="Hand"
                                Effect="{StaticResource DeepScanSoftShadowEffect}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="CancelOverlayBorder"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="CancelOverlayBorder" Property="Background" Value="#1D335A"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="CancelOverlayBorder" Property="Opacity" Value="0.55"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsEnabled" Value="True">
                        <Setter Property="IsHitTestVisible" Value="True"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="IsHitTestVisible" Value="True"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="Visibility" Value="Visible"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="Opacity" Value="1"/>
                        <Trigger.EnterActions>
                            <BeginStoryboard x:Name="DeepScanOverlayFadeInStoryboard">
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="DeepScanOverlayRoot"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="1"
                                                     Duration="0:0:0.35"
                                                     EasingFunction="{StaticResource DeepScanOverlayEaseIn}"/>
                                </Storyboard>
                            </BeginStoryboard>
                            <BeginStoryboard x:Name="DeepScanOverlayMotionStoryboard">
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="ScannerRingRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0"
                                                     To="360"
                                                     Duration="0:0:5.5"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerOrbitsRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0"
                                                     To="360"
                                                     Duration="0:0:3.2"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerPulseScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     From="1"
                                                     To="1.2"
                                                     Duration="0:0:1.5"
                                                     AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerPulseScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="1"
                                                     To="1.2"
                                                     Duration="0:0:1.5"
                                                     AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerAuraScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     From="1"
                                                     To="1.08"
                                                     Duration="0:0:2.4"
                                                     AutoReverse="True"
                                                     EasingFunction="{StaticResource DeepScanOverlayEaseIn}"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerAuraScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="1"
                                                     To="1.08"
                                                     Duration="0:0:2.4"
                                                     AutoReverse="True"
                                                     EasingFunction="{StaticResource DeepScanOverlayEaseIn}"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerAuraEllipse"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0.2"
                                                     To="0.45"
                                                     Duration="0:0:3"
                                                     AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerInnerOrbitRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0"
                                                     To="-360"
                                                     Duration="0:0:4.2"/>
                                    <DoubleAnimation Storyboard.TargetName="ScannerSweepTranslate"
                                                     Storyboard.TargetProperty="X"
                                                     From="-220"
                                                     To="220"
                                                     Duration="0:0:2"
                                                     AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="IsHitTestVisible" Value="False"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="IsHitTestVisible" Value="False"/>
                        <Setter TargetName="DeepScanOverlayRoot" Property="Opacity" Value="0"/>
                        <Trigger.EnterActions>
                            <StopStoryboard BeginStoryboardName="DeepScanOverlayMotionStoryboard"/>
                            <BeginStoryboard>
                                <Storyboard FillBehavior="Stop">
                                    <DoubleAnimation Storyboard.TargetName="DeepScanOverlayRoot"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0"
                                                     Duration="0:0:0.3"
                                                     EasingFunction="{StaticResource DeepScanOverlayEaseOut}"/>
                                </Storyboard>
                            </BeginStoryboard>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DeepScanOverlayRoot"
                                                                   Storyboard.TargetProperty="Visibility">
                                        <DiscreteObjectKeyFrame KeyTime="0:0:0.3"
                                                                Value="{x:Static Visibility.Collapsed}"/>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </ContentControl.Template>
    </ContentControl>

    <!-- Always-on-top cancel button so it remains clickable even when the overlay dims the page. -->
    <Button Panel.ZIndex="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,18,18,0"
            Padding="14,8"
            Content="Cancel scan"
            Command="{Binding CancelScanCommand}"
            IsEnabled="{Binding CanCancel}"
            Visibility="{Binding CanCancel, Converter={StaticResource BooleanToVisibilityConverter}}"
            Background="#0F172A"
            Foreground="#E2E8F0"
            BorderBrush="#38BDF8"
            BorderThickness="1"
            Cursor="Hand"
            Effect="{StaticResource DeepScanSoftShadowEffect}">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border x:Name="CancelTopBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="CancelTopBorder" Property="Background" Value="#1E293B"/>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter TargetName="CancelTopBorder" Property="Opacity" Value="0.55"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Button.Template>
    </Button>
    </Grid>
</Page>
