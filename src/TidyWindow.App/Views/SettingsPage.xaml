<Page x:Class="TidyWindow.App.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent"
      Title="Settings">
    <Page.Resources>
        <Style x:Key="SettingsAccentButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#7C3AED"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="16,8"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#6D28D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#5B21B6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#312E81"/>
                                <Setter Property="Foreground"
                                        Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingsSecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="BorderBrush"
                    Value="#334155"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="16,8"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#243048"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#1A2436"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#111827"/>
                                <Setter TargetName="Root"
                                        Property="BorderBrush"
                                        Value="#1E293B"/>
                                <Setter Property="Foreground"
                                        Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer Margin="32"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  CanContentScroll="False">
        <StackPanel>
            <TextBlock Text="Settings"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#F9FAFB"/>
            <TextBlock Text="Personalize TidyWindow"
                       FontSize="14"
                       Margin="0,6,0,24"
                       Foreground="#94A3B8"/>

            <StackPanel Orientation="Vertical">
                <Border Background="#111827"
                        Padding="20"
                        CornerRadius="14"
                        BorderBrush="#1D2A44"
                        BorderThickness="1">
                    <StackPanel>
                        <CheckBox Content="Enable telemetry (opt-in)"
                                  IsChecked="{Binding TelemetryEnabled, Mode=TwoWay}"
                                  FontSize="14"
                                  Foreground="#E2E8F0"
                                  Margin="0,0,0,12"/>
                        <TextBlock Text="Telemetry helps surface anonymized diagnostics so you can spot issues early."
                                   Foreground="#A5B4FC"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Background="#111827"
                        Padding="20"
                        CornerRadius="14"
                        BorderBrush="#1D2A44"
                        BorderThickness="1"
                        Margin="0,16,0,0">
                    <StackPanel>
                        <CheckBox Content="Allow administrative privileges when needed"
                                  IsChecked="{Binding AdminPrivilegesEnabled, Mode=TwoWay}"
                                  FontSize="14"
                                  Foreground="#E2E8F0"
                                  Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding AdminPrivilegesStatus}"
                                   Foreground="#A5B4FC"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="Turn this off if you prefer TidyWindow to avoid elevation prompts. Some maintenance actions that require admin access will be skipped."
                                   Foreground="#F97316"
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Background="#111827"
                        Padding="20"
                        CornerRadius="14"
                        BorderBrush="#1D2A44"
                        BorderThickness="1"
                        Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Elevation status"
                                   Foreground="#E2E8F0"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CurrentPrivilegeDisplay}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground"
                                            Value="#22C55E"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRunningElevated}"
                                                     Value="True">
                                            <Setter Property="Foreground"
                                                    Value="#FACC15"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding CurrentPrivilegeAdvice}"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="0,6,0,12"/>
                        <WrapPanel Margin="0,0,0,12">
                            <Button Content="Restart in user mode"
                                    Command="{Binding RestartAsStandardCommand}"
                                    IsEnabled="{Binding CanRestartAsStandard}"
                                    Style="{StaticResource SettingsSecondaryButtonStyle}"
                                    Margin="0,0,12,8"/>
                            <Button Content="Restart as admin"
                                    Command="{Binding RestartAsAdministratorCommand}"
                                    IsEnabled="{Binding CanRestartAsAdministrator}"
                                    Style="{StaticResource SettingsAccentButtonStyle}"
                                    Margin="0,0,0,8"/>
                        </WrapPanel>
                        <TextBlock Text="{Binding PrivilegeSwitchGuidance}"
                                   Foreground="#F97316"
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
