<UserControl x:Class="TidyWindow.App.Views.InstallHubQueueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:infra="clr-namespace:TidyWindow.App.Infrastructure"
             mc:Ignorable="d"
             Background="Transparent">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="InstallHubResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <x:Array x:Key="QueueHeroChipTexts"
                     Type="{x:Type sys:String}">
                <sys:String>Monitor pending installs</sys:String>
                <sys:String>Retry failures</sys:String>
                <sys:String>Inspect transcripts</sys:String>
            </x:Array>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
          <ScrollViewer x:Name="QueueScrollViewer"
                    Margin="32,0,32,24"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    HorizontalContentAlignment="Center"
                    PanningMode="VerticalOnly">
            <Grid MaxWidth="1180"
                HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Style="{StaticResource InstallCardBorderStyle}"
                        Padding="28"
                        Margin="0,0,0,24">
                    <Grid>

                        <StackPanel>
                            <TextBlock Text="Install queue"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource InstallTextPrimaryBrush}"/>
                            <ItemsControl Margin="0,8,0,0"
                                          ItemsSource="{StaticResource QueueHeroChipTexts}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InstallInfoChipStyle}">
                                            <TextBlock Text="{Binding}"
                                                       Foreground="{StaticResource InstallTextInverseBrush}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <WrapPanel Margin="0,18,0,0">
                                <Border Style="{StaticResource InstallBadgeStyle}">
                                    <TextBlock Text="{Binding Operations.Count, StringFormat={}{0} entries}"
                                               Foreground="{StaticResource InstallTextSoftAccentBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="{StaticResource InstallBadgeQueueBackgroundBrush}">
                                    <Border.Style>
                                        <Style TargetType="Border"
                                               BasedOn="{StaticResource InstallBadgeStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RunningOperationCount}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding RunningOperationCount, StringFormat=Running 路 {0}}"
                                               Foreground="{StaticResource InstallTextSuccessBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="{StaticResource InstallBadgeNeutralBackgroundBrush}">
                                    <Border.Style>
                                        <Style TargetType="Border"
                                               BasedOn="{StaticResource InstallBadgeStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding QueuedOperationCount}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding QueuedOperationCount, StringFormat=Queued 路 {0}}"
                                               Foreground="{StaticResource InstallTextQueuedBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="{StaticResource InstallBadgeAltBackgroundBrush}">
                                    <Border.Style>
                                        <Style TargetType="Border"
                                               BasedOn="{StaticResource InstallBadgeStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CompletedOperationCount}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding CompletedOperationCount, StringFormat=Completed 路 {0}}"
                                               Foreground="{StaticResource InstallTextSoftAccentBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="{StaticResource InstallBadgeErrorBackgroundBrush}">
                                    <Border.Style>
                                        <Style TargetType="Border"
                                               BasedOn="{StaticResource InstallBadgeStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding FailedOperationCount}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding FailedOperationCount, StringFormat=Failed 路 {0}}"
                                               Foreground="{StaticResource InstallTextDangerSoftBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </Border>
                            </WrapPanel>
                        </StackPanel>

                    </Grid>
                </Border>

                <Grid x:Name="QueueContentGrid"
                      Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="QueuePrimaryColumnHost"
                                Grid.Row="0"
                                Grid.RowSpan="2">
                        <Border Style="{StaticResource InstallCardBorderStyle}"
                                Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0"
                                      Margin="0,0,0,14">
                                    <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                     <TextBlock Text="Queue timeline"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource InstallTextPrimaryBrush}"/>
                                     <TextBlock Text="Latest operations appear first. Use filters above to clear or retry."
                                          Foreground="{StaticResource InstallTextMutedBrush}"
                                          FontSize="12"
                                          TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top">
                                    <Button Content="Retry failed"
                                        Command="{Binding RetryFailedCommand}"
                                        Style="{StaticResource InstallSecondaryButtonStyle}"/>
                                    <Button Content="Clear completed"
                                        Margin="10,0,0,0"
                                        Command="{Binding ClearCompletedCommand}"
                                        Style="{StaticResource InstallSecondaryButtonStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <ItemsControl ItemsSource="{StaticResource InstallHubQueueSkeletonItems}"
                                                  ItemTemplate="{StaticResource InstallHubQueueSkeletonTemplate}">
                                        <ItemsControl.Style>
                                            <Style TargetType="ItemsControl">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ItemsControl.Style>
                                    </ItemsControl>

                                    <ListView ItemsSource="{Binding Operations}"
                                              SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Padding="0"
                                              Foreground="{StaticResource InstallTextPrimaryBrush}"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                              ScrollViewer.CanContentScroll="True"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              VirtualizingPanel.VirtualizationMode="Recycling"
                                              VirtualizingStackPanel.ScrollUnit="Pixel"
                                              infra:ScrollHost.BubbleParentScroll="True">
                                        <ListView.Style>
                                            <Style TargetType="ListView">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListView.Style>
                                        <ListView.ItemContainerStyle>
                                            <StaticResource ResourceKey="InstallQueueListItemStyle"/>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal"
                                                                    VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding PackageName}"
                                                                       FontWeight="SemiBold"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding StatusLabel}"
                                                                       Margin="10,0,0,0"
                                                                       FontSize="12"
                                                                       FontWeight="SemiBold">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{StaticResource InstallTextAccentBrush}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding StatusLabel}" Value="Installed">
                                                                                <Setter Property="Foreground" Value="{StaticResource InstallTextSuccessBrush}"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding StatusLabel}" Value="Failed">
                                                                                <Setter Property="Foreground" Value="{StaticResource InstallTextDangerBrush}"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding StatusLabel}" Value="Cancelled">
                                                                                <Setter Property="Foreground" Value="{StaticResource InstallTextWarningBrush}"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Message}"
                                                                   Foreground="{StaticResource InstallTextMutedBrush}"
                                                                   FontSize="12"
                                                                   TextWrapping="Wrap"
                                                                   Margin="0,6,0,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <StackPanel Orientation="Horizontal"
                                                                    Margin="0,6,0,0">
                                                            <TextBlock Text="{Binding Attempts}"
                                                                   Foreground="{StaticResource InstallTextSecondaryBrush}"
                                                                       FontSize="11">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding CompletedAt, StringFormat={}{0:G}}"
                                                                       Foreground="{StaticResource InstallTextTimestampBrush}"
                                                                       FontSize="11"
                                                                       Margin="10,0,0,0">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1"
                                                                Orientation="Horizontal"
                                                                VerticalAlignment="Center">
                                                        <Button Content="View details"
                                                            Command="{Binding DataContext.ShowQueueOperationDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource InstallSecondaryButtonStyle}"
                                                            Padding="12,4"
                                                            Margin="0,0,8,0"/>
                                                        <Button Content="Cancel"
                                                                Command="{Binding DataContext.CancelOperationCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource InstallSecondaryButtonStyle}"
                                                                Padding="12,4"
                                                                Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>

                                <TextBlock Grid.Row="2"
                                           Text="No installs queued yet. Queue a bundle or single package to get started."
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource InstallTextCaptionBrush}"
                                           FontSize="12"
                                           Margin="0,16,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Operations.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </StackPanel>

                </Grid>
            </Grid>
        </ScrollViewer>

        <Grid x:Name="QueueOperationDetailsOverlay"
              Panel.ZIndex="6"
              Background="#AA020617"
              Visibility="{Binding IsQueueOperationDetailsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              IsHitTestVisible="{Binding IsQueueOperationDetailsVisible}">
            <Border MaxWidth="720"
                    Margin="32"
                    Padding="24"
                    Background="#0F172A"
                    BorderBrush="#1E293B"
                    BorderThickness="1"
                    CornerRadius="18"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Margin="0,0,0,16"
                               LastChildFill="False">
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="{Binding SelectedOperation.PackageName, TargetNullValue=Operation details}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource InstallTextPrimaryBrush}"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding SelectedOperation.StatusLabel}"
                                       FontSize="12"
                                       Foreground="{StaticResource InstallTextMutedBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <Button Content="Close"
                                Command="{Binding CloseQueueOperationDetailsCommand}"
                                Style="{StaticResource InstallSecondaryButtonStyle}"
                                DockPanel.Dock="Right"
                                Padding="10,4"
                                MinWidth="72"
                                HorizontalAlignment="Right"/>
                    </DockPanel>

                    <Grid Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      MaxHeight="440">
                            <ContentControl Content="{Binding SelectedOperation}"
                                            ContentTemplate="{StaticResource InstallOperationDetailsTemplate}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedOperation}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </ScrollViewer>

                        <TextBlock Text="Select an install to review its details"
                                   Foreground="{StaticResource InstallTextMutedBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="13">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedOperation}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
