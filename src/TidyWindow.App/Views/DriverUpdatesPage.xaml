<Page x:Class="TidyWindow.App.Views.DriverUpdatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:TidyWindow.App.ViewModels"
      xmlns:core="clr-namespace:TidyWindow.Core.Updates;assembly=TidyWindow.Core"
    xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
      mc:Ignorable="d"
      Title="Driver updates"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <SolidColorBrush x:Key="ListItemHoverBrush"
              Color="#16233B"/>
    <SolidColorBrush x:Key="ListItemSelectedBrush"
              Color="#233554"/>
    <SolidColorBrush x:Key="ListItemSelectedInactiveBrush"
              Color="#1A253A"/>

        <Style x:Key="DriverCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#101D30"/>
            <Setter Property="BorderBrush"
                    Value="#223857"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="10"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="0,8,0,8"/>
        <Style.Triggers>
        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                 Value="True">
            <Setter Property="Background"
                Value="{StaticResource ListItemHoverBrush}"/>
            <Setter Property="BorderBrush"
                Value="#2F4668"/>
        </DataTrigger>
        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                 Value="True">
            <Setter Property="Background"
                Value="{StaticResource ListItemSelectedBrush}"/>
            <Setter Property="BorderBrush"
                Value="#38BDF8"/>
        </DataTrigger>
        </Style.Triggers>
        </Style>

        <Style x:Key="StatusTagStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="BorderBrush"
                    Value="#334155"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="6"/>
            <Setter Property="Padding"
                    Value="8,2"/>
            <Setter Property="Margin"
                    Value="12,0,0,0"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Margin="32"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  HorizontalContentAlignment="Stretch"
                  x:Name="RootScrollViewer">
        <StackPanel Orientation="Vertical"
                    MaxWidth="1280"
                    HorizontalAlignment="Center"
                    d:DataContext="{d:DesignInstance Type=vm:DriverUpdatesViewModel, IsDesignTimeCreatable=False}">
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,24"
                        VerticalAlignment="Center">
                <Border Width="48"
                        Height="48"
                        CornerRadius="12"
                        Background="#1E293B"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="ðŸ§©"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <StackPanel>
                    <TextBlock Text="Driver update insights"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#F8FAFC"/>
                    <TextBlock Text="Detect pending driver updates and compare versions."
                               FontSize="14"
                               Foreground="#94A3B8"/>
                </StackPanel>
            </StackPanel>

            <Border Background="#0F172A"
                    BorderBrush="#1E293B"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="{Binding Summary}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#E2E8F0"/>
                        <TextBlock Text="{Binding LastCheckedDisplay}"
                                   Margin="0,6,0,0"
                                   FontSize="12"
                                   Foreground="#94A3B8"/>
                        <TextBlock Text="{Binding InstalledDriversSummary}"
                                   Margin="0,6,0,0"
                                   FontSize="12"
                                   Foreground="#94A3B8"
                                   Visibility="{Binding HasInstalledDrivers, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding ActiveFiltersSummary}"
                                   Margin="0,6,0,0"
                                   FontSize="12"
                                   Foreground="#38BDF8"
                                   Visibility="{Binding HasActiveFilters, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="Scanning for driver updates..."
                                   Margin="0,10,0,0"
                                   FontSize="12"
                                   Foreground="#38BDF8"
                                   Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right">
                        <CheckBox Content="Include optional"
                                  Margin="0,0,16,0"
                                  Foreground="#F1F5F9"
                                  IsChecked="{Binding IncludeOptional}"/>
                        <Button Content="Refresh"
                                MinWidth="110"
                                Command="{Binding RefreshCommand}"
                                Padding="16,6"
                                Background="#38BDF8"
                                Foreground="#04152B"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="#1E293B"
                    BorderBrush="#334155"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12"
                    Margin="0,0,0,20"
                    Visibility="{Binding HasWarnings, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,6">
                        <TextBlock Text="âš "
                                   FontSize="14"
                                   Margin="0,0,6,0"
                                   Foreground="#FBBF24"/>
                        <TextBlock Text="Warnings"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding Warnings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           TextWrapping="Wrap"
                                           Margin="0,2,0,2"
                                           Foreground="#F8FAFC"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border Background="#1E293B"
                    BorderBrush="#334155"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12"
                    Margin="0,0,0,20"
                    Visibility="{Binding HasSkipDetails, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,6">
                        <TextBlock Text="â„¹"
                                   FontSize="14"
                                   Margin="0,0,6,0"
                                   Foreground="#38BDF8"/>
                        <TextBlock Text="Filtered updates"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding SkipDetails}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           TextWrapping="Wrap"
                                           Margin="0,2,0,2"
                                           Foreground="#F8FAFC"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <TextBlock Text="Run a scan to populate driver update insights."
                       FontSize="14"
                       Foreground="#94A3B8"
                       Margin="0,40,0,0"
                       HorizontalAlignment="Center"
                       d:DataContext="{d:DesignInstance Type=vm:DriverUpdatesViewModel, IsDesignTimeCreatable=False}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility"
                                Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasResults}"
                                         Value="True">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <ListView x:Name="UpdatesList"
                      ItemsSource="{Binding Updates}"
                      Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#E2E8F0"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding"
                                Value="0"/>
                        <Setter Property="Margin"
                                Value="0,4"/>
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch"/>
                        <Setter Property="Background"
                                Value="Transparent"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border x:Name="ItemBackground"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="12"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter Margin="0"
                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="ItemBackground"
                                                    Property="Background"
                                                    Value="{StaticResource ListItemHoverBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected"
                                                 Value="True">
                                            <Setter TargetName="ItemBackground"
                                                    Property="Background"
                                                    Value="{StaticResource ListItemSelectedBrush}"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected"
                                                           Value="True"/>
                                                <Condition Property="primitives:Selector.IsSelectionActive"
                                                           Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="ItemBackground"
                                                    Property="Background"
                                                    Value="{StaticResource ListItemSelectedInactiveBrush}"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:DriverUpdateItemViewModel}">
                    <Border Style="{StaticResource DriverCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding DeviceName}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <Border Style="{StaticResource StatusTagStyle}">
                                    <TextBlock Text="{Binding StatusLabel}"
                                               FontSize="12"
                                               FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="#38BDF8"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}"
                                                                 Value="{x:Static core:DriverUpdateStatus.UpdateAvailable}">
                                                        <Setter Property="Foreground"
                                                                Value="#F97316"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}"
                                                                 Value="{x:Static core:DriverUpdateStatus.UpToDate}">
                                                        <Setter Property="Foreground"
                                                                Value="#22C55E"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                                <Border Style="{StaticResource StatusTagStyle}"
                                        Visibility="{Binding ShowOptionalBadge, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Optional"
                                               FontSize="12"
                                               Foreground="#94A3B8"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Text="{Binding Manufacturer}"
                                       Margin="0,4,0,0"
                                       Foreground="#94A3B8"
                                       Visibility="{Binding HasManufacturer, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0,10,0,0">
                                <TextBlock Text="{Binding VersionSummary}"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text=" Â· "
                                           Foreground="#64748B"
                                           Visibility="{Binding HasCurrentVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text="{Binding CurrentVersionDateDisplay}"
                                           Foreground="#94A3B8"
                                           Visibility="{Binding HasCurrentVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text=" âŸ¶ "
                                           Foreground="#64748B"
                                           Visibility="{Binding HasAvailableVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text="{Binding AvailableVersionDateDisplay}"
                                           Foreground="#94A3B8"
                                           Visibility="{Binding HasAvailableVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>

                <TextBlock Text="{Binding ComparisonStatusLabel}"
                       Margin="0,6,0,0"
                       FontSize="12"
                       Foreground="#E2E8F0"
                       Visibility="{Binding IsComparisonMeaningful, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Text="{Binding ComparisonDetails}"
                       Margin="0,2,0,0"
                       FontSize="12"
                       Foreground="#94A3B8"
                       TextWrapping="Wrap"
                       Visibility="{Binding HasComparisonDetails, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <TextBlock Text="{Binding CategoryDisplay}"
                                       Margin="0,6,0,0"
                                       FontSize="12"
                                       Foreground="#94A3B8"/>

                <StackPanel Orientation="Horizontal"
                    Margin="0,6,0,0"
                    Visibility="{Binding HasDriverClass, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Class:"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#CBD5F5"
                       Margin="0,0,6,0"/>
                <TextBlock Text="{Binding DriverClass}"
                       FontSize="12"
                       Foreground="#94A3B8"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                    Margin="0,2,0,0"
                    Visibility="{Binding HasClassification, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Classification:"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#CBD5F5"
                       Margin="0,0,6,0"/>
                <TextBlock Text="{Binding Classification}"
                       FontSize="12"
                       Foreground="#94A3B8"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                    Margin="0,2,0,0"
                    Visibility="{Binding HasSeverity, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Severity:"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#CBD5F5"
                       Margin="0,0,6,0"/>
                <TextBlock Text="{Binding Severity}"
                       FontSize="12"
                       Foreground="#94A3B8"/>
                </StackPanel>

                            <TextBlock Text="{Binding HardwareIdsDisplay}"
                                       Margin="0,8,0,0"
                                       FontSize="12"
                                       Foreground="#CBD5F5"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="{Binding Description}"
                                       Margin="0,10,0,0"
                                       FontSize="12"
                                       Foreground="#E2E8F0"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <StackPanel Orientation="Horizontal"
                    Margin="0,10,0,0"
                    Visibility="{Binding HasInstalledManufacturer, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Installed manufacturer:"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#CBD5F5"
                       Margin="0,0,6,0"/>
                <TextBlock Text="{Binding InstalledManufacturerDisplay}"
                       FontSize="12"
                       Foreground="#94A3B8"/>
                </StackPanel>

                <TextBlock Text="{Binding InstalledInfPath}"
                       Margin="0,2,0,0"
                       FontSize="11"
                       Foreground="#64748B"
                       TextWrapping="Wrap"
                       Visibility="{Binding HasInstalledInfPath, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock Text="{Binding UpdateIdentifierDisplay}"
                       Margin="0,10,0,0"
                       FontSize="11"
                       Foreground="#64748B"
                       TextWrapping="Wrap"
                       Visibility="{Binding HasUpdateIdentifier, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <TextBlock Margin="0,10,0,0"
                                       FontSize="12"
                                       Foreground="#38BDF8"
                                       Visibility="{Binding HasInformationLinks, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Hyperlink NavigateUri="{Binding PrimaryInformationLink}"
                                           RequestNavigate="OnHyperlinkRequestNavigate">
                                    <Run Text="Open vendor support"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Border Background="#0F172A"
                    BorderBrush="#1E293B"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,32,0,0"
                    Visibility="{Binding HasInstalledDrivers, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,0,12">
                        <TextBlock Text="Installed drivers"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <Border Style="{StaticResource StatusTagStyle}"
                                Margin="12,0,0,0">
                            <TextBlock Text="{Binding InstalledDrivers.Count}"
                                       FontSize="12"
                                       Foreground="#94A3B8"/>
                        </Border>
                    </StackPanel>

                    <ListView ItemsSource="{Binding InstalledDrivers}"
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="#E2E8F0"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                <Setter Property="Foreground"
                    Value="#E2E8F0"/>
                <Setter Property="Background"
                    Value="Transparent"/>
                <Setter Property="HorizontalContentAlignment"
                    Value="Stretch"/>
                <Setter Property="Padding"
                    Value="0"/>
                <Setter Property="Margin"
                    Value="0"/>
                <Setter Property="BorderThickness"
                    Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="RowBackground"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">
                        <GridViewRowPresenter Margin="6,2"
                                      Content="{TemplateBinding Content}"
                                      Columns="{TemplateBinding GridView.ColumnCollection}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                             Value="True">
                            <Setter TargetName="RowBackground"
                                Property="Background"
                                Value="{StaticResource ListItemHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected"
                             Value="True">
                            <Setter TargetName="RowBackground"
                                Property="Background"
                                Value="{StaticResource ListItemSelectedBrush}"/>
                            <Setter Property="Foreground"
                                Value="#F8FAFC"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                            <Condition Property="IsSelected"
                                   Value="True"/>
                            <Condition Property="primitives:Selector.IsSelectionActive"
                                   Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="RowBackground"
                                Property="Background"
                                Value="{StaticResource ListItemSelectedInactiveBrush}"/>
                            <Setter Property="Foreground"
                                Value="#CBD5F5"/>
                        </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                    </Setter.Value>
                </Setter>
                </Style>
            </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn Header="Device" DisplayMemberBinding="{Binding DeviceName}" Width="220"/>
                                <GridViewColumn Header="Manufacturer" DisplayMemberBinding="{Binding Manufacturer}" Width="160"/>
                                <GridViewColumn Header="Provider" DisplayMemberBinding="{Binding Provider}" Width="160"/>
                                <GridViewColumn Header="Version" DisplayMemberBinding="{Binding DriverVersion}" Width="120"/>
                                <GridViewColumn Header="Driver Date" DisplayMemberBinding="{Binding DriverDateDisplay}" Width="110"/>
                                <GridViewColumn Header="Installed" DisplayMemberBinding="{Binding InstallDateDisplay}" Width="110"/>
                                <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="130"/>
                                <GridViewColumn Header="Signed" DisplayMemberBinding="{Binding SignedDisplay}" Width="90"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
