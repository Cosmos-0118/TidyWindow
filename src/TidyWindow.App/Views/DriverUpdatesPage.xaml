<Page x:Class="TidyWindow.App.Views.DriverUpdatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:TidyWindow.App.ViewModels"
      xmlns:core="clr-namespace:TidyWindow.Core.Updates;assembly=TidyWindow.Core"
      mc:Ignorable="d"
      Title="Driver updates"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="DriverCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#101D30"/>
            <Setter Property="BorderBrush"
                    Value="#223857"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="10"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="0,8,0,8"/>
        </Style>

        <Style x:Key="StatusTagStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="BorderBrush"
                    Value="#334155"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="6"/>
            <Setter Property="Padding"
                    Value="8,2"/>
            <Setter Property="Margin"
                    Value="12,0,0,0"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Margin="32"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  HorizontalContentAlignment="Stretch"
                  x:Name="RootScrollViewer">
        <StackPanel Orientation="Vertical"
                    MaxWidth="1280"
                    HorizontalAlignment="Center"
                    d:DataContext="{d:DesignInstance Type=vm:DriverUpdatesViewModel, IsDesignTimeCreatable=False}">
            Margin="0,0,0,24"
                        VerticalAlignment="Center">
            <Border Width="48"
                    Height="48"
                    CornerRadius="12"
                    Background="#1E293B"
                    Margin="0,0,12,0"
                    VerticalAlignment="Center">
                <TextBlock Text="ðŸ§©"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <StackPanel>
                <TextBlock Text="Driver update insights"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#F8FAFC"/>
                <TextBlock Text="Detect pending driver updates and compare versions."
                           FontSize="14"
                           Foreground="#94A3B8"/>
            </StackPanel>
        </StackPanel>

        <Border Background="#0F172A"
                BorderBrush="#1E293B"
                BorderThickness="1"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="{Binding Summary}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#E2E8F0"/>
                    <TextBlock Text="{Binding LastCheckedDisplay}"
                               Margin="0,6,0,0"
                               FontSize="12"
                               Foreground="#94A3B8"/>
                    <TextBlock Text="Scanning for driver updates..."
                               Margin="0,10,0,0"
                               FontSize="12"
                               Foreground="#38BDF8"
                               Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right">
                    <CheckBox Content="Include optional"
                              Margin="0,0,16,0"
                              Foreground="#F1F5F9"
                              IsChecked="{Binding IncludeOptional}"/>
                    <Button Content="Refresh"
                            MinWidth="110"
                            Command="{Binding RefreshCommand}"
                            Padding="16,6"
                            Background="#38BDF8"
                            Foreground="#04152B"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Background="#1E293B"
                BorderBrush="#334155"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="0,0,0,20"
                Visibility="{Binding HasWarnings, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,6">
                    <TextBlock Text="âš "
                               FontSize="14"
                               Margin="0,0,6,0"
                               Foreground="#FBBF24"/>
                    <TextBlock Text="Warnings"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#F8FAFC"/>
                </StackPanel>
                <ItemsControl ItemsSource="{Binding Warnings}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       TextWrapping="Wrap"
                                       Margin="0,2,0,2"
                                       Foreground="#F8FAFC"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <TextBlock Text="Run a scan to populate driver update insights."
                   FontSize="14"
                   Foreground="#94A3B8"
                   Margin="0,40,0,0"
                   HorizontalAlignment="Center"
                   d:DataContext="{d:DesignInstance Type=vm:DriverUpdatesViewModel, IsDesignTimeCreatable=False}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility"
                            Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasResults}"
                                     Value="True">
                            <Setter Property="Visibility"
                                    Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <ListView x:Name="UpdatesList"
                  ItemsSource="{Binding Updates}"
                  Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Background="Transparent"
                  BorderThickness="0"
                  Foreground="#E2E8F0"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding"
                            Value="0"/>
                    <Setter Property="Margin"
                            Value="0,4"/>
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                    <Setter Property="Background"
                            Value="Transparent"/>
                    <Setter Property="BorderThickness"
                            Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:DriverUpdateItemViewModel}">
                    <Border Style="{StaticResource DriverCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding DeviceName}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <Border Style="{StaticResource StatusTagStyle}">
                                    <TextBlock Text="{Binding StatusLabel}"
                                               FontSize="12"
                                               FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="#38BDF8"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}"
                                                                 Value="{x:Static core:DriverUpdateStatus.UpdateAvailable}">
                                                        <Setter Property="Foreground"
                                                                Value="#F97316"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}"
                                                                 Value="{x:Static core:DriverUpdateStatus.UpToDate}">
                                                        <Setter Property="Foreground"
                                                                Value="#22C55E"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                                <Border Style="{StaticResource StatusTagStyle}"
                                        Visibility="{Binding ShowOptionalBadge, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Optional"
                                               FontSize="12"
                                               Foreground="#94A3B8"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Text="{Binding Manufacturer}"
                                       Margin="0,4,0,0"
                                       Foreground="#94A3B8"
                                       Visibility="{Binding HasManufacturer, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0,10,0,0">
                                <TextBlock Text="{Binding VersionSummary}"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text=" Â· "
                                           Foreground="#64748B"
                                           Visibility="{Binding HasCurrentVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text="{Binding CurrentVersionDateDisplay}"
                                           Foreground="#94A3B8"
                                           Visibility="{Binding HasCurrentVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text=" âŸ¶ "
                                           Foreground="#64748B"
                                           Visibility="{Binding HasAvailableVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text="{Binding AvailableVersionDateDisplay}"
                                           Foreground="#94A3B8"
                                           Visibility="{Binding HasAvailableVersionTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>

                            <TextBlock Text="{Binding CategoryDisplay}"
                                       Margin="0,6,0,0"
                                       FontSize="12"
                                       Foreground="#94A3B8"/>

                            <TextBlock Text="{Binding HardwareIdsDisplay}"
                                       Margin="0,8,0,0"
                                       FontSize="12"
                                       Foreground="#CBD5F5"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="{Binding Description}"
                                       Margin="0,10,0,0"
                                       FontSize="12"
                                       Foreground="#E2E8F0"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <TextBlock Margin="0,10,0,0"
                                       FontSize="12"
                                       Foreground="#38BDF8"
                                       Visibility="{Binding HasInformationLinks, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Hyperlink NavigateUri="{Binding PrimaryInformationLink}"
                                               RequestNavigate="OnHyperlinkRequestNavigate">
                                        <Run Text="Open vendor support"/>
                                    </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>
