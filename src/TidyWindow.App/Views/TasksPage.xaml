<Page x:Class="TidyWindow.App.Views.TasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent"
      Title="Tasks">
    <Grid Margin="32">
        <StackPanel>
            <TextBlock Text="Tasks"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#F9FAFB"/>
            <TextBlock Text="Review background jobs and history"
                       FontSize="14"
                       Margin="0,6,0,20"
                       Foreground="#94A3B8"/>
            <Border Background="#1B1736"
                    Padding="20"
                    CornerRadius="14"
                    BorderBrush="#2D1F55"
                    BorderThickness="1">
                <TextBlock Text="{Binding Summary}"
                           TextWrapping="Wrap"
                           FontSize="16"
                           Foreground="#EDE9FE"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
