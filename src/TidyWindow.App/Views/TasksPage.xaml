<Page x:Class="TidyWindow.App.Views.TasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Tasks">
    <Grid Margin="24">
        <StackPanel>
            <TextBlock Text="Tasks"
                    FontSize="26"
                    FontWeight="Bold"/>
            <TextBlock Text="Review background jobs and history"
                    FontSize="14"
                    Margin="0,4,0,16"
                    Foreground="#666"/>
            <Border Background="#F8F1FF"
                    Padding="16"
                    CornerRadius="8">
                <TextBlock Text="{Binding Summary}"
                        TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
