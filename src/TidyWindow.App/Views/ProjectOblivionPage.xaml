<Page x:Class="TidyWindow.App.Views.ProjectOblivionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:TidyWindow.App.Converters"
    xmlns:controls="clr-namespace:TidyWindow.App.Views"
    Title="Project Oblivion"
    mc:Ignorable="d"
    Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <SolidColorBrush x:Key="OblivionBackdropBrush" Color="#010615"/>
        <SolidColorBrush x:Key="OblivionCardPrimaryBrush" Color="#0C182B"/>
        <SolidColorBrush x:Key="OblivionCardSecondaryBrush" Color="#101F36"/>
        <SolidColorBrush x:Key="OblivionCardTertiaryBrush" Color="#13233F"/>
        <SolidColorBrush x:Key="OblivionAccentBrush" Color="#34D399"/>
        <SolidColorBrush x:Key="OblivionAccentSecondaryBrush" Color="#38BDF8"/>
        <SolidColorBrush x:Key="OblivionMutedTextBrush" Color="#94A3B8"/>

        <Style x:Key="OblivionPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#04111E"/>
            <Setter Property="BorderBrush" Value="#34D399"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,9"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="PrimaryRoot"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#34D399" Offset="0"/>
                                    <GradientStop Color="#10B981" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PrimaryRoot" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.01" ScaleY="1.01"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="PrimaryRoot" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12"
                                                          Direction="270"
                                                          Color="#22C55E"
                                                          Opacity="0.5"
                                                          ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PrimaryRoot" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="PrimaryRoot" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OblivionSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="SecondaryRoot"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#172640" Offset="0"/>
                                    <GradientStop Color="#1C2C4A" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SecondaryRoot" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.01" ScaleY="1.01"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="SecondaryRoot" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8"
                                                          Direction="270"
                                                          Color="#1D4ED8"
                                                          Opacity="0.45"
                                                          ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="SecondaryRoot" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="SecondaryRoot" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OblivionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource OblivionCardPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <DataTemplate x:Key="AppListItemTemplate">
            <Border Padding="20">
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource OblivionCardStyle}">
                        <Setter Property="Background" Value="{StaticResource OblivionCardSecondaryBrush}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="1">
                                <Setter Property="Background" Value="{StaticResource OblivionCardPrimaryBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="2">
                                <Setter Property="Background" Value="{StaticResource OblivionCardTertiaryBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Subtitle}"
                                   Foreground="#C7D2FE"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   TextTrimming="CharacterEllipsis"/>
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Border Background="#1A2C4A"
                                    CornerRadius="12"
                                    Padding="12,4"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{Binding SizeDisplay}"
                                           Foreground="#E2E8F0"
                                           FontSize="12"
                                           FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#1A2C4A"
                                    CornerRadius="12"
                                    Padding="12,4">
                                <TextBlock Text="{Binding ScopeDisplay}"
                                           Foreground="#E2E8F0"
                                           FontSize="12"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button Content="Uninstall"
                                Padding="18,8"
                                Style="{StaticResource OblivionPrimaryButtonStyle}"
                                Command="{Binding DataContext.LaunchFlowCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource OblivionBackdropBrush}">
        <ScrollViewer x:Name="ContentScrollViewer"
                      Margin="32"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      HorizontalContentAlignment="Stretch"
                      PanningMode="VerticalOnly">
            <Grid x:Name="PageContentGrid"
                  MinWidth="0"
                  MaxWidth="1320"
                  HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <controls:PageTitleBar Grid.Row="0"
                                       Title="Project Oblivion cleanup"
                                       Subtitle="{Binding Summary}"
                                       IconGlyph="ðŸ§¹"
                                       BadgeText="{Binding LastRefreshedDisplay}"
                                       Margin="0,0,0,24">
                    <controls:PageTitleBar.TrailingContent>
                        <WrapPanel Orientation="Horizontal"
                                   HorizontalAlignment="Right"
                                   ItemHeight="Auto"
                                   ItemWidth="Auto"
                                   MinWidth="0">
                            <Button Content="Refresh inventory"
                                    Command="{Binding RefreshCommand}"
                                    Style="{StaticResource OblivionPrimaryButtonStyle}"
                                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                            <Button Content="Open uninstall flow"
                                    Command="{Binding LaunchFlowCommand}"
                                    CommandParameter="{Binding SelectedApp}"
                                    Style="{StaticResource OblivionSecondaryButtonStyle}"/>
                        </WrapPanel>
                    </controls:PageTitleBar.TrailingContent>
                    <controls:PageTitleBar.BodyContent>
                        <Border Margin="0,4,0,0"
                                Background="#0D1C33"
                                BorderBrush="#1F365A"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="16">
                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="220"/>
                                    <ColumnDefinition Width="*" MinWidth="220"/>
                                    <ColumnDefinition Width="*" MinWidth="220"/>
                                    <ColumnDefinition Width="*" MinWidth="220"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Style="{StaticResource OblivionCardStyle}"
                                        Margin="8"
                                        Padding="16"
                                        MinHeight="150"
                                        Background="#111F35">
                                    <StackPanel>
                                        <TextBlock Text="Focused deep clean"
                                                   Foreground="#93C5FD"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Headline}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"
                                                   Margin="0,8,0,0"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="When inventory is ready, tap uninstall on any card to launch the dedicated flow."
                                                   Foreground="#94A3B8"
                                                   FontSize="12"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1"
                                        Style="{StaticResource OblivionCardStyle}"
                                        Margin="8"
                                        Padding="16"
                                        MinHeight="150">
                                    <StackPanel>
                                        <TextBlock Text="Inventory status"
                                                   Foreground="#93C5FD"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding LastRefreshedDisplay}"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"
                                                   Margin="0,8,0,0"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Summary}"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2"
                                        Style="{StaticResource OblivionCardStyle}"
                                        Margin="8"
                                        Padding="16"
                                        MinHeight="150">
                                    <StackPanel>
                                        <TextBlock Text="Inventory overview"
                                                   Foreground="#93C5FD"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Apps.Count, StringFormat={}{0:N0} app(s)}"
                                                   FontSize="28"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"
                                                   Margin="0,8,0,0"/>
                                        <TextBlock Text="Apps ready for removal"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"
                                                   Margin="0,6,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="3"
                                        Style="{StaticResource OblivionCardStyle}"
                                        Margin="8"
                                        Padding="16"
                                        MinHeight="150">
                                    <StackPanel>
                                        <TextBlock Text="Warnings"
                                                   Foreground="#FDE047"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Warnings.Count, StringFormat={}{0} detected}"
                                                   FontSize="24"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FDE68A"
                                                   Margin="0,8,0,0"/>
                                        <TextBlock Text="Refresh inventory to clear resolved warnings."
                                                   Foreground="#94A3B8"
                                                   FontSize="12"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </controls:PageTitleBar.BodyContent>
                </controls:PageTitleBar>

                <Grid x:Name="MainLayoutGrid" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="PrimaryColumnHost"
                                Grid.Row="0"
                                Margin="0,0,24,0">
                        <Border Style="{StaticResource OblivionCardStyle}" Background="#111F35">
                            <StackPanel>
                                <TextBlock Text="Inventory scan"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="Refresh to capture the latest installed apps before launching the uninstall flow."
                                           Margin="0,6,0,0"
                                           Foreground="#94A3B8"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="Launch the dedicated uninstall flow from any app card after refresh completes."
                                           Margin="0,6,0,0"
                                           Foreground="#64748B"
                                           FontSize="11"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="Runs may require elevation depending on the chosen application."
                                           Margin="0,10,0,0"
                                           Foreground="#38BDF8"
                                           FontSize="11"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource OblivionCardStyle}"
                                Margin="0,24,0,0"
                                Background="#0F192B"
                                Padding="28,24">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,16">
                                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                             MinWidth="220"
                                             Margin="0,0,12,0"
                                             Padding="14,8"
                                             Style="{x:Null}"
                                             Background="#0B1A30"
                                             Foreground="#E2E8F0"
                                             BorderBrush="#1E2F4C"
                                             BorderThickness="1"
                                             FontSize="13"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Center"
                                             ToolTip="Filter by name, publisher, source, or scope"/>
                                    <Button Content="Clear"
                                            Command="{Binding ClearSearchCommand}"
                                            Padding="16,8"
                                            HorizontalAlignment="Right">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource OblivionSecondaryButtonStyle}">
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DockPanel>

                                <ListBox Grid.Row="1"
                                         ItemsSource="{Binding Apps}"
                                         AlternationCount="3"
                                         ItemTemplate="{StaticResource AppListItemTemplate}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Margin="0"
                                         HorizontalContentAlignment="Stretch"
                                         SelectedItem="{Binding SelectedApp}"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                         SelectionMode="Single">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0,18,0,0"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Focusable" Value="False"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>

                                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                                    <TextBlock Text="Refresh inventory to see installed apps."
                                               Foreground="#F87171"
                                               Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasApps}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Button Content="Scan now"
                                            Margin="0,12,0,0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource OblivionPrimaryButtonStyle}"
                                            Command="{Binding RefreshCommand}"
                                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                </Grid>
            </Grid>
        </ScrollViewer>

        <Grid x:Name="ProjectOblivionLoaderOverlay"
              Margin="32"
              Panel.ZIndex="10"
              Background="#B3091126">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Opacity" Value="0"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="IsHitTestVisible" Value="True"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard FillBehavior="Stop">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.35"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsBusy}" Value="False">
                            <Setter Property="Opacity" Value="0"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard FillBehavior="Stop">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border Background="#E6111A2E"
                    CornerRadius="28"
                    Padding="32"
                    BorderBrush="#334155"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    MaxWidth="720"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="48"
                                      ShadowDepth="0"
                                      Opacity="0.45"
                                      Color="#22D3EE"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel HorizontalAlignment="Center" MaxWidth="520">
                        <TextBlock Text="Rebuilding the Oblivion map"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="Inventory is synchronizing. Hang tight while we trace every install signature."
                                   Margin="0,8,0,0"
                                   Foreground="#C7D2FE"
                                   FontSize="13"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Summary, StringFormat=Current view: {0}}"
                                   Margin="0,6,0,0"
                                   Foreground="#93C5FD"
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <Grid Grid.Row="1"
                          Margin="0,28,0,0"
                          Width="280"
                          Height="240"
                          HorizontalAlignment="Center">
                        <Ellipse Width="220"
                                 Height="220"
                                 Stroke="#132A4A"
                                 StrokeThickness="2"
                                 Opacity="0.35"/>
                        <Ellipse Width="190"
                                 Height="190"
                                 Stroke="#0EA5E9"
                                 StrokeThickness="1.2"
                                 StrokeDashArray="4 10"
                                 StrokeDashCap="Round"
                                 x:Name="SweepRing"
                                 Opacity="0.8"/>
                        <Ellipse Width="150"
                                 Height="150"
                                 Stroke="#13415C"
                                 StrokeThickness="1.5"
                                 Opacity="0.45"/>
                        <Ellipse Width="140"
                                 Height="140"
                                 Stroke="#34D399"
                                 StrokeThickness="2"
                                 Opacity="0.65"
                                 RenderTransformOrigin="0.5,0.5"
                                 x:Name="PulseRing">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="PulseRingScale" ScaleX="0.7" ScaleY="0.7"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="16"
                                 Height="16"
                                 Fill="#38BDF8"
                                 Opacity="0.85"/>
                        <Border Width="96"
                                Height="96"
                                Background="#101f36"
                                BorderBrush="#1E3357"
                                BorderThickness="1"
                                CornerRadius="48"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect Color="#1E3A8A"
                                                  BlurRadius="24"
                                                  ShadowDepth="0"
                                                  Opacity="0.6"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="â—Ž"
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           Foreground="#34D399"/>
                                <TextBlock Text="Live scan"
                                           FontSize="11"
                                           Foreground="#CBD5F5"
                                           Margin="0,4,0,0"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="SweepRing"
                                                         Storyboard.TargetProperty="StrokeDashOffset"
                                                         From="0"
                                                         To="60"
                                                         Duration="0:0:2.4"/>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PulseRingScale"
                                                                       Storyboard.TargetProperty="ScaleX">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.6"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="1.1"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2.4" Value="0.6"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PulseRingScale"
                                                                       Storyboard.TargetProperty="ScaleY">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.6"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="1.1"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2.4" Value="0.6"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PulseRing"
                                                                       Storyboard.TargetProperty="Opacity">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.3"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0.85"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2.4" Value="0.3"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>
                    </Grid>

                    <StackPanel Grid.Row="2"
                                Margin="0,28,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Border Style="{StaticResource OblivionCardStyle}"
                                Background="#111b33"
                                Padding="16"
                                Margin="4"
                                MinWidth="160">
                            <StackPanel>
                                <TextBlock Text="Snapshot"
                                           Foreground="#93C5FD"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding LastRefreshedDisplay}"
                                           Foreground="#E2E8F0"
                                           FontSize="12"
                                           Margin="0,4,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource OblivionCardStyle}"
                                Background="#0f1c32"
                                Padding="16"
                                Margin="4"
                                MinWidth="160">
                            <StackPanel>
                                <TextBlock Text="Cache"
                                           Foreground="#A5B4FC"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Local inventory refresh in progress"
                                           Foreground="#CBD5F5"
                                           FontSize="12"
                                           Margin="0,4,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource OblivionCardStyle}"
                                Background="#0f1c32"
                                Padding="16"
                                Margin="4"
                                MinWidth="160">
                            <StackPanel>
                                <TextBlock Text="Apps tracked"
                                           Foreground="#FDE68A"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Apps.Count, StringFormat={}{0} entries}"
                                           Foreground="#F8FAFC"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
