<Page x:Class="TidyWindow.App.Views.PackageMaintenancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
      xmlns:converters="clr-namespace:TidyWindow.App.Converters"
      mc:Ignorable="d"
      Title="Package maintenance"
      Background="Transparent"
      d:DataContext="{d:DesignInstance Type=viewModels:PackageMaintenanceViewModel, IsDesignTimeCreatable=False}">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <ControlTemplate x:Key="MaintenanceComboToggleButtonTemplate"
                         TargetType="ToggleButton">
            <Grid>
                <Border x:Name="ToggleBorder"
                        Background="#0F172A"
                        BorderBrush="#1E293B"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8,4"/>
                <Path Data="M 0 0 L 5 5 L 10 0"
                      Stroke="#38BDF8"
                      StrokeThickness="1.5"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#17233C"/>
                </Trigger>
                <Trigger Property="IsChecked"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#132039"/>
                    <Setter TargetName="ToggleBorder"
                            Property="BorderBrush"
                            Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#132039"/>
                    <Setter TargetName="ToggleBorder"
                            Property="BorderBrush"
                            Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="ToggleBorder"
                            Property="Opacity"
                            Value="0.5"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="MaintenanceComboBoxItemStyle"
               TargetType="ComboBoxItem">
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Padding"
                    Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1B2942"/>
                </Trigger>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1E3A8A"/>
                    <Setter Property="Foreground"
                            Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#7C3AED"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="14,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#6D28D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#5B21B6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#312E81"/>
                                <Setter Property="Foreground"
                                        Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="BorderBrush"
                    Value="#334155"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#243048"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#1A2436"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#111827"/>
                                <Setter TargetName="Root"
                                        Property="BorderBrush"
                                        Value="#1E293B"/>
                                <Setter Property="Foreground"
                                        Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="PackageDetailsTemplate"
                      DataType="{x:Type viewModels:PackageMaintenanceItemViewModel}">
            <StackPanel>
                <TextBlock Text="{Binding DisplayName}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#F8FAFC"
                           TextWrapping="Wrap"/>
                <StackPanel Orientation="Horizontal"
                            Margin="0,6,0,0"
                            VerticalAlignment="Center">
                    <Border Background="#1E293B"
                            CornerRadius="6"
                            Padding="8,3"
                            Margin="0,0,12,0">
                        <TextBlock Text="{Binding ManagerDisplay}"
                                   Foreground="#38BDF8"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>
                    </Border>
                    <TextBlock Text="{Binding VersionDisplay}"
                               Foreground="#E2E8F0"
                               FontSize="13"
                               VerticalAlignment="Center"/>
                    <Border Background="#1F2937"
                            CornerRadius="6"
                            Padding="6,2"
                            Margin="12,0,0,0"
                            Visibility="{Binding HasUpdate, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Update available"
                                   Foreground="#22C55E"
                                   FontSize="11"
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <TextBlock Text="{Binding Summary}"
                           Foreground="#94A3B8"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           Visibility="{Binding Summary, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Tags"
                               FontSize="12"
                               Foreground="#CBD5F5"
                               Margin="0,0,0,4"
                               Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <ItemsControl ItemsSource="{Binding Tags}"
                                  Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E293B"
                                        CornerRadius="6"
                                        Padding="8,3"
                                        Margin="0,0,6,6">
                                    <TextBlock Text="{Binding}"
                                               Foreground="#E2E8F0"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Homepage"
                               FontSize="12"
                               Foreground="#CBD5F5"
                               Margin="0,0,0,4"
                               Visibility="{Binding Homepage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding Homepage}"
                               Foreground="#38BDF8"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Visibility="{Binding Homepage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,12,0,0">
                    <TextBlock Text="Last action"
                               FontSize="12"
                               Foreground="#CBD5F5"/>
                    <TextBlock Text="{Binding LastOperationMessage}"
                               Foreground="#94A3B8"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,3,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="#94A3B8"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                 Value="True">
                                        <Setter Property="Foreground"
                                                Value="#22C55E"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                 Value="False">
                                        <Setter Property="Foreground"
                                                Value="#F87171"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,12,0,0">
                    <TextBlock Text="Target version (optional)"
                               FontSize="12"
                               Foreground="#CBD5F5"/>
                    <TextBox Text="{Binding TargetVersion, UpdateSourceTrigger=PropertyChanged}"
                 Width="220"
                             Margin="0,4,0,0"
                             Padding="8,4"
                             Background="#0F172A"
                             BorderBrush="#1E293B"
                             Foreground="#E2E8F0"
                             ToolTip="Provide a specific version to install. Leave blank for the latest release."/>
                    <TextBlock Text="Leave blank to install the latest version available from the package manager."
                               Foreground="#64748B"
                               FontSize="11"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0,18,0,0">
                    <Button Content="Queue update"
                            Command="{Binding DataContext.QueueUpdateCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,0,8,0"
                            MinWidth="120">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanUpdate}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Remove"
                            Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            MinWidth="120">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanRemove}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Margin="32"
          MinWidth="720">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Border Width="48"
                            Height="48"
                            CornerRadius="12"
                            Background="#1E293B"
                            Margin="0,0,12,0">
                        <TextBlock Text="🛠️"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="{Binding Headline}"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="{Binding SummaryText}"
                                   FontSize="14"
                                   Foreground="#94A3B8"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <ProgressBar Width="120"
                                 Height="6"
                                 IsIndeterminate="True"
                                 Margin="0,0,12,0"
                                 Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButtonStyle}">
                        <Button.IsEnabled>
                            <Binding Path="IsBusy"
                                     Converter="{StaticResource InverseBooleanConverter}"/>
                        </Button.IsEnabled>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1"
                  Margin="0,28,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"
                                      MinWidth="360"/>
                    <ColumnDefinition Width="3*"
                                      MinWidth="220"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="#111827"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,16,0"
                        MinWidth="320"
                        BorderBrush="#1E293B"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <WrapPanel Grid.Row="0"
                                   Margin="0,0,0,18"
                                   VerticalAlignment="Center">
                            <TextBox Width="220"
                                     Margin="0,0,12,8"
                                     Padding="10,6"
                                     Background="#0F172A"
                                     BorderBrush="#1E293B"
                                     Foreground="#E2E8F0"
                                     ToolTip="Filter by package name, identifier, manager, or tag"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                            <ComboBox Width="180"
                                      Margin="0,0,12,8"
                                      ItemsSource="{Binding ManagerFilters}"
                                      SelectedItem="{Binding SelectedManager, Mode=TwoWay}"
                                      Background="Transparent"
                                      Foreground="#E2E8F0"
                                      BorderThickness="0"
                                      Padding="0">
                                <ComboBox.Template>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton x:Name="ToggleButton"
                                                          Template="{StaticResource MaintenanceComboToggleButtonTemplate}"
                                                          Grid.ColumnSpan="2"
                                                          Focusable="False"
                                                          IsHitTestVisible="True"
                                                          ClickMode="Press"
                                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                            <ContentPresenter x:Name="ContentSite"
                                                              Margin="14,4,36,4"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Left"
                                                              RecognizesAccessKey="True"
                                                              Content="{TemplateBinding SelectionBoxItem}"/>
                                            <Popup x:Name="Popup"
                                                   Placement="Bottom"
                                                   AllowsTransparency="True"
                                                   Focusable="False"
                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                   PopupAnimation="Slide">
                                                <Border x:Name="PopupBorder"
                                                        Background="#0F172A"
                                                        BorderBrush="#1E293B"
                                                        BorderThickness="1"
                                                        CornerRadius="6"
                                                        Padding="4">
                                                    <ScrollViewer Margin="0"
                                                                  SnapsToDevicePixels="True">
                                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="HasItems"
                                                     Value="False">
                                                <Setter TargetName="PopupBorder"
                                                        Property="MinHeight"
                                                        Value="24"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled"
                                                     Value="False">
                                                <Setter Property="Foreground"
                                                        Value="#64748B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ComboBox.Template>
                                <ComboBox.ItemContainerStyle>
                                    <StaticResource ResourceKey="MaintenanceComboBoxItemStyle"/>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                            <CheckBox Content="Updates only"
                                      Margin="0,0,12,8"
                                      IsChecked="{Binding UpdatesOnly, Mode=TwoWay}"
                                      Foreground="#F8FAFC"
                                      VerticalAlignment="Center"/>
                            <Button Content="Queue selected"
                                    Margin="0,0,12,8"
                                    Command="{Binding QueueSelectedUpdatesCommand}"
                                    Style="{StaticResource AccentButtonStyle}"/>
                        </WrapPanel>

                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding Warnings}">
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <Trigger Property="HasItems"
                                                 Value="True">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#312E81"
                                            BorderBrush="#4338CA"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="⚠"
                                                       FontSize="14"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"
                                                       Foreground="#E2E8F0"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Grid Grid.Row="2">
                            <ListView ItemsSource="{Binding Packages}"
                                      SelectedItem="{Binding SelectedPackage, Mode=TwoWay}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="#F8FAFC"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.CanContentScroll="True"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      VirtualizingStackPanel.ScrollUnit="Pixel">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch"/>
                    <Setter Property="Padding"
                        Value="10,8"/>
                    <Setter Property="Margin"
                        Value="0,2"/>
                                        <Setter Property="Background"
                                                Value="#0F172A"/>
                                        <Setter Property="Foreground"
                                                Value="#F8FAFC"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Border x:Name="Container"
                                                            CornerRadius="8"
                                                            Background="{TemplateBinding Background}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <GridViewRowPresenter Content="{TemplateBinding Content}"
                                                                              Columns="{Binding Path=View.Columns, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="Background"
                                                                    Value="#1E3A8A"/>
                                                            <Setter Property="Foreground"
                                                                    Value="#F8FAFC"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter TargetName="Container"
                                                                    Property="Background"
                                                                    Value="#1B2942"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.View>
                                    <GridView AllowsColumnReorder="False">
                                        <GridView.ColumnHeaderContainerStyle>
                                            <Style TargetType="GridViewColumnHeader">
                                                <Setter Property="Foreground"
                                                        Value="#94A3B8"/>
                                                <Setter Property="FontSize"
                                                        Value="12"/>
                                                <Setter Property="FontWeight"
                                                        Value="SemiBold"/>
                                                <Setter Property="HorizontalContentAlignment"
                                                        Value="Left"/>
                                                <Setter Property="Padding"
                                                        Value="6,4"/>
                                                <Setter Property="Background"
                                                        Value="Transparent"/>
                                            </Style>
                                        </GridView.ColumnHeaderContainerStyle>
                                        <GridViewColumn Width="260">
                                            <GridViewColumn.Header>
                                                <TextBlock Text="Package"/>
                                            </GridViewColumn.Header>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal"
                                                                    VerticalAlignment="Center">
                                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                      Margin="0,0,8,0"/>
                                                            <TextBlock Text="{Binding DisplayName}"
                                                                       FontWeight="SemiBold"
                                                                       TextWrapping="NoWrap"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <Border Background="#1F2937"
                                                                    CornerRadius="6"
                                                                    Padding="6,2"
                                                                    Margin="12,0,0,0"
                                                                    Visibility="{Binding HasUpdate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <TextBlock Text="Update"
                                                                           Foreground="#22C55E"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold"/>
                                                            </Border>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Summary}"
                                                                   Foreground="#94A3B8"
                                                                   FontSize="12"
                                                                   TextWrapping="Wrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="24,2,0,0"
                                                                   LineStackingStrategy="BlockLineHeight"
                                                                   LineHeight="16"
                                                                   MaxHeight="34"/>
                                                        <TextBlock Text="{Binding TagsDisplay}"
                                                                   Foreground="#64748B"
                                                                   FontSize="11"
                                                                   TextWrapping="NoWrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="24,2,0,0"
                                                                   MaxWidth="200"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Width="90"
                                                        DisplayMemberBinding="{Binding ManagerDisplay}">
                                            <GridViewColumn.Header>
                                                <TextBlock Text="Manager"/>
                                            </GridViewColumn.Header>
                                        </GridViewColumn>
                                        <GridViewColumn Width="90"
                                                        DisplayMemberBinding="{Binding Source}">
                                            <GridViewColumn.Header>
                                                <TextBlock Text="Source"/>
                                            </GridViewColumn.Header>
                                        </GridViewColumn>
                                        <GridViewColumn Width="90"
                                                        DisplayMemberBinding="{Binding VersionDisplay}">
                                            <GridViewColumn.Header>
                                                <TextBlock Text="Version"/>
                                            </GridViewColumn.Header>
                                        </GridViewColumn>
                                        <GridViewColumn Width="150">
                                            <GridViewColumn.Header>
                                                <TextBlock Text="Status"/>
                                            </GridViewColumn.Header>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding QueueStatus}"
                                                                   Foreground="#38BDF8"
                                                                   FontSize="11"
                                                                   FontWeight="SemiBold"
                                                                   Margin="0,0,0,2"
                                                                   TextWrapping="NoWrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Visibility="{Binding QueueStatus, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                        <TextBlock Text="{Binding LastOperationMessage}"
                                                                   TextWrapping="Wrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   MaxWidth="150"
                                                                   LineStackingStrategy="BlockLineHeight"
                                                                   LineHeight="16"
                                                                   MaxHeight="34">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground"
                                                                            Value="#94A3B8"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                                                     Value="True">
                                                                            <Setter Property="Foreground"
                                                                                    Value="#22C55E"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                                                     Value="False">
                                                                            <Setter Property="Foreground"
                                                                                    Value="#F87171"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Width="120">
                                            <GridViewColumn.Header>
                                                <TextBlock Text="Target version"/>
                                            </GridViewColumn.Header>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox Width="90"
                                                             Margin="0,0,0,8"
                                                             Padding="8,4"
                                                             Background="#0F172A"
                                                             BorderBrush="#1E293B"
                                                             Foreground="#E2E8F0"
                                                             Text="{Binding TargetVersion, UpdateSourceTrigger=PropertyChanged}"
                                                             ToolTip="Optional: specify the version to install."/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Width="180">
                                            <GridViewColumn.Header>
                                                <TextBlock Text="Actions"/>
                                            </GridViewColumn.Header>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid HorizontalAlignment="Stretch"
                                                          Margin="0,0,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Button Grid.Column="0"
                                                                Command="{Binding DataContext.QueueUpdateCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                CommandParameter="{Binding}"
                                                                Margin="0,0,6,4"
                                                                HorizontalAlignment="Stretch"
                                                                MinWidth="0">
                                                            <TextBlock Text="Queue update"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="NoWrap"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <Button.Style>
                                                                <Style TargetType="Button"
                                                                       BasedOn="{StaticResource AccentButtonStyle}">
                                                                    <Setter Property="IsEnabled"
                                                                            Value="True"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding CanUpdate}"
                                                                                     Value="False">
                                                                            <Setter Property="IsEnabled"
                                                                                    Value="False"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsBusy}"
                                                                                     Value="True">
                                                                            <Setter Property="IsEnabled"
                                                                                    Value="False"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        <Button Grid.Column="1"
                                                                Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                CommandParameter="{Binding}"
                                                                HorizontalAlignment="Stretch"
                                                                Margin="0,0,0,4"
                                                                MinWidth="0">
                                                            <TextBlock Text="Remove"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="NoWrap"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <Button.Style>
                                                                <Style TargetType="Button"
                                                                       BasedOn="{StaticResource SecondaryButtonStyle}">
                                                                    <Setter Property="IsEnabled"
                                                                            Value="True"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding CanRemove}"
                                                                                     Value="False">
                                                                            <Setter Property="IsEnabled"
                                                                                    Value="False"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsBusy}"
                                                                                     Value="True">
                                                                            <Setter Property="IsEnabled"
                                                                                    Value="False"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                            <TextBlock Text="No packages match your filter."
                                       Foreground="#64748B"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="13">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Packages.Count}"
                                                         Value="0">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <DockPanel Grid.Row="3"
                                   Margin="0,18,0,0">
                            <TextBlock Text="{Binding LastRefreshedDisplay}"
                                       Foreground="#64748B"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding SummaryText}"
                                       Foreground="#E2E8F0"
                                       FontSize="12"
                                       Margin="16,0,0,0"/>
                        </DockPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="1"
                        Background="#111827"
                        CornerRadius="12"
                        Padding="16"
                        MinWidth="220"
                        BorderBrush="#1E293B"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                                    Orientation="Vertical">
                            <TextBlock Text="Package details"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="#E2E8F0"/>
                            <TextBlock Text="Review metadata, tags, and last actions"
                                       FontSize="11"
                                       Foreground="#64748B"/>
                        </StackPanel>

                        <Border Grid.Row="1"
                                Margin="0,16,0,0"
                                Background="#0F172A"
                                CornerRadius="10"
                                Padding="10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          HorizontalContentAlignment="Stretch"
                                          VerticalContentAlignment="Stretch">
                                <Grid>
                                    <ContentControl Content="{Binding SelectedPackage}"
                                                    ContentTemplate="{StaticResource PackageDetailsTemplate}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedPackage}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>

                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedPackage}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <TextBlock Text="Select a package to see its details"
                                                   Foreground="#64748B"
                                                   FontSize="13"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
    </Grid>
</Page>
