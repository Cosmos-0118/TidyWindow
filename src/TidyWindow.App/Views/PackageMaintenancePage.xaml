<Page x:Class="TidyWindow.App.Views.PackageMaintenancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
      xmlns:converters="clr-namespace:TidyWindow.App.Converters"
      mc:Ignorable="d"
      Title="Package maintenance"
      Background="Transparent"
      d:DataContext="{d:DesignInstance Type=viewModels:PackageMaintenanceViewModel, IsDesignTimeCreatable=False}">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <ControlTemplate x:Key="MaintenanceComboToggleButtonTemplate"
                         TargetType="ToggleButton">
            <Grid>
                <Border x:Name="ToggleBorder"
                        Background="#0F172A"
                        BorderBrush="#1E293B"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8,4"/>
                <Path Data="M 0 0 L 5 5 L 10 0"
                      Stroke="#38BDF8"
                      StrokeThickness="1.5"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#17233C"/>
                </Trigger>
                <Trigger Property="IsChecked"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#132039"/>
                    <Setter TargetName="ToggleBorder"
                            Property="BorderBrush"
                            Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter TargetName="ToggleBorder"
                            Property="Background"
                            Value="#132039"/>
                    <Setter TargetName="ToggleBorder"
                            Property="BorderBrush"
                            Value="#38BDF8"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="ToggleBorder"
                            Property="Opacity"
                            Value="0.5"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="MaintenanceComboBoxItemStyle"
               TargetType="ComboBoxItem">
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Padding"
                    Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1B2942"/>
                </Trigger>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1E3A8A"/>
                    <Setter Property="Foreground"
                            Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#7C3AED"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="14,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#6D28D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#5B21B6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#312E81"/>
                                <Setter Property="Foreground"
                                        Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="BorderBrush"
                    Value="#334155"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#243048"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#1A2436"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#111827"/>
                                <Setter TargetName="Root"
                                        Property="BorderBrush"
                                        Value="#1E293B"/>
                                <Setter Property="Foreground"
                                        Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#DC2626"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="BorderBrush"
                    Value="#B91C1C"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="14,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#B91C1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#991B1B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#7F1D1D"/>
                                <Setter Property="Foreground"
                                        Value="#FCA5A5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardBorderStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#111827"/>
            <Setter Property="BorderBrush"
                    Value="#1E293B"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="20"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
        </Style>

        <Style x:Key="AnimatedGridRowItemStyle"
               TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch"/>
            <Setter Property="Padding"
                    Value="0"/>
        <Setter Property="Margin"
            Value="0,14"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Container"
                                CornerRadius="14"
                                Background="#101B33"
                                BorderBrush="#1E293B"
                                BorderThickness="1"
                                Padding="20"
                                SnapsToDevicePixels="True"
                                Opacity="0"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TranslateTransform Y="16"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Container"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.24">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Container"
                                                         Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                                         To="0"
                                                         Duration="0:0:0.28">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter TargetName="Container"
                                        Property="Background"
                                        Value="#1E3A8A"/>
                                <Setter TargetName="Container"
                                        Property="BorderBrush"
                                        Value="#38BDF8"/>
                                <Setter Property="Foreground"
                                        Value="#F8FAFC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Container"
                                        Property="Background"
                                        Value="#162643"/>
                                <Setter TargetName="Container"
                                        Property="BorderBrush"
                                        Value="#1E3A8A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Container"
                                        Property="Opacity"
                                        Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AnimatedQueueItemStyle"
               TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch"/>
            <Setter Property="Padding"
                    Value="12"/>
            <Setter Property="Margin"
                    Value="0,4"/>
            <Setter Property="Background"
                    Value="#0F172A"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Container"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True"
                                Opacity="0"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TranslateTransform Y="12"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Container"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.24">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Container"
                                                         Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                                         To="0"
                                                         Duration="0:0:0.26">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <DataTrigger Binding="{Binding IsActive}"
                                         Value="True">
                                <Setter TargetName="Container"
                                        Property="BorderBrush"
                                        Value="#38BDF8"/>
                                <Setter TargetName="Container"
                                        Property="BorderThickness"
                                        Value="1"/>
                            </DataTrigger>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter TargetName="Container"
                                        Property="Background"
                                        Value="#1E3A8A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Container"
                                        Property="Background"
                                        Value="#1B2942"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="OperationDetailsTemplate"
                      DataType="{x:Type viewModels:PackageMaintenanceOperationViewModel}">
            <StackPanel>
                <TextBlock Text="{Binding PackageDisplay}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#F8FAFC"
                           TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,6,0,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusDisplay}"
                               FontWeight="SemiBold"
                               Margin="0,0,12,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="#38BDF8"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}"
                                                 Value="Succeeded">
                                        <Setter Property="Foreground"
                                                Value="#22C55E"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}"
                                                 Value="Failed">
                                        <Setter Property="Foreground"
                                                Value="#F87171"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding Message}"
                               Foreground="#94A3B8"
                               TextWrapping="Wrap"
                               MaxWidth="260"/>
                </StackPanel>

                <WrapPanel Margin="0,8,0,0"
                           HorizontalAlignment="Left">
                    <TextBlock Text="{Binding EnqueuedAt, StringFormat=Enqueued Â· {0:t}}"
                               Foreground="#64748B"
                               FontSize="11"
                               Margin="0,0,12,6"/>
                    <TextBlock Text="{Binding StartedAt, StringFormat=Started Â· {0:t}}"
                               Foreground="#64748B"
                               FontSize="11"
                               Margin="0,0,12,6">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StartedAt}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding CompletedAt, StringFormat=Completed Â· {0:t}}"
                               Foreground="#64748B"
                               FontSize="11"
                               Margin="0,0,12,6">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CompletedAt}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding Attempts}"
                               Foreground="#64748B"
                               FontSize="11"
                               Margin="0,0,0,6">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Attempts}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Attempts}"
                                                 Value="">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </WrapPanel>

                <Border Background="#0F172A"
                        BorderBrush="#1E293B"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,12,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding DisplayLines}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,6">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="#94A3B8"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.HasErrors, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                 Value="True">
                                                        <Setter Property="Foreground"
                                                                Value="#F87171"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="PackageDetailsTemplate"
                      DataType="{x:Type viewModels:PackageMaintenanceItemViewModel}">
            <StackPanel>
                <TextBlock Text="{Binding DisplayName}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#F8FAFC"
                           TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,6,0,0"
                            VerticalAlignment="Center">
                    <Border Background="#1E293B"
                            CornerRadius="6"
                            Padding="8,3"
                            Margin="0,0,12,0">
                        <TextBlock Text="{Binding ManagerDisplay}"
                                   Foreground="#38BDF8"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>
                    </Border>
                    <TextBlock Text="{Binding VersionDisplay}"
                               Foreground="#E2E8F0"
                               FontSize="13"
                               VerticalAlignment="Center"/>
                    <Border Background="#1F2937"
                            CornerRadius="6"
                            Padding="6,2"
                            Margin="12,0,0,0"
                            Visibility="{Binding HasUpdate, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Update available"
                                   Foreground="#22C55E"
                                   FontSize="11"
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <TextBlock Text="{Binding Summary}"
                           Foreground="#94A3B8"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           Visibility="{Binding Summary, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Tags"
                               FontSize="12"
                               Foreground="#CBD5F5"
                               Margin="0,0,0,4"
                               Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <ItemsControl ItemsSource="{Binding Tags}"
                                  Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E293B"
                                        CornerRadius="6"
                                        Padding="8,3"
                                        Margin="0,0,6,6">
                                    <TextBlock Text="{Binding}"
                                               Foreground="#E2E8F0"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Homepage"
                               FontSize="12"
                               Foreground="#CBD5F5"
                               Margin="0,0,0,4"
                               Visibility="{Binding Homepage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding Homepage}"
                               Foreground="#38BDF8"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Visibility="{Binding Homepage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,12,0,0">
                    <TextBlock Text="Last action"
                               FontSize="12"
                               Foreground="#CBD5F5"/>
                    <TextBlock Text="{Binding LastOperationMessage}"
                               Foreground="#94A3B8"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,3,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="#94A3B8"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                 Value="True">
                                        <Setter Property="Foreground"
                                                Value="#22C55E"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                 Value="False">
                                        <Setter Property="Foreground"
                                                Value="#F87171"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,12,0,0">
                    <TextBlock Text="Target version (optional)"
                               FontSize="12"
                               Foreground="#CBD5F5"/>
                    <TextBox Text="{Binding TargetVersion, UpdateSourceTrigger=PropertyChanged}"
                             MinWidth="220"
                             HorizontalAlignment="Stretch"
                             Margin="0,4,0,0"
                             Padding="8,4"
                             Background="#0F172A"
                             BorderBrush="#1E293B"
                             Foreground="#E2E8F0"
                             ToolTip="Provide a specific version to install. Leave blank for the latest release."/>
                    <TextBlock Text="Leave blank to install the latest version available from the package manager."
                               Foreground="#64748B"
                               FontSize="11"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <WrapPanel Margin="0,18,0,0">
                    <Button Content="Q"
                            Command="{Binding DataContext.QueueUpdateCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,0,8,8"
                            Width="42"
                            Height="36"
                            Padding="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            AutomationProperties.Name="Queue update">
                        <Button.ToolTip>Queue update</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanUpdate}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="R"
                            Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,0,8,8"
                            Width="42"
                            Height="36"
                            Padding="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            AutomationProperties.Name="Remove">
                        <Button.ToolTip>Remove</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanRemove}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
            <Button Content="F"
                            Command="{Binding DataContext.ForceRemoveCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
