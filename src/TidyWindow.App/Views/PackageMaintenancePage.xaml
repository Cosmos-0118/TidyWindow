<Page x:Class="TidyWindow.App.Views.PackageMaintenancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
            xmlns:converters="clr-namespace:TidyWindow.App.Converters"
            xmlns:controls="clr-namespace:TidyWindow.App.Views"
            xmlns:ux="clr-namespace:TidyWindow.App.Controls"
      mc:Ignorable="d"
      Title="Package maintenance"
      Background="Transparent"
      d:DataContext="{d:DesignInstance Type=viewModels:PackageMaintenanceViewModel, IsDesignTimeCreatable=False}">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:EnumEqualsConverter x:Key="EnumEqualsConverter"/>
        <converters:AlternationIndexToBrushConverter x:Key="MaintenanceAlternationBrushConverter"/>
    <converters:StringLengthToFontSizeConverter x:Key="PackageNameFontSizeConverter"
                            LargeSize="15"
                            MediumSize="13"
                            SmallSize="11"/>
    <converters:StringLengthToFontSizeConverter x:Key="PackageDetailsFontSizeConverter"
                            LargeSize="20"
                            MediumSize="17"
                            SmallSize="15"
                            MinimumSize="13"/>

        <Style x:Key="AccentButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#7C3AED"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="14,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#6D28D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#5B21B6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#312E81"/>
                                <Setter Property="Foreground"
                                        Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="BorderBrush"
                    Value="#334155"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#243048"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#1A2436"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#111827"/>
                                <Setter TargetName="Root"
                                        Property="BorderBrush"
                                        Value="#1E293B"/>
                                <Setter Property="Foreground"
                                        Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#DC2626"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="BorderBrush"
                    Value="#B91C1C"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="14,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#B91C1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#991B1B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#7F1D1D"/>
                                <Setter Property="Foreground"
                                        Value="#FCA5A5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MaintenanceNavToggleStyle"
               TargetType="ToggleButton">
            <Setter Property="Foreground"
                Value="#E2E8F0"/>
            <Setter Property="Background"
                Value="#1E293B"/>
            <Setter Property="Padding"
                Value="18,8"/>
            <Setter Property="Margin"
                Value="0,0,12,0"/>
            <Setter Property="FontWeight"
                Value="SemiBold"/>
            <Setter Property="Cursor"
                Value="Hand"/>
            <Setter Property="BorderThickness"
                Value="0"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                <Border x:Name="Root"
                    Background="{TemplateBinding Background}"
                    CornerRadius="10"
                    Padding="{TemplateBinding Padding}">
                    <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="Background"
                        Value="#263147"/>
                    </Trigger>
                    <Trigger Property="IsChecked"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="Background"
                        Value="#7C3AED"/>
                    <Setter Property="Foreground"
                        Value="#F8FAFC"/>
                    </Trigger>
                    <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="Root"
                        Property="Opacity"
                        Value="0.6"/>
                    </Trigger>
                </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardBorderStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#111827"/>
            <Setter Property="BorderBrush"
                    Value="#1E293B"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="20"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
        </Style>

        <Style x:Key="MaintenanceCardListItemStyle"
               TargetType="ListViewItem">
            <Setter Property="Padding"
                    Value="22"/>
            <Setter Property="Margin"
                    Value="0,12"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Container"
                                Background="#0B1628"
                                BorderBrush="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource MaintenanceAlternationBrushConverter}}"
                                BorderThickness="2"
                                CornerRadius="18"
                                Padding="{TemplateBinding Padding}"
                                Opacity="0.95"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Container"
                                        Property="BorderBrush"
                                        Value="#38BDF8"/>
                                <Setter TargetName="Container"
                                        Property="Opacity"
                                        Value="1"/>
                            </Trigger>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter TargetName="Container"
                                        Property="BorderBrush"
                                        Value="#7C3AED"/>
                                <Setter TargetName="Container"
                                        Property="Opacity"
                                        Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Container"
                                        Property="Opacity"
                                        Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MaintenanceQueueItemStyle"
               TargetType="ListViewItem"
               BasedOn="{StaticResource MaintenanceCardListItemStyle}">
            <Setter Property="Padding"
                    Value="18"/>
            <Setter Property="Margin"
                    Value="0,8"/>
        </Style>

        <DataTemplate x:Key="OperationDetailsTemplate"
                      DataType="{x:Type viewModels:PackageMaintenanceOperationViewModel}">
            <StackPanel>
                <TextBlock Text="{Binding PackageDisplay}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#F8FAFC"
                           TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,6,0,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusDisplay}"
                               FontWeight="SemiBold"
                               Margin="0,0,12,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="#38BDF8"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}"
                                                 Value="Succeeded">
                                        <Setter Property="Foreground"
                                                Value="#22C55E"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}"
                                                 Value="Failed">
                                        <Setter Property="Foreground"
                                                Value="#F87171"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding Message}"
                               Foreground="#94A3B8"
                               TextWrapping="Wrap"
                               MaxWidth="260"/>
                </StackPanel>

                  <ux:AdaptiveTilePanel Margin="0,8,0,0"
                               MinColumnWidth="140"
                               ColumnSpacing="10"
                               RowSpacing="6"
                               HorizontalAlignment="Left">
                    <TextBlock Text="{Binding EnqueuedAt, StringFormat=Enqueued Â· {0:t}}"
                               Foreground="#64748B"
                               FontSize="11"
                           Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding StartedAt, StringFormat=Started Â· {0:t}}"
                               Foreground="#64748B"
                               FontSize="11"
                           Margin="0,0,12,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StartedAt}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding CompletedAt, StringFormat=Completed Â· {0:t}}"
                               Foreground="#64748B"
                               FontSize="11"
                               Margin="0,0,12,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CompletedAt}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding Attempts}"
                               Foreground="#64748B"
                               FontSize="11"
                               Margin="0,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Attempts}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Attempts}"
                                                 Value="">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </ux:AdaptiveTilePanel>

                <Border Background="#0F172A"
                        BorderBrush="#1E293B"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,12,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding DisplayLines}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,6">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="#94A3B8"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.HasErrors, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                 Value="True">
                                                        <Setter Property="Foreground"
                                                                Value="#F87171"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="PackageDetailsTemplate"
                      DataType="{x:Type viewModels:PackageMaintenanceItemViewModel}">
            <StackPanel>
                <TextBlock Text="{Binding DisplayName}"
                           FontSize="{Binding DisplayName, Converter={StaticResource PackageDetailsFontSizeConverter}}"
                           FontWeight="Bold"
                           Foreground="#F8FAFC"
                           TextWrapping="Wrap"/>

                <ux:AdaptiveTilePanel Margin="0,10,0,0"
                                     MinColumnWidth="160"
                                     ColumnSpacing="12"
                                     RowSpacing="10">
                    <Border Background="#132032"
                            CornerRadius="8"
                            Padding="10,8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Manager"
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       TextAlignment="Center"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding ManagerDisplay}"
                                       Foreground="#38BDF8"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#132032"
                            CornerRadius="8"
                            Padding="10,8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Version"
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       TextAlignment="Center"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding VersionDisplay}"
                                       Foreground="#E2E8F0"
                                       FontSize="13"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#132032"
                            CornerRadius="8"
                            Padding="10,8"
                            Visibility="{Binding HasUpdate, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Update"
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       TextAlignment="Center"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Available"
                                       Foreground="#22C55E"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ux:AdaptiveTilePanel>

                <TextBlock Text="{Binding Summary}"
                           Foreground="#94A3B8"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           Visibility="{Binding Summary, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Tags"
                               FontSize="12"
                               Foreground="#CBD5F5"
                               Margin="0,0,0,4"
                               Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <ItemsControl ItemsSource="{Binding Tags}"
                                  Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ux:AdaptiveTilePanel MinColumnWidth="120"
                                                      ColumnSpacing="8"
                                                      RowSpacing="8"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E293B"
                                        CornerRadius="6"
                                        Padding="8,3"
                                        Margin="0,0,6,6">
                                    <TextBlock Text="{Binding}"
                                               Foreground="#E2E8F0"
                                               FontSize="11"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Homepage"
                               FontSize="12"
                               Foreground="#CBD5F5"
                               Margin="0,0,0,4"
                               Visibility="{Binding Homepage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding Homepage}"
                               Foreground="#38BDF8"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Visibility="{Binding Homepage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,12,0,0">
                    <TextBlock Text="Last action"
                               FontSize="12"
                               Foreground="#CBD5F5"/>
                    <TextBlock Text="{Binding LastOperationMessage}"
                               Foreground="#94A3B8"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,3,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="#94A3B8"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                 Value="True">
                                        <Setter Property="Foreground"
                                                Value="#22C55E"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                 Value="False">
                                        <Setter Property="Foreground"
                                                Value="#F87171"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,12,0,0">
                    <TextBlock Text="Target version (optional)"
                               FontSize="12"
                               Foreground="#CBD5F5"/>
                    <TextBox Text="{Binding TargetVersion, UpdateSourceTrigger=PropertyChanged, Delay=120}"
                             MinWidth="220"
                             HorizontalAlignment="Stretch"
                             Margin="0,4,0,0"
                             Style="{StaticResource App.TextBoxStyle}"
                             ToolTip="Provide a specific version to install. Leave blank for the latest release."/>
                    <TextBlock Text="Leave blank to install the latest version available from the package manager."
                               Foreground="#64748B"
                               FontSize="11"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <ux:AdaptiveTilePanel Margin="0,20,0,0"
                                      MinColumnWidth="180"
                                      ColumnSpacing="16"
                                      RowSpacing="16">
                    <Button Content="Queue update"
                            Command="{Binding DataContext.QueueUpdateCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            MinWidth="180"
                            Height="44"
                            Padding="18,8"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            AutomationProperties.Name="Queue update">
                        <Button.ToolTip>Queue update</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanUpdate}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                        <Button Content="Remove"
                            Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            MinWidth="160"
                            Height="44"
                            Padding="18,8"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            AutomationProperties.Name="Remove">
                        <Button.ToolTip>Remove</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanRemove}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                        <Button Content="Force cleanup"
                            Command="{Binding DataContext.ForceRemoveCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            MinWidth="160"
                            Height="44"
                            Padding="18,8"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            AutomationProperties.Name="Force cleanup">
                        <Button.ToolTip>Force cleanup</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource DangerButtonStyle}">
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanForceRemove}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </ux:AdaptiveTilePanel>
            </StackPanel>
        </DataTemplate>

        <LinearGradientBrush x:Key="MaintenanceOverlayBackdropBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#B0101F33" Offset="0"/>
            <GradientStop Color="#E6243654" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="MaintenanceOverlayPanelBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#111F36" Offset="0"/>
            <GradientStop Color="#081423" Offset="1"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="MaintenanceOverlayPulseBrush" GradientOrigin="0.5,0.35" Center="0.5,0.5" RadiusX="0.9" RadiusY="0.9">
            <GradientStop Color="#6638D5FF" Offset="0"/>
            <GradientStop Color="#06213C" Offset="1"/>
        </RadialGradientBrush>

        <DropShadowEffect x:Key="MaintenanceOverlayShadowEffect"
                          Color="#000000"
                          ShadowDepth="0"
                          BlurRadius="36"
                          Opacity="0.7"/>

        <SolidColorBrush x:Key="MaintenanceOverlayAccentBrush" Color="#22D3EE"/>
        <SolidColorBrush x:Key="MaintenanceOverlayWarmAccentBrush" Color="#F97316"/>

        <CubicEase x:Key="MaintenanceOverlayEaseIn" EasingMode="EaseInOut"/>
        <CubicEase x:Key="MaintenanceOverlayEaseOut" EasingMode="EaseOut"/>
    </Page.Resources>

    <Grid>
        <Grid x:Name="MainContentHost">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="IsHitTestVisible" Value="True"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0.3"
                                                         Duration="0:0:0.35"
                                                         EasingFunction="{StaticResource MaintenanceOverlayEaseIn}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.4"
                                                         EasingFunction="{StaticResource MaintenanceOverlayEaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <ScrollViewer x:Name="ContentScrollViewer"
                          Margin="32"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          HorizontalContentAlignment="Stretch"
                          CanContentScroll="False"
                          PanningMode="VerticalOnly">
                <Grid x:Name="PageContentGrid"
                      MinWidth="0"
                      MaxWidth="1360"
                      HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="HeaderGrid"
                  Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="HeaderPrimaryColumn"
                                      Width="*"/>
                    <ColumnDefinition x:Name="HeaderSecondaryColumn"
                                      Width="Auto"/>
                </Grid.ColumnDefinitions>

                    <controls:PageTitleBar x:Name="HeaderSummaryPanel"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           Title="{Binding Headline}"
                                           Subtitle="{Binding SummaryText}"
                                           IconGlyph="ðŸ› ï¸"
                                           Margin="0,0,16,0"/>

            <StackPanel x:Name="HeaderActionHost"
                    Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                <StackPanel x:Name="HeaderActionPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                            <Button Content="Refresh"
                                    Command="{Binding RefreshCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}">
                                <Button.IsEnabled>
                                    <Binding Path="IsBusy"
                                             Converter="{StaticResource InverseBooleanConverter}"/>
                                </Button.IsEnabled>
                            </Button>
                        </StackPanel>
                        <TextBlock x:Name="HeaderLastRefreshedText"
                                   Text="{Binding LastRefreshedDisplay}"
                                   Foreground="#64748B"
                                   FontSize="12"
                                   Margin="0,6,0,0"
                                   HorizontalAlignment="Right"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
            </Grid>

            <Grid x:Name="MainLayoutGrid"
                  Grid.Row="1"
                  Margin="0,28,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,24">
                    <ToggleButton Content="Installed packages"
                                  Style="{StaticResource MaintenanceNavToggleStyle}"
                                  Command="{Binding SwitchMaintenanceSectionCommand}"
                                  CommandParameter="{x:Static viewModels:MaintenanceViewSection.Packages}"
                                  IsChecked="{Binding ActiveSection, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Packages, Mode=OneWay}"/>
                    <ToggleButton Content="Queues"
                                  Style="{StaticResource MaintenanceNavToggleStyle}"
                                  Command="{Binding SwitchMaintenanceSectionCommand}"
                                  CommandParameter="{x:Static viewModels:MaintenanceViewSection.Queue}"
                                  IsChecked="{Binding ActiveSection, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Queue, Mode=OneWay}"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid x:Name="PackagesViewHost">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}"
                                                 Value="{x:Static viewModels:MaintenanceViewSection.Packages}">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel x:Name="PrimaryColumnHost">
                            <Border Style="{StaticResource CardBorderStyle}"
                                    Margin="0,0,0,20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Vertical"
                                                Grid.Row="0"
                                                Margin="0,0,0,16">
                                        <TextBlock Text="Package filters"
                                                   Foreground="#E2E8F0"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="Search inventory, filter by manager, and queue updates in bulk"
                                                   Foreground="#64748B"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <ux:AdaptiveTilePanel Grid.Row="1"
                                                         MinColumnWidth="260"
                                                         ColumnSpacing="24"
                                                         RowSpacing="18"
                                                         Padding="0,4,0,4">
                                        <StackPanel>
                                            <TextBlock Text="Keyword"
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       Margin="0,0,0,6"/>
                                            <TextBox MinWidth="240"
                                                     Style="{StaticResource App.TextBoxStyle}"
                                                     ToolTip="Filter by package name, identifier, manager, or tag"
                                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=120}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Manager"
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       Margin="0,0,0,6"/>
                                            <ComboBox MinWidth="220"
                                                      ItemsSource="{Binding ManagerFilters}"
                                                      SelectedItem="{Binding SelectedManager, Mode=TwoWay}"
                                                      Style="{StaticResource App.ComboBoxStyle}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Scope"
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       Margin="0,0,0,6"/>
                                            <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                      Content="Updates only"
                                                      IsChecked="{Binding UpdatesOnly, Mode=TwoWay}"
                                                      Foreground="#F8FAFC"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Bulk actions"
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       Margin="0,0,0,6"/>
                                            <Button Content="Queue selected"
                                                    MinWidth="200"
                                                    Height="42"
                                                    Command="{Binding QueueSelectedUpdatesCommand}"
                                                    Style="{StaticResource AccentButtonStyle}"/>
                                        </StackPanel>
                                    </ux:AdaptiveTilePanel>

                                    <StackPanel Grid.Row="2"
                                                Margin="0,16,0,0">
                                        <TextBlock Text="Keyboard shortcuts"
                                                   Foreground="#94A3B8"
                                                   FontSize="11"
                                                   Margin="0,0,0,6"/>
                                        <ux:AdaptiveTilePanel MinColumnWidth="150"
                                                             ColumnSpacing="16"
                                                             RowSpacing="10">
                                            <Border Background="#101A2A"
                                                    CornerRadius="6"
                                                    Padding="10,4">
                                                <TextBlock Text="Q â†’ Queue update"
                                                           Foreground="#CBD5F5"
                                                           FontSize="11"
                                                           TextAlignment="Center"/>
                                            </Border>
                                            <Border Background="#101A2A"
                                                    CornerRadius="6"
                                                    Padding="10,4">
                                                <TextBlock Text="R â†’ Remove"
                                                           Foreground="#CBD5F5"
                                                           FontSize="11"
                                                           TextAlignment="Center"/>
                                            </Border>
                                            <Border Background="#101A2A"
                                                    CornerRadius="6"
                                                    Padding="10,4">
                                                <TextBlock Text="F â†’ Force cleanup"
                                                           Foreground="#CBD5F5"
                                                           FontSize="11"
                                                           TextAlignment="Center"/>
                                            </Border>
                                        </ux:AdaptiveTilePanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Style="{StaticResource CardBorderStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Installed packages"
                                                       Foreground="#E2E8F0"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="Select packages to queue updates or removals"
                                                       Foreground="#64748B"
                                                       FontSize="12"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="Select all"
                                                Command="{Binding SelectAllPackagesCommand}"
                                                Margin="16,0,0,0"
                                                VerticalAlignment="Top"
                                                Style="{StaticResource SecondaryButtonStyle}">
                                            <Button.ToolTip>Select all packages shown in the list</Button.ToolTip>
                                        </Button>
                                    </Grid>

                                    <StackPanel Grid.Row="1"
                                                Margin="0,12,0,0">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,0,0,8">
                                            <Button Content="{Binding WarningToggleLabel}"
                                                    Command="{Binding ToggleWarningsCommand}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="12,4"
                                                    Visibility="{Binding HasWarnings, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </StackPanel>
                                        <ItemsControl ItemsSource="{Binding Warnings}">
                                            <ItemsControl.Style>
                                                <Style TargetType="ItemsControl">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="HasItems"
                                                                 Value="True">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible"/>
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding AreWarningsVisible}"
                                                                     Value="False">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ItemsControl.Style>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#312E81"
                                                            BorderBrush="#4338CA"
                                                            BorderThickness="1"
                                                            CornerRadius="8"
                                                            Padding="12"
                                                            Margin="0,0,0,10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="âš "
                                                                       FontSize="14"
                                                                       Margin="0,0,10,0"
                                                                       Grid.Column="0"
                                                                       VerticalAlignment="Top"/>
                                                            <TextBlock Text="{Binding}"
                                                                       Foreground="#E2E8F0"
                                                                       TextWrapping="Wrap"
                                                                       Grid.Column="1"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <Grid Grid.Row="2"
                                          Margin="0,16,0,0">
                                        <ListView x:Name="PackagesListView"
                                                  ItemsSource="{Binding Packages}"
                                                  SelectedItem="{Binding SelectedPackage, Mode=TwoWay}"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Foreground="#F8FAFC"
                                                  AlternationCount="5"
                                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                  ScrollViewer.CanContentScroll="True"
                                                  VirtualizingPanel.IsVirtualizing="True"
                                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                                  VirtualizingStackPanel.ScrollUnit="Pixel"
                                                  Loaded="PackagesListView_Loaded"
                                                  ItemContainerStyle="{StaticResource MaintenanceCardListItemStyle}">
                                            <ListView.Style>
                                                <Style TargetType="ListView">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Packages.Count}"
                                                                     Value="0">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ListView.Style>
                                            <ListView.ItemTemplate>
                                                <DataTemplate DataType="{x:Type viewModels:PackageMaintenanceItemViewModel}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                  Grid.Column="0"
                                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                  VerticalAlignment="Top"
                                                                  Margin="0,6,16,0"/>

                                                        <Border Grid.Column="1"
                                                                Width="48"
                                                                Height="48"
                                                                Background="#132032"
                                                                CornerRadius="16"
                                                                Margin="0,0,18,0"
                                                                VerticalAlignment="Top"
                                                                HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding DisplayInitial}"
                                                                       FontWeight="SemiBold"
                                                                       FontSize="18"
                                                                       Foreground="#F8FAFC"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Border>

                                                        <StackPanel Grid.Column="2"
                                                                    Margin="0,0,28,0"
                                                                    VerticalAlignment="Top">
                                                            <StackPanel Orientation="Horizontal"
                                                                        VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding DisplayName}"
                                                                           FontWeight="SemiBold"
                                                                           FontSize="{Binding DisplayName, Converter={StaticResource PackageNameFontSizeConverter}, ConverterParameter=compact}"
                                                                           Foreground="#F8FAFC"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           TextWrapping="Wrap"/>
                                                            </StackPanel>

                                                            <ux:AdaptiveTilePanel Margin="0,10,0,0"
                                                                                 MinColumnWidth="150"
                                                                                 ColumnSpacing="10"
                                                                                 RowSpacing="8">
                                                                <Border Background="#132032"
                                                                        CornerRadius="8"
                                                                        Padding="10,8">
                                                                    <StackPanel HorizontalAlignment="Center">
                                                                        <TextBlock Text="Manager"
                                                                                   Foreground="#94A3B8"
                                                                                   FontSize="10"
                                                                                   TextAlignment="Center"
                                                                                   Margin="0,0,0,4"/>
                                                                        <TextBlock Text="{Binding ManagerDisplay}"
                                                                                   Foreground="#38BDF8"
                                                                                   FontSize="12"
                                                                                   FontWeight="SemiBold"
                                                                                   TextAlignment="Center"
                                                                                   HorizontalAlignment="Center"/>
                                                                    </StackPanel>
                                                                </Border>
                                                                <Border Background="#132032"
                                                                        CornerRadius="8"
                                                                        Padding="10,8"
                                                                        Visibility="{Binding Source, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                    <StackPanel HorizontalAlignment="Center">
                                                                        <TextBlock Text="Source"
                                                                                   Foreground="#94A3B8"
                                                                                   FontSize="10"
                                                                                   TextAlignment="Center"
                                                                                   Margin="0,0,0,4"/>
                                                                        <TextBlock Text="{Binding Source}"
                                                                                   Foreground="#E2E8F0"
                                                                                   FontSize="12"
                                                                                   TextAlignment="Center"
                                                                                   HorizontalAlignment="Center"/>
                                                                    </StackPanel>
                                                                </Border>
                                                                <Border Background="#132032"
                                                                        CornerRadius="8"
                                                                        Padding="10,8">
                                                                    <StackPanel HorizontalAlignment="Center">
                                                                        <TextBlock Text="Version"
                                                                                   Foreground="#94A3B8"
                                                                                   FontSize="10"
                                                                                   TextAlignment="Center"
                                                                                   Margin="0,0,0,4"/>
                                                                        <TextBlock Text="{Binding VersionDisplay}"
                                                                                   Foreground="#CBD5F5"
                                                                                   FontSize="12"
                                                                                   TextAlignment="Center"
                                                                                   HorizontalAlignment="Center"/>
                                                                    </StackPanel>
                                                                </Border>
                                                            </ux:AdaptiveTilePanel>

                                                            <Border Background="#1E3A8A"
                                                                    CornerRadius="6"
                                                                    Padding="8,2"
                                                                    Margin="0,6,0,0"
                                                                    Visibility="{Binding QueueStatus, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <TextBlock Text="{Binding QueueStatus}"
                                                                           Foreground="#DCE7FF"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold"
                                                                           TextAlignment="Center"
                                                                           HorizontalAlignment="Center"/>
                                                            </Border>

                                                            <TextBlock Text="{Binding Summary}"
                                                                       Foreground="#94A3B8"
                                                                       FontSize="12"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,10,0,0"
                                                                       Visibility="{Binding Summary, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                            <ItemsControl Margin="0,10,0,0"
                                                                          ItemsSource="{Binding Tags}"
                                                                          Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <ux:AdaptiveTilePanel MinColumnWidth="120"
                                                                                            ColumnSpacing="8"
                                                                                            RowSpacing="8"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Background="#1E293B"
                                                                                CornerRadius="6"
                                                                                Padding="8,3"
                                                                                Margin="0,0,6,6">
                                                                            <TextBlock Text="{Binding}"
                                                                                       Foreground="#E2E8F0"
                                                                                       FontSize="11"
                                                                                       TextAlignment="Center"
                                                                                       HorizontalAlignment="Center"/>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>

                                                            <TextBlock Text="{Binding LastOperationMessage}"
                                                                       FontSize="12"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,12,0,0">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground"
                                                                                Value="#94A3B8"/>
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding LastOperationMessage}"
                                                                                         Value="">
                                                                                <Setter Property="Visibility"
                                                                                        Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding LastOperationMessage}"
                                                                                         Value="{x:Null}">
                                                                                <Setter Property="Visibility"
                                                                                        Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                                                         Value="True">
                                                                                <Setter Property="Foreground"
                                                                                        Value="#22C55E"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                                                         Value="False">
                                                                                <Setter Property="Foreground"
                                                                                        Value="#F87171"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="3"
                                                                    Margin="0,0,24,0"
                                                                    VerticalAlignment="Top"
                                                                    MinWidth="180">
                                                            <TextBlock Text="Target version (optional)"
                                                                       Foreground="#CBD5F5"
                                                                       FontSize="11"/>
                                                            <TextBox Text="{Binding TargetVersion, UpdateSourceTrigger=PropertyChanged, Delay=120}"
                                                                     Margin="0,6,0,0"
                                                                     MinWidth="180"
                                                                     MaxWidth="260"
                                                                     Style="{StaticResource App.TextBoxStyle}"
                                                                     ToolTip="Provide a specific version to install. Leave blank for the latest release."/>
                                                            <TextBlock Text="Leave blank to install the latest available version."
                                                                       Foreground="#475569"
                                                                       FontSize="10"
                                                                       Margin="0,6,0,0"
                                                                       TextWrapping="Wrap"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="4"
                                                                    Orientation="Vertical"
                                                                    VerticalAlignment="Top"
                                                                    HorizontalAlignment="Right">
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Right">
                                                                <Button Content="Q"
                                                                        Command="{Binding DataContext.QueueUpdateCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                        CommandParameter="{Binding}"
                                                                        Width="44"
                                                                        Height="38"
                                                                        Margin="0,0,8,0"
                                                                        Padding="0"
                                                                        HorizontalContentAlignment="Center"
                                                                        VerticalContentAlignment="Center"
                                                                        AutomationProperties.Name="Queue update">
                                                                    <Button.ToolTip>Queue update</Button.ToolTip>
                                                                    <Button.Style>
                                                                        <Style TargetType="Button"
                                                                               BasedOn="{StaticResource AccentButtonStyle}">
                                                                            <Setter Property="FontWeight"
                                                                                    Value="Bold"/>
                                                                            <Setter Property="IsEnabled"
                                                                                    Value="True"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding CanUpdate}"
                                                                                             Value="False">
                                                                                    <Setter Property="IsEnabled"
                                                                                            Value="False"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding IsBusy}"
                                                                                             Value="True">
                                                                                    <Setter Property="IsEnabled"
                                                                                            Value="False"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Button.Style>
                                                                </Button>
                                                                <Button Content="R"
                                                                        Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                        CommandParameter="{Binding}"
                                                                        Width="44"
                                                                        Height="38"
                                                                        Margin="0,0,8,0"
                                                                        Padding="0"
                                                                        HorizontalContentAlignment="Center"
                                                                        VerticalContentAlignment="Center"
                                                                        AutomationProperties.Name="Remove">
                                                                    <Button.ToolTip>Remove</Button.ToolTip>
                                                                    <Button.Style>
                                                                        <Style TargetType="Button"
                                                                               BasedOn="{StaticResource SecondaryButtonStyle}">
                                                                            <Setter Property="FontWeight"
                                                                                    Value="Bold"/>
                                                                            <Setter Property="IsEnabled"
                                                                                    Value="True"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding CanRemove}"
                                                                                             Value="False">
                                                                                    <Setter Property="IsEnabled"
                                                                                            Value="False"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding IsBusy}"
                                                                                             Value="True">
                                                                                    <Setter Property="IsEnabled"
                                                                                            Value="False"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Button.Style>
                                                                </Button>
                                                                <Button Content="F"
                                                                        Command="{Binding DataContext.ForceRemoveCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                        CommandParameter="{Binding}"
                                                                        Width="44"
                                                                        Height="38"
                                                                        Padding="0"
                                                                        HorizontalContentAlignment="Center"
                                                                        VerticalContentAlignment="Center"
                                                                        AutomationProperties.Name="Force cleanup">
                                                                    <Button.ToolTip>Force cleanup</Button.ToolTip>
                                                                    <Button.Style>
                                                                        <Style TargetType="Button"
                                                                               BasedOn="{StaticResource DangerButtonStyle}">
                                                                            <Setter Property="FontWeight"
                                                                                    Value="Bold"/>
                                                                            <Setter Property="IsEnabled"
                                                                                    Value="True"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding CanForceRemove}"
                                                                                             Value="False">
                                                                                    <Setter Property="IsEnabled"
                                                                                            Value="False"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding IsBusy}"
                                                                                             Value="True">
                                                                                    <Setter Property="IsEnabled"
                                                                                            Value="False"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Button.Style>
                                                                </Button>
                                                            </StackPanel>
                                                            <Border Background="#1F3A6E"
                                                                    CornerRadius="6"
                                                                    Padding="8,3"
                                                                    Margin="0,10,0,0"
                                                                    HorizontalAlignment="Right"
                                                                    Visibility="{Binding HasUpdate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <TextBlock Text="Update available"
                                                                           Foreground="#22C55E"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold"/>
                                                            </Border>
                                                            <Button Content="Details"
                                                                    Command="{Binding DataContext.ShowPackageDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                    CommandParameter="{Binding}"
                                                                    Margin="0,12,0,0"
                                                                    Style="{StaticResource SecondaryButtonStyle}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>

                                        <TextBlock Text="No packages match your filter."
                                                   Foreground="#64748B"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="13">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Packages.Count}"
                                                                     Value="0">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                    <DockPanel Grid.Row="3"
                                               Margin="0,16,0,0">
                                        <TextBlock Text="{Binding LastRefreshedDisplay}"
                                                   Foreground="#64748B"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding SummaryText}"
                                                   Foreground="#E2E8F0"
                                                   FontSize="12"
                                                   Margin="16,0,0,0"/>
                                    </DockPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="QueueViewHost">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}"
                                                 Value="{x:Static viewModels:MaintenanceViewSection.Queue}">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel x:Name="SecondaryColumnHost">
                            <Border Style="{StaticResource CardBorderStyle}"
                                    Padding="20"
                                    Margin="0,0,0,20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0">
                                        <TextBlock Text="Maintenance queue"
                                                   Foreground="#E2E8F0"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="Monitor pending operations, retry failures, and review history"
                                                   Foreground="#64748B"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                        <ux:AdaptiveTilePanel Grid.Row="1"
                                                 Margin="0,14,0,0"
                                                 HorizontalAlignment="Left"
                                                 MinColumnWidth="160"
                                                 ColumnSpacing="12"
                                                 RowSpacing="12">
                                        <Button Content="Retry failed"
                                            Command="{Binding RetryFailedCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                                        <Button Content="Clear completed"
                                            Command="{Binding ClearCompletedCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                                        </ux:AdaptiveTilePanel>

                                    <ListView x:Name="OperationsListView"
                                              Grid.Row="2"
                                              Margin="0,16,0,0"
                                              ItemsSource="{Binding Operations}"
                                              SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="#F8FAFC"
                                              AlternationCount="5"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                              ScrollViewer.CanContentScroll="True"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              VirtualizingPanel.VirtualizationMode="Recycling"
                                              VirtualizingStackPanel.ScrollUnit="Pixel"
                                              ItemContainerStyle="{StaticResource MaintenanceQueueItemStyle}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding PackageDisplay}"
                                                                   FontWeight="SemiBold"
                                                                   TextWrapping="Wrap"
                                                                   MaxWidth="220"/>
                                                        <TextBlock Text="{Binding StatusDisplay}"
                                                                   Margin="10,0,0,0"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground"
                                                                            Value="#38BDF8"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}"
                                                                                     Value="Succeeded">
                                                                            <Setter Property="Foreground"
                                                                                    Value="#22C55E"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}"
                                                                                     Value="Failed">
                                                                            <Setter Property="Foreground"
                                                                                    Value="#F87171"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Message}"
                                                               Foreground="#94A3B8"
                                                               FontSize="12"
                                                               TextWrapping="Wrap"
                                                               Margin="0,6,0,0"/>
                                                    <TextBlock Text="{Binding Attempts}"
                                                               Foreground="#64748B"
                                                               FontSize="11"
                                                               Margin="0,4,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Attempts}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Attempts}"
                                                                                 Value="">
                                                                        <Setter Property="Visibility"
                                                                                Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <Button Content="Operation details"
                                                            Command="{Binding DataContext.ShowOperationDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="0,10,0,0">
                                                        <Button.Style>
                                                            <Style TargetType="Button"
                                                                   BasedOn="{StaticResource SecondaryButtonStyle}">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsPendingOrRunning}"
                                                                                 Value="False">
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </Border>

                            <TextBlock Text="No maintenance operations queued yet. Queue an update or removal to get started."
                                       Foreground="#64748B"
                                       FontSize="12"
                                       HorizontalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Operations.Count}"
                                                         Value="0">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
        </Grid>

        <Grid x:Name="PackageDetailsOverlay"
              Panel.ZIndex="12"
              Background="#B0101F33"
              Visibility="{Binding IsPackageDetailsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              IsHitTestVisible="{Binding IsPackageDetailsVisible}">
            <Border MaxWidth="720"
                    Margin="32"
                    Padding="24"
                    Background="#0F172A"
                    BorderBrush="#1E293B"
                    BorderThickness="1"
                    CornerRadius="18"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Margin="0,0,0,16"
                               LastChildFill="False">
                        <StackPanel DockPanel.Dock="Left"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Border Width="54"
                                    Height="54"
                                    CornerRadius="18"
                                    Background="#132032"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedPackage}"
                                                         Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding SelectedPackage.DisplayInitial}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedPackage.DisplayName, TargetNullValue=Package details}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"/>
                                <TextBlock Text="{Binding SelectedPackage.ManagerDisplay}"
                                           FontSize="12"
                                           Foreground="#94A3B8"/>
                            </StackPanel>
                        </StackPanel>
                        <Button Content="Close"
                                Command="{Binding ClosePackageDetailsCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                DockPanel.Dock="Right"
                                Padding="10,4"
                                MinWidth="72"
                                HorizontalAlignment="Right"/>
                    </DockPanel>

                    <Grid Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      MaxHeight="440">
                            <ContentControl Content="{Binding SelectedPackage}"
                                            ContentTemplate="{StaticResource PackageDetailsTemplate}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedPackage}"
                                                         Value="{x:Null}">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </ScrollViewer>

                        <TextBlock Text="Select a package to view its full details."
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="13">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedPackage}"
                                                     Value="{x:Null}">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="OperationDetailsOverlay"
              Panel.ZIndex="13"
              Background="#B00A1528"
              Visibility="{Binding IsOperationDetailsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              IsHitTestVisible="{Binding IsOperationDetailsVisible}">
            <Border MaxWidth="760"
                    Margin="32"
                    Padding="24"
                    Background="#0F172A"
                    BorderBrush="#1E293B"
                    BorderThickness="1"
                    CornerRadius="18"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Margin="0,0,0,16"
                               LastChildFill="False">
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="{Binding SelectedOperation.PackageDisplay, TargetNullValue=Operation details}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <TextBlock Text="{Binding SelectedOperation.StatusDisplay}"
                                       FontSize="12"
                                       Foreground="#94A3B8"/>
                        </StackPanel>
                        <Button Content="Close"
                                Command="{Binding CloseOperationDetailsCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                DockPanel.Dock="Right"
                                Padding="10,4"
                                MinWidth="72"
                                HorizontalAlignment="Right"/>
                    </DockPanel>

                    <Grid Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      MaxHeight="480">
                            <ContentControl Content="{Binding SelectedOperation}"
                                            ContentTemplate="{StaticResource OperationDetailsTemplate}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedOperation}"
                                                         Value="{x:Null}">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </ScrollViewer>

                        <TextBlock Text="Select a completed operation to inspect its transcript."
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="13">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedOperation}"
                                                     Value="{x:Null}">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <ContentControl x:Name="MaintenanceLoadingOverlay"
                        Panel.ZIndex="15"
                        Focusable="False"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
            <ContentControl.Template>
                <ControlTemplate TargetType="ContentControl">
                    <Grid x:Name="OverlayRoot"
                          Background="Transparent"
                          Visibility="Collapsed"
                          Opacity="0"
                          IsHitTestVisible="False">
                        <Grid Background="{StaticResource MaintenanceOverlayBackdropBrush}">
                            <Border HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Padding="38,32"
                                    CornerRadius="32"
                                    Background="{StaticResource MaintenanceOverlayPanelBrush}"
                                    BorderBrush="#203555"
                                    BorderThickness="1.5"
                                    Effect="{StaticResource MaintenanceOverlayShadowEffect}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="240"/>
                                        <ColumnDefinition Width="24"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                        <Grid Width="220"
                                              Height="220">
                                            <Ellipse Fill="#0C1B33"
                                                     Stroke="#1C2F4D"
                                                     StrokeThickness="1.5"/>
                                            <Polygon Points="110,8 198,60 198,160 110,212 22,160 22,60"
                                                     Stroke="#244E7A"
                                                     StrokeThickness="2"
                                                     Fill="#111F34"
                                                     Opacity="0.9"
                                                     RenderTransformOrigin="0.5,0.5">
                                                <Polygon.RenderTransform>
                                                    <RotateTransform x:Name="OuterHexagonRotate" Angle="0"/>
                                                </Polygon.RenderTransform>
                                            </Polygon>
                                            <Polygon Points="110,36 174,74 174,146 110,184 46,146 46,74"
                                                     Stroke="#22D3EE"
                                                     StrokeDashArray="8 10"
                                                     StrokeThickness="1.5"
                                                     Fill="#0B253E"
                                                     Opacity="0.7"
                                                     RenderTransformOrigin="0.5,0.5">
                                                <Polygon.RenderTransform>
                                                    <RotateTransform x:Name="InnerHexagonRotate" Angle="0"/>
                                                </Polygon.RenderTransform>
                                            </Polygon>
                                            <Ellipse Width="84"
                                                     Height="84"
                                                     Fill="{StaticResource MaintenanceOverlayPulseBrush}"
                                                     Opacity="0.5"
                                                     RenderTransformOrigin="0.5,0.5">
                                                <Ellipse.RenderTransform>
                                                    <ScaleTransform x:Name="MaintenancePulseScaleTransform"
                                                                    ScaleX="1"
                                                                    ScaleY="1"/>
                                                </Ellipse.RenderTransform>
                                            </Ellipse>
                                            <Path Data="M110,30 L110,190"
                                                  Stroke="#1F3D62"
                                                  StrokeThickness="1"
                                                  StrokeDashArray="4 8"
                                                  Opacity="0.6"/>
                                            <Path Data="M56,80 L164,80"
                                                  Stroke="#1F3D62"
                                                  StrokeThickness="1"
                                                  StrokeDashArray="4 8"
                                                  Opacity="0.6"/>
                                            <Grid RenderTransformOrigin="0.5,0.5">
                                                <Grid.RenderTransform>
                                                    <RotateTransform x:Name="MaintenanceOrbitalRotate" Angle="0"/>
                                                </Grid.RenderTransform>
                                                <Border Width="14"
                                                        Height="14"
                                                        CornerRadius="7"
                                                        Background="{StaticResource MaintenanceOverlayAccentBrush}"
                                                        BorderBrush="#0F233B"
                                                        BorderThickness="1"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Top"
                                                        Margin="0,-6,0,0"/>
                                                <Border Width="20"
                                                        Height="20"
                                                        CornerRadius="10"
                                                        Background="{StaticResource MaintenanceOverlayWarmAccentBrush}"
                                                        BorderBrush="#1F2F46"
                                                        BorderThickness="1"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,-10,0"/>
                                                <Border Width="12"
                                                        Height="12"
                                                        CornerRadius="6"
                                                        Background="#22C55E"
                                                        BorderBrush="#143524"
                                                        BorderThickness="1"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Bottom"
                                                        Margin="0,0,0,-8"/>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <Rectangle Grid.Column="1"
                                               Width="1"
                                               RadiusX="0.5"
                                               RadiusY="0.5"
                                               Fill="#213A5A"
                                               Opacity="0.45"/>

                                    <StackPanel Grid.Column="2"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Running maintenance sweep"
                                                   FontSize="22"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <TextBlock Text="Auditing installed packages and preparing remediation steps..."
                                                   FontSize="13"
                                                   Foreground="#94A3B8"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap"/>
                                        <StackPanel Margin="0,18,0,0">
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Ellipse Width="6"
                                                         Height="6"
                                                         Fill="{StaticResource MaintenanceOverlayAccentBrush}"
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Text="Capturing upgrade and downgrade opportunities"
                                                           Margin="10,0,0,0"
                                                           Foreground="#CBD5F5"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Ellipse Width="6"
                                                         Height="6"
                                                         Fill="{StaticResource MaintenanceOverlayWarmAccentBrush}"
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Text="Checking pinned versions for drift"
                                                           Margin="10,0,0,0"
                                                           Foreground="#CBD5F5"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Ellipse Width="6"
                                                         Height="6"
                                                         Fill="#22C55E"
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Text="Verifying uninstall remediations"
                                                           Margin="10,0,0,0"
                                                           Foreground="#CBD5F5"
                                                           FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Border Height="6"
                                                CornerRadius="3"
                                                Background="#172840"
                                                Margin="0,22,0,0">
                                            <Grid ClipToBounds="True">
                                                <Rectangle x:Name="MaintenanceProgressPulse"
                                                           Width="180"
                                                           Height="6"
                                                           Fill="{StaticResource MaintenanceOverlayAccentBrush}">
                                                    <Rectangle.RenderTransform>
                                                        <TranslateTransform x:Name="MaintenanceProgressTranslate"
                                                                            X="-180"/>
                                                    </Rectangle.RenderTransform>
                                                </Rectangle>
                                            </Grid>
                                        </Border>

                                        <TextBlock Text="Hold tightâ€”tasks queue automatically when analysis finishes."
                                                   FontSize="12"
                                                   Foreground="#64748B"
                                                   Margin="0,14,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter TargetName="OverlayRoot" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="OverlayRoot" Property="IsHitTestVisible" Value="True"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="MaintenanceOverlayFadeInStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OverlayRoot"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.45"
                                                         EasingFunction="{StaticResource MaintenanceOverlayEaseIn}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                                <BeginStoryboard x:Name="MaintenanceOverlayMotionStoryboard">
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="OuterHexagonRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0"
                                                         To="360"
                                                         Duration="0:0:7"/>
                                        <DoubleAnimation Storyboard.TargetName="InnerHexagonRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="360"
                                                         To="0"
                                                         Duration="0:0:4.5"/>
                                        <DoubleAnimation Storyboard.TargetName="MaintenanceOrbitalRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0"
                                                         To="360"
                                                         Duration="0:0:3.2"/>
                                        <DoubleAnimation Storyboard.TargetName="MaintenancePulseScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         From="1"
                                                         To="1.3"
                                                         Duration="0:0:1.1"
                                                         AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="MaintenancePulseScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         From="1"
                                                         To="1.3"
                                                         Duration="0:0:1.1"
                                                         AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="MaintenanceProgressTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         From="-180"
                                                         To="180"
                                                         Duration="0:0:1.9"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="MaintenanceOverlayMotionStoryboard"/>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OverlayRoot"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.4"
                                                         EasingFunction="{StaticResource MaintenanceOverlayEaseOut}"/>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverlayRoot"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                                                    Value="{x:Static Visibility.Collapsed}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ContentControl.Template>
        </ContentControl>
    </Grid>
</Page>
