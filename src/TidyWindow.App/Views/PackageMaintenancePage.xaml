<Page x:Class="TidyWindow.App.Views.PackageMaintenancePage"
    x:Name="MaintenancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:viewModels="clr-namespace:TidyWindow.App.ViewModels"
            xmlns:converters="clr-namespace:TidyWindow.App.Converters"
            xmlns:controls="clr-namespace:TidyWindow.App.Views"
            xmlns:ux="clr-namespace:TidyWindow.App.Controls"
    mc:Ignorable="d"
    Title="Package maintenance"
    Background="Transparent"
    FontFamily="Segoe UI Variable Text"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType"
    TextOptions.TextHintingMode="Fixed"
    RenderOptions.ClearTypeHint="Enabled"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
      d:DataContext="{d:DesignInstance Type=viewModels:PackageMaintenanceViewModel, IsDesignTimeCreatable=False}">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:EnumEqualsConverter x:Key="EnumEqualsConverter"/>
        <converters:AlternationIndexToBrushConverter x:Key="MaintenanceAlternationBrushConverter"/>
    <converters:StringLengthToFontSizeConverter x:Key="PackageNameFontSizeConverter"
                            LargeSize="15"
                            MediumSize="13"
                            SmallSize="11"/>
    <converters:StringLengthToFontSizeConverter x:Key="PackageDetailsFontSizeConverter"
                            LargeSize="20"
                            MediumSize="17"
                            SmallSize="15"
                            MinimumSize="13"/>

        <Style x:Key="AccentButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#7C3AED"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="14,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#6D28D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#5B21B6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#312E81"/>
                                <Setter Property="Foreground"
                                        Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#1E293B"/>
            <Setter Property="Foreground"
                    Value="#E2E8F0"/>
            <Setter Property="BorderBrush"
                    Value="#334155"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#243048"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#1A2436"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#111827"/>
                                <Setter TargetName="Root"
                                        Property="BorderBrush"
                                        Value="#1E293B"/>
                                <Setter Property="Foreground"
                                        Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#DC2626"/>
            <Setter Property="Foreground"
                    Value="#F8FAFC"/>
            <Setter Property="BorderBrush"
                    Value="#B91C1C"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="14,6"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#B91C1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#991B1B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#7F1D1D"/>
                                <Setter Property="Foreground"
                                        Value="#FCA5A5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VersionSelectorButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Background" Value="#1C2541"/>
            <Setter Property="BorderBrush" Value="#4C1D95"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="SelectorRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SelectorRoot" Property="Background" Value="#252F5B"/>
                                <Setter TargetName="SelectorRoot" Property="BorderBrush" Value="#7C3AED"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="SelectorRoot" Property="Background" Value="#1B2140"/>
                                <Setter TargetName="SelectorRoot" Property="BorderBrush" Value="#5B21B6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="SelectorRoot" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VersionChipButtonStyle"
               TargetType="Button">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ChipRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ChipRoot" Property="Background" Value="#2C3C55"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ChipRoot" Property="Background" Value="#3B4D6D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ChipRoot" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="VersionChipTemplate" DataType="{x:Type viewModels:PackageVersionOptionViewModel}">
            <Button Content="{Binding Display}"
                    Style="{StaticResource VersionChipButtonStyle}"
                    Command="{Binding DataContext.ApplyVersionSelectionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                    CommandParameter="{Binding}"/>
        </DataTemplate>

        <Style x:Key="MaintenanceNavToggleStyle"
               TargetType="ToggleButton">
            <Setter Property="Foreground"
                Value="#E2E8F0"/>
            <Setter Property="Background"
                Value="#1E293B"/>
            <Setter Property="Padding"
                Value="18,8"/>
            <Setter Property="Margin"
                Value="0,0,12,0"/>
            <Setter Property="FontWeight"
                Value="SemiBold"/>
            <Setter Property="Cursor"
                Value="Hand"/>
            <Setter Property="BorderThickness"
                Value="0"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                <Border x:Name="Root"
                    Background="{TemplateBinding Background}"
                    CornerRadius="10"
                    Padding="{TemplateBinding Padding}">
                    <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="Background"
                        Value="#263147"/>
                    </Trigger>
                    <Trigger Property="IsChecked"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="Background"
                        Value="#7C3AED"/>
                    <Setter Property="Foreground"
                        Value="#F8FAFC"/>
                    </Trigger>
                    <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="Root"
                        Property="Opacity"
                        Value="0.6"/>
                    </Trigger>
                </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardBorderStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#111827"/>
            <Setter Property="BorderBrush"
                    Value="#1E293B"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="20"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
        </Style>

        <Style x:Key="AutomationSectionHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F8FAFC"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <Style x:Key="AutomationSectionSubtitleTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <Style x:Key="AutomationToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="52"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Track"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="#334155"
                                    BorderThickness="1"
                                    CornerRadius="14"/>
                            <Ellipse x:Name="Thumb"
                                     Width="22"
                                     Height="22"
                                     Fill="#F8FAFC"
                                     Margin="4,3,26,3"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#7C3AED"/>
                                <Setter TargetName="Track" Property="BorderBrush" Value="#7C3AED"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="26,3,4,3"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Background" Value="#1F2937"/>
                                <Setter TargetName="Track" Property="BorderBrush" Value="#1F2937"/>
                                <Setter TargetName="Thumb" Property="Fill" Value="#475569"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Track" Property="BorderBrush" Value="#7C3AED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MaintenanceCardListItemStyle"
               TargetType="ListViewItem">
            <Setter Property="Padding"
                    Value="22"/>
            <Setter Property="Margin"
                    Value="0,12"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Container"
                                Background="#0B1628"
                                BorderBrush="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource MaintenanceAlternationBrushConverter}}"
                                BorderThickness="2"
                                CornerRadius="18"
                                Padding="{TemplateBinding Padding}"
                                Opacity="0.95"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Container"
                                        Property="BorderBrush"
                                        Value="#38BDF8"/>
                                <Setter TargetName="Container"
                                        Property="Opacity"
                                        Value="1"/>
                            </Trigger>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter TargetName="Container"
                                        Property="BorderBrush"
                                        Value="#7C3AED"/>
                                <Setter TargetName="Container"
                                        Property="Opacity"
                                        Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Container"
                                        Property="Opacity"
                                        Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MaintenancePackageCardItemStyle"
               TargetType="ListViewItem"
               BasedOn="{StaticResource MaintenanceCardListItemStyle}">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinWidth" Value="360"/>
            <Setter Property="MaxWidth" Value="520"/>
        </Style>

        <Style x:Key="MaintenanceQueueItemStyle"
               TargetType="ListViewItem"
               BasedOn="{StaticResource MaintenanceCardListItemStyle}">
            <Setter Property="Padding"
                    Value="18"/>
            <Setter Property="Margin"
                    Value="0,8"/>
        </Style>

        <Style x:Key="MaintenanceInfoChipStyle" TargetType="Border">
            <Setter Property="Background" Value="#111F33"/>
            <Setter Property="BorderBrush" Value="#1F2F4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="0,6,6,0"/>
        </Style>

        <Style x:Key="MaintenanceAccentChipStyle"
               TargetType="Border"
               BasedOn="{StaticResource MaintenanceInfoChipStyle}">
            <Setter Property="Background" Value="#1D4ED8"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
        </Style>

        <Style x:Key="MaintenanceAlertChipStyle"
               TargetType="Border"
               BasedOn="{StaticResource MaintenanceInfoChipStyle}">
            <Setter Property="Background" Value="#331924"/>
            <Setter Property="BorderBrush" Value="#F87171"/>
        </Style>

        <DataTemplate x:Key="OperationDetailsTemplate"
                      DataType="{x:Type viewModels:PackageMaintenanceOperationViewModel}">
            <StackPanel>
                <TextBlock Text="{Binding PackageDisplay}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#F8FAFC"
                           TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,6,0,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusDisplay}"
                               FontWeight="SemiBold"
                               Margin="0,0,12,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="#38BDF8"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}"
                                                 Value="Succeeded">
                                        <Setter Property="Foreground"
                                                Value="#22C55E"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}"
                                                 Value="Failed">
                                        <Setter Property="Foreground"
                                                Value="#F87171"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding Message}"
                               Foreground="#94A3B8"
                               TextWrapping="Wrap"
                               MaxWidth="260"/>
                </StackPanel>

                  <ux:AdaptiveTilePanel Margin="0,8,0,0"
                               MinColumnWidth="140"
                               ColumnSpacing="10"
                               RowSpacing="6"
                               HorizontalAlignment="Left">
                    <TextBlock Text="{Binding EnqueuedAt, StringFormat=Enqueued · {0:t}}"
                               Foreground="#64748B"
                               FontSize="11"
                           Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding StartedAt, StringFormat=Started · {0:t}}"
                               Foreground="#64748B"
                               FontSize="11"
                           Margin="0,0,12,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StartedAt}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding CompletedAt, StringFormat=Completed · {0:t}}"
                               Foreground="#64748B"
                               FontSize="11"
                               Margin="0,0,12,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CompletedAt}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding Attempts}"
                               Foreground="#64748B"
                               FontSize="11"
                               Margin="0,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Attempts}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Attempts}"
                                                 Value="">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </ux:AdaptiveTilePanel>

                <Border Background="#0F172A"
                        BorderBrush="#1E293B"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,12,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding DisplayLines}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,6">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="#94A3B8"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.HasErrors, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                 Value="True">
                                                        <Setter Property="Foreground"
                                                                Value="#F87171"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="PackageDetailsTemplate"
                      DataType="{x:Type viewModels:PackageMaintenanceItemViewModel}">
            <StackPanel>
                <TextBlock Text="{Binding DisplayName}"
                           FontSize="{Binding DisplayName, Converter={StaticResource PackageDetailsFontSizeConverter}}"
                           FontWeight="Bold"
                           Foreground="#F8FAFC"
                           TextWrapping="Wrap"/>

                <ux:AdaptiveTilePanel Margin="0,10,0,0"
                                     MinColumnWidth="160"
                                     ColumnSpacing="12"
                                     RowSpacing="10">
                    <Border Background="#132032"
                            CornerRadius="8"
                            Padding="10,8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Manager"
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       TextAlignment="Center"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding ManagerDisplay}"
                                       Foreground="#38BDF8"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#132032"
                            CornerRadius="8"
                            Padding="10,8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Version"
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       TextAlignment="Center"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding VersionDisplay}"
                                       Foreground="#E2E8F0"
                                       FontSize="13"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#132032"
                            CornerRadius="8"
                            Padding="10,8"
                            Visibility="{Binding HasUpdate, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Update"
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       TextAlignment="Center"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Available"
                                       Foreground="#22C55E"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ux:AdaptiveTilePanel>

                <TextBlock Text="{Binding Summary}"
                           Foreground="#94A3B8"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           Visibility="{Binding Summary, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Tags"
                               FontSize="12"
                               Foreground="#CBD5F5"
                               Margin="0,0,0,4"
                               Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <ItemsControl ItemsSource="{Binding Tags}"
                                  Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ux:AdaptiveTilePanel MinColumnWidth="120"
                                                      ColumnSpacing="8"
                                                      RowSpacing="8"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E293B"
                                        CornerRadius="6"
                                        Padding="8,3"
                                        Margin="0,0,6,6">
                                    <TextBlock Text="{Binding}"
                                               Foreground="#E2E8F0"
                                               FontSize="11"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Homepage"
                               FontSize="12"
                               Foreground="#CBD5F5"
                               Margin="0,0,0,4"
                               Visibility="{Binding Homepage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding Homepage}"
                               Foreground="#38BDF8"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Visibility="{Binding Homepage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,12,0,0">
                    <TextBlock Text="Last action"
                               FontSize="12"
                               Foreground="#CBD5F5"/>
                    <TextBlock Text="{Binding LastOperationMessage}"
                               Foreground="#94A3B8"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,3,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="#94A3B8"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                 Value="True">
                                        <Setter Property="Foreground"
                                                Value="#22C55E"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LastOperationSucceeded}"
                                                 Value="False">
                                        <Setter Property="Foreground"
                                                Value="#F87171"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,12,0,0">
                    <TextBlock Text="Target version (optional)"
                               FontSize="12"
                               Foreground="#CBD5F5"/>
                    <Button x:Name="TargetVersionSelectorAnchor"
                            Style="{StaticResource VersionSelectorButtonStyle}"
                            Command="{Binding DataContext.ToggleVersionPickerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,6,0,0"
                            HorizontalAlignment="Stretch">
                        <DockPanel>
                            <StackPanel Orientation="Vertical"
                                        DockPanel.Dock="Left"
                                        Margin="0,0,16,0">
                                <TextBlock Text="{Binding TargetVersionLabel}"
                                           Foreground="#F8FAFC"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Choose a specific release or stay on latest"
                                           Foreground="#A5B4FC"
                                           FontSize="11"/>
                            </StackPanel>
                            <Border Width="36"
                                    Height="36"
                                    CornerRadius="18"
                                    Background="#312E81"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    SnapsToDevicePixels="True">
                                <Path Data="M 8 12 L 18 22 L 28 12"
                                      Stroke="#F8FAFC"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeStartLineCap="Round"
                                      RenderOptions.EdgeMode="Aliased"/>
                            </Border>
                        </DockPanel>
                    </Button>
                    <Popup PlacementTarget="{Binding Source={x:Reference MaintenancePage}}"
                           Placement="Center"
                           HorizontalOffset="0"
                           VerticalOffset="0"
                           StaysOpen="False"
                           PopupAnimation="Slide"
                           AllowsTransparency="True"
                           IsOpen="{Binding IsVersionPickerOpen, Mode=TwoWay}"
                           DataContext="{Binding DataContext, ElementName=TargetVersionSelectorAnchor}">
                        <Grid Width="{Binding PlacementTarget.ActualWidth, RelativeSource={RelativeSource AncestorType=Popup}}"
                              Height="{Binding PlacementTarget.ActualHeight, RelativeSource={RelativeSource AncestorType=Popup}}"
                              Background="#99071420"
                              SnapsToDevicePixels="True"
                              UseLayoutRounding="True"
                              RenderOptions.BitmapScalingMode="HighQuality"
                              RenderOptions.ClearTypeHint="Enabled"
                              TextOptions.TextRenderingMode="ClearType"
                              TextOptions.TextFormattingMode="Display">
                            <Border Background="#0B1628"
                                    BorderBrush="#1E293B"
                                    BorderThickness="1"
                                    CornerRadius="18"
                                    Padding="24"
                                    MaxWidth="640"
                                    Width="560"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="28"
                                                      ShadowDepth="0"
                                                      Color="#33000000"
                                                      Opacity="0.85"/>
                                </Border.Effect>
                                <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="Select a version"
                                               Foreground="#E2E8F0"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               DockPanel.Dock="Left"/>
                                    <StackPanel Orientation="Horizontal"
                                                DockPanel.Dock="Right">
                                        <Button Content="Refresh"
                                                Margin="0,0,8,0"
                                                Padding="10,4"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Command="{Binding DataContext.RefreshVersionOptionsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="Close"
                                                Padding="10,4"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Command="{Binding DataContext.CloseVersionPickerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DockPanel>
                                <TextBlock Text="Pick from discovered releases, or type a custom version if you need a specific build."
                                           Foreground="#94A3B8"
                                           FontSize="11"
                                           Margin="0,4,0,10"
                                           TextWrapping="Wrap"/>
                                <ProgressBar IsIndeterminate="True"
                                             Height="4"
                                             Foreground="#7C3AED"
                                             Background="#1E293B"
                                             Visibility="{Binding IsVersionLookupInProgress, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <ScrollViewer Margin="0,10,0,0"
                                              MaxHeight="240"
                                              HorizontalScrollBarVisibility="Disabled"
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding VersionOptions}"
                                                  ItemTemplate="{StaticResource VersionChipTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ux:AdaptiveTilePanel MinColumnWidth="120"
                                                                      ColumnSpacing="8"
                                                                      RowSpacing="8"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                                <TextBlock Text="{Binding VersionLookupError}"
                                           Foreground="#F87171"
                                           FontSize="11"
                                           Margin="0,6,0,0"
                                           TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding VersionLookupError}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding VersionLookupError}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="No published versions were returned for this package."
                                           Foreground="#94A3B8"
                                           FontSize="11"
                                           Margin="0,6,0,0"
                                           TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding HasVersionOptions}" Value="False"/>
                                                        <Condition Binding="{Binding IsVersionLookupInProgress}" Value="False"/>
                                                        <Condition Binding="{Binding VersionLookupError}" Value="{x:Null}"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <StackPanel Margin="0,12,0,0">
                                    <TextBlock Text="Custom version"
                                               Foreground="#CBD5F5"
                                               FontSize="11"/>
                                    <TextBox Text="{Binding TargetVersion, UpdateSourceTrigger=PropertyChanged, Delay=120}"
                                             Margin="0,4,0,0"
                                             Style="{StaticResource App.TextBoxStyle}"
                                             ToolTip="Provide a specific version to install. Leave blank for the latest release."/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,12,0,0"
                                            HorizontalAlignment="Right">
                                    <Button Content="Use latest"
                                            Margin="0,0,8,0"
                                            Padding="12,6"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding DataContext.ClearTargetVersionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="Done"
                                            Padding="14,6"
                                            Style="{StaticResource AccentButtonStyle}"
                                            Command="{Binding DataContext.CloseVersionPickerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Popup>
                    <TextBlock Text="Leave blank to install the latest release offered by the package manager."
                               Foreground="#64748B"
                               FontSize="11"
                               TextWrapping="Wrap"
                               Margin="0,6,0,0"/>
                </StackPanel>

                <ux:AdaptiveTilePanel Margin="0,20,0,0"
                                      MinColumnWidth="180"
                                      ColumnSpacing="16"
                                      RowSpacing="16">
                    <Button Content="Queue update"
                            Command="{Binding DataContext.QueueUpdateCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            MinWidth="180"
                            Height="44"
                            Padding="18,8"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            AutomationProperties.Name="Queue update">
                        <Button.ToolTip>Queue update</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanUpdate}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                        <Button Content="Remove"
                            Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            MinWidth="160"
                            Height="44"
                            Padding="18,8"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            AutomationProperties.Name="Remove">
                        <Button.ToolTip>Remove</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanRemove}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                        <Button Content="Force cleanup"
                            Command="{Binding DataContext.ForceRemoveCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            MinWidth="160"
                            Height="44"
                            Padding="18,8"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            AutomationProperties.Name="Force cleanup">
                        <Button.ToolTip>Force cleanup</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource DangerButtonStyle}">
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanForceRemove}"
                                                 Value="False">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </ux:AdaptiveTilePanel>
            </StackPanel>
        </DataTemplate>

        <LinearGradientBrush x:Key="MaintenanceOverlayBackdropBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#B0101F33" Offset="0"/>
            <GradientStop Color="#E6243654" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="MaintenanceOverlayPanelBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#111F36" Offset="0"/>
            <GradientStop Color="#081423" Offset="1"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="MaintenanceOverlayPulseBrush" GradientOrigin="0.5,0.35" Center="0.5,0.5" RadiusX="0.9" RadiusY="0.9">
            <GradientStop Color="#6638D5FF" Offset="0"/>
            <GradientStop Color="#06213C" Offset="1"/>
        </RadialGradientBrush>

        <DropShadowEffect x:Key="MaintenanceOverlayShadowEffect"
                          Color="#000000"
                          ShadowDepth="0"
                          BlurRadius="36"
                          Opacity="0.7"/>

        <SolidColorBrush x:Key="MaintenanceOverlayAccentBrush" Color="#22D3EE"/>
        <SolidColorBrush x:Key="MaintenanceOverlayWarmAccentBrush" Color="#F97316"/>

        <CubicEase x:Key="MaintenanceOverlayEaseIn" EasingMode="EaseInOut"/>
        <CubicEase x:Key="MaintenanceOverlayEaseOut" EasingMode="EaseOut"/>
    </Page.Resources>

    <Grid>
        <Grid x:Name="MainContentHost"
              UseLayoutRounding="True"
              SnapsToDevicePixels="True">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="IsHitTestVisible" Value="True"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0.3"
                                                         Duration="0:0:0.35"
                                                         EasingFunction="{StaticResource MaintenanceOverlayEaseIn}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.4"
                                                         EasingFunction="{StaticResource MaintenanceOverlayEaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <ScrollViewer x:Name="ContentScrollViewer"
                          Margin="32"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          HorizontalContentAlignment="Stretch"
                          CanContentScroll="False"
                          PanningMode="VerticalOnly"
                          UseLayoutRounding="True"
                          SnapsToDevicePixels="True">
                <Grid x:Name="PageContentGrid"
                      MinWidth="0"
                      MaxWidth="1360"
                      HorizontalAlignment="Center"
                      UseLayoutRounding="True"
                      SnapsToDevicePixels="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="HeaderGrid"
                  Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="HeaderPrimaryColumn"
                                      Width="*"/>
                    <ColumnDefinition x:Name="HeaderSecondaryColumn"
                                      Width="Auto"/>
                </Grid.ColumnDefinitions>

                    <controls:PageTitleBar x:Name="HeaderSummaryPanel"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           Title="{Binding Headline}"
                                           Subtitle="{Binding SummaryText}"
                                           IconGlyph="🛠️"
                                           Margin="0,0,16,0"/>

            <StackPanel x:Name="HeaderActionHost"
                    Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                <StackPanel x:Name="HeaderActionPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                            <Button Content="Refresh"
                                    Command="{Binding RefreshCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}">
                                <Button.IsEnabled>
                                    <Binding Path="IsBusy"
                                             Converter="{StaticResource InverseBooleanConverter}"/>
                                </Button.IsEnabled>
                            </Button>
                        </StackPanel>
                        <TextBlock x:Name="HeaderLastRefreshedText"
                                   Text="{Binding LastRefreshedDisplay}"
                                   Foreground="#64748B"
                                   FontSize="12"
                                   Margin="0,6,0,0"
                                   HorizontalAlignment="Right"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
            </Grid>

            <Grid x:Name="MainLayoutGrid"
                  Grid.Row="1"
                  Margin="0,28,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,24">
                    <ToggleButton Content="Installed packages"
                                  Style="{StaticResource MaintenanceNavToggleStyle}"
                                  Command="{Binding SwitchMaintenanceSectionCommand}"
                                  CommandParameter="{x:Static viewModels:MaintenanceViewSection.Packages}"
                                  IsChecked="{Binding ActiveSection, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Packages, Mode=OneWay}"/>
                    <ToggleButton Content="Queues"
                                  Style="{StaticResource MaintenanceNavToggleStyle}"
                                  Command="{Binding SwitchMaintenanceSectionCommand}"
                                  CommandParameter="{x:Static viewModels:MaintenanceViewSection.Queue}"
                                  IsChecked="{Binding ActiveSection, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Queue, Mode=OneWay}"/>
                    <ToggleButton Content="Automation settings"
                                  Style="{StaticResource MaintenanceNavToggleStyle}"
                                  Command="{Binding SwitchMaintenanceSectionCommand}"
                                  CommandParameter="{x:Static viewModels:MaintenanceViewSection.Automation}"
                                  IsChecked="{Binding ActiveSection, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Automation, Mode=OneWay}"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid x:Name="PackagesViewHost">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}"
                                                 Value="{x:Static viewModels:MaintenanceViewSection.Packages}">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel x:Name="PrimaryColumnHost">
                            <Border Style="{StaticResource CardBorderStyle}"
                                    Margin="0,0,0,20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Vertical"
                                                Grid.Row="0"
                                                Margin="0,0,0,16">
                                        <TextBlock Text="Package filters"
                                                   Foreground="#E2E8F0"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="Search packages, filter by manager, and queue updates faster."
                                                   Foreground="#64748B"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <ux:AdaptiveTilePanel Grid.Row="1"
                                                         MinColumnWidth="260"
                                                         ColumnSpacing="24"
                                                         RowSpacing="18"
                                                         Padding="0,4,0,4">
                                        <StackPanel>
                                            <TextBlock Text="Keyword"
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       Margin="0,0,0,6"/>
                                            <TextBox MinWidth="240"
                                                     Style="{StaticResource App.TextBoxStyle}"
                                                     ToolTip="Filter by package name, identifier, manager, or tag"
                                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=120}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Manager"
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       Margin="0,0,0,6"/>
                                            <ComboBox MinWidth="220"
                                                      ItemsSource="{Binding ManagerFilters}"
                                                      SelectedItem="{Binding SelectedManager, Mode=TwoWay}"
                                                      Style="{StaticResource App.ComboBoxStyle}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Scope"
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       Margin="0,0,0,6"/>
                                            <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                      Content="Updates only"
                                                      IsChecked="{Binding UpdatesOnly, Mode=TwoWay}"
                                                      Foreground="#F8FAFC"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Bulk actions"
                                                       Foreground="#94A3B8"
                                                       FontSize="11"
                                                       Margin="0,0,0,6"/>
                                            <Button Content="Queue selected"
                                                    MinWidth="200"
                                                    Height="42"
                                                    Command="{Binding QueueSelectedUpdatesCommand}"
                                                    Style="{StaticResource AccentButtonStyle}"/>
                                        </StackPanel>
                                    </ux:AdaptiveTilePanel>

                                    <StackPanel Grid.Row="2"
                                                Margin="0,16,0,0">
                                        <TextBlock Text="Keyboard shortcuts"
                                                   Foreground="#94A3B8"
                                                   FontSize="11"
                                                   Margin="0,0,0,6"/>
                                        <ux:AdaptiveTilePanel MinColumnWidth="150"
                                                             ColumnSpacing="16"
                                                             RowSpacing="10">
                                            <Border Background="#101A2A"
                                                    CornerRadius="6"
                                                    Padding="10,4">
                                                <TextBlock Text="Q → Queue update"
                                                           Foreground="#CBD5F5"
                                                           FontSize="11"
                                                           TextAlignment="Center"/>
                                            </Border>
                                            <Border Background="#101A2A"
                                                    CornerRadius="6"
                                                    Padding="10,4">
                                                <TextBlock Text="R → Remove"
                                                           Foreground="#CBD5F5"
                                                           FontSize="11"
                                                           TextAlignment="Center"/>
                                            </Border>
                                            <Border Background="#101A2A"
                                                    CornerRadius="6"
                                                    Padding="10,4">
                                                <TextBlock Text="F → Force cleanup"
                                                           Foreground="#CBD5F5"
                                                           FontSize="11"
                                                           TextAlignment="Center"/>
                                            </Border>
                                        </ux:AdaptiveTilePanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Style="{StaticResource CardBorderStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Installed packages"
                                                       Foreground="#E2E8F0"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="Review installed packages, then queue updates or removals right here."
                                                       Foreground="#64748B"
                                                       FontSize="12"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="Select all"
                                                Command="{Binding SelectAllPackagesCommand}"
                                                Margin="16,0,0,0"
                                                VerticalAlignment="Top"
                                                Style="{StaticResource SecondaryButtonStyle}">
                                            <Button.ToolTip>Select all packages shown in the list</Button.ToolTip>
                                        </Button>
                                    </Grid>

                                    <StackPanel Grid.Row="1"
                                                Margin="0,12,0,0">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,0,0,8">
                                            <Button Content="{Binding WarningToggleLabel}"
                                                    Command="{Binding ToggleWarningsCommand}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="12,4"
                                                    Visibility="{Binding HasWarnings, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </StackPanel>
                                        <ItemsControl ItemsSource="{Binding Warnings}">
                                            <ItemsControl.Style>
                                                <Style TargetType="ItemsControl">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="HasItems"
                                                                 Value="True">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible"/>
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding AreWarningsVisible}"
                                                                     Value="False">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ItemsControl.Style>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#312E81"
                                                            BorderBrush="#4338CA"
                                                            BorderThickness="1"
                                                            CornerRadius="8"
                                                            Padding="12"
                                                            Margin="0,0,0,10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="⚠"
                                                                       FontSize="14"
                                                                       Margin="0,0,10,0"
                                                                       Grid.Column="0"
                                                                       VerticalAlignment="Top"/>
                                                            <TextBlock Text="{Binding}"
                                                                       Foreground="#E2E8F0"
                                                                       TextWrapping="Wrap"
                                                                       Grid.Column="1"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <Grid Grid.Row="2"
                                          Margin="0,16,0,0">
                                        <ListView x:Name="PackagesListView"
                                                  ItemsSource="{Binding Packages}"
                                                  SelectedItem="{Binding SelectedPackage, Mode=TwoWay}"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Foreground="#F8FAFC"
                                                  AlternationCount="5"
                                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                  ScrollViewer.CanContentScroll="True"
                                                  VirtualizingPanel.IsVirtualizing="True"
                                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                                  VirtualizingStackPanel.ScrollUnit="Pixel"
                                                  UseLayoutRounding="True"
                                                  SnapsToDevicePixels="True"
                                                  Loaded="PackagesListView_Loaded"
                                                  ItemContainerStyle="{StaticResource MaintenancePackageCardItemStyle}">
                                            <ListView.Style>
                                                <Style TargetType="ListView">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Packages.Count}"
                                                                     Value="0">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ListView.Style>
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <ux:VirtualizingAdaptiveTilePanel MinColumnWidth="360"
                                                                                     MaxColumnWidth="520"
                                                                                     MinColumns="1"
                                                                                     MaxColumns="3"
                                                                                     ColumnSpacing="20"
                                                                                     RowSpacing="20"/>
                                                </ItemsPanelTemplate>
                                            </ListView.ItemsPanel>
                                            <ListView.ItemTemplate>
                                                <DataTemplate DataType="{x:Type viewModels:PackageMaintenanceItemViewModel}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <Grid Grid.Row="0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Orientation="Horizontal"
                                                                        VerticalAlignment="Top">
                                                                <CheckBox Style="{StaticResource App.CheckBoxStyle}"
                                                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                          Margin="0,4,12,0"/>
                                                                <Border Width="52"
                                                                        Height="52"
                                                                        Background="#132032"
                                                                        CornerRadius="18"
                                                                        Margin="0,0,12,0"
                                                                        VerticalAlignment="Top">
                                                                    <TextBlock Text="{Binding DisplayInitial}"
                                                                               FontWeight="SemiBold"
                                                                               FontSize="18"
                                                                               Foreground="#F8FAFC"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="1"
                                                                        VerticalAlignment="Top">
                                                                <TextBlock Text="{Binding DisplayName}"
                                                                           FontWeight="SemiBold"
                                                                           FontSize="{Binding DisplayName, Converter={StaticResource PackageNameFontSizeConverter}, ConverterParameter=compact}"
                                                                           Foreground="#F8FAFC"
                                                                           TextWrapping="Wrap"
                                                                           TextTrimming="CharacterEllipsis"/>
                                                                <TextBlock Text="{Binding ManagerDisplay}"
                                                                           Foreground="#94A3B8"
                                                                           FontSize="12"
                                                                           Margin="0,4,0,8"/>

                                                                <WrapPanel>
                                                                    <Border Margin="0,0,8,0">
                                                                        <Border.Style>
                                                                            <Style TargetType="Border"
                                                                                   BasedOn="{StaticResource MaintenanceAccentChipStyle}">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding QueueStatus}" Value="">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding QueueStatus}" Value="{x:Null}">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>
                                                                        <TextBlock Text="{Binding QueueStatus}"
                                                                                   Foreground="#E2E8F0"
                                                                                   FontSize="11"
                                                                                   FontWeight="SemiBold"/>
                                                                    </Border>
                                                                    <Border Style="{StaticResource MaintenanceAlertChipStyle}"
                                                                            Visibility="{Binding HasUpdate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                        <TextBlock Text="Update available"
                                                                                   Foreground="#FCD34D"
                                                                                   FontSize="11"
                                                                                   FontWeight="SemiBold"/>
                                                                    </Border>
                                                                </WrapPanel>
                                                            </StackPanel>
                                                        </Grid>

                                                        <WrapPanel Grid.Row="1"
                                                                   Margin="0,12,0,0">
                                                            <Border Style="{StaticResource MaintenanceInfoChipStyle}">
                                                                <TextBlock Foreground="#E2E8F0"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold"
                                                                           Text="{Binding ManagerDisplay, StringFormat=Manager · {0}}"/>
                                                            </Border>
                                                            <Border>
                                                                <Border.Style>
                                                                    <Style TargetType="Border"
                                                                           BasedOn="{StaticResource MaintenanceInfoChipStyle}">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Source}" Value="">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Source}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Foreground="#E2E8F0"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold"
                                                                           Text="{Binding Source, StringFormat=Source · {0}}"/>
                                                            </Border>
                                                            <Border Style="{StaticResource MaintenanceInfoChipStyle}">
                                                                <TextBlock Foreground="#E2E8F0"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold"
                                                                           Text="{Binding VersionDisplay, StringFormat=Version · {0}}"/>
                                                            </Border>
                                                        </WrapPanel>

                                                        <StackPanel Grid.Row="2"
                                                                    Margin="0,12,0,0">
                                                            <TextBlock Text="{Binding Summary}"
                                                                       Foreground="#94A3B8"
                                                                       FontSize="12"
                                                                       TextWrapping="Wrap">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Summary}" Value="">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Summary}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>

                                                            <ItemsControl Margin="0,10,0,0"
                                                                          ItemsSource="{Binding Tags}"
                                                                          Visibility="{Binding TagsDisplay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <ux:AdaptiveTilePanel MinColumnWidth="120"
                                                                                            ColumnSpacing="8"
                                                                                            RowSpacing="8"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Style="{StaticResource MaintenanceInfoChipStyle}">
                                                                            <TextBlock Text="{Binding}"
                                                                                       Foreground="#E2E8F0"
                                                                                       FontSize="11"/>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>

                                                            <TextBlock Text="{Binding LastOperationMessage}"
                                                                       FontSize="12"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,12,0,0">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="#94A3B8"/>
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding LastOperationMessage}" Value="">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding LastOperationMessage}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding LastOperationSucceeded}" Value="True">
                                                                                <Setter Property="Foreground" Value="#22C55E"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding LastOperationSucceeded}" Value="False">
                                                                                <Setter Property="Foreground" Value="#F87171"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <StackPanel Grid.Row="3"
                                                                    Margin="0,16,0,0"
                                                                    MinWidth="200">
                                                            <TextBlock Text="Target version (optional)"
                                                                       Foreground="#CBD5F5"
                                                                       FontSize="11"/>
                                                            <Button x:Name="ListTargetVersionSelector"
                                                                    Style="{StaticResource VersionSelectorButtonStyle}"
                                                                    Command="{Binding DataContext.ToggleVersionPickerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                    CommandParameter="{Binding}"
                                                                    Margin="0,6,0,0"
                                                                    HorizontalAlignment="Stretch">
                                                                <DockPanel>
                                                                    <StackPanel Orientation="Vertical"
                                                                                DockPanel.Dock="Left"
                                                                                Margin="0,0,12,0">
                                                                        <TextBlock Text="{Binding TargetVersionLabel}"
                                                                                   Foreground="#F8FAFC"
                                                                                   FontSize="13"
                                                                                   FontWeight="SemiBold"/>
                                                                        <TextBlock Text="Tap to choose a release"
                                                                                   Foreground="#A5B4FC"
                                                                                   FontSize="10"/>
                                                                    </StackPanel>
                                                                    <Border Width="30"
                                                                            Height="30"
                                                                            CornerRadius="15"
                                                                            Background="#312E81"
                                                                            HorizontalAlignment="Right"
                                                                            VerticalAlignment="Center"
                                                                            SnapsToDevicePixels="True">
                                                                        <Path Data="M 6 10 L 12 16 L 18 10"
                                                                              Stroke="#F8FAFC"
                                                                              StrokeThickness="1.6"
                                                                              StrokeLineJoin="Round"
                                                                              StrokeStartLineCap="Round"
                                                                              StrokeEndLineCap="Round"
                                                                              RenderOptions.EdgeMode="Aliased"/>
                                                                    </Border>
                                                                </DockPanel>
                                                            </Button>
                                                            <Popup PlacementTarget="{Binding Source={x:Reference MaintenancePage}}"
                                                                   Placement="Center"
                                                                   StaysOpen="False"
                                                                   PopupAnimation="Slide"
                                                                   AllowsTransparency="True"
                                                                   IsOpen="{Binding IsVersionPickerOpen, Mode=TwoWay}"
                                                                   DataContext="{Binding DataContext, ElementName=ListTargetVersionSelector}">
                                                                <Grid Width="{Binding PlacementTarget.ActualWidth, RelativeSource={RelativeSource AncestorType=Popup}}"
                                                                      Height="{Binding PlacementTarget.ActualHeight, RelativeSource={RelativeSource AncestorType=Popup}}"
                                                                      Background="#99071420"
                                                                      SnapsToDevicePixels="True"
                                                                      UseLayoutRounding="True"
                                                                      RenderOptions.BitmapScalingMode="HighQuality"
                                                                      RenderOptions.ClearTypeHint="Enabled"
                                                                      TextOptions.TextRenderingMode="ClearType"
                                                                      TextOptions.TextFormattingMode="Display">
                                                                    <Border Background="#0B1628"
                                                                            BorderBrush="#1E293B"
                                                                            BorderThickness="1"
                                                                            CornerRadius="18"
                                                                            Padding="20"
                                                                            MaxWidth="520"
                                                                            Width="500"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            SnapsToDevicePixels="True">
                                                                        <Border.Effect>
                                                                            <DropShadowEffect BlurRadius="24"
                                                                                              ShadowDepth="0"
                                                                                              Color="#33000000"
                                                                                              Opacity="0.85"/>
                                                                        </Border.Effect>
                                                                        <StackPanel>
                                                                            <DockPanel>
                                                                                <TextBlock Text="Select a version"
                                                                                           Foreground="#E2E8F0"
                                                                                           FontSize="13"
                                                                                           FontWeight="SemiBold"
                                                                                           DockPanel.Dock="Left"/>
                                                                                <StackPanel Orientation="Horizontal"
                                                                                            DockPanel.Dock="Right">
                                                                                    <Button Content="Refresh"
                                                                                            Margin="0,0,6,0"
                                                                                            Padding="8,4"
                                                                                            Style="{StaticResource SecondaryButtonStyle}"
                                                                                            Command="{Binding DataContext.RefreshVersionOptionsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                                            CommandParameter="{Binding}"/>
                                                                                    <Button Content="Close"
                                                                                            Padding="8,4"
                                                                                            Style="{StaticResource SecondaryButtonStyle}"
                                                                                            Command="{Binding DataContext.CloseVersionPickerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                                            CommandParameter="{Binding}"/>
                                                                                </StackPanel>
                                                                            </DockPanel>
                                                                            <ProgressBar IsIndeterminate="True"
                                                                                         Height="4"
                                                                                         Foreground="#7C3AED"
                                                                                         Background="#1E293B"
                                                                                         Margin="0,6,0,0"
                                                                                         Visibility="{Binding IsVersionLookupInProgress, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                            <ScrollViewer Margin="0,8,0,0"
                                                                                          MaxHeight="200"
                                                                                          HorizontalScrollBarVisibility="Disabled"
                                                                                          VerticalScrollBarVisibility="Auto">
                                                                                <ItemsControl ItemsSource="{Binding VersionOptions}"
                                                                                              ItemTemplate="{StaticResource VersionChipTemplate}">
                                                                                    <ItemsControl.ItemsPanel>
                                                                                        <ItemsPanelTemplate>
                                                                                            <ux:AdaptiveTilePanel MinColumnWidth="110"
                                                                                                                  ColumnSpacing="8"
                                                                                                                  RowSpacing="8"/>
                                                                                        </ItemsPanelTemplate>
                                                                                    </ItemsControl.ItemsPanel>
                                                                                </ItemsControl>
                                                                            </ScrollViewer>
                                                                            <TextBlock Text="{Binding VersionLookupError}"
                                                                                       Foreground="#F87171"
                                                                                       FontSize="10"
                                                                                       Margin="0,6,0,0"
                                                                                       TextWrapping="Wrap">
                                                                                <TextBlock.Style>
                                                                                    <Style TargetType="TextBlock">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Binding VersionLookupError}" Value="{x:Null}">
                                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                                            </DataTrigger>
                                                                                            <DataTrigger Binding="{Binding VersionLookupError}" Value="">
                                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </TextBlock.Style>
                                                                            </TextBlock>
                                                                            <TextBlock Text="No published versions were returned for this package."
                                                                                       Foreground="#94A3B8"
                                                                                       FontSize="10"
                                                                                       Margin="0,4,0,0"
                                                                                       TextWrapping="Wrap">
                                                                                <TextBlock.Style>
                                                                                    <Style TargetType="TextBlock">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                        <Style.Triggers>
                                                                                            <MultiDataTrigger>
                                                                                                <MultiDataTrigger.Conditions>
                                                                                                    <Condition Binding="{Binding HasVersionOptions}" Value="False"/>
                                                                                                    <Condition Binding="{Binding IsVersionLookupInProgress}" Value="False"/>
                                                                                                    <Condition Binding="{Binding VersionLookupError}" Value="{x:Null}"/>
                                                                                                </MultiDataTrigger.Conditions>
                                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                                            </MultiDataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </TextBlock.Style>
                                                                            </TextBlock>
                                                                            <StackPanel Margin="0,10,0,0">
                                                                                <TextBlock Text="Custom version"
                                                                                           Foreground="#CBD5F5"
                                                                                           FontSize="10"/>
                                                                                <TextBox Text="{Binding TargetVersion, UpdateSourceTrigger=PropertyChanged, Delay=120}"
                                                                                         Margin="0,4,0,0"
                                                                                         Style="{StaticResource App.TextBoxStyle}"
                                                                                         ToolTip="Provide a specific version to install. Leave blank for the latest release."/>
                                                                            </StackPanel>
                                                                            <StackPanel Orientation="Horizontal"
                                                                                        Margin="0,10,0,0"
                                                                                        HorizontalAlignment="Right">
                                                                                <Button Content="Latest"
                                                                                        Margin="0,0,6,0"
                                                                                        Padding="10,4"
                                                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                                                        Command="{Binding DataContext.ClearTargetVersionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                                        CommandParameter="{Binding}"/>
                                                                                <Button Content="Done"
                                                                                        Padding="12,4"
                                                                                        Style="{StaticResource AccentButtonStyle}"
                                                                                        Command="{Binding DataContext.CloseVersionPickerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                                        CommandParameter="{Binding}"/>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </Grid>
                                                            </Popup>
                                                            <TextBlock Text="Leave blank to install the latest available version."
                                                                       Foreground="#475569"
                                                                       FontSize="10"
                                                                       Margin="0,6,0,0"
                                                                       TextWrapping="Wrap"/>
                                                        </StackPanel>

                                                        <WrapPanel Grid.Row="4"
                                                                   Margin="0,18,0,0">
                                                            <Button Content="Queue update"
                                                                    Command="{Binding DataContext.QueueUpdateCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Style>
                                                                    <Style TargetType="Button"
                                                                           BasedOn="{StaticResource AccentButtonStyle}">
                                                                        <Setter Property="MinWidth" Value="140"/>
                                                                        <Setter Property="Margin" Value="0,0,12,12"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding CanUpdate}" Value="False">
                                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                            <Button Content="Remove"
                                                                    Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Style>
                                                                    <Style TargetType="Button"
                                                                           BasedOn="{StaticResource SecondaryButtonStyle}">
                                                                        <Setter Property="MinWidth" Value="120"/>
                                                                        <Setter Property="Margin" Value="0,0,12,12"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding CanRemove}" Value="False">
                                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                            <Button Content="Force cleanup"
                                                                    Command="{Binding DataContext.ForceRemoveCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Style>
                                                                    <Style TargetType="Button"
                                                                           BasedOn="{StaticResource DangerButtonStyle}">
                                                                        <Setter Property="MinWidth" Value="150"/>
                                                                        <Setter Property="Margin" Value="0,0,12,12"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding CanForceRemove}" Value="False">
                                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                            <Button Content="Details"
                                                                    Command="{Binding DataContext.ShowPackageDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Style>
                                                                    <Style TargetType="Button"
                                                                           BasedOn="{StaticResource SecondaryButtonStyle}">
                                                                        <Setter Property="MinWidth" Value="110"/>
                                                                        <Setter Property="Margin" Value="0,0,12,12"/>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                        </WrapPanel>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>

                                        <TextBlock Text="No packages match your filter."
                                                   Foreground="#64748B"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="13">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Packages.Count}"
                                                                     Value="0">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                    <DockPanel Grid.Row="3"
                                               Margin="0,16,0,0">
                                        <TextBlock Text="{Binding LastRefreshedDisplay}"
                                                   Foreground="#64748B"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding SummaryText}"
                                                   Foreground="#E2E8F0"
                                                   FontSize="12"
                                                   Margin="16,0,0,0"/>
                                    </DockPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="QueueViewHost">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveSection}"
                                                 Value="{x:Static viewModels:MaintenanceViewSection.Queue}">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel x:Name="SecondaryColumnHost">
                            <Border Style="{StaticResource CardBorderStyle}"
                                    Padding="20"
                                    Margin="0,0,0,20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0">
                                        <TextBlock Text="Maintenance queue"
                                                   Foreground="#E2E8F0"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="Monitor pending operations, retry failures, and review history"
                                                   Foreground="#64748B"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                        <ux:AdaptiveTilePanel Grid.Row="1"
                                                 Margin="0,14,0,0"
                                                 HorizontalAlignment="Left"
                                                 MinColumnWidth="160"
                                                 ColumnSpacing="12"
                                                 RowSpacing="12">
                                        <Button Content="Retry failed"
                                            Command="{Binding RetryFailedCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                                        <Button Content="Clear completed"
                                            Command="{Binding ClearCompletedCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                                        </ux:AdaptiveTilePanel>

                                    <ListView x:Name="OperationsListView"
                                              Grid.Row="2"
                                              Margin="0,16,0,0"
                                              ItemsSource="{Binding Operations}"
                                              SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="#F8FAFC"
                                              AlternationCount="5"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                              ScrollViewer.CanContentScroll="True"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              VirtualizingPanel.VirtualizationMode="Recycling"
                                              VirtualizingStackPanel.ScrollUnit="Pixel"
                                              ItemContainerStyle="{StaticResource MaintenanceQueueItemStyle}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding PackageDisplay}"
                                                                   FontWeight="SemiBold"
                                                                   TextWrapping="Wrap"
                                                                   MaxWidth="220"/>
                                                        <TextBlock Text="{Binding StatusDisplay}"
                                                                   Margin="10,0,0,0"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground"
                                                                            Value="#38BDF8"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}"
