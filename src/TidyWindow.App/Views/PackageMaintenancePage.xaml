                                                    Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Packages.Count}"
                                                             Value="0">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <DockPanel Grid.Row="3"
                                       Margin="0,16,0,0">
                                <TextBlock Text="{Binding LastRefreshedDisplay}"
                                           Foreground="#64748B"
                                           FontSize="12"/>
                                <TextBlock Text="{Binding SummaryText}"
                                           Foreground="#E2E8F0"
                                           FontSize="12"
                                           Margin="16,0,0,0"/>
                            </DockPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel x:Name="SecondaryColumnHost"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="16,0,0,0">
                    <Border Style="{StaticResource CardBorderStyle}"
                            Padding="20"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <TextBlock Text="Maintenance queue"
                                           Foreground="#E2E8F0"
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Monitor pending operations, retry failures, and review history"
                                           Foreground="#64748B"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <WrapPanel Grid.Row="1"
                                       Margin="0,14,0,0"
                                       HorizontalAlignment="Left">
                                <Button Content="Retry failed"
                                        Command="{Binding RetryFailedCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                                <Button Content="Clear completed"
                                        Command="{Binding ClearCompletedCommand}"
                                        Margin="8,0,0,0"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </WrapPanel>

                            <ListView x:Name="OperationsListView"
                                      Grid.Row="2"
                                      Margin="0,16,0,0"
                                      ItemsSource="{Binding Operations}"
                                      SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="#F8FAFC"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.CanContentScroll="True"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      VirtualizingStackPanel.ScrollUnit="Pixel"
                                      ItemContainerStyle="{StaticResource AnimatedQueueItemStyle}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding PackageDisplay}"
                                                           FontWeight="SemiBold"
                                                           TextWrapping="Wrap"
                                                           MaxWidth="180"/>
                                                <TextBlock Text="{Binding StatusDisplay}"
                                                           Margin="10,0,0,0"
                                                           FontSize="12"
                                                           FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground"
                                                                    Value="#38BDF8"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}"
                                                                             Value="Succeeded">
                                                                    <Setter Property="Foreground"
                                                                            Value="#22C55E"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}"
                                                                             Value="Failed">
                                                                    <Setter Property="Foreground"
                                                                            Value="#F87171"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Message}"
                                                       Foreground="#94A3B8"
                                                       FontSize="12"
                                                       TextWrapping="Wrap"
                                                       Margin="0,6,0,0"/>
                                            <TextBlock Text="{Binding Attempts}"
                                                       Foreground="#64748B"
                                                       FontSize="11"
                                                       Margin="0,4,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility"
                                                                Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Attempts}"
                                                                         Value="{x:Null}">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Attempts}"
                                                                         Value="">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <TextBlock Grid.Row="3"
                                       Text="No maintenance operations queued yet. Queue an update or removal to get started."
                                       Foreground="#64748B"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Operations.Count}"
                                                         Value="0">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource CardBorderStyle}"
                            Padding="20"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <TextBlock Text="Operation details"
                                           Foreground="#E2E8F0"
                                           FontSize="15"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Inspect logs, outputs, and errors for the selected task"
                                           Foreground="#64748B"
                                           FontSize="11"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <Border Grid.Row="1"
                                    Margin="0,14,0,0"
                                    Background="#0F172A"
                                    CornerRadius="10"
                                    Padding="14">
                                <Grid>
                                    <ContentControl Content="{Binding SelectedOperation}"
                                                    ContentTemplate="{StaticResource OperationDetailsTemplate}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedOperation}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>

                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedOperation}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <TextBlock Text="Select an operation to review its transcript"
                                                   Foreground="#64748B"
                                                   FontSize="13"
                                                   TextAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource CardBorderStyle}"
                            Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <TextBlock Text="Package details"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#E2E8F0"/>
                                <TextBlock Text="Review metadata, tags, and queue actions for the selected package"
                                           FontSize="11"
                                           Foreground="#64748B"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <Border Grid.Row="1"
                                    Margin="0,16,0,0"
                                    Background="#0F172A"
                                    CornerRadius="10"
                                    Padding="14">
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled">
                                    <Grid>
                                        <ContentControl Content="{Binding SelectedPackage}"
                                                        ContentTemplate="{StaticResource PackageDetailsTemplate}">
                                            <ContentControl.Style>
                                                <Style TargetType="ContentControl">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedPackage}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>

                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedPackage}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="Select a package to see its details"
                                                       Foreground="#64748B"
                                                       FontSize="13"
                                                       TextAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
        </Grid>

        <ContentControl x:Name="MaintenanceLoadingOverlay"
                        Panel.ZIndex="15"
                        Focusable="False"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
            <ContentControl.Template>
                <ControlTemplate TargetType="ContentControl">
                    <Grid x:Name="OverlayRoot"
                          Background="Transparent"
                          Visibility="Collapsed"
                          Opacity="0"
                          IsHitTestVisible="False">
                        <Grid Background="{StaticResource MaintenanceOverlayBackdropBrush}">
                            <Border HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Padding="38,32"
                                    CornerRadius="32"
                                    Background="{StaticResource MaintenanceOverlayPanelBrush}"
                                    BorderBrush="#203555"
                                    BorderThickness="1.5"
                                    Effect="{StaticResource MaintenanceOverlayShadowEffect}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="240"/>
                                        <ColumnDefinition Width="24"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                        <Grid Width="220"
                                              Height="220">
                                            <Ellipse Fill="#0C1B33"
                                                     Stroke="#1C2F4D"
                                                     StrokeThickness="1.5"/>
                                            <Polygon Points="110,8 198,60 198,160 110,212 22,160 22,60"
                                                     Stroke="#244E7A"
                                                     StrokeThickness="2"
                                                     Fill="#111F34"
                                                     Opacity="0.9"
                                                     RenderTransformOrigin="0.5,0.5">
                                                <Polygon.RenderTransform>
                                                    <RotateTransform x:Name="OuterHexagonRotate" Angle="0"/>
                                                </Polygon.RenderTransform>
                                            </Polygon>
                                            <Polygon Points="110,36 174,74 174,146 110,184 46,146 46,74"
                                                     Stroke="#22D3EE"
                                                     StrokeDashArray="8 10"
                                                     StrokeThickness="1.5"
                                                     Fill="#0B253E"
                                                     Opacity="0.7"
                                                     RenderTransformOrigin="0.5,0.5">
                                                <Polygon.RenderTransform>
                                                    <RotateTransform x:Name="InnerHexagonRotate" Angle="0"/>
                                                </Polygon.RenderTransform>
                                            </Polygon>
                                            <Ellipse Width="84"
                                                     Height="84"
                                                     Fill="{StaticResource MaintenanceOverlayPulseBrush}"
                                                     Opacity="0.5"
                                                     RenderTransformOrigin="0.5,0.5">
                                                <Ellipse.RenderTransform>
                                                    <ScaleTransform x:Name="MaintenancePulseScaleTransform"
                                                                    ScaleX="1"
                                                                    ScaleY="1"/>
                                                </Ellipse.RenderTransform>
                                            </Ellipse>
                                            <Path Data="M110,30 L110,190"
                                                  Stroke="#1F3D62"
                                                  StrokeThickness="1"
                                                  StrokeDashArray="4 8"
                                                  Opacity="0.6"/>
                                            <Path Data="M56,80 L164,80"
                                                  Stroke="#1F3D62"
                                                  StrokeThickness="1"
                                                  StrokeDashArray="4 8"
                                                  Opacity="0.6"/>
                                            <Grid RenderTransformOrigin="0.5,0.5">
                                                <Grid.RenderTransform>
                                                    <RotateTransform x:Name="MaintenanceOrbitalRotate" Angle="0"/>
                                                </Grid.RenderTransform>
                                                <Border Width="14"
                                                        Height="14"
                                                        CornerRadius="7"
                                                        Background="{StaticResource MaintenanceOverlayAccentBrush}"
                                                        BorderBrush="#0F233B"
                                                        BorderThickness="1"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Top"
                                                        Margin="0,-6,0,0"/>
                                                <Border Width="20"
                                                        Height="20"
                                                        CornerRadius="10"
                                                        Background="{StaticResource MaintenanceOverlayWarmAccentBrush}"
                                                        BorderBrush="#1F2F46"
                                                        BorderThickness="1"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,-10,0"/>
                                                <Border Width="12"
                                                        Height="12"
                                                        CornerRadius="6"
                                                        Background="#22C55E"
                                                        BorderBrush="#143524"
                                                        BorderThickness="1"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Bottom"
                                                        Margin="0,0,0,-8"/>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <Rectangle Grid.Column="1"
                                               Width="1"
                                               RadiusX="0.5"
                                               RadiusY="0.5"
                                               Fill="#213A5A"
                                               Opacity="0.45"/>

                                    <StackPanel Grid.Column="2"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Running maintenance sweep"
                                                   FontSize="22"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"/>
                                        <TextBlock Text="Auditing installed packages and preparing remediation steps..."
                                                   FontSize="13"
                                                   Foreground="#94A3B8"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap"/>
                                        <StackPanel Margin="0,18,0,0">
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Ellipse Width="6"
                                                         Height="6"
                                                         Fill="{StaticResource MaintenanceOverlayAccentBrush}"
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Text="Capturing upgrade and downgrade opportunities"
                                                           Margin="10,0,0,0"
                                                           Foreground="#CBD5F5"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Ellipse Width="6"
                                                         Height="6"
                                                         Fill="{StaticResource MaintenanceOverlayWarmAccentBrush}"
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Text="Checking pinned versions for drift"
                                                           Margin="10,0,0,0"
                                                           Foreground="#CBD5F5"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Ellipse Width="6"
                                                         Height="6"
                                                         Fill="#22C55E"
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Text="Verifying uninstall remediations"
                                                           Margin="10,0,0,0"
                                                           Foreground="#CBD5F5"
                                                           FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Border Height="6"
                                                CornerRadius="3"
                                                Background="#172840"
                                                Margin="0,22,0,0">
                                            <Grid ClipToBounds="True">
                                                <Rectangle x:Name="MaintenanceProgressPulse"
                                                           Width="180"
                                                           Height="6"
                                                           Fill="{StaticResource MaintenanceOverlayAccentBrush}">
                                                    <Rectangle.RenderTransform>
                                                        <TranslateTransform x:Name="MaintenanceProgressTranslate"
                                                                            X="-180"/>
                                                    </Rectangle.RenderTransform>
                                                </Rectangle>
                                            </Grid>
                                        </Border>

                                        <TextBlock Text="Hold tightâ€”tasks queue automatically when analysis finishes."
                                                   FontSize="12"
                                                   Foreground="#64748B"
                                                   Margin="0,14,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter TargetName="OverlayRoot" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="OverlayRoot" Property="IsHitTestVisible" Value="True"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="MaintenanceOverlayFadeInStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OverlayRoot"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.45"
                                                         EasingFunction="{StaticResource MaintenanceOverlayEaseIn}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                                <BeginStoryboard x:Name="MaintenanceOverlayMotionStoryboard">
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="OuterHexagonRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0"
                                                         To="360"
                                                         Duration="0:0:7"/>
                                        <DoubleAnimation Storyboard.TargetName="InnerHexagonRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="360"
                                                         To="0"
                                                         Duration="0:0:4.5"/>
                                        <DoubleAnimation Storyboard.TargetName="MaintenanceOrbitalRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0"
                                                         To="360"
                                                         Duration="0:0:3.2"/>
                                        <DoubleAnimation Storyboard.TargetName="MaintenancePulseScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         From="1"
                                                         To="1.3"
                                                         Duration="0:0:1.1"
                                                         AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="MaintenancePulseScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         From="1"
                                                         To="1.3"
                                                         Duration="0:0:1.1"
                                                         AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="MaintenanceProgressTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         From="-180"
                                                         To="180"
                                                         Duration="0:0:1.9"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="MaintenanceOverlayMotionStoryboard"/>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OverlayRoot"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.4"
                                                         EasingFunction="{StaticResource MaintenanceOverlayEaseOut}"/>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverlayRoot"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                                                    Value="{x:Static Visibility.Collapsed}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ContentControl.Template>
        </ContentControl>
    </Grid>
</Page>
