                Padding="18"
                Margin="0,0,22,22">
            <StackPanel>
                <Rectangle Height="16" Width="130" RadiusX="4" RadiusY="4" Fill="#193150"/>
                <Rectangle Height="12" Width="180" Margin="0,10,0,0" RadiusX="4" RadiusY="4" Fill="#12263D"/>
                <Rectangle Height="12" Width="120" Margin="0,10,0,0" RadiusX="4" RadiusY="4" Fill="#12263D"/>
            </StackPanel>
        </Border>
    </DataTemplate>

