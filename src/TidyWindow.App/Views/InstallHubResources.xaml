                            BorderThickness="1"
                            Padding="20"
                            SnapsToDevicePixels="True">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Container" Property="BorderBrush" Value="#38BDF8"/>
