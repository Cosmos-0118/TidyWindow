    <DataTemplate x:Key="InstallOperationDetailsTemplate"
                  DataType="{x:Type viewModels:InstallOperationItemViewModel}">
        <StackPanel>
            <TextBlock Text="{Binding PackageName}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource InstallTextPrimaryBrush}"
                       TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal"
                        Margin="0,8,0,0"
                        VerticalAlignment="Center">
                <Border Background="{StaticResource InstallBadgeAltBackgroundBrush}"
                        CornerRadius="6"
                        Padding="8,3">
                    <TextBlock Text="{Binding StatusLabel}"
                               FontSize="12"
                               FontWeight="SemiBold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource InstallTextAccentBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusLabel}" Value="Installed">
                                        <Setter Property="Foreground" Value="{StaticResource InstallTextSuccessBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusLabel}" Value="Failed">
                                        <Setter Property="Foreground" Value="{StaticResource InstallTextDangerBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusLabel}" Value="Cancelled">
                                        <Setter Property="Foreground" Value="{StaticResource InstallTextWarningBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <TextBlock Text="{Binding CompletedAt, StringFormat=Completed Â· {0:G}}"
                           Margin="12,0,0,0"
                           Foreground="{StaticResource InstallTextCaptionBrush}"
                           FontSize="12"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="{Binding Attempts}"
                           Margin="12,0,0,0"
                           Foreground="{StaticResource InstallTextSecondaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <TextBlock Text="{Binding Message}"
                       Foreground="{StaticResource InstallTextSecondaryBrush}"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Border Margin="0,14,0,0"
                    Background="#0F172A"
                    BorderBrush="#1E293B"
                    BorderThickness="1"
                    CornerRadius="10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Padding" Value="14"/>
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasTranscript}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding HasOutput, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Output"
                                   FontSize="12"
                                   Foreground="{StaticResource InstallTextInfoBrush}"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <ItemsControl ItemsSource="{Binding OutputLines}"
                                  Margin="0,6,0,0"
                                  Visibility="{Binding HasOutput, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="{StaticResource InstallTextInverseBrush}"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,6"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Separator Margin="0,8,0,8"
                               Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Errors"
                                   FontSize="12"
                                   Foreground="{StaticResource InstallTextDangerAccentBrush}"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding ErrorLines}"
                                  Margin="0,6,0,0"
                                  Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="{StaticResource InstallTextDangerSoftBrush}"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,6"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </DataTemplate>

    <Style x:Key="InstallHubPivotButtonStyle"
           TargetType="ToggleButton">
        <Setter Property="Padding" Value="18,10"/>
        <Setter Property="MinWidth" Value="150"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource InstallTextInverseBrush}"/>
        <Setter Property="Background" Value="{StaticResource InstallSecondaryButtonBrush}"/>
        <Setter Property="BorderBrush" Value="#2A3C5A"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="Root"
                            CornerRadius="20"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource InstallSecondaryButtonHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource InstallAccentButtonBrush}"/>
                            <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource InstallTextAccentBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource InstallTextPrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Opacity" Value="0.65"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
