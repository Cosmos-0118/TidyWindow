<Page x:Class="TidyWindow.App.Views.PathPilotPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:TidyWindow.App.Views"
      xmlns:converters="clr-namespace:TidyWindow.App.Converters"
      xmlns:vm="clr-namespace:TidyWindow.App.ViewModels"
      xmlns:ux="clr-namespace:TidyWindow.App.Controls"
      Title="PathPilot"
      mc:Ignorable="d"
      Background="Transparent"
      UseLayoutRounding="True"
      SnapsToDevicePixels="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType"
      TextOptions.TextHintingMode="Fixed"
      RenderOptions.BitmapScalingMode="HighQuality">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:PathPilotStatusSeverityToBrushConverter x:Key="SeverityBrush" />

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- APP THEME COLORS - Unified with other pages                    -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <SolidColorBrush x:Key="PageBg" Color="#0B1120"/>
        <SolidColorBrush x:Key="CardBg" Color="#0C1829"/>
        <SolidColorBrush x:Key="CardBgAlt" Color="#151F32"/>
        <SolidColorBrush x:Key="CardBorder" Color="#1A2D47"/>
        <SolidColorBrush x:Key="CardBorderHover" Color="#2563EB"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="TextMuted" Color="#64748B"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#38BDF8"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#A78BFA"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="WarningAmber" Color="#FBBF24"/>
        <SolidColorBrush x:Key="DangerRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="BadgeForeground" Color="#F8FAFC" />

        <!-- Hero Gradient -->
        <LinearGradientBrush x:Key="HeroGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A1628" Offset="0"/>
            <GradientStop Color="#0F2847" Offset="0.5"/>
            <GradientStop Color="#0D3355" Offset="1"/>
        </LinearGradientBrush>

        <!-- Accent Gradient - Cyan to Purple -->
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#38BDF8" Offset="0"/>
            <GradientStop Color="#A78BFA" Offset="1"/>
        </LinearGradientBrush>

        <!-- Success Gradient -->
        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#34D399" Offset="0"/>
            <GradientStop Color="#22C55E" Offset="1"/>
        </LinearGradientBrush>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- MODERN BUTTON STYLES                                           -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        
        <!-- Primary Accent Button with Gradient -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#38BDF8" Offset="0"/>
                                    <GradientStop Color="#22C55E" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#22C55E" BlurRadius="12" Opacity="0.25" ShadowDepth="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#7DD3FC" Offset="0"/>
                                            <GradientStop Color="#4ADE80" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Root" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#4ADE80" BlurRadius="16" Opacity="0.35" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#16A34A"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary/Ghost Button -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="14,9"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" Background="#151F32" BorderBrush="#1A2D47" BorderThickness="1" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1A2D47"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#38BDF8"/>
                                <Setter Property="Foreground" Value="#F1F5F9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Toggle Button -->
        <Style x:Key="SecondaryToggleButton" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="14,9"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root" Background="#151F32" BorderBrush="#1A2D47" BorderThickness="1" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1A2D47"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#38BDF8"/>
                                <Setter Property="Foreground" Value="#F1F5F9"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1A2D47"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#A78BFA"/>
                                <Setter Property="Foreground" Value="#F1F5F9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- CARD STYLES                                                    -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#0C1829"/>
            <Setter Property="BorderBrush" Value="#1A2D47"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="#0F172A"/>
        </Style>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- RUNTIME CARD TEMPLATE                                          -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <DataTemplate x:Key="RuntimeCardTemplate" DataType="{x:Type vm:PathPilotRuntimeCardViewModel}">
            <Border MinWidth="440" MaxWidth="780" Padding="24" CornerRadius="18">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0C1829" Offset="0"/>
                        <GradientStop Color="#0F1F35" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="#1A2D47"/>
                </Border.BorderBrush>
                <Border.BorderThickness>1</Border.BorderThickness>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#38BDF8" Offset="0"/>
                                            <GradientStop Color="#A78BFA" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <!-- Header: Name + Status Badges -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="{Binding FriendlyName}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="300"
                                   VerticalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding StatusBadges}" Margin="14,0,0,0" VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" Padding="10,5" Margin="0,0,6,0"
                                            Background="{Binding Severity, Converter={StaticResource SeverityBrush}}">
                                        <TextBlock Text="{Binding Label}"
                                                   Foreground="#F8FAFC"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Version Badge -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,14">
                        <Border CornerRadius="8" Padding="12,6">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#0B2538" Offset="0"/>
                                    <GradientStop Color="#0F2D45" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="{Binding VersionChipLabel}" Foreground="#7DD3FC" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <!-- Info Card -->
                    <Border CornerRadius="14" Padding="16" Margin="0,0,0,16">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#0F172A" Offset="0"/>
                                <GradientStop Color="#151F32" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#1E293B"/>
                        </Border.BorderBrush>
                        <Border.BorderThickness>1</Border.BorderThickness>
                        <StackPanel>
                            <TextBlock Text="Current version"
                                       Foreground="#64748B"
                                       FontWeight="SemiBold"
                                       FontSize="11"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{Binding VersionChipLabel}" Foreground="#E2E8F0" TextWrapping="Wrap" FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Switch" Style="{StaticResource PrimaryButton}" MinWidth="90" HorizontalAlignment="Stretch" Margin="0,0,8,0"
                                Command="{Binding DataContext.ShowInstallationsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}" IsEnabled="{Binding HasInstallations}"/>
                        <Button Grid.Column="1" Content="Details" Style="{StaticResource SecondaryButton}" MinWidth="90" HorizontalAlignment="Stretch" Margin="0,0,8,0"
                                Command="{Binding DataContext.ShowDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}"/>
                        <Button Grid.Column="2" Content="Order" Style="{StaticResource SecondaryButton}" MinWidth="90" HorizontalAlignment="Stretch"
                                Command="{Binding DataContext.ShowResolutionOrderCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}" IsEnabled="{Binding HasResolutionOrder}"/>
                    </Grid>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- INSTALLATION TEMPLATE                                          -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <DataTemplate x:Key="InstallationTemplate" DataType="{x:Type vm:PathPilotInstallationViewModel}">
            <Border Padding="20,18" CornerRadius="14" BorderThickness="1">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#151F32" Offset="0"/>
                                    <GradientStop Color="#1A2744" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="BorderBrush" Value="#1E293B"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#0A1F18" Offset="0"/>
                                            <GradientStop Color="#0F2920" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="#166534"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#38BDF8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center">
                        <!-- Header row: Version + Active badge -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{Binding VersionDisplay}" FontSize="15" FontWeight="SemiBold" Foreground="#F1F5F9" VerticalAlignment="Center"/>
                            <Border CornerRadius="8" Padding="10,5" Margin="14,0,0,0" VerticalAlignment="Center"
                                    Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#14532D" Offset="0"/>
                                        <GradientStop Color="#166534" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="âœ“ Active" Foreground="#4ADE80" FontSize="11" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>

                        <!-- Directory path -->
                        <TextBlock Text="{Binding Directory}" Foreground="#64748B" FontSize="12" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Margin="0,0,0,12"/>

                        <!-- Badges row -->
                        <StackPanel Orientation="Horizontal">
                            <Border CornerRadius="8" Padding="10,5" Margin="0,0,8,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#0B2538" Offset="0"/>
                                        <GradientStop Color="#0F3555" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="{Binding Source}" Foreground="#7DD3FC" FontSize="11" FontWeight="Medium"/>
                            </Border>
                            <Border CornerRadius="8" Padding="10,5">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#1E1065" Offset="0"/>
                                        <GradientStop Color="#2E1085" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="{Binding Architecture}" Foreground="#C4B5FD" FontSize="11" FontWeight="Medium"/>
                            </Border>
                        </StackPanel>

                        <!-- Notes (if any) -->
                        <Border CornerRadius="10" Padding="12,10" Margin="0,14,0,0"
                                Visibility="{Binding HasNotes, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#1C1917" Offset="0"/>
                                    <GradientStop Color="#27211C" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#44403C"/>
                            </Border.BorderBrush>
                            <Border.BorderThickness>1</Border.BorderThickness>
                            <TextBlock Text="{Binding NotesDisplay}" Foreground="#FCD34D" FontSize="11" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <!-- Action button -->
                    <Button Grid.Column="1" Content="Make active" Style="{StaticResource PrimaryButton}" 
                            Padding="18,10" MinWidth="120" VerticalAlignment="Center" Margin="20,0,0,0"
                            Command="{Binding DataContext.SwitchRuntimeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding SwitchRequest}" IsEnabled="{Binding CanSwitch}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid x:Name="PageContentGrid"
              MinWidth="0"
              MaxWidth="1520"
              HorizontalAlignment="Center"
              Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.RowSpan="2" VerticalScrollBarVisibility="Auto" Padding="4,0,4,24">
                <StackPanel Orientation="Vertical">
                    <controls:PageTitleBar
                        Title="PathPilot"
                        Subtitle="Runtime PATH switchboard"
                        IconGlyph="ðŸ›°ï¸"
                        BadgeText="{Binding LastRefreshedDisplay}"
                        Margin="0,0,0,18">
                        <controls:PageTitleBar.TrailingContent>
                            <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                <Button Content="Refresh" Style="{StaticResource PrimaryButton}" Command="{Binding RefreshCommand}" Margin="0,0,14,0"/>
                                <Button Content="Export JSON" Style="{StaticResource SecondaryButton}" Command="{Binding ExportJsonCommand}" Margin="0,0,10,0"/>
                                <Button Content="Export Markdown" Style="{StaticResource SecondaryButton}" Command="{Binding ExportMarkdownCommand}"/>
                            </StackPanel>
                        </controls:PageTitleBar.TrailingContent>
                        <controls:PageTitleBar.BodyContent>
                            <Border Style="{StaticResource CardStyle}" Padding="22">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#0C1829" Offset="0"/>
                                        <GradientStop Color="#0F2540" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="PathPilot" FontSize="18" FontWeight="SemiBold" Foreground="#F8FAFC"/>
                                        <Button Content="Details" Style="{StaticResource SecondaryButton}" Padding="14,6" Margin="14,0,0,0" VerticalAlignment="Center"
                                                Command="{Binding ShowPageInfoCommand}"/>
                                    </StackPanel>
                                    <TextBlock Text="Switch runtimes that own PATH without the clutter."
                                               Foreground="#94A3B8" FontSize="13" Margin="0,0,0,8"/>
                                    <StackPanel Visibility="{Binding ShowPathPilotHero, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="PathPilot updates HKLM + machine PATH, affecting all accounts." Foreground="#CBD5E1" FontSize="12" Margin="0,4,0,0"/>
                                        <TextBlock Text="Snapshot is taken before edits; confirm destinations before switching." Foreground="#A5B4FC" FontSize="11" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </controls:PageTitleBar.BodyContent>
                    </controls:PageTitleBar>

                    <StackPanel x:Name="MainLayoutHost" Margin="0,0,0,8" Orientation="Vertical">
                        <!-- Info Banner -->
                        <Border CornerRadius="16" Padding="22" Margin="0,0,0,24">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#0C1F38" Offset="0"/>
                                    <GradientStop Color="#102540" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#1A2D47" Offset="0"/>
                                    <GradientStop Color="#2563EB" Offset="1"/>
                                </LinearGradientBrush>
