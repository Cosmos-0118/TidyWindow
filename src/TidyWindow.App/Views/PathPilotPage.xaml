<Page x:Class="TidyWindow.App.Views.PathPilotPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:TidyWindow.App.Views"
    xmlns:converters="clr-namespace:TidyWindow.App.Converters"
    xmlns:vm="clr-namespace:TidyWindow.App.ViewModels"
    xmlns:ux="clr-namespace:TidyWindow.App.Controls"
      Title="PathPilot"
      mc:Ignorable="d"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:PathPilotStatusSeverityToBrushConverter x:Key="PathPilotStatusSeverityToBrushConverter"/>
        <converters:AlternationIndexToBrushConverter x:Key="AlternationIndexToBrushConverter"/>
        <SolidColorBrush x:Key="PathPilotCardPrimaryBrush"
                 Color="#111D33"/>
        <SolidColorBrush x:Key="PathPilotCardSecondaryBrush"
                 Color="#0F1F3A"/>
        <SolidColorBrush x:Key="PathPilotCardTertiaryBrush"
                 Color="#142542"/>
        <SolidColorBrush x:Key="PathPilotVersionChipKnownBrush"
                 Color="#0E2B3F"/>
        <SolidColorBrush x:Key="PathPilotVersionChipUnknownBrush"
                 Color="#3B1A27"/>
        <SineEase x:Key="PathPilotHoverEase" EasingMode="EaseOut"/>

        <Style x:Key="PathPilotPrimaryButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground"
                Value="#04111E"/>
            <Setter Property="BorderBrush"
                Value="#0F361F"/>
            <Setter Property="BorderThickness"
                Value="1"/>
            <Setter Property="Padding"
                Value="16,9"/>
            <Setter Property="Margin"
                Value="0,0,12,0"/>
            <Setter Property="FontWeight"
                Value="SemiBold"/>
            <Setter Property="Cursor"
                Value="Hand"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                <Border x:Name="Root"
                    CornerRadius="12"
                    Padding="{TemplateBinding Padding}">
                    <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                        <GradientStop Color="#34D399"
                              Offset="0"/>
                        <GradientStop Color="#10B981"
                              Offset="1"/>
                    </LinearGradientBrush>
                    </Border.Background>
                    <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="RenderTransform">
                        <Setter.Value>
                        <ScaleTransform ScaleX="1.01"
                                ScaleY="1.01"/>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="Root"
                        Property="Effect">
                        <Setter.Value>
                        <DropShadowEffect BlurRadius="10"
                                  Direction="270"
                                  Color="#1FC981"
                                  Opacity="0.6"
                                  ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                    </Trigger>
                    <Trigger Property="IsPressed"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="RenderTransform">
                        <Setter.Value>
                        <ScaleTransform ScaleX="0.99"
                                ScaleY="0.99"/>
                        </Setter.Value>
                    </Setter>
                    </Trigger>
                    <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="Root"
                        Property="Opacity"
                        Value="0.55"/>
                    </Trigger>
                </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PathPilotSecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground"
                Value="#E2E8F0"/>
            <Setter Property="BorderBrush"
                Value="#324464"/>
            <Setter Property="BorderThickness"
                Value="1"/>
            <Setter Property="Padding"
                Value="14,8"/>
            <Setter Property="Margin"
                Value="0,0,12,0"/>
            <Setter Property="Cursor"
                Value="Hand"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                <Border x:Name="Root"
                    CornerRadius="10"
                    Padding="{TemplateBinding Padding}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                    <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                        <GradientStop Color="#172640"
                              Offset="0"/>
                        <GradientStop Color="#1E2A46"
                              Offset="1"/>
                    </LinearGradientBrush>
                    </Border.Background>
                    <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="RenderTransform">
                        <Setter.Value>
                        <ScaleTransform ScaleX="1.01"
                                ScaleY="1.01"/>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="Root"
                        Property="Effect">
                        <Setter.Value>
                        <DropShadowEffect BlurRadius="8"
                                  Direction="270"
                                  Color="#1D4ED8"
                                  Opacity="0.45"
                                  ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                    </Trigger>
                    <Trigger Property="IsPressed"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="RenderTransform">
                        <Setter.Value>
                        <ScaleTransform ScaleX="0.99"
                                ScaleY="0.99"/>
                        </Setter.Value>
                    </Setter>
                    </Trigger>
                    <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="Root"
                        Property="Opacity"
                        Value="0.55"/>
                    </Trigger>
                </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PathPilotTertiaryButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground"
                Value="#93C5FD"/>
            <Setter Property="BorderBrush"
                Value="#1E3A8A"/>
            <Setter Property="BorderThickness"
                Value="1"/>
            <Setter Property="Padding"
                Value="12,7"/>
            <Setter Property="Margin"
                Value="0,0,0,0"/>
            <Setter Property="Cursor"
                Value="Hand"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                <Border x:Name="Root"
                    CornerRadius="10"
                    Padding="{TemplateBinding Padding}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Background="#0A1A33">
                    <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="Background"
                        Value="#12264A"/>
                    </Trigger>
                    <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="Root"
                        Property="Opacity"
                        Value="0.55"/>
                    </Trigger>
                </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PathPilotDialogShellStyle" TargetType="Border">
            <Setter Property="Background" Value="#0C172C"/>
            <Setter Property="BorderBrush" Value="#253552"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="28"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="36"
                                      ShadowDepth="0"
                                      Color="#0B1220"
                                      Opacity="0.65"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PathPilotCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                Value="{StaticResource PathPilotCardPrimaryBrush}"/>
            <Setter Property="BorderBrush"
                    Value="#1E293B"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="16"/>
            <Setter Property="Padding"
                    Value="20"/>
            <Setter Property="RenderTransformOrigin"
                    Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1"
                                    ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="28"
                                      ShadowDepth="0"
                                      Color="#010914"
                                      Opacity="0.15"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1.02"
                                                 Duration="0:0:0.18"
                                                 EasingFunction="{StaticResource PathPilotHoverEase}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1.02"
                                                 Duration="0:0:0.18"
                                                 EasingFunction="{StaticResource PathPilotHoverEase}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                                 To="0.4"
                                                 Duration="0:0:0.18"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1"
                                                 Duration="0:0:0.2"
                                                 EasingFunction="{StaticResource PathPilotHoverEase}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1"
                                                 Duration="0:0:0.2"
                                                 EasingFunction="{StaticResource PathPilotHoverEase}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                                 To="0.15"
                                                 Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="PathPilotInstallationTemplate"
                      DataType="{x:Type vm:PathPilotInstallationViewModel}">
            <Border CornerRadius="16"
                    BorderThickness="1"
                    Padding="0"
                    Margin="0,0,0,16"
                    Background="#0F1B31"
                    BorderBrush="#1F2F4A"
                    HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            CornerRadius="16,0,0,16"
                            Background="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ContentPresenter}, Converter={StaticResource AlternationIndexToBrushConverter}}"/>
                    <StackPanel Grid.Column="1"
                                Margin="20,16"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding Caption}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Directory}"
                                   Margin="0,6,0,0"
                                   Foreground="#E2E8F0"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding ExecutablePath}"
                                   Margin="0,4,0,0"
                                   Foreground="#C7D2FE"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"/>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,10,0,0">
                            <Border Background="#15213A"
                                    CornerRadius="8"
                                    Padding="8,3"
                                    Margin="0,0,8,0"
                                    BorderBrush="#334155"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding Source, StringFormat=Source Â· {0}}"
                                           Foreground="#BFDBFE"
                                           FontSize="10"/>
                            </Border>
                            <Border Background="#15213A"
                                    CornerRadius="8"
                                    Padding="8,3"
                                    BorderBrush="#334155"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding Architecture, StringFormat=Arch Â· {0}}"
                                           Foreground="#F3E8FF"
                                           FontSize="10"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="{Binding NotesDisplay}"
                                   Margin="0,10,0,0"
                                   Foreground="#FDE68A"
                                   FontSize="11"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasNotes}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="2"
                                Margin="16"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Border CornerRadius="10"
                                Padding="8,4"
                                Background="#F8FAFC"
                                Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Active winner"
                                       Foreground="#0F172A"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <Button Content="Prioritize"
                                Margin="0,10,0,0"
                                Style="{StaticResource PathPilotSecondaryButtonStyle}"
                                Command="{Binding DataContext.SwitchRuntimeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding SwitchRequest}"
                                IsEnabled="{Binding CanSwitch}">
                            <Button.ToolTip>
                                <ToolTip Content="Make this installation win PATH immediately"/>
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="RuntimeCardTemplate"
                      DataType="{x:Type vm:PathPilotRuntimeCardViewModel}">
                <Border Style="{StaticResource PathPilotCardStyle}"
                    Padding="0"
                    MinHeight="320"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Padding="22"
                            Background="#101D34"
                            CornerRadius="16,16,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <Border CornerRadius="12"
                                        Padding="10,4"
                                        Background="#172A48"
                                        BorderBrush="#23324C"
                                        BorderThickness="1">
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center"
                                                 Fill="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource AlternationIndexToBrushConverter}}"/>
                                        <TextBlock Text="{Binding FriendlyName}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F8FAFC"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <Border Margin="0,12,0,0"
                                    Background="#12243F"
                                    CornerRadius="10"
                                    Padding="10,4"
                                    BorderBrush="#3B82F6"
                                    BorderThickness="1"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="{Binding VersionChipLabel}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#E0F2FE"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="1"
                                Margin="22,14,22,0">
                        <TextBlock Text="{Binding DisplayName}"
                                   Foreground="#CBD5F5"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Summary}"
                                   Margin="0,6,0,0"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <ItemsControl Grid.Row="2"
                                  Margin="22,12,22,0"
                                  ItemsSource="{Binding StatusBadges}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                           MinWidth="0"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                    <Border Background="{Binding Severity, Converter={StaticResource PathPilotStatusSeverityToBrushConverter}}"
                                            CornerRadius="10"
                                            Padding="10,4"
                                            Margin="0,0,8,8"
                                            BorderBrush="#050A14"
                                            BorderThickness="1"
                                            MinWidth="70"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Label}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#04111E"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Grid Grid.Row="3"
                          Margin="22,6,22,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasActivePath}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Active path"
                                       Foreground="#93C5FD"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ActiveExecutablePath}"
                                       Foreground="#F8FAFC"
                                       FontSize="11"
                                       Margin="0,4,20,0"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasPathEntry}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="PATH entry"
                                       Foreground="#93C5FD"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PathEntry}"
                                       Foreground="#E2E8F0"
                                       FontSize="11"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="4"
                                Margin="22,10,22,0">
                        <TextBlock Text="No installations reported"
                                   Foreground="#64748B"
                                   FontSize="11">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasInstallations}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding ResolutionOrder.Count, StringFormat={}{0} candidate(s) observed on PATH}"
                                   Foreground="#94A3B8"
                                   FontSize="11"
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasResolutionOrder}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Row="5"
                                Orientation="Horizontal"
                                Margin="22,16,22,22">
                        <Button Content="Switch"
                            Style="{StaticResource PathPilotPrimaryButtonStyle}"
                                Command="{Binding DataContext.ShowInstallationsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}"
                                IsEnabled="{Binding HasInstallations}"/>
                        <Button Content="Details"
                                Margin="12,0,0,0"
                                Style="{StaticResource PathPilotSecondaryButtonStyle}"
                                Command="{Binding DataContext.ShowDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}"/>
                        <Button Content="Resolution order"
                                Margin="12,0,0,0"
                            Style="{StaticResource PathPilotTertiaryButtonStyle}"
                                Command="{Binding DataContext.ShowResolutionOrderCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}"
                                IsEnabled="{Binding HasResolutionOrder}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <ScrollViewer x:Name="ContentScrollViewer"
                      Margin="32"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      HorizontalContentAlignment="Stretch"
                      PanningMode="VerticalOnly">
        <Grid x:Name="PageContentGrid"
              MinWidth="0"
              MaxWidth="1320"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <controls:PageTitleBar Grid.Row="0"
                                   Title="PathPilot switchboard"
                                   Subtitle="{Binding Summary}"
                                   IconGlyph="ðŸ›°ï¸"
                                   BadgeText="{Binding LastRefreshedDisplay}"
                                   Margin="0,0,0,24">
                <controls:PageTitleBar.TrailingContent>
                          <WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Right"
                               ItemHeight="Auto"
                               ItemWidth="Auto"
                               MinWidth="0">
                        <Button Content="Refresh"
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource PathPilotPrimaryButtonStyle}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                        <Button Content="Export JSON"
                                Command="{Binding ExportJsonCommand}"
                                Style="{StaticResource PathPilotSecondaryButtonStyle}"/>
                        <Button Content="Export Markdown"
                                Command="{Binding ExportMarkdownCommand}"
                                Style="{StaticResource PathPilotSecondaryButtonStyle}"/>
                    </WrapPanel>
                </controls:PageTitleBar.TrailingContent>
                <controls:PageTitleBar.BodyContent>
                    <Border Margin="0,4,0,0"
                            Background="#102038"
                            BorderBrush="#1F365A"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="16">
                        <ux:AdaptiveTilePanel MinColumnWidth="220"
                                              MaxColumnWidth="420"
                                              ColumnSpacing="16"
                                              RowSpacing="16">
                            <Border Style="{StaticResource PathPilotCardStyle}"
                                    Padding="16"
                                    HorizontalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Runtime overview"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Summary}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="Guard PATH stability and keep one winner per runtime."
                                               Foreground="#94A3B8"
                                               FontSize="12"
                                               Margin="0,6,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                                <Border Style="{StaticResource PathPilotCardStyle}"
                                    Padding="16"
                                    HorizontalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Last refreshed"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding LastRefreshedDisplay}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="Exports include the latest inventory snapshot."
                                               Foreground="#94A3B8"
                                               FontSize="12"
                                               Margin="0,6,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource PathPilotCardStyle}"
                                    Padding="16"
                                    HorizontalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Machine scope"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding MachineScopeWarning}"
                                               FontSize="13"
                                               Foreground="#FDE047"
                                               Margin="0,8,0,0"
