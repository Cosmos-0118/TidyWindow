<Page x:Class="TidyWindow.App.Views.PathPilotPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:TidyWindow.App.Views"
      xmlns:converters="clr-namespace:TidyWindow.App.Converters"
      xmlns:vm="clr-namespace:TidyWindow.App.ViewModels"
      Title="PathPilot"
      mc:Ignorable="d"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:PathPilotStatusSeverityToBrushConverter x:Key="PathPilotStatusSeverityToBrushConverter"/>
        <SolidColorBrush x:Key="PathPilotCardPrimaryBrush"
                 Color="#111D33"/>
        <SolidColorBrush x:Key="PathPilotCardSecondaryBrush"
                 Color="#0F1F3A"/>
        <SolidColorBrush x:Key="PathPilotCardTertiaryBrush"
                 Color="#142542"/>
        <SolidColorBrush x:Key="PathPilotVersionChipKnownBrush"
                 Color="#0E2B3F"/>
        <SolidColorBrush x:Key="PathPilotVersionChipUnknownBrush"
                 Color="#3B1A27"/>

        <Style x:Key="PathPilotPrimaryButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground"
                Value="#04111E"/>
            <Setter Property="BorderBrush"
                Value="#0F361F"/>
            <Setter Property="BorderThickness"
                Value="1"/>
            <Setter Property="Padding"
                Value="16,9"/>
            <Setter Property="Margin"
                Value="0,0,12,0"/>
            <Setter Property="FontWeight"
                Value="SemiBold"/>
            <Setter Property="Cursor"
                Value="Hand"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                <Border x:Name="Root"
                    CornerRadius="12"
                    Padding="{TemplateBinding Padding}">
                    <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                        <GradientStop Color="#34D399"
                              Offset="0"/>
                        <GradientStop Color="#10B981"
                              Offset="1"/>
                    </LinearGradientBrush>
                    </Border.Background>
                    <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="RenderTransform">
                        <Setter.Value>
                        <ScaleTransform ScaleX="1.01"
                                ScaleY="1.01"/>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="Root"
                        Property="Effect">
                        <Setter.Value>
                        <DropShadowEffect BlurRadius="10"
                                  Direction="270"
                                  Color="#1FC981"
                                  Opacity="0.6"
                                  ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                    </Trigger>
                    <Trigger Property="IsPressed"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="RenderTransform">
                        <Setter.Value>
                        <ScaleTransform ScaleX="0.99"
                                ScaleY="0.99"/>
                        </Setter.Value>
                    </Setter>
                    </Trigger>
                    <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="Root"
                        Property="Opacity"
                        Value="0.55"/>
                    </Trigger>
                </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PathPilotSecondaryButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground"
                Value="#E2E8F0"/>
            <Setter Property="BorderBrush"
                Value="#324464"/>
            <Setter Property="BorderThickness"
                Value="1"/>
            <Setter Property="Padding"
                Value="14,8"/>
            <Setter Property="Margin"
                Value="0,0,12,0"/>
            <Setter Property="Cursor"
                Value="Hand"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                <Border x:Name="Root"
                    CornerRadius="10"
                    Padding="{TemplateBinding Padding}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                    <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                        <GradientStop Color="#172640"
                              Offset="0"/>
                        <GradientStop Color="#1E2A46"
                              Offset="1"/>
                    </LinearGradientBrush>
                    </Border.Background>
                    <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="RenderTransform">
                        <Setter.Value>
                        <ScaleTransform ScaleX="1.01"
                                ScaleY="1.01"/>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="Root"
                        Property="Effect">
                        <Setter.Value>
                        <DropShadowEffect BlurRadius="8"
                                  Direction="270"
                                  Color="#1D4ED8"
                                  Opacity="0.45"
                                  ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                    </Trigger>
                    <Trigger Property="IsPressed"
                         Value="True">
                    <Setter TargetName="Root"
                        Property="RenderTransform">
                        <Setter.Value>
                        <ScaleTransform ScaleX="0.99"
                                ScaleY="0.99"/>
                        </Setter.Value>
                    </Setter>
                    </Trigger>
                    <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter TargetName="Root"
                        Property="Opacity"
                        Value="0.55"/>
                    </Trigger>
                </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PathPilotCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                Value="{StaticResource PathPilotCardPrimaryBrush}"/>
            <Setter Property="BorderBrush"
                    Value="#1E293B"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="16"/>
            <Setter Property="Padding"
                    Value="20"/>
        </Style>

        <DataTemplate x:Key="RuntimeCardTemplate"
                      DataType="{x:Type vm:PathPilotRuntimeCardViewModel}">
            <Border Padding="20">
                <Border.Style>
                    <Style TargetType="Border"
                           BasedOn="{StaticResource PathPilotCardStyle}">
                        <Setter Property="Background"
                                Value="{StaticResource PathPilotCardPrimaryBrush}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                         Value="1">
                                <Setter Property="Background"
                                        Value="{StaticResource PathPilotCardSecondaryBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                         Value="2">
                                <Setter Property="Background"
                                        Value="{StaticResource PathPilotCardTertiaryBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding FriendlyName}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"/>
                                <Border Margin="12,0,0,0"
                                        CornerRadius="14"
                                        Padding="10,4"
                                        BorderThickness="1"
                                        BorderBrush="#38BDF8"
                                        Background="{StaticResource PathPilotVersionChipKnownBrush}"
                                        VerticalAlignment="Center">
                                        <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background"
                                                Value="{StaticResource PathPilotVersionChipKnownBrush}"/>
                                            <Setter Property="BorderBrush"
                                                Value="#38BDF8"/>
                                            <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasActiveVersion}"
                                                     Value="False">
                                                <Setter Property="Background"
                                                    Value="{StaticResource PathPilotVersionChipUnknownBrush}"/>
                                                <Setter Property="BorderBrush"
                                                    Value="#F472B6"/>
                                            </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                        </Border.Style>
                                    <TextBlock Text="{Binding VersionChipLabel}"
                                               FontSize="11"
                                               FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="#CFE9FF"/>
                                                <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasActiveVersion}"
                                                                 Value="False">
                                                        <Setter Property="Foreground"
                                                                Value="#FEE2E2"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding DisplayName}"
                                       FontSize="14"
                                       Foreground="#B7C7E6"
                                       Margin="0,6,0,0"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding ExecutableName, StringFormat=Executable: {0}}"
                                       Foreground="#94A3B8"
                                       FontSize="12"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding Summary}"
                                       Margin="0,10,0,0"
                                       Foreground="#E2E8F0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <ItemsControl Grid.Column="1"
                                      Margin="12,0,0,0"
                                      ItemsSource="{Binding StatusBadges}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Right"
                                               ItemHeight="Auto"
                                               ItemWidth="Auto"
                                               MinWidth="0"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Severity, Converter={StaticResource PathPilotStatusSeverityToBrushConverter}}"
                                            CornerRadius="8"
                                            Padding="8,4"
                                            Margin="4,0,0,0">
                                        <TextBlock Text="{Binding Label}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#07111F"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <StackPanel Margin="0,14,0,0">
                        <StackPanel Visibility="{Binding HasActivePath, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Active path"
                                       Foreground="#93C5FD"
                                       FontSize="12"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ActiveExecutablePath}"
                                       Foreground="#E2E8F0"
                                       FontSize="12"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Margin="0,6,0,0"
                                    Visibility="{Binding HasPathEntry, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="PATH entry"
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PathEntry}"
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0,18,0,0">
                        <DockPanel>
                            <TextBlock Text="Resolution order"
                                       Foreground="#93C5FD"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       DockPanel.Dock="Left"/>
                            <Button Command="{Binding ToggleResolutionOrderCommand}"
                                    DockPanel.Dock="Right"
                                    Margin="8,0,0,0"
                                    Visibility="{Binding HasResolutionOrder, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button"
                                           BasedOn="{StaticResource PathPilotSecondaryButtonStyle}">
                                        <Setter Property="Padding"
                                                Value="10,4"/>
                                        <Setter Property="Content"
                                                Value="Details"/>
                                        <Setter Property="MinWidth"
                                                Value="0"/>
                                        <Setter Property="HorizontalAlignment"
                                                Value="Right"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsResolutionOrderExpanded}"
                                                         Value="True">
                                                <Setter Property="Content"
                                                        Value="Hide details"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DockPanel>
                        <TextBlock Text="{Binding ResolutionOrderSummary}"
                                   Foreground="#94A3B8"
                                   FontSize="11"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap"/>
                        <Border Margin="0,8,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Setter Property="Background"
                                            Value="#0D1626"/>
                                    <Setter Property="BorderBrush"
                                            Value="#1E2F4A"/>
                                    <Setter Property="BorderThickness"
                                            Value="1"/>
                                    <Setter Property="CornerRadius"
                                            Value="12"/>
                                    <Setter Property="Padding"
                                            Value="12"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsResolutionOrderExpanded}"
                                                           Value="True"/>
                                                <Condition Binding="{Binding HasResolutionOrder}"
                                                           Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ItemsControl ItemsSource="{Binding ResolutionOrder}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"
                                                   Margin="0,0,0,0"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1E2A46"
                                                CornerRadius="6"
                                                Padding="8,4"
                                                Margin="0,0,8,8">
                                            <TextBlock Text="{Binding}"
                                                       Foreground="#E2E8F0"
                                                       FontSize="11"
                                                       TextWrapping="Wrap"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="280"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,18,0,0">
                        <DockPanel>
                            <TextBlock Text="Installations"
                                       DockPanel.Dock="Left"
                                       Foreground="#93C5FD"
                                       FontSize="12"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Installations.Count, StringFormat={}{0} detected}"
                                       DockPanel.Dock="Right"
                                       Foreground="#64748B"
                                       FontSize="11"
                                       HorizontalAlignment="Right"/>
                        </DockPanel>
                        <ItemsControl ItemsSource="{Binding Installations}"
                                      Margin="0,10,0,0"
                                      AlternationCount="2">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:PathPilotInstallationViewModel}">
                                    <Border BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="14"
                                            Margin="0,0,0,12"
                                            HorizontalAlignment="Stretch">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background"
                                                        Value="#121F34"/>
                                                <Setter Property="BorderBrush"
                                                        Value="#1F2F46"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ContentPresenter}}"
                                                                 Value="1">
                                                        <Setter Property="Background"
                                                                Value="#0F1B2E"/>
                                                        <Setter Property="BorderBrush"
                                                                Value="#273B5E"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <DockPanel LastChildFill="True">
                                            <StackPanel DockPanel.Dock="Right"
                                                        Width="150"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center">
                                                <Border CornerRadius="10"
                                                        Padding="8,4"
                                                        BorderBrush="#38BDF8"
                                                        BorderThickness="1"
                                                        HorizontalAlignment="Stretch"
                                                        Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="1,1">
                                                            <GradientStop Color="#60A5FA" Offset="0"/>
                                                            <GradientStop Color="#34D399" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="20"
                                                                          ShadowDepth="0"
                                                                          Opacity="0.65"
                                                                          Color="#60A5FA"/>
                                                    </Border.Effect>
                                                    <TextBlock Text="Active"
                                                               HorizontalAlignment="Center"
                                                               Foreground="#0F172A"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                                <Button Content="Prioritize"
                                                        Margin="0,8,0,0"
                                                        Style="{StaticResource PathPilotSecondaryButtonStyle}"
                                                        Command="{Binding DataContext.SwitchRuntimeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding SwitchRequest}"
                                                        IsEnabled="{Binding CanSwitch}">
                                                    <Button.ToolTip>
                                                        <ToolTip Content="Make this installation win PATH immediately"/>
                                                    </Button.ToolTip>
                                                </Button>
                                            </StackPanel>

                                            <StackPanel Margin="0,0,16,0">
                                                <TextBlock Text="{Binding Caption}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#F8FAFC"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Directory}"
                                                           Margin="0,6,0,0"
                                                           Foreground="#CBD5F5"
                                                           FontSize="12"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding ExecutablePath}"
                                                           Margin="0,4,0,0"
                                                           Foreground="#94A3B8"
                                                           FontSize="11"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,8,0,0">
                                                    <Border Background="#1D2E4E"
                                                            CornerRadius="6"
                                                            Padding="8,2"
                                                            Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Source, StringFormat=Source: {0}}"
                                                                   Foreground="#C7D2FE"
                                                                   FontSize="11"/>
                                                    </Border>
                                                    <Border Background="#1D2E4E"
                                                            CornerRadius="6"
                                                            Padding="8,2">
                                                        <TextBlock Text="{Binding Architecture, StringFormat=Arch: {0}}"
                                                                   Foreground="#C7D2FE"
                                                                   FontSize="11"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding NotesDisplay}"
                                                           Margin="0,8,0,0"
                                                           Foreground="#FDE047"
                                                           FontSize="11"
                                                           TextWrapping="Wrap">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasNotes}"
                                                                             Value="True">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Setter Property="Visibility"
                                            Value="Visible"/>
                                    <Style.Triggers>
                                        <Trigger Property="HasItems"
                                                 Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>
                        </ItemsControl>
                        <TextBlock Text="No installations reported."
                                   Foreground="#64748B"
                                   FontSize="12"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasInstallations}"
                                                     Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer x:Name="ContentScrollViewer"
                  Margin="32"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  HorizontalContentAlignment="Stretch"
                  PanningMode="VerticalOnly">
        <Grid x:Name="PageContentGrid"
              MinWidth="0"
              MaxWidth="1320"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <controls:PageTitleBar Grid.Row="0"
                                   Title="PathPilot switchboard"
                                   Subtitle="{Binding Summary}"
                                   IconGlyph="ðŸ›°ï¸"
                                   BadgeText="{Binding LastRefreshedDisplay}"
                                   Margin="0,0,0,24">
                <controls:PageTitleBar.TrailingContent>
                          <WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Right"
                               ItemHeight="Auto"
                               ItemWidth="Auto"
                               MinWidth="0">
                        <Button Content="Refresh"
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource PathPilotPrimaryButtonStyle}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                        <Button Content="Export JSON"
                                Command="{Binding ExportJsonCommand}"
                                Style="{StaticResource PathPilotSecondaryButtonStyle}"/>
                        <Button Content="Export Markdown"
                                Command="{Binding ExportMarkdownCommand}"
                                Style="{StaticResource PathPilotSecondaryButtonStyle}"/>
                    </WrapPanel>
                </controls:PageTitleBar.TrailingContent>
                <controls:PageTitleBar.BodyContent>
                    <Border Margin="0,4,0,0"
                            Background="#102038"
                            BorderBrush="#1F365A"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="16">
                           <WrapPanel HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                ItemHeight="Auto"
                                MinWidth="0">
                            <Border Style="{StaticResource PathPilotCardStyle}"
                                 Margin="8"
                                 Padding="16"
                                 MinWidth="220"
                                 MaxWidth="420"
                                 HorizontalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Runtime overview"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Summary}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="Guard PATH stability and keep one winner per runtime."
                                               Foreground="#94A3B8"
                                               FontSize="12"
                                               Margin="0,6,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource PathPilotCardStyle}"
                                    Margin="8"
                                    Padding="16"
                                    MinWidth="220"
                                    MaxWidth="420"
                                    HorizontalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Last refreshed"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding LastRefreshedDisplay}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#F8FAFC"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="Exports include the latest inventory snapshot."
                                               Foreground="#94A3B8"
                                               FontSize="12"
                                               Margin="0,6,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                                <Border Style="{StaticResource PathPilotCardStyle}"
                                    Margin="8"
                                    Padding="16"
                                    MinWidth="220"
                                    MaxWidth="420"
                                    HorizontalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Machine scope"
                                               Foreground="#93C5FD"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding MachineScopeWarning}"
                                               FontSize="13"
                                               Foreground="#FDE047"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="Always confirm target directories before switching."
                                               Foreground="#94A3B8"
                                               FontSize="12"
                                               Margin="0,6,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </Border>
                </controls:PageTitleBar.BodyContent>
            </controls:PageTitleBar>

                        <Grid x:Name="MainLayoutGrid"
                                    Grid.Row="1">
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="PrimaryColumnDefinition"
                                      Width="3*"
                                      MinWidth="360"/>
                    <ColumnDefinition x:Name="SecondaryColumnDefinition"
                                      Width="2*"
                                      MinWidth="320"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="PrimaryColumnHost"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,24,0">
                    <Border Style="{StaticResource PathPilotCardStyle}"
                            Background="#102038">
                        <StackPanel>
                            <TextBlock Text="Switch without surprises"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <TextBlock Text="Select a runtime to review its installations, then promote the desired directory to the top of PATH."
                                       Margin="0,6,0,0"
                                       Foreground="#94A3B8"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="PathPilot keeps a registry backup in %ProgramData%/TidyWindow/PathPilot before editing machine PATH."
                                       Margin="0,10,0,0"
                                       Foreground="#38BDF8"
                                       FontSize="11"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Margin="0,24,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasRuntimeData}"
                                                 Value="True">
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <ListBox ItemsSource="{Binding Runtimes}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#F8FAFC"
                                 ItemTemplate="{StaticResource RuntimeCardTemplate}"
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 AlternationCount="3"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                 VirtualizingStackPanel.ScrollUnit="Pixel"
                                 SelectionMode="Single">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding"
                                            Value="0"/>
                                    <Setter Property="Margin"
                                            Value="0,18,0,0"/>
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch"/>
                                    <Setter Property="Background"
                                            Value="Transparent"/>
                                    <Setter Property="BorderThickness"
                                            Value="0"/>
                                    <Setter Property="Focusable"
                                            Value="False"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>

                    <Border Margin="0,24,0,0">
                        <Border.Style>
                            <Style TargetType="Border"
                                   BasedOn="{StaticResource PathPilotCardStyle}">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasRuntimeData}"
                                                 Value="False">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                        <Setter Property="Background"
                                                Value="#0F192B"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <TextBlock Text="No runtime inventory yet"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <TextBlock Text="Run a scan to capture Python, JDK, Node, and .NET footprints before switching."
                                       Margin="0,6,0,0"
                                       Foreground="#94A3B8"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                            <Button Content="Scan runtimes"
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource PathPilotPrimaryButtonStyle}"
                                    Command="{Binding RefreshCommand}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel x:Name="SecondaryColumnHost"
                        Grid.Row="0"
                        Grid.Column="1">
                    <Border Background="#1E1B4B"
                            BorderBrush="#4338CA">
                        <Border.Style>
                        <Style TargetType="Border"
                           BasedOn="{StaticResource PathPilotCardStyle}">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMachineScopeWarningDismissed}"
                                                 Value="True">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <TextBlock Text="Machine-wide changes"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="#FDE68A"/>
                            <TextBlock Text="{Binding MachineScopeWarning}"
                                       Margin="0,6,0,0"
                                       Foreground="#FAF5FF"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                            <Button Content="Understood"
                                    Margin="0,14,0,0"
                                    HorizontalAlignment="Left"
                                    Command="{Binding DismissMachineScopeWarningCommand}"
                                    Style="{StaticResource PathPilotSecondaryButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource PathPilotCardStyle}"
                            Margin="0,24,0,0">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="Inventory status"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#F8FAFC"
                                           DockPanel.Dock="Left"/>
                                <TextBlock Text="{Binding LastRefreshedDisplay}"
                                           DockPanel.Dock="Right"
                                           Foreground="#94A3B8"
                                           FontSize="11"
                                           TextAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"/>
                            </DockPanel>
                            <ProgressBar Margin="0,16,0,0"
                                         Height="6"
                                         IsIndeterminate="True"
                                         Foreground="#38BDF8"
                                         Background="#172338">
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsBusy}"
                                                         Value="True">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>
                            <TextBlock Text="{Binding MachineScopeWarning}"
                                       Margin="0,12,0,0"
                                       Foreground="#FDE047"
                                       FontSize="11"
                                       TextWrapping="Wrap"/>
                            <Button Content="Export Markdown"
                                    Margin="0,16,0,0"
                                    Style="{StaticResource PathPilotSecondaryButtonStyle}"
                                    Command="{Binding ExportMarkdownCommand}"/>
                            <Button Content="Export JSON"
                                    Margin="0,12,0,0"
                                    Style="{StaticResource PathPilotSecondaryButtonStyle}"
                                    Command="{Binding ExportJsonCommand}"/>
                        </StackPanel>
                    </Border>

                    <Border Margin="0,24,0,0">
                        <Border.Style>
                            <Style TargetType="Border"
                                   BasedOn="{StaticResource PathPilotCardStyle}">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasWarnings}"
                                                 Value="True">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <TextBlock Text="Warnings"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="#F8FAFC"/>
                            <ItemsControl ItemsSource="{Binding Warnings}"
                                          Margin="0,12,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#2F1F1F"
                                                BorderBrush="#F87171"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="10"
                                                Margin="0,0,0,10">
                                            <TextBlock Text="{Binding}"
                                                       Foreground="#FECACA"
                                                       TextWrapping="Wrap"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
