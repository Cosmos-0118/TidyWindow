                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsBusy}"
                                     Value="False">
                            <Setter Property="Opacity"
                                    Value="0"/>
                            <Setter Property="IsHitTestVisible"
                                    Value="False"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard FillBehavior="Stop">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

                <Border Background="#D90B122D"
                    CornerRadius="24"
                    Padding="28"
                    BorderBrush="#4338CA"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    MaxWidth="640"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="40"
                                      ShadowDepth="0"
                                      Opacity="0.45"
                                      Color="#0EA5E9"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel HorizontalAlignment="Center"
                                MaxWidth="480">
                        <TextBlock Text="PathPilot is reprioritizing PATH"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="#F8FAFC"/>
                        <TextBlock Text="We are pausing interactions on this page while the runtime takes the lead."
                                   Margin="0,8,0,0"
                                   Foreground="#C7D2FE"
                                   FontSize="13"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Summary, StringFormat=Live snapshot: {0}}"
                                   Margin="0,6,0,0"
                                   Foreground="#93C5FD"
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                                        <Grid Grid.Row="1"
                                                    Margin="0,20,0,0"
                                                    Width="200"
                                                    Height="200"
                          HorizontalAlignment="Center">
                                                <Ellipse Width="200"
                                                                 Height="200"
                                 Fill="#141C2C"
                                 Opacity="0.4"/>
                                                <Ellipse Width="170"
                                                                 Height="170"
                                 Stroke="#0EA5E9"
                                 StrokeThickness="2"
                                 Opacity="0.35"/>
                        <Ellipse x:Name="LoaderPulse"
                                                                 Width="130"
                                                                 Height="130"
                                 Stroke="#34D399"
                                 StrokeThickness="4"
                                 Opacity="0.8"
                                 StrokeDashArray="2 2"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="LoaderPulseScale"
                                                ScaleX="0.92"
                                                ScaleY="0.92"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse x:Name="LoaderRing"
                                 Width="150"
                                 Height="150"
                                 Stroke="#38BDF8"
                                 StrokeThickness="6"
                                 StrokeDashArray="3 6"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="LoaderRotateTransform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoaderRotateTransform"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0"
                                                         To="360"
                                                         Duration="0:0:3.2"/>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LoaderPulseScale"
                                                                       Storyboard.TargetProperty="ScaleX"
                                                                       Duration="0:0:1.4"
                                                                       RepeatBehavior="Forever">
                                            <SplineDoubleKeyFrame KeyTime="0:0:0"
                                                                  Value="0.92"/>
                                            <SplineDoubleKeyFrame KeyTime="0:0:0.7"
                                                                  Value="1.08"
                                                                  KeySpline="0.4,0 0.6,1"/>
                                            <SplineDoubleKeyFrame KeyTime="0:0:1.4"
                                                                  Value="0.92"
                                                                  KeySpline="0.4,0 0.6,1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LoaderPulseScale"
                                                                       Storyboard.TargetProperty="ScaleY"
                                                                       Duration="0:0:1.4"
                                                                       RepeatBehavior="Forever">
                                            <SplineDoubleKeyFrame KeyTime="0:0:0"
                                                                  Value="0.92"/>
                                            <SplineDoubleKeyFrame KeyTime="0:0:0.7"
                                                                  Value="1.08"
                                                                  KeySpline="0.4,0 0.6,1"/>
                                            <SplineDoubleKeyFrame KeyTime="0:0:1.4"
                                                                  Value="0.92"
                                                                  KeySpline="0.4,0 0.6,1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>
                    </Grid>

                    <Grid Grid.Row="2"
                          Margin="0,24,0,0"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="140"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Background="#14213D"
                                Padding="14"
                                CornerRadius="14"
                                BorderBrush="#1E2F4C"
                                BorderThickness="1"
                                Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="Current PATH"
                                           Foreground="#93C5FD"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Before switch"
                                           Margin="0,4,0,0"
                                           Foreground="#E2E8F0"
                                           FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <Canvas Grid.Column="1"
                                Width="200"
                                Height="60"
                                HorizontalAlignment="Center">
                            <Rectangle Width="200"
                                       Height="4"
                                       Fill="#38BDF8"
                                       Opacity="0.35"
                                       RadiusX="2"
                                       RadiusY="2"
                                       Canvas.Left="0"
                                       Canvas.Top="28"/>
                            <Ellipse Width="18"
                                     Height="18"
                                     Fill="#F8FAFC"
                                     Stroke="#0EA5E9"
                                     StrokeThickness="2"
                                     Canvas.Left="0"
                                     Canvas.Top="20">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="TransferNodeTransform"
                                                        X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            <Canvas.Triggers>
                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="TransferNodeTransform"
                                                             Storyboard.TargetProperty="X"
                                                             From="0"
                                                             To="182"
                                                             Duration="0:0:1.5"
                                                             AutoReverse="True">
                                                <DoubleAnimation.EasingFunction>
                                                    <SineEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Canvas.Triggers>
                        </Canvas>

                        <Border Grid.Column="2"
                                Background="#0F172A"
                                Padding="14"
                                CornerRadius="14"
                                BorderBrush="#2563EB"
                                BorderThickness="1"
                                Margin="12,0,0,0">
                            <StackPanel>
                                <TextBlock Text="New priority"
                                           Foreground="#A5B4FC"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Selected runtime"
                                           Margin="0,4,0,0"
                                           Foreground="#E2E8F0"
                                           FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
