<Window x:Class="TidyWindow.App.Views.Dialogs.ThreatWatchHoldingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TidyWindow.App.ViewModels.Dialogs"
        mc:Ignorable="d"
        Title="Threat Watch allowances"
        Height="540"
        Width="940"
        Background="#0B1120"
        Foreground="#E2E8F0"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <SolidColorBrush x:Key="ProcessHeadlineBrush" Color="#FDFEFE" />
        <SolidColorBrush x:Key="ProcessBodyBrush" Color="#D5E0FF" />
        <SolidColorBrush x:Key="ProcessMutedBrush" Color="#A9B8D4" />

        <DropShadowEffect x:Key="ProcessCardShadowEffect"
                          Color="#01060C"
                          BlurRadius="26"
                          ShadowDepth="0"
                          Opacity="0.6" />

        <Style x:Key="ProcessHeroTitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{StaticResource ProcessHeadlineBrush}" />
        </Style>

        <Style x:Key="ProcessHeroBodyTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="{StaticResource ProcessBodyBrush}" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="ProcessPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#F8FAFC" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#7C3AED" Offset="0" />
                        <GradientStop Color="#2563EB" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource ProcessCardShadowEffect}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.45" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.92" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProcessSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#E2E8F0" />
            <Setter Property="Background" Value="#142033" />
            <Setter Property="BorderBrush" Value="#253453" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.45" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1C2D4A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProcessDangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ProcessPrimaryButtonStyle}">
            <Setter Property="Background" Value="#DC2626" />
            <Setter Property="Effect" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.4" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#EF4444" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProcessCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Background" Value="#0B1120" />
            <Setter Property="BorderBrush" Value="#1D2A44" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,0,16,0" />
            <Setter Property="Effect" Value="{StaticResource ProcessCardShadowEffect}" />
        </Style>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Threat Watch allow &amp; quarantine"
                       Style="{StaticResource ProcessHeroTitleTextStyle}" />
            <TextBlock Text="Review trusted overrides, tidy up stale entries, and keep the Processes workspace aligned with Defender verdicts."
                       Style="{StaticResource ProcessHeroBodyTextStyle}"
                       Margin="0,4,0,0" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource ProcessCardStyle}" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="Whitelisted entries"
                               Style="{StaticResource ProcessHeroTitleTextStyle}" />
                    <TextBlock Text="Directories, hashes, or process names Threat Watch will ignore."
                               Style="{StaticResource ProcessHeroBodyTextStyle}"
                               Margin="0,4,0,12" />
                    <ItemsControl ItemsSource="{Binding WhitelistEntries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:ThreatWatchWhitelistEntryViewModel}">
                                <Border Background="#111C36"
                                        BorderBrush="#1F2A44"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Padding="14"
                                        Margin="0,0,0,12">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding KindLabel}"
                                                       FontWeight="SemiBold"
                                                       Foreground="#F8FAFC" />
                                            <TextBlock Text="{Binding AddedAtDisplay}"
                                                       Foreground="#94A3B8"
                                                       Margin="12,0,0,0" />
                                        </StackPanel>
                                        <TextBlock Text="{Binding Value}"
                                                   FontSize="14"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding Notes}"
                                                   Foreground="#94A3B8"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Notes}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Notes}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding AddedBy, StringFormat=Added by {0}}"
                                                   Foreground="#64748B"
                                                   Margin="0,6,0,0" />
                                        <Button Content="Remove"
                                                HorizontalAlignment="Right"
                                                Margin="0,12,0,0"
                                                Style="{StaticResource ProcessDangerButtonStyle}"
                                                Command="{Binding DataContext.RemoveWhitelistEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="No whitelist entries yet."
                               Foreground="#94A3B8"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasWhitelistEntries}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource ProcessCardStyle}" Margin="16,0,0,0">
                <StackPanel>
                    <TextBlock Text="Quarantined executables"
                               Style="{StaticResource ProcessHeroTitleTextStyle}" />
                    <TextBlock Text="Everything you've attempted to quarantine via Threat Watch."
                               Style="{StaticResource ProcessHeroBodyTextStyle}"
                               Margin="0,4,0,12" />
                    <ItemsControl ItemsSource="{Binding QuarantineEntries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:ThreatWatchQuarantineEntryViewModel}">
                                <Border Background="#111C36"
                                        BorderBrush="#1F2A44"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Padding="14"
                                        Margin="0,0,0,12">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ProcessName}"
                                                       FontWeight="SemiBold"
                                                       Foreground="#F8FAFC" />
                                            <TextBlock Text="{Binding QuarantinedAtDisplay}"
                                                       Foreground="#94A3B8"
                                                       Margin="12,0,0,0" />
                                        </StackPanel>
                                        <TextBlock Text="{Binding FilePath}"
                                                   FontSize="14"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding Notes}"
                                                   Foreground="#94A3B8"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Notes}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Notes}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <StackPanel Margin="0,6,0,0">
                                            <TextBlock Text="{Binding VerdictSummary}"
                                                       Foreground="#FACC15"
                                                       TextWrapping="Wrap">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasVerdict}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding VerdictDetails}"
                                                       Foreground="#94A3B8"
                                                       TextWrapping="Wrap"
                                                       Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasVerdictDetails}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Sha256, StringFormat=Hash: {0}}"
                                                       Foreground="#94A3B8"
                                                       FontSize="12"
                                                       Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasSha256}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock Text="{Binding AddedBy, StringFormat=Logged by {0}}"
                                               Foreground="#64748B"
                                               Margin="0,6,0,0" />
                                        <Button Content="Remove"
                                            HorizontalAlignment="Right"
                                            Margin="0,12,0,0"
                                            Style="{StaticResource ProcessDangerButtonStyle}"
                                            Command="{Binding DataContext.RemoveQuarantineEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="No quarantine attempts recorded yet."
                               Foreground="#94A3B8"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasQuarantineEntries}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,16,0,0">
            <Button Content="Close"
                MinWidth="140"
                Style="{StaticResource ProcessSecondaryButtonStyle}"
                Click="CloseButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>
