<Window x:Class="TidyWindow.App.Views.Dialogs.HighFrictionPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PulseGuard Prompt"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow"
        Background="#0F172A"
        Foreground="#E2E8F0"
        MinWidth="420"
        MinHeight="220"
        ShowInTaskbar="False">
    <Border Padding="24"
            Background="#0F172A"
            BorderBrush="#1D2A44"
            BorderThickness="1"
            CornerRadius="12">
        <StackPanel>
            <TextBlock x:Name="HeadingTextBlock"
                       FontSize="20"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"/>
            <TextBlock x:Name="BodyTextBlock"
                       FontSize="13"
                       Foreground="#C7D2FE"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>
            <Border Background="#111C34"
                    BorderBrush="#1E2F49"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12"
                    Margin="0,0,0,20">
                <TextBlock x:Name="SuggestionTextBlock"
                           FontSize="12"
                           Foreground="#9FB3FF"
                           TextWrapping="Wrap"/>
            </Border>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="View logs"
                        Width="100"
                        Margin="0,0,10,0"
                        Click="OnViewLogs"/>
                <Button Content="Restart app"
                        Width="110"
                        Margin="0,0,10,0"
                        Click="OnRestart"/>
                <Button Content="Not now"
                        Width="90"
                        Click="OnDismiss"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
