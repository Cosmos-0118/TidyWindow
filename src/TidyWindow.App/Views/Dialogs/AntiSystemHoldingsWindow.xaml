<Window x:Class="TidyWindow.App.Views.Dialogs.AntiSystemHoldingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TidyWindow.App.ViewModels.Dialogs"
        mc:Ignorable="d"
        Title="Anti-System allowances"
        Height="520"
        Width="900"
        Background="#0B1120"
        Foreground="#E2E8F0"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Anti-System safe &amp; quarantine lists"
                       FontSize="24"
                       FontWeight="SemiBold" />
            <TextBlock Text="Review trusted overrides and any executables you've quarantined without leaving the Processes view."
                       Foreground="#94A3B8"
                       Margin="0,4,0,0" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

                <Border Background="#0F172A"
                    BorderBrush="#1D2A44"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="16"
                    Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Whitelisted entries"
                               FontSize="18"
                               FontWeight="SemiBold" />
                    <TextBlock Text="Directories, hashes, or process names Anti-System will ignore."
                               Foreground="#94A3B8"
                               Margin="0,4,0,12" />
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding WhitelistEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:AntiSystemWhitelistEntryViewModel}">
                                    <Border Background="#111C36"
                                            BorderBrush="#1F2A44"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="12"
                                            Margin="0,0,0,12">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding KindLabel}"
                                                           FontWeight="SemiBold"
                                                           Foreground="#F8FAFC" />
                                                <TextBlock Text="{Binding AddedAtDisplay}"
                                                           Foreground="#94A3B8"
                                                           Margin="12,0,0,0" />
                                            </StackPanel>
                                            <TextBlock Text="{Binding Value}"
                                                       FontSize="14"
                                                       Margin="0,6,0,0" />
                                            <TextBlock Text="{Binding Notes}"
                                                       Foreground="#94A3B8"
                                                       TextWrapping="Wrap"
                                                       Margin="0,4,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Notes}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Notes}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding AddedBy, StringFormat=Added by {0}}"
                                                       Foreground="#64748B"
                                                       Margin="0,6,0,0" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <TextBlock Text="No whitelist entries yet."
                               Foreground="#94A3B8"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasWhitelistEntries}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

                <Border Background="#0F172A"
                    BorderBrush="#1D2A44"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="16"
                    Grid.Column="1"
                    Margin="16,0,0,0">
                <StackPanel>
                    <TextBlock Text="Quarantined executables"
                               FontSize="18"
                               FontWeight="SemiBold" />
                    <TextBlock Text="Everything you've attempted to quarantine via Anti-System."
                               Foreground="#94A3B8"
                               Margin="0,4,0,12" />
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding QuarantineEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:AntiSystemQuarantineEntryViewModel}">
                                    <Border Background="#111C36"
                                            BorderBrush="#1F2A44"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="12"
                                            Margin="0,0,0,12">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ProcessName}"
                                                           FontWeight="SemiBold"
                                                           Foreground="#F8FAFC" />
                                                <TextBlock Text="{Binding QuarantinedAtDisplay}"
                                                           Foreground="#94A3B8"
                                                           Margin="12,0,0,0" />
                                            </StackPanel>
                                            <TextBlock Text="{Binding FilePath}"
                                                       FontSize="14"
                                                       Margin="0,6,0,0"
                                                       TextWrapping="Wrap" />
                                            <TextBlock Text="{Binding Notes}"
                                                       Foreground="#94A3B8"
                                                       TextWrapping="Wrap"
                                                       Margin="0,4,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Notes}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Notes}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding AddedBy, StringFormat=Logged by {0}}"
                                                       Foreground="#64748B"
                                                       Margin="0,6,0,0" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <TextBlock Text="No quarantine attempts recorded yet."
                               Foreground="#94A3B8"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasQuarantineEntries}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Close"
                    Padding="18,8"
                    MinWidth="120"
                    Click="CloseButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>
