<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Palette for the custom checkbox experience -->
    <SolidColorBrush x:Key="CheckBox.BaseBrush"
                     Color="#102138"/>
    <SolidColorBrush x:Key="CheckBox.HoverBrush"
                     Color="#162C44"/>
    <SolidColorBrush x:Key="CheckBox.PressedBrush"
                     Color="#13263C"/>
    <SolidColorBrush x:Key="CheckBox.BorderBrush"
                     Color="#1E2F46"/>
    <SolidColorBrush x:Key="CheckBox.HoverBorderBrush"
                     Color="#2C4C6C"/>
    <SolidColorBrush x:Key="CheckBox.CheckedBrush"
                     Color="#38BDF8"/>
    <SolidColorBrush x:Key="CheckBox.CheckedHoverBrush"
                     Color="#1D9CEC"/>
    <SolidColorBrush x:Key="CheckBox.CheckedActiveBrush"
                     Color="#177FCC"/>
    <SolidColorBrush x:Key="CheckBox.CheckedBorderBrush"
                     Color="#38BDF8"/>
    <SolidColorBrush x:Key="CheckBox.GlyphBrush"
                     Color="#04152B"/>
    <SolidColorBrush x:Key="CheckBox.DisabledBrush"
                     Color="#1B2335"/>
    <SolidColorBrush x:Key="CheckBox.DisabledBorderBrush"
                     Color="#273245"/>
    <SolidColorBrush x:Key="CheckBox.DisabledGlyphBrush"
                     Color="#475569"/>
    <SolidColorBrush x:Key="CheckBox.DisabledForegroundBrush"
                     Color="#64748B"/>
    <SolidColorBrush x:Key="CheckBox.FocusBrush"
                     Color="#2563EB"/>

    <Style x:Key="App.CheckBoxStyle"
            TargetType="CheckBox">
        <Setter Property="Foreground"
                Value="#F8FAFC"/>
        <Setter Property="FontSize"
                Value="14"/>
        <Setter Property="FontWeight"
                Value="SemiBold"/>
        <Setter Property="Padding"
                Value="12,0,0,0"/>
        <Setter Property="MinHeight"
                Value="32"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="HorizontalContentAlignment"
                Value="Left"/>
        <Setter Property="VerticalContentAlignment"
                Value="Center"/>
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid x:Name="Root"
                          Background="Transparent"
                          SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="FocusVisual"
                                Grid.ColumnSpan="2"
                                Margin="-4"
                                CornerRadius="8"
                                BorderThickness="1.5"
                                BorderBrush="{StaticResource CheckBox.FocusBrush}"
                                Opacity="0"/>

                                <Grid x:Name="BoxHost"
                                        Width="20"
                                        Height="20"
                                        VerticalAlignment="Center">

                            <Border x:Name="Box"
                                    Background="{StaticResource CheckBox.BaseBrush}"
                                    BorderBrush="{StaticResource CheckBox.BorderBrush}"
                                    BorderThickness="1.5"
                                    CornerRadius="6"/>

                                    <Path x:Name="CheckGlyph"
                                            Width="14"
                                            Height="10"
                                            Stretch="Uniform"
                                            Stroke="{StaticResource CheckBox.GlyphBrush}"
                                            StrokeThickness="2.2"
                                            StrokeStartLineCap="Round"
                                            StrokeEndLineCap="Round"
                                            StrokeLineJoin="Round"
                                            Opacity="0"
                                            Data="M 1 5 L 6 9.5 L 13 1.5"/>

                            <Rectangle x:Name="IndeterminateGlyph"
                                       Width="10"
                                       Height="2"
                                       Fill="{StaticResource CheckBox.GlyphBrush}"
                                       RadiusX="1"
                                       RadiusY="1"
                                       Opacity="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <ContentPresenter x:Name="ContentPresenter"
                                          Grid.Column="1"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter TargetName="Box"
                                    Property="Background"
                                    Value="{StaticResource CheckBox.CheckedBrush}"/>
                            <Setter TargetName="Box"
                                    Property="BorderBrush"
                                    Value="{StaticResource CheckBox.CheckedBorderBrush}"/>
                            <Setter TargetName="CheckGlyph"
                                    Property="Opacity"
                                    Value="1"/>
                            <Setter TargetName="IndeterminateGlyph"
                                    Property="Opacity"
                                    Value="0"/>
                        </Trigger>

                        <Trigger Property="IsChecked"
                                 Value="{x:Null}">
                            <Setter TargetName="Box"
                                    Property="Background"
                                    Value="{StaticResource CheckBox.CheckedBrush}"/>
                            <Setter TargetName="Box"
                                    Property="BorderBrush"
                                    Value="{StaticResource CheckBox.CheckedBorderBrush}"/>
                            <Setter TargetName="CheckGlyph"
                                    Property="Opacity"
                                    Value="0"/>
                            <Setter TargetName="IndeterminateGlyph"
                                    Property="Opacity"
                                    Value="1"/>
                        </Trigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Box"
                                    Property="Background"
                                    Value="{StaticResource CheckBox.HoverBrush}"/>
                            <Setter TargetName="Box"
                                    Property="BorderBrush"
                                    Value="{StaticResource CheckBox.HoverBorderBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Box"
                                    Property="Background"
                                    Value="{StaticResource CheckBox.CheckedHoverBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="{x:Null}"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Box"
                                    Property="Background"
                                    Value="{StaticResource CheckBox.CheckedHoverBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsPressed"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Box"
                                    Property="Background"
                                    Value="{StaticResource CheckBox.PressedBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsPressed"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Box"
                                    Property="Background"
                                    Value="{StaticResource CheckBox.CheckedActiveBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsPressed"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="{x:Null}"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Box"
                                    Property="Background"
                                    Value="{StaticResource CheckBox.CheckedActiveBrush}"/>
                        </MultiTrigger>

                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="Box"
                                    Property="Opacity"
                                    Value="0.9"/>
                        </Trigger>

                        <Trigger Property="IsKeyboardFocusWithin"
                                 Value="True">
                            <Setter TargetName="FocusVisual"
                                    Property="Opacity"
                                    Value="1"/>
                        </Trigger>

                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Foreground"
                                    Value="{StaticResource CheckBox.DisabledForegroundBrush}"/>
                            <Setter TargetName="Box"
                                    Property="Background"
                                    Value="{StaticResource CheckBox.DisabledBrush}"/>
                            <Setter TargetName="Box"
                                    Property="BorderBrush"
                                    Value="{StaticResource CheckBox.DisabledBorderBrush}"/>
                            <Setter TargetName="CheckGlyph"
                                    Property="Stroke"
                                    Value="{StaticResource CheckBox.DisabledGlyphBrush}"/>
                            <Setter TargetName="IndeterminateGlyph"
                                    Property="Fill"
                                    Value="{StaticResource CheckBox.DisabledGlyphBrush}"/>
                            <Setter Property="Opacity"
                                    Value="0.72"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        </Style>

        <Style TargetType="CheckBox"
                   BasedOn="{StaticResource App.CheckBoxStyle}"/>
</ResourceDictionary>
