<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="RegistryPrimaryBackgroundBrush"
                     Color="#0F172A"/>
    <SolidColorBrush x:Key="RegistrySecondaryBackgroundBrush"
                     Color="#101D30"/>
    <SolidColorBrush x:Key="RegistryCardBorderBrush"
                     Color="#1E293B"/>
    <SolidColorBrush x:Key="RegistryMutedBrush"
                     Color="#94A3B8"/>
    <SolidColorBrush x:Key="RegistryTitleBrush"
                     Color="#F8FAFC"/>
    <SolidColorBrush x:Key="RegistryAccentBrush"
                     Color="#38BDF8"/>
    <SolidColorBrush x:Key="RegistryAccentHoverBrush"
                     Color="#1D9CEC"/>
    <SolidColorBrush x:Key="RegistryAccentActiveBrush"
                     Color="#177FCC"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonBackground"
                     Color="#162132"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonHover"
                     Color="#1C2F47"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonActive"
                     Color="#142236"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonBorder"
                     Color="#27374D"/>
    <SolidColorBrush x:Key="RegistryRiskInformationalBrush"
                     Color="#1C2F47"/>
    <SolidColorBrush x:Key="RegistryRiskWarningBrush"
                     Color="#422006"/>
    <SolidColorBrush x:Key="RegistryRiskWarningBorderBrush"
                     Color="#7C2D12"/>
    <SolidColorBrush x:Key="RegistryRiskInformationalBorderBrush"
                     Color="#243B5A"/>

    <Style x:Key="RegistryCardStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="#0F172A"/>
        <Setter Property="BorderBrush"
                Value="#1E293B"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="20"/>
    </Style>

    <Style x:Key="RegistryToggleRowStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="#101D30"/>
        <Setter Property="BorderBrush"
                Value="#1F2D44"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="10"/>
        <Setter Property="Padding"
                Value="16"/>
    </Style>

    <Style x:Key="RegistryRiskBadgeStyle"
           TargetType="Border">
        <Setter Property="CornerRadius"
                Value="6"/>
        <Setter Property="Padding"
                Value="8,2"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Margin"
                Value="8,0,0,0"/>
        <Setter Property="Background"
                Value="#1C2F47"/>
        <Setter Property="BorderBrush"
                Value="#243B5A"/>
    </Style>

    <Style x:Key="RegistryAccentButtonStyle"
           TargetType="Button">
        <Setter Property="Background"
                Value="#38BDF8"/>
        <Setter Property="Foreground"
                Value="#04152B"/>
        <Setter Property="BorderBrush"
                Value="Transparent"/>
        <Setter Property="BorderThickness"
                Value="0"/>
        <Setter Property="Padding"
                Value="14,6"/>
        <Setter Property="MinWidth"
                Value="120"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1D9CEC"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#177FCC"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1C2F47"/>
                            <Setter Property="Foreground"
                                    Value="#64748B"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RegistrySecondaryButtonStyle"
           TargetType="Button">
        <Setter Property="Background"
                Value="#162132"/>
        <Setter Property="Foreground"
                Value="#E2E8F0"/>
        <Setter Property="BorderBrush"
                Value="#27374D"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Padding"
                Value="12,6"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1C2F47"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#142236"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#0F172A"/>
                            <Setter Property="Foreground"
                                    Value="#475569"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RegistryToggleSwitchStyle"
           TargetType="ToggleButton">
        <Setter Property="Width"
                Value="52"/>
        <Setter Property="Height"
                Value="28"/>
        <Setter Property="Background"
                Value="Transparent"/>
        <Setter Property="BorderBrush"
                Value="Transparent"/>
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <Border x:Name="Track"
                                Background="#1E293B"
                                CornerRadius="14"
                                Margin="0"/>
                        <Border x:Name="Thumb"
                                Width="24"
                                Height="24"
                                CornerRadius="12"
                                Background="#F8FAFC"
                                HorizontalAlignment="Left"
                                Margin="2"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter TargetName="Track"
                                    Property="Background"
                                    Value="#38BDF8"/>
                            <Setter TargetName="Thumb"
                                    Property="Background"
                                    Value="#04152B"/>
                            <Setter TargetName="Thumb"
                                    Property="HorizontalAlignment"
                                    Value="Right"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Track"
                                    Property="Background"
                                    Value="#1B2335"/>
                            <Setter TargetName="Thumb"
                                    Property="Background"
                                    Value="#475569"/>
                            <Setter Property="Opacity"
                                    Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
