<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        <SolidColorBrush x:Key="RegistryPrimaryBackgroundBrush"
                                         Color="#08111F"/>
        <SolidColorBrush x:Key="RegistrySecondaryBackgroundBrush"
                                         Color="#0C1A2B"/>
        <LinearGradientBrush x:Key="RegistryCardBackgroundBrush"
                                                 StartPoint="0,0"
                                                 EndPoint="1,1">
                <GradientStop Color="#0E1D31" Offset="0"/>
                <GradientStop Color="#0A1626" Offset="0.52"/>
                <GradientStop Color="#091321" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="RegistryCardBorderBrush"
                                                 StartPoint="0,0"
                                                 EndPoint="1,1">
                <GradientStop Color="#2A4362" Offset="0"/>
                <GradientStop Color="#1D314B" Offset="0.6"/>
                <GradientStop Color="#14253A" Offset="1"/>
        </LinearGradientBrush>
    <SolidColorBrush x:Key="RegistryMutedBrush"
                     Color="#9CB6D6"/>
    <SolidColorBrush x:Key="RegistrySoftTextBrush"
                     Color="#E7F3FF"/>
    <SolidColorBrush x:Key="RegistryTitleBrush"
                     Color="#F8FAFD"/>
    <SolidColorBrush x:Key="RegistryAccentBrush"
                     Color="#22D3EE"/>
        <SolidColorBrush x:Key="RegistryAccentSafeBrush"
                                         Color="#34D399"/>
        <SolidColorBrush x:Key="RegistryAccentModerateBrush"
                                         Color="#FB923C"/>
        <SolidColorBrush x:Key="RegistryAccentCautionBrush"
                                         Color="#FACC15"/>
        <SolidColorBrush x:Key="RegistryAccentAdvancedBrush"
                                         Color="#F97373"/>
    <SolidColorBrush x:Key="RegistryAccentHoverBrush"
                     Color="#2FE4FF"/>
    <SolidColorBrush x:Key="RegistryAccentActiveBrush"
                     Color="#0EA5E9"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonBackground"
                     Color="#0F2237"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonHover"
                     Color="#12304B"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonActive"
                     Color="#0D2238"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonBorder"
                     Color="#204063"/>
    <SolidColorBrush x:Key="RegistryRiskInformationalBrush"
                     Color="#13263E"/>
    <SolidColorBrush x:Key="RegistryRiskWarningBrush"
                     Color="#3A1F07"/>
    <SolidColorBrush x:Key="RegistryRiskWarningBorderBrush"
                     Color="#8B3B0A"/>
    <SolidColorBrush x:Key="RegistryRiskInformationalBorderBrush"
                     Color="#284566"/>
        <LinearGradientBrush x:Key="RegistryRowBackgroundBrush"
                             StartPoint="0,0"
                             EndPoint="1,1">
                <GradientStop Color="#0E1E33" Offset="0"/>
                <GradientStop Color="#0A1626" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="RegistryRowHoverBrush"
                             StartPoint="0,0"
                             EndPoint="1,1">
                <GradientStop Color="#12304A" Offset="0"/>
                <GradientStop Color="#0D2237" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="RegistryRowSelectedBrush"
                             StartPoint="0,0"
                             EndPoint="1,1">
                <GradientStop Color="#18435F" Offset="0"/>
                <GradientStop Color="#10324C" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="RegistryValueChipBrush"
                                         Color="#0E1B2E"/>
        <SolidColorBrush x:Key="RegistryValueChipBorderBrush"
                                         Color="#1E3250"/>

        <DropShadowEffect x:Key="RegistryCardShadow"
                                          Color="#02060F"
                                          BlurRadius="18"
                                          ShadowDepth="0"
                                          Opacity="0.42"/>
        <DropShadowEffect x:Key="RegistryRowShadow"
                                          Color="#010914"
                                          BlurRadius="10"
                                          ShadowDepth="0"
                                          Opacity="0.34"/>

    <Style x:Key="RegistryCardSurfaceStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="{StaticResource RegistryCardBackgroundBrush}"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource RegistryCardBorderBrush}"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="16"/>
        <Setter Property="SnapsToDevicePixels"
                Value="True"/>
        <Setter Property="UseLayoutRounding"
                Value="True"/>
        <Setter Property="ClipToBounds"
                Value="True"/>
        <Setter Property="RenderOptions.BitmapScalingMode"
                Value="HighQuality"/>
        <Setter Property="RenderOptions.EdgeMode"
                Value="Aliased"/>
        <Setter Property="RenderOptions.ClearTypeHint"
                Value="Enabled"/>
        <Setter Property="TextOptions.TextFormattingMode"
                Value="Display"/>
        <Setter Property="TextOptions.TextRenderingMode"
                Value="ClearType"/>
        <Setter Property="TextOptions.TextHintingMode"
                Value="Fixed"/>
    </Style>

    <Style x:Key="RegistryCardStyle"
           TargetType="Border"
           BasedOn="{StaticResource RegistryCardSurfaceStyle}">
        <Setter Property="Padding"
                Value="24"/>
        <Setter Property="Effect"
                Value="{StaticResource RegistryCardShadow}"/>
    </Style>

    <Style x:Key="RegistryToggleRowStyle"
           TargetType="Border"
           BasedOn="{StaticResource RegistryCardSurfaceStyle}">
        <Setter Property="Background"
                Value="{StaticResource RegistryRowBackgroundBrush}"/>
        <Setter Property="BorderBrush"
                Value="#1E2F46"/>
        <Setter Property="CornerRadius"
                Value="16"/>
        <Setter Property="Padding"
                Value="20"/>
        <Setter Property="Effect"
                Value="{StaticResource RegistryRowShadow}"/>
    </Style>

    <Style x:Key="RegistryRiskBadgeStyle"
           TargetType="Border">
        <Setter Property="CornerRadius"
                Value="6"/>
        <Setter Property="Padding"
                Value="8,2"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Margin"
                Value="8,0,0,0"/>
        <Setter Property="Background"
                Value="#132A42"/>
        <Setter Property="BorderBrush"
                Value="#1F3B57"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Safe">
                <Setter Property="Background"
                        Value="#103426"/>
                <Setter Property="BorderBrush"
                        Value="#1F6F52"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Moderate">
                <Setter Property="Background"
                        Value="#3B2410"/>
                <Setter Property="BorderBrush"
                        Value="#8C4512"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Caution">
                <Setter Property="Background"
                        Value="#3A2A08"/>
                <Setter Property="BorderBrush"
                        Value="#836414"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Advanced">
                <Setter Property="Background"
                        Value="#3E1216"/>
                <Setter Property="BorderBrush"
                        Value="#991B1B"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <Style x:Key="RegistryTweakCardContainerStyle"
           TargetType="Border"
           BasedOn="{StaticResource RegistryToggleRowStyle}">
        <Setter Property="BorderBrush"
                Value="Transparent"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Style.Triggers>
                        <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"
                                                           Value="False"/>
                                        <Condition Binding="{Binding RiskLevel}" Value="Safe"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#29A373"/>
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"
                                                           Value="False"/>
                                        <Condition Binding="{Binding RiskLevel}" Value="Moderate"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#F97316"/>
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"
                                                           Value="False"/>
                                        <Condition Binding="{Binding RiskLevel}" Value="Caution"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#FACC15"/>
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"
                                                           Value="False"/>
                                        <Condition Binding="{Binding RiskLevel}" Value="Advanced"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#F87171"/>
                        </MultiDataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"
                         Value="True">
                <Setter Property="Background"
                        Value="{StaticResource RegistryRowSelectedBrush}"/>
                <Setter Property="BorderBrush"
                        Value="{StaticResource RegistryAccentBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsMouseOver}"
                         Value="True">
                <Setter Property="Background"
                        Value="{StaticResource RegistryRowHoverBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsKeyboardFocusWithin}"
                         Value="True">
                <Setter Property="BorderBrush"
                        Value="{StaticResource RegistryAccentHoverBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RegistryTweakAccentBarStyle"
           TargetType="Border">
        <Setter Property="Width"
                Value="6"/>
        <Setter Property="Background"
                Value="{StaticResource RegistryAccentBrush}"/>
        <Setter Property="CornerRadius"
                Value="12,0,0,12"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Safe">
                <Setter Property="Background"
                        Value="{StaticResource RegistryAccentSafeBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Moderate">
                <Setter Property="Background"
                        Value="{StaticResource RegistryAccentModerateBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Caution">
                <Setter Property="Background"
                        Value="{StaticResource RegistryAccentCautionBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Advanced">
                <Setter Property="Background"
                        Value="{StaticResource RegistryAccentAdvancedBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RegistryMetaPillStyle"
           TargetType="Border">
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="8,2"/>
        <Setter Property="Background"
                Value="#0F2135"/>
        <Setter Property="BorderBrush"
                Value="#224064"/>
        <Setter Property="BorderThickness"
                Value="1"/>
    </Style>

        <Style x:Key="RegistryDangerChipStyle"
                   TargetType="Border"
                   BasedOn="{StaticResource RegistryMetaPillStyle}">
                <Setter Property="Background" Value="#11273C"/>
                <Setter Property="BorderBrush" Value="#1F4563"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Safe">
                                <Setter Property="Background" Value="#0D2820"/>
                                <Setter Property="BorderBrush" Value="#2EC29A"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Moderate">
                                <Setter Property="Background" Value="#2E1A0B"/>
                                <Setter Property="BorderBrush" Value="#F59E0B"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Caution">
                                <Setter Property="Background" Value="#2C2406"/>
                                <Setter Property="BorderBrush" Value="#EAB308"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Advanced">
                                <Setter Property="Background" Value="#331019"/>
                                <Setter Property="BorderBrush" Value="#FB7185"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RegistryValueChipStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="{StaticResource RegistryValueChipBrush}"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource RegistryValueChipBorderBrush}"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="12,10"/>
    </Style>

    <Style x:Key="RegistryAccentButtonStyle"
           TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#22D3EE" Offset="0"/>
                    <GradientStop Color="#14B8A6" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground"
                Value="#04121F"/>
        <Setter Property="BorderBrush"
                Value="Transparent"/>
        <Setter Property="BorderThickness"
                Value="0"/>
        <Setter Property="Padding"
                Value="16,8"/>
        <Setter Property="MinWidth"
                Value="120"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#2FE4FF"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#0EA5E9"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#11273D"/>
                            <Setter Property="Foreground"
                                    Value="#4B5B72"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RegistrySecondaryButtonStyle"
           TargetType="Button">
        <Setter Property="Background"
                Value="#162132"/>
        <Setter Property="Foreground"
                Value="#E2E8F0"/>
        <Setter Property="BorderBrush"
                Value="#27374D"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Padding"
                Value="12,6"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1C2F47"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#142236"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#0F172A"/>
                            <Setter Property="Foreground"
                                    Value="#475569"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RegistryToggleSwitchStyle"
           TargetType="ToggleButton">
        <Setter Property="Width"
                Value="52"/>
        <Setter Property="Height"
                Value="28"/>
        <Setter Property="Background"
                Value="Transparent"/>
        <Setter Property="BorderBrush"
                Value="Transparent"/>
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <Border x:Name="Track"
                                Background="#1E293B"
                                CornerRadius="14"
                                Margin="0"/>
                        <Border x:Name="Thumb"
                                Width="24"
                                Height="24"
                                CornerRadius="12"
                                Background="#F8FAFC"
                                HorizontalAlignment="Left"
                                Margin="2"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter TargetName="Track"
                                    Property="Background"
                                    Value="#38BDF8"/>
                            <Setter TargetName="Thumb"
                                    Property="Background"
                                    Value="#04152B"/>
                            <Setter TargetName="Thumb"
                                    Property="HorizontalAlignment"
                                    Value="Right"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Track"
                                    Property="Background"
                                    Value="#1B2335"/>
                            <Setter TargetName="Thumb"
                                    Property="Background"
                                    Value="#475569"/>
                            <Setter Property="Opacity"
                                    Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RegistryColumnHeaderTextStyle"
           TargetType="TextBlock">
        <Setter Property="Foreground"
                Value="#64748B"/>
        <Setter Property="FontSize"
                Value="11"/>
        <Setter Property="FontWeight"
                Value="SemiBold"/>
        <Setter Property="TextWrapping"
                Value="Wrap"/>
        <Setter Property="Margin"
                Value="0,0,0,6"/>
    </Style>

    <Style x:Key="RegistryValueTextStyle"
           TargetType="TextBlock">
        <Setter Property="Foreground"
                Value="#E2E8F0"/>
        <Setter Property="FontSize"
                Value="13"/>
        <Setter Property="TextWrapping"
                Value="Wrap"/>
    </Style>

    <Style x:Key="RegistryValueTextBoxStyle"
           TargetType="TextBox"
           BasedOn="{StaticResource App.TextBoxStyle}">
        <Setter Property="Margin"
                Value="0,4,0,0"/>
        <Setter Property="MinWidth"
                Value="120"/>
        <Setter Property="HorizontalAlignment"
                Value="Stretch"/>
        <Setter Property="VerticalContentAlignment"
                Value="Center"/>
        <Setter Property="Padding"
                Value="12,6"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding HasValidationError}"
                         Value="True">
                <Setter Property="BorderBrush"
                        Value="#F87171"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RegistryInfoButtonStyle"
           TargetType="Button">
        <Setter Property="Width"
                Value="22"/>
        <Setter Property="Height"
                Value="22"/>
        <Setter Property="Padding"
                Value="0"/>
        <Setter Property="Margin"
                Value="6,0,0,0"/>
        <Setter Property="Background"
                Value="#132540"/>
        <Setter Property="BorderBrush"
                Value="#1F2D44"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Foreground"
                Value="#38BDF8"/>
        <Setter Property="FontSize"
                Value="12"/>
        <Setter Property="FontWeight"
                Value="Bold"/>
        <Setter Property="Content"
                Value="?"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="11">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1B3354"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#10243E"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#101D30"/>
                            <Setter Property="Foreground"
                                    Value="#475569"/>
                            <Setter Property="BorderBrush"
                                    Value="#19273D"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
