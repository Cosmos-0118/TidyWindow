<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="RegistryPrimaryBackgroundBrush"
                     Color="#0F172A"/>
    <SolidColorBrush x:Key="RegistrySecondaryBackgroundBrush"
                     Color="#101D30"/>
    <SolidColorBrush x:Key="RegistryCardBorderBrush"
                     Color="#1E293B"/>
    <SolidColorBrush x:Key="RegistryMutedBrush"
                     Color="#94A3B8"/>
    <SolidColorBrush x:Key="RegistryTitleBrush"
                     Color="#F8FAFC"/>
    <SolidColorBrush x:Key="RegistryAccentBrush"
                     Color="#38BDF8"/>
        <SolidColorBrush x:Key="RegistryAccentSafeBrush"
                                         Color="#34D399"/>
        <SolidColorBrush x:Key="RegistryAccentModerateBrush"
                                         Color="#F97316"/>
        <SolidColorBrush x:Key="RegistryAccentCautionBrush"
                                         Color="#FACC15"/>
        <SolidColorBrush x:Key="RegistryAccentAdvancedBrush"
                                         Color="#F87171"/>
    <SolidColorBrush x:Key="RegistryAccentHoverBrush"
                     Color="#1D9CEC"/>
    <SolidColorBrush x:Key="RegistryAccentActiveBrush"
                     Color="#177FCC"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonBackground"
                     Color="#162132"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonHover"
                     Color="#1C2F47"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonActive"
                     Color="#142236"/>
    <SolidColorBrush x:Key="RegistrySecondaryButtonBorder"
                     Color="#27374D"/>
    <SolidColorBrush x:Key="RegistryRiskInformationalBrush"
                     Color="#1C2F47"/>
    <SolidColorBrush x:Key="RegistryRiskWarningBrush"
                     Color="#422006"/>
    <SolidColorBrush x:Key="RegistryRiskWarningBorderBrush"
                     Color="#7C2D12"/>
    <SolidColorBrush x:Key="RegistryRiskInformationalBorderBrush"
                     Color="#243B5A"/>
        <SolidColorBrush x:Key="RegistryRowBackgroundBrush"
                                         Color="#0E1B2E"/>
        <SolidColorBrush x:Key="RegistryRowHoverBrush"
                                         Color="#142941"/>
        <SolidColorBrush x:Key="RegistryRowSelectedBrush"
                                         Color="#1B3454"/>
        <SolidColorBrush x:Key="RegistryValueChipBrush"
                                         Color="#101C33"/>
        <SolidColorBrush x:Key="RegistryValueChipBorderBrush"
                                         Color="#1C2C44"/>

        <DropShadowEffect x:Key="RegistryRowShadow"
                                          Color="#050E1A"
                                          BlurRadius="18"
                                          ShadowDepth="0"
                                          Opacity="0.32"/>

    <Style x:Key="RegistryCardStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="#0F172A"/>
        <Setter Property="BorderBrush"
                Value="#1E293B"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="20"/>
    </Style>

    <Style x:Key="RegistryToggleRowStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="{StaticResource RegistryRowBackgroundBrush}"/>
        <Setter Property="BorderBrush"
                Value="#1E2F46"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="16"/>
        <Setter Property="Padding"
                Value="20"/>
        <Setter Property="SnapsToDevicePixels"
                Value="True"/>
        <Setter Property="Effect"
                Value="{StaticResource RegistryRowShadow}"/>
    </Style>

    <Style x:Key="RegistryRiskBadgeStyle"
           TargetType="Border">
        <Setter Property="CornerRadius"
                Value="6"/>
        <Setter Property="Padding"
                Value="8,2"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Margin"
                Value="8,0,0,0"/>
        <Setter Property="Background"
                Value="#132A42"/>
        <Setter Property="BorderBrush"
                Value="#1F3B57"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Safe">
                <Setter Property="Background"
                        Value="#103426"/>
                <Setter Property="BorderBrush"
                        Value="#1F6F52"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Moderate">
                <Setter Property="Background"
                        Value="#3B2410"/>
                <Setter Property="BorderBrush"
                        Value="#8C4512"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Caution">
                <Setter Property="Background"
                        Value="#3A2A08"/>
                <Setter Property="BorderBrush"
                        Value="#836414"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Advanced">
                <Setter Property="Background"
                        Value="#3E1216"/>
                <Setter Property="BorderBrush"
                        Value="#991B1B"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RegistryTweakCardContainerStyle"
           TargetType="Border"
           BasedOn="{StaticResource RegistryToggleRowStyle}">
        <Setter Property="BorderBrush"
                Value="Transparent"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"
                         Value="True">
                <Setter Property="Background"
                        Value="{StaticResource RegistryRowSelectedBrush}"/>
                <Setter Property="BorderBrush"
                        Value="{StaticResource RegistryAccentBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsMouseOver}"
                         Value="True">
                <Setter Property="Background"
                        Value="{StaticResource RegistryRowHoverBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsKeyboardFocusWithin}"
                         Value="True">
                <Setter Property="BorderBrush"
                        Value="{StaticResource RegistryAccentHoverBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RegistryTweakAccentBarStyle"
           TargetType="Border">
        <Setter Property="Width"
                Value="6"/>
        <Setter Property="Background"
                Value="{StaticResource RegistryAccentBrush}"/>
        <Setter Property="CornerRadius"
                Value="12,0,0,12"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Safe">
                <Setter Property="Background"
                        Value="{StaticResource RegistryAccentSafeBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Moderate">
                <Setter Property="Background"
                        Value="{StaticResource RegistryAccentModerateBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Caution">
                <Setter Property="Background"
                        Value="{StaticResource RegistryAccentCautionBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RiskLevel}"
                         Value="Advanced">
                <Setter Property="Background"
                        Value="{StaticResource RegistryAccentAdvancedBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RegistryMetaPillStyle"
           TargetType="Border">
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="8,2"/>
        <Setter Property="Background"
                Value="#172840"/>
        <Setter Property="BorderBrush"
                Value="#243654"/>
        <Setter Property="BorderThickness"
                Value="1"/>
    </Style>

    <Style x:Key="RegistryValueChipStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="{StaticResource RegistryValueChipBrush}"/>
        <Setter Property="BorderBrush"
                Value="{StaticResource RegistryValueChipBorderBrush}"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="Padding"
                Value="14,12"/>
    </Style>

    <Style x:Key="RegistryAccentButtonStyle"
           TargetType="Button">
        <Setter Property="Background"
                Value="#38BDF8"/>
        <Setter Property="Foreground"
                Value="#04152B"/>
        <Setter Property="BorderBrush"
                Value="Transparent"/>
        <Setter Property="BorderThickness"
                Value="0"/>
        <Setter Property="Padding"
                Value="14,6"/>
        <Setter Property="MinWidth"
                Value="120"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1D9CEC"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#177FCC"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1C2F47"/>
                            <Setter Property="Foreground"
                                    Value="#64748B"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RegistrySecondaryButtonStyle"
           TargetType="Button">
        <Setter Property="Background"
                Value="#162132"/>
        <Setter Property="Foreground"
                Value="#E2E8F0"/>
        <Setter Property="BorderBrush"
                Value="#27374D"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Padding"
                Value="12,6"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1C2F47"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#142236"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#0F172A"/>
                            <Setter Property="Foreground"
                                    Value="#475569"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RegistryToggleSwitchStyle"
           TargetType="ToggleButton">
        <Setter Property="Width"
                Value="52"/>
        <Setter Property="Height"
                Value="28"/>
        <Setter Property="Background"
                Value="Transparent"/>
        <Setter Property="BorderBrush"
                Value="Transparent"/>
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <Border x:Name="Track"
                                Background="#1E293B"
                                CornerRadius="14"
                                Margin="0"/>
                        <Border x:Name="Thumb"
                                Width="24"
                                Height="24"
                                CornerRadius="12"
                                Background="#F8FAFC"
                                HorizontalAlignment="Left"
                                Margin="2"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter TargetName="Track"
                                    Property="Background"
                                    Value="#38BDF8"/>
                            <Setter TargetName="Thumb"
                                    Property="Background"
                                    Value="#04152B"/>
                            <Setter TargetName="Thumb"
                                    Property="HorizontalAlignment"
                                    Value="Right"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Track"
                                    Property="Background"
                                    Value="#1B2335"/>
                            <Setter TargetName="Thumb"
                                    Property="Background"
                                    Value="#475569"/>
                            <Setter Property="Opacity"
                                    Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RegistryColumnHeaderTextStyle"
           TargetType="TextBlock">
        <Setter Property="Foreground"
                Value="#64748B"/>
        <Setter Property="FontSize"
                Value="11"/>
        <Setter Property="FontWeight"
                Value="SemiBold"/>
        <Setter Property="TextWrapping"
                Value="Wrap"/>
        <Setter Property="Margin"
                Value="0,0,0,6"/>
    </Style>

    <Style x:Key="RegistryValueTextStyle"
           TargetType="TextBlock">
        <Setter Property="Foreground"
                Value="#E2E8F0"/>
        <Setter Property="FontSize"
                Value="13"/>
        <Setter Property="TextWrapping"
                Value="Wrap"/>
    </Style>

    <Style x:Key="RegistryValueTextBoxStyle"
           TargetType="TextBox">
        <Setter Property="Background"
                Value="#0F172A"/>
        <Setter Property="BorderBrush"
                Value="#27374D"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Foreground"
                Value="#F8FAFC"/>
        <Setter Property="Padding"
                Value="8,4"/>
        <Setter Property="MinWidth"
                Value="120"/>
        <Setter Property="HorizontalAlignment"
                Value="Stretch"/>
        <Setter Property="VerticalContentAlignment"
                Value="Center"/>
        <Setter Property="CaretBrush"
                Value="#38BDF8"/>
        <Setter Property="SelectionBrush"
                Value="#38BDF8"/>
        <Setter Property="SelectionOpacity"
                Value="0.4"/>
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}"/>
        <Setter Property="Margin"
                Value="0,4,0,0"/>
        <Style.Triggers>
            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Opacity"
                        Value="0.6"/>
                <Setter Property="BorderBrush"
                        Value="#1B2335"/>
            </Trigger>
            <DataTrigger Binding="{Binding HasValidationError}"
                         Value="True">
                <Setter Property="BorderBrush"
                        Value="#F87171"/>
                <Setter Property="Foreground"
                        Value="#F87171"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RegistryInfoButtonStyle"
           TargetType="Button">
        <Setter Property="Width"
                Value="22"/>
        <Setter Property="Height"
                Value="22"/>
        <Setter Property="Padding"
                Value="0"/>
        <Setter Property="Margin"
                Value="6,0,0,0"/>
        <Setter Property="Background"
                Value="#132540"/>
        <Setter Property="BorderBrush"
                Value="#1F2D44"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Foreground"
                Value="#38BDF8"/>
        <Setter Property="FontSize"
                Value="12"/>
        <Setter Property="FontWeight"
                Value="Bold"/>
        <Setter Property="Content"
                Value="?"/>
        <Setter Property="Cursor"
                Value="Hand"/>
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="11">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#1B3354"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#10243E"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#101D30"/>
                            <Setter Property="Foreground"
                                    Value="#475569"/>
                            <Setter Property="BorderBrush"
                                    Value="#19273D"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
